{
  "name": "capstone",
  "version": "1.0.0",
  "type": "module",
  "description": "HTML生成器和查看器",
  "main": "add.mjs",
  "scripts": {
    "start": "node add.mjs",
    "api": "node api.mjs",
    "viewer": "concurrently \"node api.mjs\" \"start viewer-react.html\"",
    "dev": "concurrently \"node api.mjs\" \"live-server --port=5500\"",
    "install-deps": "npm install",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed"
  },
  "dependencies": {
    "@playwright/test": "^1.56.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "openai": "^5.23.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/standalone": "^7.23.4",
    "concurrently": "^8.2.2"
  }
}
