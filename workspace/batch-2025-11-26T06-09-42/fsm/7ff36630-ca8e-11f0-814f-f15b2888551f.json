{
  "topic": "Deque Visualization",
  "description": "Models the interactive states and transitions of a Deque visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_FRONT_CLICKED": "addingFront",
        "ADD_BACK_CLICKED": "addingBack",
        "REMOVE_FRONT_CLICKED": "removingFront",
        "REMOVE_BACK_CLICKED": "removingBack",
        "PEEK_FRONT_CLICKED": "peekingFront",
        "PEEK_BACK_CLICKED": "peekingBack",
        "GET_SIZE_CLICKED": "gettingSize",
        "CHECK_EMPTY_CLICKED": "checkingEmpty"
      }
    },
    {
      "name": "addingFront",
      "onEnter": "addFront",
      "onExit": "render",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "addingBack",
      "onEnter": "addBack",
      "onExit": "render",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "removingFront",
      "onEnter": "removeFront",
      "onExit": "render",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "removingBack",
      "onEnter": "removeBack",
      "onExit": "render",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "peekingFront",
      "onEnter": "peekFront",
      "onExit": "updateInfo",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "peekingBack",
      "onEnter": "peekBack",
      "onExit": "updateInfo",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "gettingSize",
      "onEnter": "getSize",
      "onExit": "updateInfo",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "checkingEmpty",
      "onEnter": "checkEmpty",
      "onExit": "updateInfo",
      "on": {
        "DONE": "idle"
      }
    }
  ],
  "events": [
    "ADD_FRONT_CLICKED",
    "ADD_BACK_CLICKED",
    "REMOVE_FRONT_CLICKED",
    "REMOVE_BACK_CLICKED",
    "PEEK_FRONT_CLICKED",
    "PEEK_BACK_CLICKED",
    "GET_SIZE_CLICKED",
    "CHECK_EMPTY_CLICKED",
    "DONE"
  ],
  "triggers": {
    "ADD_FRONT_CLICKED": ".btn-add[onclick='app.addFront()']",
    "ADD_BACK_CLICKED": ".btn-add[onclick='app.addBack()']",
    "REMOVE_FRONT_CLICKED": ".btn-remove[onclick='app.removeFront()']",
    "REMOVE_BACK_CLICKED": ".btn-remove[onclick='app.removeBack()']",
    "PEEK_FRONT_CLICKED": ".btn-peek[onclick='app.peekFront()']",
    "PEEK_BACK_CLICKED": ".btn-peek[onclick='app.peekBack()']",
    "GET_SIZE_CLICKED": ".btn-info[onclick='app.getSize()']",
    "CHECK_EMPTY_CLICKED": ".btn-info[onclick='app.checkEmpty()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}