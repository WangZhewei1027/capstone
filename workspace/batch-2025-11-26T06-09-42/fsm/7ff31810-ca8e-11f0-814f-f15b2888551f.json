{
  "topic": "JavaScript Array Demonstration",
  "description": "Finite State Machine for an interactive web application demonstrating array manipulations.",
  "states": [
    {
      "name": "idle",
      "onEnter": "updateDisplay",
      "onExit": "noop",
      "on": {
        "ADD_ITEM": "idle",
        "ADD_ITEM_TO_START": "idle",
        "REMOVE_ITEM": "idle",
        "REMOVE_ITEM_FROM_START": "idle",
        "SORT_ARRAY": "idle",
        "REVERSE_ARRAY": "idle",
        "FIND_ITEM": "idle",
        "FILTER_ITEMS": "idle",
        "MAP_ITEMS": "idle",
        "RESET_ARRAY": "idle"
      }
    }
  ],
  "events": [
    "ADD_ITEM",
    "ADD_ITEM_TO_START",
    "REMOVE_ITEM",
    "REMOVE_ITEM_FROM_START",
    "SORT_ARRAY",
    "REVERSE_ARRAY",
    "FIND_ITEM",
    "FILTER_ITEMS",
    "MAP_ITEMS",
    "RESET_ARRAY"
  ],
  "triggers": {
    "ADD_ITEM": ".primary",
    "ADD_ITEM_TO_START": "button:contains('Add to Start (unshift)')",
    "REMOVE_ITEM": "button:contains('Remove from End (pop)')",
    "REMOVE_ITEM_FROM_START": "button:contains('Remove from Start (shift)')",
    "SORT_ARRAY": "button:contains('Sort (sort)')",
    "REVERSE_ARRAY": "button:contains('Reverse (reverse)')",
    "FIND_ITEM": "button:contains('Find 'Apple' (find)')",
    "FILTER_ITEMS": "button:contains('Filter items > length 5 (filter)')",
    "MAP_ITEMS": "button:contains('Capitalize All (map)')",
    "RESET_ARRAY": "button:contains('Reset Array')"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}