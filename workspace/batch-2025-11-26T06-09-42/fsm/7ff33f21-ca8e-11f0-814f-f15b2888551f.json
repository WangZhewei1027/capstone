{
  "topic": "Stack",
  "description": "Finite state machine for stack operations including push, pop, peek, and check if empty.",
  "states": [
    {
      "name": "idle",
      "onEnter": "updateUI",
      "onExit": "noop",
      "on": {
        "PUSH_CLICKED": "pushing",
        "POP_CLICKED": "popping",
        "PEEK_CLICKED": "peeking",
        "IS_EMPTY_CLICKED": "checking_empty"
      }
    },
    {
      "name": "pushing",
      "onEnter": "pushElement",
      "onExit": "updateUI",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "popping",
      "onEnter": "popElement",
      "onExit": "updateUI",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "peeking",
      "onEnter": "peekElement",
      "onExit": "updateUI",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "checking_empty",
      "onEnter": "checkIfEmpty",
      "onExit": "updateUI",
      "on": {
        "DONE": "idle"
      }
    }
  ],
  "events": [
    "PUSH_CLICKED",
    "POP_CLICKED",
    "PEEK_CLICKED",
    "IS_EMPTY_CLICKED",
    "DONE"
  ],
  "triggers": {
    "PUSH_CLICKED": "#push-button, #value-input",
    "POP_CLICKED": "#pop-button",
    "PEEK_CLICKED": "#peek-button",
    "IS_EMPTY_CLICKED": "#is-empty-button"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}