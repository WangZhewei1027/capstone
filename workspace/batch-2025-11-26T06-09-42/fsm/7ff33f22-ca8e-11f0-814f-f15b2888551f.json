{
  "topic": "Queue",
  "description": "Finite State Machine for Queue Data Structure Demonstration",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderQueue",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "enqueueing",
        "DEQUEUE_CLICKED": "dequeueing",
        "PEEK_CLICKED": "peeking"
      }
    },
    {
      "name": "enqueueing",
      "onEnter": "enqueueItem",
      "onExit": "renderQueue",
      "on": {
        "ITEM_ENQUEUED": "idle",
        "INPUT_EMPTY": "idle"
      }
    },
    {
      "name": "dequeueing",
      "onEnter": "dequeueItem",
      "onExit": "renderQueue",
      "on": {
        "ITEM_DEQUEUED": "idle",
        "QUEUE_EMPTY": "idle"
      }
    },
    {
      "name": "peeking",
      "onEnter": "peekItem",
      "onExit": "noop",
      "on": {
        "ITEM_PEEKED": "idle",
        "QUEUE_EMPTY": "idle"
      }
    }
  ],
  "events": [
    "ENQUEUE_CLICKED",
    "DEQUEUE_CLICKED",
    "PEEK_CLICKED",
    "ITEM_ENQUEUED",
    "ITEM_DEQUEUED",
    "ITEM_PEEKED",
    "INPUT_EMPTY",
    "QUEUE_EMPTY"
  ],
  "triggers": {
    "ENQUEUE_CLICKED": "#enqueue-btn, #item-input",
    "DEQUEUE_CLICKED": "#dequeue-btn",
    "PEEK_CLICKED": "#peek-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}