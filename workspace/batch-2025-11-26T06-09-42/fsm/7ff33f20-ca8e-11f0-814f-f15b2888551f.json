{
  "topic": "Linked List",
  "description": "Finite State Machine for Linked List Visualization Application",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_HEAD_CLICKED": "addingHead",
        "ADD_TAIL_CLICKED": "addingTail",
        "INSERT_AT_CLICKED": "insertingAt",
        "REMOVE_HEAD_CLICKED": "removingHead",
        "REMOVE_TAIL_CLICKED": "removingTail",
        "REMOVE_AT_CLICKED": "removingAt",
        "FIND_CLICKED": "finding"
      }
    },
    {
      "name": "addingHead",
      "onEnter": "addHead",
      "onExit": "renderList",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "addingTail",
      "onEnter": "addTail",
      "onExit": "renderList",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "insertingAt",
      "onEnter": "insertAt",
      "onExit": "renderList",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "removingHead",
      "onEnter": "removeHead",
      "onExit": "renderList",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "removingTail",
      "onEnter": "removeTail",
      "onExit": "renderList",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "removingAt",
      "onEnter": "removeAt",
      "onExit": "renderList",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "finding",
      "onEnter": "findValue",
      "onExit": "renderList",
      "on": {
        "COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "ADD_HEAD_CLICKED",
    "ADD_TAIL_CLICKED",
    "INSERT_AT_CLICKED",
    "REMOVE_HEAD_CLICKED",
    "REMOVE_TAIL_CLICKED",
    "REMOVE_AT_CLICKED",
    "FIND_CLICKED",
    "COMPLETE"
  ],
  "triggers": {
    "ADD_HEAD_CLICKED": "#add-head-btn",
    "ADD_TAIL_CLICKED": "#add-tail-btn",
    "INSERT_AT_CLICKED": "#insert-at-btn",
    "REMOVE_HEAD_CLICKED": "#remove-head-btn",
    "REMOVE_TAIL_CLICKED": "#remove-tail-btn",
    "REMOVE_AT_CLICKED": "#remove-at-btn",
    "FIND_CLICKED": "#find-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}