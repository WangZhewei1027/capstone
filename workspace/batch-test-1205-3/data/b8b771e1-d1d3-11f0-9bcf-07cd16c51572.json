    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Bellman-Ford Algorithm Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            margin: 20px;\n        }\n        #graphContainer {\n            margin: 20px 0;\n        }\n        #graph {\n            width: 500px;\n            height: 400px;\n            border: 1px solid #000;\n        }\n        #result {\n            margin-top: 20px;\n            padding: 10px;\n            border: 1px solid #ccc;\n            background-color: #f9f9f9;\n        }\n    </style>\n</head>\n<body>\n    <h1>Bellman-Ford Algorithm Visualization</h1>\n    <div id=\"graphContainer\">\n        <canvas id=\"graph\"></canvas>\n    </div>\n    <button onclick=\"runBellmanFord()\">Run Bellman-Ford Algorithm</button>\n    <div id=\"result\"></div>\n\n    <script>\n        const vertices = 5;\n        const edges = [\n            { from: 0, to: 1, weight: -1 },\n            { from: 0, to: 2, weight: 4 },\n            { from: 1, to: 2, weight: 3 },\n            { from: 1, to: 3, weight: 2 },\n            { from: 1, to: 4, weight: 2 },\n            { from: 3, to: 2, weight: 5 },\n            { from: 3, to: 1, weight: 1 },\n            { from: 4, to: 3, weight: -3 }\n        ];\n\n        const graphCanvas = document.getElementById('graph');\n        const ctx = graphCanvas.getContext('2d');\n\n        function drawGraph() {\n            ctx.clearRect(0, 0, graphCanvas.width, graphCanvas.height);\n            ctx.fillStyle = \"black\";\n            edges.forEach(edge => {\n                const x1 = edge.from * 100 + 50;\n                const y1 = 50;\n                const x2 = edge.to * 100 + 50;\n                const y2 = 250;\n                ctx.beginPath();\n                ctx.moveTo(x1, y1);\n                ctx.lineTo(x2, y2);\n                ctx.stroke();\n                ctx.fillText(`${edge.weight}`, (x1 + x2)/2, (y1 + y2)/2);\n            });\n            for (let i = 0; i < vertices; i++) {\n                ctx.fillText(`V${i}`, i * 100 + 50, 30);\n            }\n        }\n\n        function bellmanFord(startVertex) {\n            const distances = Array(vertices).fill(Infinity);\n            distances[startVertex] = 0;\n\n            for (let i = 1; i < vertices; i++) {\n                edges.forEach(edge => {\n                    if (distances[edge.from] !== Infinity &&\n                        distances[edge.from] + edge.weight < distances[edge.to]) {\n                        distances[edge.to] = distances[edge.from] + edge.weight;\n                    }\n                });\n            }\n\n            // Check for negative-weight cycles\n            edges.forEach(edge => {\n                if (distances[edge.from] !== Infinity &&\n                    distances[edge.from] + edge.weight < distances[edge.to]) {\n                    throw new Error(\"Negative-weight cycle detected\");\n                }\n            });\n\n            return distances;\n        }\n\n        function runBellmanFord() {\n            try {\n                const result = bellmanFord(0);\n                document.getElementById('result').innerText = `Vertex Distance from Source: \\n` +\n                    result.map((distance, index) => `V${index}: ${distance}`).join('\\n');\n            } catch (error) {\n                document.getElementById('result').innerText = error.message;\n            }\n        }\n\n        drawGraph();\n    </script>\n</body>\n</html>"
