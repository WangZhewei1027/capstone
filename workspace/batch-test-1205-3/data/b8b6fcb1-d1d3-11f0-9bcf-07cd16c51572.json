    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Heap Sort Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            margin: 20px;\n        }\n        #array {\n            list-style-type: none;\n            padding: 0;\n        }\n        .bar {\n            display: inline-block;\n            width: 20px;\n            margin: 1px;\n            background-color: teal;\n            vertical-align: bottom;\n        }\n    </style>\n</head>\n<body>\n\n    <h1>Heap Sort Visualization</h1>\n    <button onclick=\"sortArray()\">Sort Random Array</button>\n    <ul id=\"array\"></ul>\n\n    <script>\n        const arraySize = 20;\n        let array = [];\n\n        // Generate a random array\n        function generateRandomArray() {\n            array = Array.from({ length: arraySize }, () => Math.floor(Math.random() * 100) + 1);\n            renderArray();\n        }\n\n        // Render array as bars\n        function renderArray() {\n            const arrayContainer = document.getElementById('array');\n            arrayContainer.innerHTML = '';\n            array.forEach(value => {\n                const bar = document.createElement('li');\n                bar.className = 'bar';\n                bar.style.height = `${value * 3}px`;\n                bar.innerText = value;\n                arrayContainer.appendChild(bar);\n            });\n        }\n\n        // Heapify the array\n        function heapify(arr, n, i) {\n            let largest = i;\n            const left = 2 * i + 1;\n            const right = 2 * i + 2;\n        \n            if (left < n && arr[left] > arr[largest]) {\n                largest = left;\n            }\n        \n            if (right < n && arr[right] > arr[largest]) {\n                largest = right;\n            }\n        \n            if (largest !== i) {\n                [arr[i], arr[largest]] = [arr[largest], arr[i]];\n                heapify(arr, n, largest);\n            }\n        }\n\n        // Perform Heap Sort\n        async function heapSort(arr) {\n            const n = arr.length;\n            for (let i = Math.floor(n / 2) - 1; i >= 0; i--) {\n                await heapifyAndRender(arr, n, i);\n            }\n            for (let i = n - 1; i > 0; i--) {\n                [arr[0], arr[i]] = [arr[i], arr[0]];\n                await heapifyAndRender(arr, i, 0);\n            }\n            renderArray();\n        }\n\n        // Heapify while rendering\n        async function heapifyAndRender(arr, n, i) {\n            heapify(arr, n, i);\n            renderArray();\n            await new Promise(resolve => setTimeout(resolve, 200)); // wait for a short time to visualize\n        }\n\n        // Sort the array when button is clicked\n        async function sortArray() {\n            generateRandomArray();\n            await heapSort(array);\n        }\n\n        // Initialize with a random array\n        generateRandomArray();\n    </script>\n\n</body>\n</html>"
