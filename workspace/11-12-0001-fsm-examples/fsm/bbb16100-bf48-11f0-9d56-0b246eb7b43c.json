{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an Interactive Binary Search Tree Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_NODE": "validating_input"
      }
    },
    {
      "name": "validating_input",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "VALID_INPUT": "inserting_node",
        "INVALID_INPUT": "input_error"
      }
    },
    {
      "name": "inserting_node",
      "onEnter": "noop",
      "onExit": "renderBST",
      "on": {
        "NODE_INSERTED": "idle"
      }
    },
    {
      "name": "input_error",
      "onEnter": "display_error_message",
      "onExit": "clear_feedback",
      "on": {
        "RETRY_INPUT": "idle"
      }
    }
  ],
  "events": [
    "INSERT_NODE",
    "VALID_INPUT",
    "INVALID_INPUT",
    "NODE_INSERTED",
    "RETRY_INPUT"
  ],
  "notes": "States represent the process of inserting a node into the BST and handling user input validation."
}