{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Bubble Sort interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "createBars",
      "onExit": "noop",
      "on": {
        "SORT_BUTTON_CLICKED": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "bubbleSort",
      "onExit": "noop",
      "on": {
        "SORTING_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "SORT_BUTTON_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "SORT_BUTTON_CLICKED",
    "SORTING_COMPLETE"
  ],
  "notes": "The sorting state transitions to done when the sorting process is complete."
}