{
  "topic": "Bubble Sort Visualization",
  "description": "Finite state machine for interactive bubble sort visualization application",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderArray",
      "onExit": "noop",
      "on": {
        "GENERATE_ARRAY": "idle",
        "START_SORT": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "buildAnimationQueue",
      "onExit": "noop",
      "on": {
        "STEP_FORWARD": "sorting",
        "RESET": "idle",
        "SORT_COMPLETE": "completed"
      }
    },
    {
      "name": "completed",
      "onEnter": "showCompletion",
      "onExit": "noop",
      "on": {
        "GENERATE_ARRAY": "idle",
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "START_SORT",
    "STEP_FORWARD",
    "RESET",
    "SORT_COMPLETE"
  ],
  "notes": "STEP_FORWARD in 'sorting' state processes animation queue steps. SORT_COMPLETE is triggered internally after last animation step. UI updates (button states/status) handled within state actions."
}