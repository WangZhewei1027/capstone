{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Bubble Sort Visualization",
  "states": [
    {
      "name": "IDLE",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "START_SORTING": "SORTING"
      }
    },
    {
      "name": "SORTING",
      "onEnter": "startSortingAnimation",
      "onExit": "stopSortingAnimation",
      "on": {
        "PAUSE": "PAUSED",
        "RESET": "IDLE",
        "SORTING_COMPLETE": "DONE"
      }
    },
    {
      "name": "PAUSED",
      "onEnter": "pauseSortingAnimation",
      "onExit": "resumeSortingAnimation",
      "on": {
        "PLAY": "SORTING",
        "RESET": "IDLE"
      }
    },
    {
      "name": "DONE",
      "onEnter": "displaySortedArray",
      "onExit": "noop",
      "on": {
        "RESET": "IDLE"
      }
    }
  ],
  "events": [
    "START_SORTING",
    "PAUSE",
    "PLAY",
    "RESET",
    "SORTING_COMPLETE"
  ],
  "notes": "This FSM models the states and transitions for a Bubble Sort visualization application."
}