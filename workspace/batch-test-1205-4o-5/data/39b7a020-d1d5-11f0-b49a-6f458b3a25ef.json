    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Selection Sort Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: center;\n            background-color: #f4f4f4;\n        }\n        #arrayContainer {\n            display: flex;\n            justify-content: center;\n            margin: 20px 0;\n        }\n        .bar {\n            width: 30px;\n            margin: 0 2px;\n            background-color: teal;\n            display: inline-block;\n            transition: height 0.3s;\n        }\n        .highlight {\n            background-color: orange;\n        }\n    </style>\n</head>\n<body>\n\n    <h1>Selection Sort Visualization</h1>\n    <div id=\"arrayContainer\"></div>\n    <button onclick=\"selectionSort()\">Sort Array</button>\n    <button onclick=\"resetArray()\">Reset Array</button>\n\n    <script>\n        let array = [64, 25, 12, 22, 11];\n        const arrayContainer = document.getElementById('arrayContainer');\n\n        function renderArray() {\n            arrayContainer.innerHTML = '';\n            array.forEach(value => {\n                const bar = document.createElement('div');\n                bar.classList.add('bar');\n                bar.style.height = value * 5 + 'px';\n                bar.style.backgroundColor = 'teal';\n                arrayContainer.appendChild(bar);\n            });\n        }\n\n        async function selectionSort() {\n            for (let i = 0; i < array.length - 1; i++) {\n                let minIndex = i;\n                highlightBar(i);\n\n                for (let j = i + 1; j < array.length; j++) {\n                    highlightBar(j);\n                    await new Promise(resolve => setTimeout(resolve, 500));\n\n                    if (array[j] < array[minIndex]) {\n                        if (minIndex !== i) {\n                            unhighlightBar(minIndex);\n                        }\n                        minIndex = j;\n                    }\n                }\n                \n                if (minIndex !== i) {\n                    [array[i], array[minIndex]] = [array[minIndex], array[i]];\n                }\n\n                await new Promise(resolve => setTimeout(resolve, 500));\n                renderArray();\n            }\n        }\n\n        function highlightBar(index) {\n            const bars = arrayContainer.childNodes;\n            if (bars[index]) {\n                bars[index].classList.add('highlight');\n            }\n        }\n\n        function unhighlightBar(index) {\n            const bars = arrayContainer.childNodes;\n            if (bars[index]) {\n                bars[index].classList.remove('highlight');\n            }\n        }\n\n        function resetArray() {\n            array = [64, 25, 12, 22, 11];\n            renderArray();\n        }\n\n        window.onload = () => {\n            renderArray();\n        };\n    </script>\n\n</body>\n</html>"
