    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Adjacency Matrix Demonstration</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            margin: 20px;\n        }\n        table {\n            border-collapse: collapse;\n            margin-top: 20px;\n        }\n        table, th, td {\n            border: 1px solid black;\n        }\n        th, td {\n            padding: 10px;\n            text-align: center;\n        }\n    </style>\n</head>\n<body>\n    <h1>Adjacency Matrix Demonstration</h1>\n    <h2>Enter Edges</h2>\n    <input type=\"text\" id=\"edgeInput\" placeholder=\"Enter edge (format: u,v)\">\n    <button id=\"addEdge\">Add Edge</button>\n    <button id=\"generateMatrix\">Generate Adjacency Matrix</button>\n\n    <h2>Adjacency Matrix</h2>\n    <div id=\"matrixContainer\"></div>\n\n    <script>\n        const edges = [];\n        const verticesSet = new Set();\n\n        document.getElementById('addEdge').addEventListener('click', function() {\n            const edgeInput = document.getElementById('edgeInput').value;\n            const parts = edgeInput.split(',').map(part => part.trim());\n            if (parts.length === 2) {\n                const u = parts[0];\n                const v = parts[1];\n                edges.push([u, v]);\n                verticesSet.add(u);\n                verticesSet.add(v);\n                document.getElementById('edgeInput').value = '';\n                alert(`Edge added: ${u} -- ${v}`);\n            } else {\n                alert('Please enter the edge in the format: u,v');\n            }\n        });\n\n        document.getElementById('generateMatrix').addEventListener('click', function() {\n            const vertices = Array.from(verticesSet);\n            const matrix = Array.from({ length: vertices.length }, () => Array(vertices.length).fill(0));\n\n            edges.forEach(([u, v]) => {\n                const row = vertices.indexOf(u);\n                const col = vertices.indexOf(v);\n                if (row >= 0 && col >= 0) {\n                    matrix[row][col] = 1; // Directed graph\n                    matrix[col][row] = 1; // For undirected graph uncomment this line\n                }\n            });\n\n            displayMatrix(vertices, matrix);\n        });\n\n        function displayMatrix(vertices, matrix) {\n            const container = document.getElementById('matrixContainer');\n            container.innerHTML = '';\n\n            const table = document.createElement('table');\n            const headerRow = document.createElement('tr');\n\n            const headerCell = document.createElement('th');\n            headerCell.innerText = '';\n            headerRow.appendChild(headerCell);\n\n            vertices.forEach(vertex => {\n                const headerCell = document.createElement('th');\n                headerCell.innerText = vertex;\n                headerRow.appendChild(headerCell);\n            });\n            table.appendChild(headerRow);\n\n            matrix.forEach((row, rowIndex) => {\n                const tableRow = document.createElement('tr');\n                const rowHeader = document.createElement('th');\n                rowHeader.innerText = vertices[rowIndex];\n                tableRow.appendChild(rowHeader);\n                \n                row.forEach(cell => {\n                    const tableCell = document.createElement('td');\n                    tableCell.innerText = cell;\n                    tableRow.appendChild(tableCell);\n                });\n                table.appendChild(tableRow);\n            });\n\n            container.appendChild(table);\n        }\n    </script>\n</body>\n</html>"
