{
  "defaultTimeout": 10000,
  "screenshotQuality": 90,
  "testDataSets": {
    "small": [5, 3, 7, 1, 9],
    "medium": [10, 5, 15, 3, 7, 12, 18, 1, 6, 8, 11, 13, 16, 20],
    "large": [50, 25, 75, 12, 37, 62, 87, 6, 18, 31, 43, 56, 68, 81, 93],
    "stress": [
      100, 50, 150, 25, 75, 125, 175, 12, 37, 62, 87, 112, 137, 162, 187
    ]
  },
  "testModes": {
    "quick": {
      "maxIterations": 3,
      "waitTime": 1000,
      "skipScreenshots": false,
      "dataSet": "small"
    },
    "standard": {
      "maxIterations": 5,
      "waitTime": 2000,
      "skipScreenshots": false,
      "dataSet": "medium"
    },
    "comprehensive": {
      "maxIterations": 10,
      "waitTime": 3000,
      "skipScreenshots": false,
      "dataSet": "large"
    },
    "stress": {
      "maxIterations": 20,
      "waitTime": 1500,
      "skipScreenshots": true,
      "dataSet": "stress"
    }
  },
  "htmlPatterns": {
    "bst": {
      "indicators": ["binary", "tree", "bst", "search"],
      "commonElements": [
        "#addValue",
        "#removeValue",
        ".tree-container",
        "#tree"
      ],
      "strategy": "bst"
    },
    "queue": {
      "indicators": ["queue", "enqueue", "dequeue", "fifo"],
      "commonElements": ["#enqueue", "#dequeue", ".queue-container", "#queue"],
      "strategy": "queue"
    },
    "stack": {
      "indicators": ["stack", "push", "pop", "lifo"],
      "commonElements": ["#push", "#pop", ".stack-container", "#stack"],
      "strategy": "stack"
    },
    "sorting": {
      "indicators": ["sort", "bubble", "quick", "merge", "heap"],
      "commonElements": ["#sort", "#shuffle", ".array-container", "#array"],
      "strategy": "sorting"
    },
    "graph": {
      "indicators": ["graph", "vertex", "edge", "node"],
      "commonElements": [
        "#addVertex",
        "#addEdge",
        ".graph-container",
        "#graph"
      ],
      "strategy": "graph"
    }
  },
  "screenshotSettings": {
    "enabled": true,
    "format": "png",
    "quality": 90,
    "fullPage": false,
    "clip": null,
    "saveLocation": "./screenshots",
    "filenamePattern": "{workspace}_{filename}_{state}_{timestamp}"
  },
  "retrySettings": {
    "maxRetries": 3,
    "retryDelay": 1000,
    "exponentialBackoff": true
  },
  "debugSettings": {
    "verbose": false,
    "logElementDiscovery": true,
    "logStateTransitions": true,
    "logScreenshots": false,
    "saveDebugData": true
  }
}
