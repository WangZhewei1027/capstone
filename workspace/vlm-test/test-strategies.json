{
  "test_strategies": {
    "binary_search_tree": {
      "description": "二叉搜索树应用测试策略",
      "file_patterns": ["*bst*", "*tree*", "*binary*"],
      "required_elements": {
        "inputs": ["number", "value", "node"],
        "buttons": ["insert", "add", "delete", "remove", "reset", "clear"]
      },
      "test_sequences": [
        {
          "name": "basic_insertion",
          "description": "基本插入测试",
          "steps": [
            { "action": "input", "target": "number_input", "value": 10 },
            { "action": "click", "target": "insert_button" },
            { "action": "screenshot", "name": "root_node" }
          ]
        },
        {
          "name": "balanced_tree",
          "description": "平衡树构建",
          "steps": [
            {
              "action": "input_sequence",
              "target": "number_input",
              "values": [10, 5, 15, 3, 7, 12, 18]
            },
            { "action": "click_after_each", "target": "insert_button" },
            {
              "action": "screenshot_after_each",
              "name_pattern": "node_{value}"
            }
          ]
        },
        {
          "name": "error_handling",
          "description": "错误处理测试",
          "steps": [
            { "action": "input", "target": "number_input", "value": "" },
            { "action": "click", "target": "insert_button" },
            { "action": "handle_alert", "screenshot": "empty_input_alert" },
            { "action": "input", "target": "number_input", "value": "abc" },
            { "action": "click", "target": "insert_button" },
            { "action": "handle_alert", "screenshot": "invalid_input_alert" }
          ]
        }
      ]
    },

    "queue_application": {
      "description": "队列应用测试策略",
      "file_patterns": ["*queue*", "*deque*"],
      "required_elements": {
        "inputs": ["text", "item", "element"],
        "buttons": ["enqueue", "dequeue", "add", "remove", "front", "back"]
      },
      "test_sequences": [
        {
          "name": "basic_queue_operations",
          "description": "基本队列操作",
          "steps": [
            {
              "action": "input_sequence",
              "target": "text_input",
              "values": ["first", "second", "third"]
            },
            { "action": "click_after_each", "target": "enqueue_button" },
            {
              "action": "screenshot_after_each",
              "name_pattern": "enqueue_{value}"
            },
            {
              "action": "click_multiple",
              "target": "dequeue_button",
              "count": 3
            },
            {
              "action": "screenshot_after_each",
              "name_pattern": "dequeue_{index}"
            }
          ]
        }
      ]
    },

    "stack_application": {
      "description": "栈应用测试策略",
      "file_patterns": ["*stack*"],
      "required_elements": {
        "inputs": ["text", "item", "element"],
        "buttons": ["push", "pop", "add", "remove"]
      },
      "test_sequences": [
        {
          "name": "lifo_operations",
          "description": "后进先出操作",
          "steps": [
            {
              "action": "input_sequence",
              "target": "text_input",
              "values": ["bottom", "middle", "top"]
            },
            { "action": "click_after_each", "target": "push_button" },
            {
              "action": "screenshot_after_each",
              "name_pattern": "push_{value}"
            },
            { "action": "click_multiple", "target": "pop_button", "count": 3 },
            { "action": "screenshot_after_each", "name_pattern": "pop_{index}" }
          ]
        }
      ]
    },

    "sorting_application": {
      "description": "排序应用测试策略",
      "file_patterns": ["*sort*", "*sorting*"],
      "required_elements": {
        "inputs": ["array", "numbers", "list"],
        "buttons": ["sort", "shuffle", "random", "reset"]
      },
      "test_sequences": [
        {
          "name": "sorting_visualization",
          "description": "排序可视化",
          "steps": [
            { "action": "click", "target": "shuffle_button" },
            { "action": "screenshot", "name": "unsorted_array" },
            { "action": "click", "target": "sort_button" },
            { "action": "screenshot", "name": "sorted_array" }
          ]
        }
      ]
    },

    "graph_application": {
      "description": "图应用测试策略",
      "file_patterns": ["*graph*", "*node*", "*edge*"],
      "required_elements": {
        "inputs": ["node", "vertex", "edge"],
        "buttons": [
          "add_node",
          "add_edge",
          "remove",
          "clear",
          "search",
          "traverse"
        ]
      },
      "test_sequences": [
        {
          "name": "graph_construction",
          "description": "图构建",
          "steps": [
            {
              "action": "input_sequence",
              "target": "node_input",
              "values": ["A", "B", "C", "D"]
            },
            { "action": "click_after_each", "target": "add_node_button" },
            {
              "action": "screenshot_after_each",
              "name_pattern": "node_{value}"
            }
          ]
        }
      ]
    },

    "general_interactive": {
      "description": "通用交互应用",
      "file_patterns": ["*"],
      "required_elements": {
        "inputs": ["any"],
        "buttons": ["any"]
      },
      "test_sequences": [
        {
          "name": "discovery_test",
          "description": "自动发现测试",
          "steps": [
            { "action": "discover_all_inputs" },
            {
              "action": "test_each_input",
              "data": ["test", "123", "", "invalid"]
            },
            { "action": "discover_all_buttons" },
            { "action": "click_each_button" },
            { "action": "combination_test", "max_combinations": 5 }
          ]
        }
      ]
    }
  },

  "element_selectors": {
    "number_input": [
      "input[type='number']",
      "input[id*='value']",
      "input[id*='node']",
      "input[placeholder*='number']",
      "input[placeholder*='value']"
    ],
    "text_input": [
      "input[type='text']",
      "input[id*='item']",
      "input[id*='element']",
      "input[placeholder*='item']",
      "input[placeholder*='element']",
      "textarea"
    ],
    "insert_button": [
      "button:has-text('Insert')",
      "button:has-text('Add')",
      "button:has-text('Push')",
      "button:has-text('Enqueue')",
      "button[id*='insert']",
      "button[id*='add']"
    ],
    "remove_button": [
      "button:has-text('Remove')",
      "button:has-text('Delete')",
      "button:has-text('Pop')",
      "button:has-text('Dequeue')",
      "button[id*='remove']",
      "button[id*='delete']"
    ],
    "reset_button": [
      "button:has-text('Reset')",
      "button:has-text('Clear')",
      "button:has-text('Empty')",
      "button[id*='reset']",
      "button[id*='clear']"
    ]
  },

  "test_data": {
    "numbers": [1, 5, 10, 15, 20, 25, 30, 42, 99, 100],
    "negative_numbers": [-1, -5, -10],
    "decimals": [1.5, 3.14, 2.71],
    "large_numbers": [1000, 10000, 999999],
    "strings": ["test", "hello", "world", "data", "item", "value", "sample"],
    "special_strings": ["", " ", "null", "undefined", "NaN"],
    "mixed": ["123abc", "abc123", "!@#$%", "   test   "],
    "sequences": {
      "bst_balanced": [10, 5, 15, 3, 7, 12, 18],
      "bst_ascending": [1, 2, 3, 4, 5, 6, 7],
      "bst_descending": [7, 6, 5, 4, 3, 2, 1],
      "queue_items": ["first", "second", "third", "fourth"],
      "stack_items": ["bottom", "middle", "top"],
      "graph_nodes": ["A", "B", "C", "D", "E"]
    }
  },

  "screenshot_settings": {
    "fullPage": true,
    "type": "png",
    "timeout": 10000,
    "quality": 90
  },

  "timing_settings": {
    "page_load_wait": 2000,
    "after_input_wait": 300,
    "after_click_wait": 500,
    "after_alert_wait": 1000,
    "stability_wait": 1000
  },

  "error_handling": {
    "continue_on_selector_error": true,
    "continue_on_interaction_error": true,
    "max_retries": 3,
    "retry_delay": 500,
    "capture_error_screenshots": true
  }
}
