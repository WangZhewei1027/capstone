{
  "topic": "Bubble Sort",
  "description": "Finite state machine modeling the interactive states and transitions of the Bubble Sort algorithm visualization.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "START_CLICKED": "sorting",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startSorting",
      "onExit": "stopSorting",
      "on": {
        "SWAP_MADE": "sorting",
        "COMPLETE": "done",
        "STOP_CLICKED": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": "showSortedResult",
      "onExit": "noop",
      "on": {
        "RESET_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "START_CLICKED",
    "SWAP_MADE",
    "STOP_CLICKED",
    "RESET_CLICKED",
    "COMPLETE"
  ],
  "triggers": {
    "START_CLICKED": "#start-button, .start-btn",
    "SWAP_MADE": ".swap-indicator",
    "STOP_CLICKED": "#stop-button, .stop-btn",
    "RESET_CLICKED": "#reset-button, .reset-btn",
    "COMPLETE": "#complete-indicator"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}