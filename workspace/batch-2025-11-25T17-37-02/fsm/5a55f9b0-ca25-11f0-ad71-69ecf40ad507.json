{
  "topic": "Stack",
  "description": "Finite state machine modeling the interactive states of a stack application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "STACK_HOVERED": "hovered",
        "STACK_CLICKED": "stacked"
      }
    },
    {
      "name": "hovered",
      "onEnter": "scaleUp",
      "onExit": "scaleDown",
      "on": {
        "STACK_UNHOVERED": "idle",
        "STACK_CLICKED": "stacked"
      }
    },
    {
      "name": "stacked",
      "onEnter": "displayStackContent",
      "onExit": "hideStackContent",
      "on": {
        "STACK_UNCLICKED": "idle"
      }
    }
  ],
  "events": [
    "STACK_HOVERED",
    "STACK_UNHOVERED",
    "STACK_CLICKED",
    "STACK_UNCLICKED"
  ],
  "triggers": {
    "STACK_HOVERED": ".stack",
    "STACK_UNHOVERED": ".stack-content",
    "STACK_CLICKED": ".stack",
    "STACK_UNCLICKED": ".stack-content"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}