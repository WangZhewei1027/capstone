{
  "topic": "Heap (Min/Max)",
  "description": "Finite state machine modeling the interactive states of a Heap data structure application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_CLICKED": "inserting",
        "EXTRACT_CLICKED": "extracting"
      }
    },
    {
      "name": "inserting",
      "onEnter": "startInsert",
      "onExit": "noop",
      "on": {
        "INSERT_COMPLETE": "idle"
      }
    },
    {
      "name": "extracting",
      "onEnter": "startExtract",
      "onExit": "noop",
      "on": {
        "EXTRACT_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_CLICKED",
    "INSERT_COMPLETE",
    "EXTRACT_CLICKED",
    "EXTRACT_COMPLETE"
  ],
  "triggers": {
    "INSERT_CLICKED": "#insert-button, .insert-btn",
    "INSERT_COMPLETE": "#heap",
    "EXTRACT_CLICKED": "#extract-button, .extract-btn",
    "EXTRACT_COMPLETE": "#heap"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}