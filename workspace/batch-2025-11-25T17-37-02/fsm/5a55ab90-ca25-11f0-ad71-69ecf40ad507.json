{
  "topic": "Linked List",
  "description": "Finite state machine for managing the states of a linked list application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_ITEM_CLICKED": "adding_item",
        "PRINT_LIST_CLICKED": "printing_list"
      }
    },
    {
      "name": "adding_item",
      "onEnter": "addItem",
      "onExit": "noop",
      "on": {
        "ITEM_ADDED": "idle"
      }
    },
    {
      "name": "printing_list",
      "onEnter": "printList",
      "onExit": "noop",
      "on": {
        "LIST_PRINTED": "idle"
      }
    }
  ],
  "events": [
    "ADD_ITEM_CLICKED",
    "ITEM_ADDED",
    "PRINT_LIST_CLICKED",
    "LIST_PRINTED"
  ],
  "triggers": {
    "ADD_ITEM_CLICKED": "#add-item-button",
    "ITEM_ADDED": "#item-added-notification",
    "PRINT_LIST_CLICKED": "#print-list-button",
    "LIST_PRINTED": "#list-printed-notification"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}