{
  "topic": "K-Nearest Neighbors (KNN)",
  "description": "Finite State Machine for the K-Nearest Neighbors interactive application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "CALCULATE_CLICKED": "calculating"
      }
    },
    {
      "name": "calculating",
      "onEnter": "initializeKNN",
      "onExit": "clearInputs",
      "on": {
        "CALCULATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "CALCULATE_CLICKED",
    "CALCULATION_COMPLETE"
  ],
  "triggers": {
    "CALCULATE_CLICKED": "button, #calculate",
    "CALCULATION_COMPLETE": "#result, #message"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}