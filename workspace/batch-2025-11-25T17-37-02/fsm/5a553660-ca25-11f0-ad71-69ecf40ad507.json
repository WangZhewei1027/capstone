{
  "topic": "Binary Search Tree (BST)",
  "description": "Finite State Machine modeling the interactions for inserting nodes into a Binary Search Tree.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_CLICKED": "inserting",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "inserting",
      "onEnter": "startInsertion",
      "onExit": "clearInput",
      "on": {
        "INSERT_COMPLETE": "idle",
        "INSERT_FAILED": "idle"
      }
    }
  ],
  "events": [
    "INSERT_CLICKED",
    "INSERT_COMPLETE",
    "INSERT_FAILED",
    "RESET_CLICKED"
  ],
  "triggers": {
    "INSERT_CLICKED": "#insert-button, .insert-btn",
    "INSERT_COMPLETE": "#insert-complete",
    "INSERT_FAILED": "#insert-failed",
    "RESET_CLICKED": "#reset-button, .reset-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}