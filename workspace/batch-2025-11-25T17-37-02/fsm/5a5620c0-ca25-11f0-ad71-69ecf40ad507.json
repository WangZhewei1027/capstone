{
  "topic": "Queue",
  "description": "Finite state machine modeling the interaction of a queue application where users can add items to a queue.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_ITEM_SUBMITTED": "item_added",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "item_added",
      "onEnter": "addItemToQueue",
      "onExit": "clearInputField",
      "on": {
        "ADD_ITEM_SUBMITTED": "item_added",
        "RESET_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "ADD_ITEM_SUBMITTED",
    "RESET_CLICKED"
  ],
  "triggers": {
    "ADD_ITEM_SUBMITTED": "#queueForm",
    "RESET_CLICKED": "noop"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}