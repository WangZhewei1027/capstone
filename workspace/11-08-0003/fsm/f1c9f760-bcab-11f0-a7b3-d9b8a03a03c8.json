{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Union-Find (Disjoint Set) interactive application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "updateInfo",
      "on": {
        "NODE_SELECTED": "node_selected"
      }
    },
    {
      "name": "node_selected",
      "onEnter": "updateInfo",
      "on": {
        "NODE_SELECTED": "node_selected",
        "UNION_BUTTON_CLICKED": "union_processing",
        "FIND_BUTTON_CLICKED": "find_processing"
      }
    },
    {
      "name": "union_processing",
      "onEnter": "union(selectedNodes[0], selectedNodes[1])",
      "onExit": "resetSelectedNodes",
      "on": {
        "UNION_COMPLETED": "idle",
        "UNION_FAILED": "idle"
      }
    },
    {
      "name": "find_processing",
      "onEnter": "find(selectedNodes[0])",
      "onExit": "resetSelectedNodes",
      "on": {
        "FIND_COMPLETED": "idle"
      }
    }
  ],
  "events": [
    "NODE_SELECTED",
    "UNION_BUTTON_CLICKED",
    "FIND_BUTTON_CLICKED",
    "UNION_COMPLETED",
    "UNION_FAILED",
    "FIND_COMPLETED"
  ],
  "notes": "The FSM captures the states of selecting nodes, processing union and find operations, and updating the UI accordingly."
}