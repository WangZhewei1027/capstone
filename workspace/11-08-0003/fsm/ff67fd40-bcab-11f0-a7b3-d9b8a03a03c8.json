{
  "topic": "Interactive Application",
  "description": "Models the states and transitions of a priority queue visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputFields",
      "onExit": "",
      "on": {
        "ADD_ELEMENT": "addingElement",
        "REMOVE_ELEMENT": "removingElement"
      }
    },
    {
      "name": "addingElement",
      "onEnter": "addElementToQueue",
      "onExit": "resetInputFields",
      "on": {
        "ELEMENT_ADDED": "idle"
      }
    },
    {
      "name": "removingElement",
      "onEnter": "removeElementFromQueue",
      "onExit": "",
      "on": {
        "ELEMENT_REMOVED": "idle"
      }
    }
  ],
  "events": [
    "ADD_ELEMENT",
    "REMOVE_ELEMENT",
    "ELEMENT_ADDED",
    "ELEMENT_REMOVED"
  ],
  "notes": "The application transitions between idle, adding, and removing states based on user interactions with buttons."
}