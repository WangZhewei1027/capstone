{
  "topic": "Interactive Application",
  "description": "Finite state machine for a binary search interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputs",
      "onExit": "clearVisualization",
      "on": {
        "SEARCH_BUTTON_CLICKED": "searching"
      }
    },
    {
      "name": "searching",
      "onEnter": "executeBinarySearch",
      "onExit": "updateResultSection",
      "on": {
        "SEARCH_COMPLETED": "visualizing",
        "INVALID_INPUT": "idle"
      }
    },
    {
      "name": "visualizing",
      "onEnter": "visualizeStep",
      "onExit": "incrementCurrentStep",
      "on": {
        "NEXT_STEP_BUTTON_CLICKED": "visualizing",
        "ALL_STEPS_COMPLETED": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "disableNextStepButton",
      "onExit": "enableRestartButton",
      "on": {
        "RESTART_BUTTON_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "SEARCH_BUTTON_CLICKED",
    "SEARCH_COMPLETED",
    "INVALID_INPUT",
    "NEXT_STEP_BUTTON_CLICKED",
    "ALL_STEPS_COMPLETED",
    "RESTART_BUTTON_CLICKED"
  ],
  "notes": "The FSM captures the states of the binary search interactive module, including input validation, searching, visualizing steps, and completion handling."
}