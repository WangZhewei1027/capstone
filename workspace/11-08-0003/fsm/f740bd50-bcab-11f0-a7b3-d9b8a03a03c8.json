{
  "topic": "Interactive Application",
  "description": "Models the states and transitions of an interactive set exploration application where users can add, remove, and clear elements from a set.",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayInstructions",
      "onExit": null,
      "on": {
        "ADD_ELEMENT": "adding",
        "REMOVE_ELEMENT": "removing",
        "CLEAR_SET": "clearing"
      }
    },
    {
      "name": "adding",
      "onEnter": "addElement",
      "onExit": "updateSetArea",
      "on": {
        "ELEMENT_ADDED": "idle",
        "ELEMENT_ALREADY_EXISTS": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "removeElement",
      "onExit": "updateSetArea",
      "on": {
        "ELEMENT_REMOVED": "idle",
        "NO_ELEMENTS_TO_REMOVE": "idle"
      }
    },
    {
      "name": "clearing",
      "onEnter": "clearSet",
      "onExit": "updateSetArea",
      "on": {
        "SET_CLEARED": "idle"
      }
    }
  ],
  "events": [
    "ADD_ELEMENT",
    "REMOVE_ELEMENT",
    "CLEAR_SET",
    "ELEMENT_ADDED",
    "ELEMENT_ALREADY_EXISTS",
    "ELEMENT_REMOVED",
    "NO_ELEMENTS_TO_REMOVE",
    "SET_CLEARED"
  ],
  "notes": "The application starts in the idle state, where users can trigger actions to add, remove, or clear elements from the set. Each action leads to a specific state that handles the logic and transitions back to idle once completed."
}