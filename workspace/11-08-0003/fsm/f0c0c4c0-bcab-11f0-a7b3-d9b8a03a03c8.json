{
  "topic": "Interactive Application",
  "description": "Models the states and transitions of an adjacency matrix interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetMatrix()",
      "onExit": "",
      "on": {
        "GENERATE_MATRIX": "matrix_generated"
      }
    },
    {
      "name": "matrix_generated",
      "onEnter": "populateMatrix()",
      "onExit": "",
      "on": {
        "SUBMIT_MATRIX": "matrix_submitted"
      }
    },
    {
      "name": "matrix_submitted",
      "onEnter": "displayResult()",
      "onExit": "resetInputs()",
      "on": {
        "GENERATE_MATRIX": "matrix_generated",
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "GENERATE_MATRIX",
    "SUBMIT_MATRIX",
    "RESET"
  ],
  "notes": "The FSM captures the states of generating and submitting an adjacency matrix, including user interactions and visual feedback."
}