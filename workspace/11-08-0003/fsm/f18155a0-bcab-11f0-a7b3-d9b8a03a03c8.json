{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive binary tree exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputField",
      "onExit": "none",
      "on": {
        "ADD_NODE_BUTTON_CLICK": "adding_node"
      }
    },
    {
      "name": "adding_node",
      "onEnter": "createNode",
      "onExit": "none",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "dragging_node",
      "onEnter": "none",
      "onExit": "positionNodes",
      "on": {
        "DRAG_START": "dragging_node",
        "DRAG_END": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE_BUTTON_CLICK",
    "NODE_ADDED",
    "DRAG_START",
    "DRAG_END"
  ],
  "notes": "The FSM captures the main interactive states of adding nodes and dragging them within the binary tree visualization."
}