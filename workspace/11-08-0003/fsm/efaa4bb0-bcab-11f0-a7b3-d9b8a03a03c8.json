{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive hash map application where users can add key-value pairs.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearInputFields",
      "onExit": null,
      "on": {
        "ADD_BUTTON_CLICK": "adding"
      }
    },
    {
      "name": "adding",
      "onEnter": "validateInputs",
      "onExit": null,
      "on": {
        "INPUTS_VALID": "rendering",
        "INPUTS_INVALID": "idle",
        "HASH_MAP_FULL": "idle"
      }
    },
    {
      "name": "rendering",
      "onEnter": "renderHashMap",
      "onExit": "clearInputFields",
      "on": {
        "RENDER_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "ADD_BUTTON_CLICK",
    "INPUTS_VALID",
    "INPUTS_INVALID",
    "HASH_MAP_FULL",
    "RENDER_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application as the user interacts with it by adding key-value pairs to the hash map."
}