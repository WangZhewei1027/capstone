{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Merge Sort Visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeArray(5)",
      "onExit": null,
      "on": {
        "START_SORTING": "sorting",
        "RESET": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "initializeArray(size)",
      "onExit": "renderArray()",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "renderArray()",
      "onExit": null,
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "START_SORTING",
    "RESET",
    "SORT_COMPLETE"
  ],
  "notes": "The 'sorting' state transitions to 'done' when the sorting process is complete. The 'idle' state initializes the array and can transition to 'sorting' on a start event."
}