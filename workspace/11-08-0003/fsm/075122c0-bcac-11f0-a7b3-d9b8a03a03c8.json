{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Heap Sort Visualization Application",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearVisualization",
      "onExit": null,
      "on": {
        "CREATE_HEAP": "heap_created",
        "RESET": "idle"
      }
    },
    {
      "name": "heap_created",
      "onEnter": "drawHeap",
      "onExit": null,
      "on": {
        "HEAPIFY": "heapifying",
        "SORT": "sorting",
        "RESET": "idle"
      }
    },
    {
      "name": "heapifying",
      "onEnter": "animateHeapify",
      "onExit": null,
      "on": {
        "HEAPIFY_COMPLETE": "heap_created",
        "RESET": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "animateSort",
      "onExit": null,
      "on": {
        "SORT_COMPLETE": "heap_created",
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "CREATE_HEAP",
    "HEAPIFY",
    "SORT",
    "RESET",
    "HEAPIFY_COMPLETE",
    "SORT_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application during heap creation, heapifying, and sorting processes, as well as the reset functionality."
}