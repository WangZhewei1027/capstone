{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Bellman-Ford Algorithm Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetGraph",
      "on": {
        "NODE_CLICKED": "selecting_node",
        "RUN_BUTTON_CLICKED": "running_algorithm"
      }
    },
    {
      "name": "selecting_node",
      "onEnter": "highlightNode",
      "onExit": "removeNodeHighlight",
      "on": {
        "NODE_CONNECTED": "idle",
        "NODE_CLICKED": "selecting_node"
      }
    },
    {
      "name": "running_algorithm",
      "onEnter": "displayRunningMessage",
      "onExit": "clearOutput",
      "on": {
        "ALGORITHM_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayResults",
      "onExit": "resetGraph",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "NODE_CLICKED",
    "NODE_CONNECTED",
    "RUN_BUTTON_CLICKED",
    "ALGORITHM_COMPLETE",
    "RESET"
  ],
  "notes": "The FSM captures the states of the application during user interactions, including adding nodes and edges, running the algorithm, and displaying results."
}