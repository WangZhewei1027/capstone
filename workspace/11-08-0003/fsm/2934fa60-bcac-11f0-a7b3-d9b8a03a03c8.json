{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Divide and Conquer Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayInitialMessage",
      "onExit": "clearArrayContainer",
      "on": {
        "START_BUTTON_CLICK": "generating_array"
      }
    },
    {
      "name": "generating_array",
      "onEnter": "generateRandomArray",
      "onExit": "createArrayElements",
      "on": {
        "ARRAY_GENERATED": "visualizing"
      }
    },
    {
      "name": "visualizing",
      "onEnter": "setButtonToVisualizing",
      "onExit": "resetButton",
      "on": {
        "DIVIDE_AND_CONQUER_STARTED": "dividing",
        "ANIMATION_COMPLETE": "done"
      }
    },
    {
      "name": "dividing",
      "onEnter": "divideAndConquer",
      "onExit": "animateSplit",
      "on": {
        "ANIMATION_TRIGGERED": "visualizing"
      }
    },
    {
      "name": "done",
      "onEnter": "displayCompletionMessage",
      "onExit": "resetApplication",
      "on": {
        "RESTART_BUTTON_CLICK": "idle"
      }
    }
  ],
  "events": [
    "START_BUTTON_CLICK",
    "ARRAY_GENERATED",
    "DIVIDE_AND_CONQUER_STARTED",
    "ANIMATION_TRIGGERED",
    "ANIMATION_COMPLETE",
    "RESTART_BUTTON_CLICK"
  ],
  "notes": "The FSM captures the states of the application during the visualization of the Divide and Conquer algorithm, including the generation of the array, the visualization process, and the completion of the algorithm."
}