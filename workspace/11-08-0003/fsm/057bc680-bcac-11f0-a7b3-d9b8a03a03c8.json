{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Heap Sort Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputFields",
      "onExit": "",
      "on": {
        "CREATE_HEAP": "building_heap",
        "RANDOM_ARRAY": "building_heap",
        "ASCENDING_ARRAY": "building_heap",
        "DESCENDING_ARRAY": "building_heap"
      }
    },
    {
      "name": "building_heap",
      "onEnter": "buildHeap",
      "onExit": "",
      "on": {
        "HEAP_BUILT": "heap_visualized"
      }
    },
    {
      "name": "heap_visualized",
      "onEnter": "renderHeap",
      "onExit": "",
      "on": {
        "SORT": "sorting",
        "HEAP_UPDATED": "heap_visualized"
      }
    },
    {
      "name": "sorting",
      "onEnter": "heapSort",
      "onExit": "",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayOutput",
      "onExit": "resetHeap",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "CREATE_HEAP",
    "RANDOM_ARRAY",
    "ASCENDING_ARRAY",
    "DESCENDING_ARRAY",
    "HEAP_BUILT",
    "SORT",
    "SORT_COMPLETE",
    "HEAP_UPDATED",
    "RESET"
  ],
  "notes": "The FSM captures the states of the heap sort interactive module, including user inputs for creating heaps, sorting, and displaying results."
}