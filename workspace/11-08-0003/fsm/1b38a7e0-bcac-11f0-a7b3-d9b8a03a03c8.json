{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive linear regression module where users can add points and observe the regression line.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputs",
      "onExit": "none",
      "on": {
        "ADD_POINT": "point_added",
        "RESET": "resetting"
      }
    },
    {
      "name": "point_added",
      "onEnter": "drawPointsAndLine",
      "onExit": "none",
      "on": {
        "ADD_POINT": "point_added",
        "RESET": "resetting"
      }
    },
    {
      "name": "resetting",
      "onEnter": "clearPoints",
      "onExit": "none",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "ADD_POINT",
    "RESET"
  ],
  "notes": "The FSM captures the states of the application based on user interactions such as adding points and resetting the input."
}