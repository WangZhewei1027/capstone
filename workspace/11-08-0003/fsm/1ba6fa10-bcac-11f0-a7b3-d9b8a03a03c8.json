{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Sliding Window Visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeWindow",
      "on": {
        "NEXT_BUTTON_CLICKED": "moving_forward",
        "PREVIOUS_BUTTON_CLICKED": "moving_backward"
      }
    },
    {
      "name": "moving_forward",
      "onEnter": "updateWindow",
      "onExit": "checkBounds",
      "on": {
        "WINDOW_UPDATED": "idle"
      }
    },
    {
      "name": "moving_backward",
      "onEnter": "updateWindow",
      "onExit": "checkBounds",
      "on": {
        "WINDOW_UPDATED": "idle"
      }
    }
  ],
  "events": [
    "NEXT_BUTTON_CLICKED",
    "PREVIOUS_BUTTON_CLICKED",
    "WINDOW_UPDATED"
  ],
  "notes": "The application starts in the 'idle' state. Clicking 'Next' or 'Previous' transitions to 'moving_forward' or 'moving_backward' respectively, and updates the window. After updating, it returns to 'idle'."
}