{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive graph application allowing users to add nodes and edges.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearInputFields",
      "onExit": "resetInfo",
      "on": {
        "ADD_NODE": "addingNode",
        "ADD_EDGE": "addingEdge"
      }
    },
    {
      "name": "addingNode",
      "onEnter": "validateNodeInput",
      "onExit": "clearNodeInput",
      "on": {
        "NODE_ADDED": "idle",
        "NODE_EXISTS": "idle",
        "INVALID_NODE_NAME": "idle"
      }
    },
    {
      "name": "addingEdge",
      "onEnter": "validateEdgeInput",
      "onExit": "clearEdgeInput",
      "on": {
        "EDGE_ADDED": "idle",
        "INVALID_EDGE": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "ADD_EDGE",
    "NODE_ADDED",
    "NODE_EXISTS",
    "INVALID_NODE_NAME",
    "EDGE_ADDED",
    "INVALID_EDGE"
  ],
  "notes": "States represent the main interactions: idle state for waiting for user input, addingNode for processing node addition, and addingEdge for processing edge addition."
}