{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive insertion sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "generateRandomArray(5)",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated",
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "array_generated",
      "onEnter": null,
      "onExit": null,
      "on": {
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "insertionSort(array)",
      "onExit": null,
      "on": {
        "SORT_COMPLETE": "sorted"
      }
    },
    {
      "name": "sorted",
      "onEnter": null,
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "SORT_ARRAY",
    "SORT_COMPLETE"
  ],
  "notes": "The application starts in the idle state, generates a random array, and can transition to sorting. Once sorting is complete, it transitions to the sorted state."
}