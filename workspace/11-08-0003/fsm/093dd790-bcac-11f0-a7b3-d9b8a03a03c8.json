{
  "topic": "Interactive Application",
  "description": "Finite State Machine modeling the Depth-First Search (DFS) interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetGraph",
      "onExit": "",
      "on": {
        "START_DFS": "running"
      }
    },
    {
      "name": "running",
      "onEnter": "startDFS",
      "onExit": "",
      "on": {
        "NODE_VISITED": "running",
        "DFS_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "showCompletion",
      "onExit": "",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "START_DFS",
    "NODE_VISITED",
    "DFS_COMPLETE",
    "RESET"
  ],
  "notes": "The FSM captures the states of the DFS process, including idle, running, and completion states. Events trigger transitions between these states."
}