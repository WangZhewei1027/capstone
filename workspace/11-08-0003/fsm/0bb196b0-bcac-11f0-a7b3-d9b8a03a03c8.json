{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Bubble Sort interactive module, capturing states and transitions based on user interactions.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetArray",
      "on": {
        "GENERATE_ARRAY": "array_generated",
        "START_SORTING": "sorting",
        "RESET": "idle"
      }
    },
    {
      "name": "array_generated",
      "onEnter": "highlightArray",
      "on": {
        "START_SORTING": "sorting",
        "RESET": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startSortingAnimation",
      "onExit": "resetArrayItems",
      "on": {
        "SORT_COMPLETE": "done",
        "RESET": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": "displaySortedArray",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "START_SORTING",
    "SORT_COMPLETE",
    "RESET"
  ],
  "notes": "The FSM captures the main interactive states of the application, including generating an array, sorting it, and resetting the state."
}