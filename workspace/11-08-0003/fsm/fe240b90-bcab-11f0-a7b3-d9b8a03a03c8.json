{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive graph exploration application allowing users to add nodes and create edges.",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayInstructions",
      "onExit": "clearStatusMessage",
      "on": {
        "ADD_NODE": "node_added",
        "TOGGLE_DIRECTED": "directed_toggled",
        "SELECT_NODE": "waiting_for_second_node"
      }
    },
    {
      "name": "node_added",
      "onEnter": "drawNode",
      "onExit": "updateGraphDisplay",
      "on": {
        "ADD_NODE": "node_added",
        "SELECT_NODE": "waiting_for_second_node"
      }
    },
    {
      "name": "waiting_for_second_node",
      "onEnter": "promptSelectSecondNode",
      "onExit": "clearStatusMessage",
      "on": {
        "SELECT_NODE": "edge_created",
        "ADD_NODE": "node_added"
      }
    },
    {
      "name": "edge_created",
      "onEnter": "drawEdge",
      "onExit": "updateGraphDisplay",
      "on": {
        "ADD_NODE": "node_added",
        "TOGGLE_DIRECTED": "directed_toggled",
        "SELECT_NODE": "waiting_for_second_node"
      }
    },
    {
      "name": "directed_toggled",
      "onEnter": "updateDirectedStatus",
      "onExit": "clearEdges",
      "on": {
        "ADD_NODE": "node_added",
        "SELECT_NODE": "waiting_for_second_node"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "TOGGLE_DIRECTED",
    "SELECT_NODE"
  ],
  "notes": "The FSM captures the main interactive states of the application, including adding nodes, selecting nodes for edges, and toggling between directed and undirected graphs."
}