{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive Red-Black Tree visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearFeedback",
      "onExit": "",
      "on": {
        "INSERT_BUTTON_CLICKED": "inserting"
      }
    },
    {
      "name": "inserting",
      "onEnter": "validateInput",
      "onExit": "",
      "on": {
        "VALID_INPUT": "visualizing",
        "INVALID_INPUT": "idle"
      }
    },
    {
      "name": "visualizing",
      "onEnter": "visualizeNode",
      "onExit": "clearInput",
      "on": {
        "NODE_VISUALIZED": "idle"
      }
    }
  ],
  "events": [
    "INSERT_BUTTON_CLICKED",
    "VALID_INPUT",
    "INVALID_INPUT",
    "NODE_VISUALIZED"
  ],
  "notes": "The FSM captures the states of the application during user interactions, focusing on inserting nodes into the Red-Black Tree and visual feedback."
}