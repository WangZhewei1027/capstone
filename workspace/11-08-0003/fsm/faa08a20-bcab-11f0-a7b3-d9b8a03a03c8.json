{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive graph application that allows users to add nodes and create edges between them.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearNodeInput",
      "onExit": "",
      "on": {
        "ADD_NODE": "node_added",
        "RESET_GRAPH": "idle"
      }
    },
    {
      "name": "node_added",
      "onEnter": "addNodeToGraph",
      "onExit": "clearNodeInput",
      "on": {
        "SELECT_NODE": "node_selected",
        "ADD_NODE": "node_added",
        "RESET_GRAPH": "idle"
      }
    },
    {
      "name": "node_selected",
      "onEnter": "",
      "onExit": "deselectNode",
      "on": {
        "SELECT_NODE": "node_added",
        "RESET_GRAPH": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "SELECT_NODE",
    "RESET_GRAPH"
  ],
  "notes": "The FSM captures the main interactive states of adding nodes, selecting nodes, and resetting the graph."
}