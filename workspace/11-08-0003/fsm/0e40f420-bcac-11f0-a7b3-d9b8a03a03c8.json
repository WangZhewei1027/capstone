{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Radix Sort Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearOutput",
      "onExit": "none",
      "on": {
        "SORT_BUTTON_CLICK": "sorting",
        "RESET_BUTTON_CLICK": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "initializeSorting",
      "onExit": "none",
      "on": {
        "SORT_COMPLETE": "done",
        "STEP_BUTTON_CLICK": "stepping"
      }
    },
    {
      "name": "stepping",
      "onEnter": "displayCurrentStep",
      "onExit": "none",
      "on": {
        "STEP_BUTTON_CLICK": "stepping",
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displaySortedOutput",
      "onExit": "none",
      "on": {
        "RESET_BUTTON_CLICK": "idle"
      }
    }
  ],
  "events": [
    "SORT_BUTTON_CLICK",
    "STEP_BUTTON_CLICK",
    "RESET_BUTTON_CLICK",
    "SORT_COMPLETE"
  ],
  "notes": "The FSM captures the states of the interactive sorting application, including idle, sorting, stepping through the sort process, and completion. Each state has defined transitions based on user interactions."
}