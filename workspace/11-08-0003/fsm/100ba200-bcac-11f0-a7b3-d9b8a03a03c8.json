{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Kruskal's Algorithm Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayInstructions",
      "onExit": "clearSelection",
      "on": {
        "ADD_NODE": "addingNode",
        "ADD_EDGE": "drawingEdge",
        "RUN_ALGORITHM": "runningAlgorithm",
        "RESET": "idle"
      }
    },
    {
      "name": "addingNode",
      "onEnter": "addNode",
      "onExit": "draw",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "drawingEdge",
      "onEnter": "startDrawingEdge",
      "onExit": "finishDrawingEdge",
      "on": {
        "EDGE_DRAWN": "idle"
      }
    },
    {
      "name": "runningAlgorithm",
      "onEnter": "startAlgorithm",
      "onExit": "stopAlgorithm",
      "on": {
        "ALGORITHM_COMPLETE": "done",
        "PAUSE": "paused"
      }
    },
    {
      "name": "paused",
      "onEnter": "pauseAlgorithm",
      "onExit": "resumeAlgorithm",
      "on": {
        "RESUME": "runningAlgorithm",
        "RESET": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": "displayResult",
      "onExit": "clearResult",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "ADD_EDGE",
    "RUN_ALGORITHM",
    "NODE_ADDED",
    "EDGE_DRAWN",
    "ALGORITHM_COMPLETE",
    "PAUSE",
    "RESUME",
    "RESET"
  ],
  "notes": "This FSM captures the states and transitions of the interactive application, focusing on user interactions such as adding nodes and edges, running the algorithm, and managing the state of the algorithm execution."
}