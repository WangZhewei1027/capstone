{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Linear Search Simulator application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetFeedback",
      "on": {
        "ADD_ARRAY": "array_displayed",
        "SET_TARGET": "target_set"
      }
    },
    {
      "name": "array_displayed",
      "onEnter": "displayArray",
      "onExit": "resetTarget",
      "on": {
        "SET_TARGET": "target_set"
      }
    },
    {
      "name": "target_set",
      "onEnter": "updateTargetLabel",
      "on": {
        "SEARCH": "searching"
      }
    },
    {
      "name": "searching",
      "onEnter": "performSearch",
      "onExit": "resetFeedback",
      "on": {
        "SEARCH_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayFeedback",
      "onExit": "resetSearch",
      "on": {
        "ADD_ARRAY": "array_displayed",
        "SET_TARGET": "target_set"
      }
    }
  ],
  "events": [
    "ADD_ARRAY",
    "SET_TARGET",
    "SEARCH",
    "SEARCH_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application including idle, displaying the array, setting the target, searching, and completion. Each state has associated entry and exit actions to handle UI updates."
}