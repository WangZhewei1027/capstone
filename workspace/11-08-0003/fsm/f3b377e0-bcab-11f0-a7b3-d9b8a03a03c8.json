{
  "topic": "Interactive Application",
  "description": "Finite State Machine for a Binary Search Tree Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputField",
      "onExit": "clearVisualization",
      "on": {
        "INSERT_BUTTON_CLICKED": "inserting",
        "CLEAR_BUTTON_CLICKED": "clearing"
      }
    },
    {
      "name": "inserting",
      "onEnter": "validateInput",
      "onExit": "updateVisualization",
      "on": {
        "INSERTION_COMPLETE": "idle",
        "INVALID_INPUT": "idle"
      }
    },
    {
      "name": "clearing",
      "onEnter": "clearTree",
      "onExit": "resetInputField",
      "on": {
        "CLEAR_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_BUTTON_CLICKED",
    "CLEAR_BUTTON_CLICKED",
    "INSERTION_COMPLETE",
    "INVALID_INPUT",
    "CLEAR_COMPLETE"
  ],
  "notes": "The FSM captures the states of inserting numbers into a Binary Search Tree and clearing the tree. The application transitions between idle, inserting, and clearing states based on user interactions."
}