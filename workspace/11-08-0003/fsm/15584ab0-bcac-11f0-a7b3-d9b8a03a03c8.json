{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Bellman-Ford Algorithm Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeGraph",
      "onExit": "clearInputFields",
      "on": {
        "ADD_NODE": "addingNode",
        "ADD_EDGE": "addingEdge",
        "RUN_ALGORITHM": "runningAlgorithm"
      }
    },
    {
      "name": "addingNode",
      "onEnter": "promptAddNode",
      "onExit": "logNodeAdded",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "addingEdge",
      "onEnter": "promptAddEdge",
      "onExit": "logEdgeAdded",
      "on": {
        "EDGE_ADDED": "idle",
        "CANCEL": "idle"
      }
    },
    {
      "name": "runningAlgorithm",
      "onEnter": "executeBellmanFord",
      "onExit": "logAlgorithmCompletion",
      "on": {
        "ALGORITHM_COMPLETED": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "ADD_EDGE",
    "RUN_ALGORITHM",
    "NODE_ADDED",
    "EDGE_ADDED",
    "CANCEL",
    "ALGORITHM_COMPLETED"
  ],
  "notes": "The FSM captures the interactive states of adding nodes, adding edges, and running the Bellman-Ford algorithm, along with their respective transitions and actions."
}