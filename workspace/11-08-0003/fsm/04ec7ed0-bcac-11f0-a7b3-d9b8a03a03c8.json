{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Radix Sort Visualization",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputField",
      "onExit": "",
      "on": {
        "VISUALIZE_BUTTON_CLICK": "visualizing",
        "RESET_BUTTON_CLICK": "idle"
      }
    },
    {
      "name": "visualizing",
      "onEnter": "initializeVisualization",
      "onExit": "",
      "on": {
        "NEXT_BUTTON_CLICK": "stepping",
        "RESET_BUTTON_CLICK": "idle"
      }
    },
    {
      "name": "stepping",
      "onEnter": "updateVisualization",
      "onExit": "",
      "on": {
        "NEXT_BUTTON_CLICK": "stepping",
        "RESET_BUTTON_CLICK": "idle"
      }
    }
  ],
  "events": [
    "VISUALIZE_BUTTON_CLICK",
    "NEXT_BUTTON_CLICK",
    "RESET_BUTTON_CLICK"
  ],
  "notes": "The FSM captures the states of the Radix Sort visualization process, including idle state, visualizing state, and stepping through the sorting process."
}