{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Floyd-Warshall Algorithm Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeInputFields",
      "onExit": "",
      "on": {
        "RUN_ALGORITHM": "calculating",
        "RESET_MATRIX": "idle"
      }
    },
    {
      "name": "calculating",
      "onEnter": "runAlgorithm",
      "onExit": "updateResultMatrix",
      "on": {
        "ANIMATION_COMPLETE": "updating",
        "RESET_MATRIX": "idle"
      }
    },
    {
      "name": "updating",
      "onEnter": "updateResultMatrix",
      "onExit": "",
      "on": {
        "RESULT_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "RUN_ALGORITHM",
    "RESET_MATRIX",
    "ANIMATION_COMPLETE",
    "RESULT_DISPLAYED"
  ],
  "notes": "The FSM captures the states of the application during user interactions, including running the algorithm, updating the result matrix, and resetting the input fields."
}