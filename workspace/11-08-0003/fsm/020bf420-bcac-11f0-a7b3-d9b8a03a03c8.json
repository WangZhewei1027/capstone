{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive selection sort application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputField",
      "onExit": "clearArray",
      "on": {
        "SORT_BUTTON_CLICKED": "array_displayed",
        "RESET_BUTTON_CLICKED": "idle"
      }
    },
    {
      "name": "array_displayed",
      "onEnter": "displayBars",
      "onExit": "clearNextButton",
      "on": {
        "START_BUTTON_CLICKED": "sorting",
        "RESET_BUTTON_CLICKED": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "initiateSorting",
      "onExit": "stopSorting",
      "on": {
        "NEXT_BUTTON_CLICKED": "sorting_step",
        "SORTING_COMPLETE": "done"
      }
    },
    {
      "name": "sorting_step",
      "onEnter": "performSortingStep",
      "onExit": "updateBars",
      "on": {
        "NEXT_BUTTON_CLICKED": "sorting_step",
        "SORTING_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displaySortedArray",
      "onExit": "resetSortingState",
      "on": {
        "RESET_BUTTON_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "SORT_BUTTON_CLICKED",
    "START_BUTTON_CLICKED",
    "NEXT_BUTTON_CLICKED",
    "RESET_BUTTON_CLICKED",
    "SORTING_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application as the user interacts with it, transitioning between displaying the array, sorting it, and completing the sort."
}