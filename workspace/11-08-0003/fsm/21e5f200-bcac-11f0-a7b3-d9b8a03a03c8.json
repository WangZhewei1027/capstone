{
  "topic": "Interactive Application",
  "description": "Finite State Machine for K-Means Clustering Interactive Module",
  "states": [
    {
      "name": "idle",
      "on": {
        "GENERATE_POINTS": "points_generated",
        "SET_CLUSTERS": "clusters_set",
        "RUN_KMEANS": "kmeans_running"
      }
    },
    {
      "name": "points_generated",
      "onEnter": "drawPoints",
      "on": {
        "SET_CLUSTERS": "clusters_set",
        "RUN_KMEANS": "kmeans_running"
      }
    },
    {
      "name": "clusters_set",
      "onEnter": "drawCentroids",
      "on": {
        "RUN_KMEANS": "kmeans_running",
        "GENERATE_POINTS": "points_generated"
      }
    },
    {
      "name": "kmeans_running",
      "onEnter": "runKMeans",
      "on": {
        "GENERATE_POINTS": "points_generated",
        "SET_CLUSTERS": "clusters_set"
      }
    }
  ],
  "events": [
    "GENERATE_POINTS",
    "SET_CLUSTERS",
    "RUN_KMEANS"
  ],
  "notes": "States represent the main interactions of the application: generating points, setting clusters, and running the K-Means algorithm."
}