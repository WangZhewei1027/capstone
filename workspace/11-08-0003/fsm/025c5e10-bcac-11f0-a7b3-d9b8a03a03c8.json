{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Counting Sort Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearVisualization",
      "onExit": null,
      "on": {
        "SORT_BUTTON_CLICKED": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startSorting",
      "onExit": "clearInput",
      "on": {
        "SORTING_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displaySortedOutput",
      "onExit": "resetVisualization",
      "on": {
        "SORT_BUTTON_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "SORT_BUTTON_CLICKED",
    "SORTING_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application during the sorting process, including idle state, sorting state, and completion state."
}