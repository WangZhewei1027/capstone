{
  "topic": "Interactive Application",
  "description": "Models the states and transitions of an interactive graph creation application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "none",
      "onExit": "none",
      "on": {
        "GRAPH_CLICK": "creating_node",
        "RESET_GRAPH": "idle"
      }
    },
    {
      "name": "creating_node",
      "onEnter": "createNode()",
      "onExit": "none",
      "on": {
        "NODE_CLICK": "none",
        "NODE_MOUSE_DOWN": "connecting_edge"
      }
    },
    {
      "name": "connecting_edge",
      "onEnter": "startConnecting()",
      "onExit": "none",
      "on": {
        "MOUSE_MOVE": "drawing_edge",
        "MOUSE_UP": "edge_created"
      }
    },
    {
      "name": "drawing_edge",
      "onEnter": "none",
      "onExit": "none",
      "on": {
        "MOUSE_UP": "edge_created"
      }
    },
    {
      "name": "edge_created",
      "onEnter": "drawEdge()",
      "onExit": "none",
      "on": {
        "GRAPH_CLICK": "idle",
        "RESET_GRAPH": "idle"
      }
    }
  ],
  "events": [
    "GRAPH_CLICK",
    "NODE_CLICK",
    "NODE_MOUSE_DOWN",
    "MOUSE_MOVE",
    "MOUSE_UP",
    "RESET_GRAPH"
  ],
  "notes": "The FSM captures the main interactive states of the graph application, including creating nodes and connecting them with edges."
}