{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Selection Sort Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "generateArray",
      "onExit": null,
      "on": {
        "START_BUTTON_CLICK": "sorting",
        "RESET_BUTTON_CLICK": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "selectionSort",
      "onExit": null,
      "on": {
        "SORTING_COMPLETE": "done",
        "STEP_BUTTON_CLICK": "stepping"
      }
    },
    {
      "name": "stepping",
      "onEnter": "executeStep",
      "onExit": null,
      "on": {
        "STEP_COMPLETE": "sorting",
        "RESET_BUTTON_CLICK": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": null,
      "onExit": null,
      "on": {
        "RESET_BUTTON_CLICK": "idle"
      }
    }
  ],
  "events": [
    "START_BUTTON_CLICK",
    "RESET_BUTTON_CLICK",
    "STEP_BUTTON_CLICK",
    "SORTING_COMPLETE",
    "STEP_COMPLETE"
  ],
  "notes": "The 'stepping' state is for implementing a step-by-step feature which is currently omitted. The 'sorting' state transitions to 'done' when sorting is complete."
}