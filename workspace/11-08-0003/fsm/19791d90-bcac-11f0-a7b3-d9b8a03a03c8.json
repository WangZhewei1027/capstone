{
  "topic": "Interactive Application",
  "description": "Finite state machine for visualizing Prim's Algorithm in an interactive graph application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetGraph",
      "on": {
        "START_BUTTON_CLICK": "visualizing"
      }
    },
    {
      "name": "visualizing",
      "onEnter": "initializeVisualization",
      "onExit": "clearSelectionsAndEdges",
      "on": {
        "VISUALIZATION_STEP": "visualizing",
        "VISUALIZATION_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "highlightComplete",
      "onExit": "resetGraph",
      "on": {
        "START_BUTTON_CLICK": "idle"
      }
    }
  ],
  "events": [
    "START_BUTTON_CLICK",
    "VISUALIZATION_STEP",
    "VISUALIZATION_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application during the visualization of Prim's Algorithm, including the idle state before starting, the visualization process, and the completion state."
}