{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive Quick Sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayInitialMessage",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated",
        "SORT_ARRAY": "error_no_array"
      }
    },
    {
      "name": "array_generated",
      "onEnter": "renderArray",
      "onExit": null,
      "on": {
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "displaySortingMessage",
      "onExit": null,
      "on": {
        "SORT_COMPLETE": "done",
        "ERROR": "error_no_array"
      }
    },
    {
      "name": "done",
      "onEnter": "displayCompletionMessage",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated",
        "SORT_ARRAY": "error_no_array"
      }
    },
    {
      "name": "error_no_array",
      "onEnter": "displayErrorMessage",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "SORT_ARRAY",
    "SORT_COMPLETE",
    "ERROR"
  ],
  "notes": "The FSM captures the states of the application during user interactions, including generating an array, sorting it, and handling errors when attempting to sort without an array."
}