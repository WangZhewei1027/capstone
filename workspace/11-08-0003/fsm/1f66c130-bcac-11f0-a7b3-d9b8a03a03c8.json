{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Topological Sort Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetOutput",
      "onExit": "",
      "on": {
        "ADD_NODE": "node_added",
        "SORT": "sorting",
        "RESET": "idle"
      }
    },
    {
      "name": "node_added",
      "onEnter": "addNodeToCanvas",
      "onExit": "",
      "on": {
        "ADD_NODE": "node_added",
        "SORT": "sorting",
        "RESET": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "clearOutput",
      "onExit": "animateSort",
      "on": {
        "SORT_COMPLETE": "done",
        "RESET": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": "displaySortedOutput",
      "onExit": "",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "SORT",
    "RESET",
    "SORT_COMPLETE"
  ],
  "notes": "The FSM captures the main interactive states of adding nodes, sorting, and handling the reset functionality."
}