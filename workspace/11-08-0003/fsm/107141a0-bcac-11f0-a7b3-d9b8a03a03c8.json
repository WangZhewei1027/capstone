{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Dijkstra's Algorithm Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeGrid",
      "onExit": "clearSelection",
      "on": {
        "NODE_CLICK": "SELECTING_START_NODE",
        "RESET": "idle",
        "RUN": "WAITING_FOR_NODES"
      }
    },
    {
      "name": "SELECTING_START_NODE",
      "onEnter": "setStartNode",
      "onExit": "none",
      "on": {
        "NODE_CLICK": "SELECTING_END_NODE",
        "RESET": "idle"
      }
    },
    {
      "name": "SELECTING_END_NODE",
      "onEnter": "setEndNode",
      "onExit": "none",
      "on": {
        "NODE_CLICK": "SELECTING_END_NODE",
        "RESET": "idle",
        "RUN": "WAITING_FOR_NODES"
      }
    },
    {
      "name": "WAITING_FOR_NODES",
      "onEnter": "validateNodes",
      "onExit": "none",
      "on": {
        "NODES_VALID": "RUNNING_ALGORITHM",
        "NODES_INVALID": "idle"
      }
    },
    {
      "name": "RUNNING_ALGORITHM",
      "onEnter": "findShortestPath",
      "onExit": "none",
      "on": {
        "PATH_FOUND": "DONE",
        "RESET": "idle"
      }
    },
    {
      "name": "DONE",
      "onEnter": "highlightPath",
      "onExit": "none",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "NODE_CLICK",
    "RESET",
    "RUN",
    "NODES_VALID",
    "NODES_INVALID",
    "PATH_FOUND"
  ],
  "notes": "The FSM captures the states of user interactions with the grid, including selecting nodes, running the algorithm, and visualizing the path."
}