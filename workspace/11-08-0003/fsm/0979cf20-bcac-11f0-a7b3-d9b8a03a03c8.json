{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Heap Sort interactive module, modeling user interactions and sorting states.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetVisualization",
      "onExit": "none",
      "on": {
        "GENERATE_ARRAY": "array_generated"
      }
    },
    {
      "name": "array_generated",
      "onEnter": "visualizeGeneratedArray",
      "onExit": "none",
      "on": {
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startHeapSort",
      "onExit": "disableSortButton",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "enableGenerateButton",
      "onExit": "none",
      "on": {
        "GENERATE_ARRAY": "idle"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "SORT_ARRAY",
    "SORT_COMPLETE"
  ],
  "notes": "The FSM captures the states of generating an array, sorting it, and completion. The 'sorting' state transitions to 'done' once the sorting process is complete."
}