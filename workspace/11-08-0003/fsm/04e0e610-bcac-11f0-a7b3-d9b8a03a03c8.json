{
  "topic": "Interactive Application",
  "description": "Finite State Machine for a Priority Queue Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearMessage",
      "onExit": "",
      "on": {
        "ADD_BUTTON_CLICKED": "adding",
        "REMOVE_BUTTON_CLICKED": "removing"
      }
    },
    {
      "name": "adding",
      "onEnter": "addElementToQueue",
      "onExit": "updateQueueDisplay",
      "on": {
        "INVALID_INPUT": "idle",
        "VALID_INPUT": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "removeElementFromQueue",
      "onExit": "updateQueueDisplay",
      "on": {
        "QUEUE_EMPTY": "idle",
        "ELEMENT_REMOVED": "idle"
      }
    }
  ],
  "events": [
    "ADD_BUTTON_CLICKED",
    "REMOVE_BUTTON_CLICKED",
    "INVALID_INPUT",
    "VALID_INPUT",
    "QUEUE_EMPTY",
    "ELEMENT_REMOVED"
  ],
  "notes": "The FSM captures the states of adding and removing elements from a priority queue, including handling invalid inputs and empty queue scenarios."
}