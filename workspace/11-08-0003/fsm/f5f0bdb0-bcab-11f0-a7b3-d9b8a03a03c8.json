{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive set operations application allowing users to drag numbers between sets and perform operations.",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeSets",
      "onExit": null,
      "on": {
        "DRAG_START": "dragging",
        "DROP": "updatingSet"
      }
    },
    {
      "name": "dragging",
      "onEnter": null,
      "onExit": "clearDragData",
      "on": {
        "DROP": "updatingSet",
        "DRAG_END": "idle"
      }
    },
    {
      "name": "updatingSet",
      "onEnter": "updateSet",
      "onExit": null,
      "on": {
        "DROP_COMPLETE": "idle"
      }
    },
    {
      "name": "performing_operation",
      "onEnter": "calculateResult",
      "onExit": "displayResult",
      "on": {
        "OPERATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "DRAG_START",
    "DRAG_END",
    "DROP",
    "DROP_COMPLETE",
    "OPERATION_COMPLETE"
  ],
  "notes": "States represent the main interactions: idle state for setup, dragging state for user dragging actions, updatingSet for adding numbers to sets, and performing_operation for calculating and displaying results."
}