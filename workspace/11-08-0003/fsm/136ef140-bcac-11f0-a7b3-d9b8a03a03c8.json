{
  "topic": "Interactive Application",
  "description": "Finite State Machine for exploring the Fibonacci sequence through user input and button interaction.",
  "states": [
    {
      "name": "idle",
      "onEnter": null,
      "onExit": null,
      "on": {
        "GENERATE_BUTTON_CLICK": "validating_input"
      }
    },
    {
      "name": "validating_input",
      "onEnter": null,
      "onExit": null,
      "on": {
        "INPUT_VALID": "displaying_result",
        "INPUT_INVALID": "input_error"
      }
    },
    {
      "name": "input_error",
      "onEnter": "show_input_error_message",
      "onExit": null,
      "on": {
        "GENERATE_BUTTON_CLICK": "validating_input"
      }
    },
    {
      "name": "displaying_result",
      "onEnter": "display_fibonacci_sequence",
      "onExit": null,
      "on": {
        "RESULT_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "GENERATE_BUTTON_CLICK",
    "INPUT_VALID",
    "INPUT_INVALID",
    "RESULT_DISPLAYED"
  ],
  "notes": "The FSM captures the states of the application during user interaction, including input validation and result display."
}