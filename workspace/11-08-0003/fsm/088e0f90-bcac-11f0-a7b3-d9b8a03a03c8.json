{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Binary Search Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayInitialArray",
      "onExit": null,
      "on": {
        "SEARCH_BUTTON_CLICK": "searching"
      }
    },
    {
      "name": "searching",
      "onEnter": "displaySearchingFeedback",
      "onExit": null,
      "on": {
        "SEARCH_COMPLETE": "done",
        "INVALID_INPUT": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": "displaySearchResult",
      "onExit": "resetFeedback",
      "on": {
        "SEARCH_BUTTON_CLICK": "searching"
      }
    }
  ],
  "events": [
    "SEARCH_BUTTON_CLICK",
    "SEARCH_COMPLETE",
    "INVALID_INPUT"
  ],
  "notes": "The FSM captures the states of the application during the binary search process, including user interactions and feedback."
}