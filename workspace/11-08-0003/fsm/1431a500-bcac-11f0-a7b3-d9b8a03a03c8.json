{
  "topic": "Interactive Application",
  "description": "Finite State Machine for exploring the Knapsack Problem through item selection and calculation of optimal items.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetSelections",
      "onExit": "clearResults",
      "on": {
        "ITEM_SELECTED": "item_selected",
        "CALCULATE_CLICKED": "calculating"
      }
    },
    {
      "name": "item_selected",
      "onEnter": "highlightSelectedItem",
      "onExit": "removeHighlightFromItems",
      "on": {
        "ITEM_SELECTED": "item_selected",
        "CALCULATE_CLICKED": "calculating"
      }
    },
    {
      "name": "calculating",
      "onEnter": "calculateOptimalItems",
      "onExit": "displayResults",
      "on": {
        "CALCULATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "ITEM_SELECTED",
    "CALCULATE_CLICKED",
    "CALCULATION_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application as users interact with item selections and the calculation button."
}