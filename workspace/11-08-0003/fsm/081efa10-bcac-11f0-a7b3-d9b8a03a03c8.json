{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Radix Sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearMessage",
      "onExit": "clearArray",
      "on": {
        "RUN_BUTTON_CLICK": "validatingInput"
      }
    },
    {
      "name": "validatingInput",
      "onEnter": "validateInput",
      "onExit": "clearMessage",
      "on": {
        "VALID_INPUT": "sorting",
        "INVALID_INPUT": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startSorting",
      "onExit": "updateMessage",
      "on": {
        "SORTING_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayCompletionMessage",
      "onExit": "resetInput",
      "on": {
        "RUN_BUTTON_CLICK": "idle"
      }
    }
  ],
  "events": [
    "RUN_BUTTON_CLICK",
    "VALID_INPUT",
    "INVALID_INPUT",
    "SORTING_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application during the sorting process, including input validation and completion of the sorting algorithm."
}