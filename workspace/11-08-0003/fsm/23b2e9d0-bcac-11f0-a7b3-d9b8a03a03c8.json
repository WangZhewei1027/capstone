{
  "topic": "Interactive Application",
  "description": "Finite state machine for the K-Means Clustering interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeCanvas",
      "onExit": "clearCanvas",
      "on": {
        "CLICK_ON_CANVAS": "addingPoints",
        "CHANGE_K_VALUE": "updatingCentroids",
        "CLICK_RUN_BUTTON": "runningKMeans"
      }
    },
    {
      "name": "addingPoints",
      "onEnter": "addPointToCanvas",
      "onExit": "none",
      "on": {
        "CLICK_ON_CANVAS": "addingPoints",
        "CHANGE_K_VALUE": "updatingCentroids",
        "CLICK_RUN_BUTTON": "runningKMeans"
      }
    },
    {
      "name": "updatingCentroids",
      "onEnter": "drawCentroids",
      "onExit": "none",
      "on": {
        "CLICK_ON_CANVAS": "addingPoints",
        "CHANGE_K_VALUE": "updatingCentroids",
        "CLICK_RUN_BUTTON": "runningKMeans"
      }
    },
    {
      "name": "runningKMeans",
      "onEnter": "initializeCentroids",
      "onExit": "none",
      "on": {
        "KMEANS_ANIMATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "CLICK_ON_CANVAS",
    "CHANGE_K_VALUE",
    "CLICK_RUN_BUTTON",
    "KMEANS_ANIMATION_COMPLETE"
  ],
  "notes": "States represent the different stages of user interaction, including adding points, updating centroids, and running the K-Means algorithm."
}