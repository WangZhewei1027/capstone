{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive Min/Max Heap application allowing users to insert and extract elements.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearFeedback",
      "onExit": "resetInput",
      "on": {
        "INSERT_MIN": "insertingMin",
        "INSERT_MAX": "insertingMax",
        "EXTRACT_MIN": "extractingMin",
        "EXTRACT_MAX": "extractingMax"
      }
    },
    {
      "name": "insertingMin",
      "onEnter": "insertMinHeap",
      "onExit": "visualizeHeap",
      "on": {
        "INSERT_MIN_COMPLETE": "idle"
      }
    },
    {
      "name": "insertingMax",
      "onEnter": "insertMaxHeap",
      "onExit": "visualizeHeap",
      "on": {
        "INSERT_MAX_COMPLETE": "idle"
      }
    },
    {
      "name": "extractingMin",
      "onEnter": "extractMinHeap",
      "onExit": "visualizeHeap",
      "on": {
        "EXTRACT_MIN_COMPLETE": "idle"
      }
    },
    {
      "name": "extractingMax",
      "onEnter": "extractMaxHeap",
      "onExit": "visualizeHeap",
      "on": {
        "EXTRACT_MAX_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_MIN",
    "INSERT_MAX",
    "EXTRACT_MIN",
    "EXTRACT_MAX",
    "INSERT_MIN_COMPLETE",
    "INSERT_MAX_COMPLETE",
    "EXTRACT_MIN_COMPLETE",
    "EXTRACT_MAX_COMPLETE"
  ],
  "notes": "States represent the main actions the user can take with the heaps. Each inserting and extracting action transitions back to the idle state after completion."
}