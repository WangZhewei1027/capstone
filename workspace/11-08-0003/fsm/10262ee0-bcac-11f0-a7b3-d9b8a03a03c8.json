{
  "topic": "Interactive Application",
  "description": "Finite State Machine for a Topological Sort Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayInstructions",
      "onExit": null,
      "on": {
        "ADD_NODE": "addingNode",
        "SORT": "sorting",
        "RESET": "resetting"
      }
    },
    {
      "name": "addingNode",
      "onEnter": "createNode",
      "onExit": null,
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "visualizeSort",
      "onExit": null,
      "on": {
        "SORT_COMPLETED": "idle"
      }
    },
    {
      "name": "resetting",
      "onEnter": "clearGraph",
      "onExit": null,
      "on": {
        "RESET_COMPLETED": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "SORT",
    "RESET",
    "NODE_ADDED",
    "SORT_COMPLETED",
    "RESET_COMPLETED"
  ],
  "notes": "The FSM captures the states of the interactive application, including adding nodes, sorting, and resetting the graph. Each state transition is triggered by specific user actions or events."
}