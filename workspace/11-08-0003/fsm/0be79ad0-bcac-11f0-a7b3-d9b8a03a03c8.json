{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Dijkstra's Algorithm Visualizer",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearConsole",
      "onExit": "resetNodeStyles",
      "on": {
        "RUN_ALGORITHM": "calculating"
      }
    },
    {
      "name": "calculating",
      "onEnter": "highlightStartNode",
      "onExit": "resetNodeStyles",
      "on": {
        "ALGORITHM_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayResult",
      "onExit": "clearNodeHighlights",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "RUN_ALGORITHM",
    "ALGORITHM_COMPLETE",
    "RESET"
  ],
  "notes": "States represent the main phases of the algorithm execution, including idle state before running, calculating state during the algorithm, and done state after completion."
}