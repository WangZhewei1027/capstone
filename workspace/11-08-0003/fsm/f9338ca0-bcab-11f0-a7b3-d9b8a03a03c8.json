{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an adjacency list explorer web application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetInputFields",
      "onExit": "",
      "on": {
        "ADD_NODE": "adding_node",
        "ADD_EDGE": "adding_edge",
        "SHOW_ADJACENCY_LIST": "displaying_adjacency_list"
      }
    },
    {
      "name": "adding_node",
      "onEnter": "addNodeToGraph",
      "onExit": "clearNodeInput",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "adding_edge",
      "onEnter": "addEdgeToGraph",
      "onExit": "",
      "on": {
        "EDGE_ADDED": "idle"
      }
    },
    {
      "name": "displaying_adjacency_list",
      "onEnter": "renderAdjacencyList",
      "onExit": "",
      "on": {
        "ADJACENCY_LIST_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "ADD_EDGE",
    "SHOW_ADJACENCY_LIST",
    "NODE_ADDED",
    "EDGE_ADDED",
    "ADJACENCY_LIST_DISPLAYED"
  ],
  "notes": "The FSM captures the main interactive states of the application, including adding nodes and edges, and displaying the adjacency list."
}