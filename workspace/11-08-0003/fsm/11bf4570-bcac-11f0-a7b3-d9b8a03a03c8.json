{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Fibonacci Sequence Explorer application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearVisualization",
      "onExit": "none",
      "on": {
        "GENERATE_BUTTON_CLICK": "generating"
      }
    },
    {
      "name": "generating",
      "onEnter": "calculateFibonacci",
      "onExit": "none",
      "on": {
        "FIBONACCI_CALCULATED": "visualizing"
      }
    },
    {
      "name": "visualizing",
      "onEnter": "displayFibonacci",
      "onExit": "none",
      "on": {
        "BAR_MOUSE_OVER": "tooltipVisible",
        "BAR_MOUSE_OUT": "visualizing",
        "GENERATE_BUTTON_CLICK": "generating"
      }
    },
    {
      "name": "tooltipVisible",
      "onEnter": "showTooltip",
      "onExit": "hideTooltip",
      "on": {
        "BAR_MOUSE_OUT": "visualizing"
      }
    }
  ],
  "events": [
    "GENERATE_BUTTON_CLICK",
    "FIBONACCI_CALCULATED",
    "BAR_MOUSE_OVER",
    "BAR_MOUSE_OUT"
  ],
  "notes": "The FSM captures the states of the application during user interactions, including generating Fibonacci numbers and visualizing them with tooltips."
}