{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an Interactive Linear Search Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayArray",
      "onExit": null,
      "on": {
        "SEARCH_BUTTON_CLICK": "searching"
      }
    },
    {
      "name": "searching",
      "onEnter": null,
      "onExit": null,
      "on": {
        "SEARCH_COMPLETE": "done",
        "SEARCH_NOT_FOUND": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayResult",
      "onExit": "resetSearch",
      "on": {
        "SEARCH_BUTTON_CLICK": "idle"
      }
    }
  ],
  "events": [
    "SEARCH_BUTTON_CLICK",
    "SEARCH_COMPLETE",
    "SEARCH_NOT_FOUND"
  ],
  "notes": "The FSM transitions from idle to searching upon clicking the search button, and then to done when the search is complete or not found."
}