{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Merge Sort Visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "generateInitialArray",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated",
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "array_generated",
      "onEnter": "renderArray",
      "onExit": null,
      "on": {
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startMergeSort",
      "onExit": "resetArrayVisuals",
      "on": {
        "SORT_COMPLETE": "sorted"
      }
    },
    {
      "name": "sorted",
      "onEnter": "renderSortedArray",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "SORT_ARRAY",
    "SORT_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application including generating an array, sorting it, and displaying the sorted result. The transitions are triggered by button clicks and the completion of the sorting process."
}