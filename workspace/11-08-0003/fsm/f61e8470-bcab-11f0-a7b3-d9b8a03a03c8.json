{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Union-Find Interactive Exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "none",
      "onExit": "none",
      "on": {
        "ADD_NODE": "node_added",
        "CLEAR_ALL": "cleared"
      }
    },
    {
      "name": "node_added",
      "onEnter": "addNode",
      "onExit": "none",
      "on": {
        "DRAG_START": "dragging",
        "CLEAR_ALL": "cleared"
      }
    },
    {
      "name": "dragging",
      "onEnter": "none",
      "onExit": "onMouseUp",
      "on": {
        "DRAG_END": "node_added",
        "DROP_ON_NODE": "union_made"
      }
    },
    {
      "name": "union_made",
      "onEnter": "union",
      "onExit": "none",
      "on": {
        "CLEAR_ALL": "cleared",
        "ADD_NODE": "node_added"
      }
    },
    {
      "name": "highlighting_path",
      "onEnter": "highlightPath",
      "onExit": "none",
      "on": {
        "CLEAR_ALL": "cleared",
        "ADD_NODE": "node_added"
      }
    },
    {
      "name": "cleared",
      "onEnter": "clearAll",
      "onExit": "none",
      "on": {
        "ADD_NODE": "node_added"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "CLEAR_ALL",
    "DRAG_START",
    "DRAG_END",
    "DROP_ON_NODE"
  ],
  "notes": "The FSM captures the main interactive states of adding nodes, dragging them, performing unions, and clearing the canvas."
}