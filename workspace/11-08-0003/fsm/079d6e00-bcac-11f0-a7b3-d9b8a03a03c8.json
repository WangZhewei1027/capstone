{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Insertion Sort Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderArray",
      "onExit": null,
      "on": {
        "START_SORT": "sorting",
        "RESET_ARRAY": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startSort",
      "onExit": null,
      "on": {
        "SORTING_COMPLETED": "done"
      }
    },
    {
      "name": "done",
      "onEnter": null,
      "onExit": null,
      "on": {
        "RESET_ARRAY": "idle"
      }
    }
  ],
  "events": [
    "START_SORT",
    "RESET_ARRAY",
    "SORTING_COMPLETED"
  ],
  "notes": "The FSM captures the states of the application during the sorting process, including idle, sorting, and completion states."
}