{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Interactive Red-Black Tree Explorer application",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearMessages",
      "onExit": "clearInput",
      "on": {
        "INSERT_NODE": "inserting",
        "INVALID_INPUT": "error"
      }
    },
    {
      "name": "inserting",
      "onEnter": "insertNode",
      "onExit": "visualizeTree",
      "on": {
        "NODE_INSERTED": "idle"
      }
    },
    {
      "name": "error",
      "onEnter": "displayErrorMessage",
      "onExit": "clearErrorMessage",
      "on": {
        "RETRY": "idle"
      }
    }
  ],
  "events": [
    "INSERT_NODE",
    "NODE_INSERTED",
    "INVALID_INPUT",
    "RETRY"
  ],
  "notes": "The FSM captures the states of the application during user interactions, including inserting nodes and handling errors."
}