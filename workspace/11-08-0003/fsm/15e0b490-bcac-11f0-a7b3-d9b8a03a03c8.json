{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Depth-First Search Visualization",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetSelection",
      "onExit": "clearSelection",
      "on": {
        "START_DFS": "running",
        "CLICK_NODE": "selecting",
        "TOGGLE_DRAW_MODE": "drawing"
      }
    },
    {
      "name": "drawing",
      "onEnter": "enableDrawingMode",
      "onExit": "disableDrawingMode",
      "on": {
        "CLICK_CANVAS": "addNode",
        "TOGGLE_DRAW_MODE": "idle",
        "RIGHT_CLICK": "idle"
      }
    },
    {
      "name": "selecting",
      "onEnter": "highlightNode",
      "onExit": "removeHighlight",
      "on": {
        "CLICK_NODE": "idle",
        "CLICK_CANVAS": "addEdge",
        "RIGHT_CLICK": "idle"
      }
    },
    {
      "name": "running",
      "onEnter": "startDFS",
      "onExit": "stopDFS",
      "on": {
        "DFS_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "START_DFS",
    "CLICK_NODE",
    "CLICK_CANVAS",
    "RIGHT_CLICK",
    "TOGGLE_DRAW_MODE",
    "DFS_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application including idle state, drawing mode, selecting nodes, and running DFS. Events trigger transitions between these states."
}