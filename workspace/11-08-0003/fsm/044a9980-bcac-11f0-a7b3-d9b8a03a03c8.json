{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Counting Sort Interactive Module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearVisualization",
      "onExit": "",
      "on": {
        "START_SORTING": "visualizing_input"
      }
    },
    {
      "name": "visualizing_input",
      "onEnter": "visualizeInput",
      "onExit": "",
      "on": {
        "INPUT_VISUALIZED": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "performCountingSort",
      "onExit": "",
      "on": {
        "SORTING_COMPLETE": "visualizing_output"
      }
    },
    {
      "name": "visualizing_output",
      "onEnter": "visualizeOutput",
      "onExit": "",
      "on": {
        "OUTPUT_VISUALIZED": "idle"
      }
    }
  ],
  "events": [
    "START_SORTING",
    "INPUT_VISUALIZED",
    "SORTING_COMPLETE",
    "OUTPUT_VISUALIZED"
  ],
  "notes": "The FSM captures the main states and transitions of the Counting Sort interactive module, including input visualization, sorting, and output visualization."
}