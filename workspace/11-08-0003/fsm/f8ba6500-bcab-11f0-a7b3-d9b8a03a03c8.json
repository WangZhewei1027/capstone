{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive array manipulation application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearInputField",
      "onExit": "none",
      "on": {
        "ADD_TO_ARRAY": "adding",
        "REMOVE_FROM_ARRAY": "removing",
        "DISPLAY_ARRAY": "displaying"
      }
    },
    {
      "name": "adding",
      "onEnter": "addValueToArray",
      "onExit": "none",
      "on": {
        "VALUE_ADDED": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "removeLastElement",
      "onExit": "none",
      "on": {
        "ELEMENT_REMOVED": "idle"
      }
    },
    {
      "name": "displaying",
      "onEnter": "renderArray",
      "onExit": "none",
      "on": {
        "ARRAY_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "ADD_TO_ARRAY",
    "REMOVE_FROM_ARRAY",
    "DISPLAY_ARRAY",
    "VALUE_ADDED",
    "ELEMENT_REMOVED",
    "ARRAY_DISPLAYED"
  ],
  "notes": "The application allows users to add, remove, and display elements in an array. Each state corresponds to a specific action taken by the user."
}