{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Counting Sort Visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearVisualization",
      "on": {
        "SORT_BUTTON_CLICKED": "validating_input"
      }
    },
    {
      "name": "validating_input",
      "onEnter": "validateInput",
      "on": {
        "INPUT_VALID": "sorting",
        "INPUT_INVALID": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "performCountingSort",
      "on": {
        "SORTING_COMPLETE": "visualizing_input"
      }
    },
    {
      "name": "visualizing_input",
      "onEnter": "visualizeInputArray",
      "on": {
        "VISUALIZATION_COMPLETE": "visualizing_output"
      }
    },
    {
      "name": "visualizing_output",
      "onEnter": "visualizeSortedArray",
      "on": {
        "VISUALIZATION_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayCompletionMessage",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "SORT_BUTTON_CLICKED",
    "INPUT_VALID",
    "INPUT_INVALID",
    "SORTING_COMPLETE",
    "VISUALIZATION_COMPLETE",
    "RESET"
  ],
  "notes": "The FSM captures the flow of user interactions, input validation, sorting process, and visualization of results."
}