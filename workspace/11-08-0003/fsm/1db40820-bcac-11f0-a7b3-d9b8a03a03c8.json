{
  "topic": "Interactive Application",
  "description": "Models the states and transitions of an interactive Huffman coding application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearOutput",
      "onExit": null,
      "on": {
        "ENCODE_BUTTON_CLICK": "processing"
      }
    },
    {
      "name": "processing",
      "onEnter": "calculateFrequencyAndBuildTree",
      "onExit": null,
      "on": {
        "PROCESSING_COMPLETE": "displaying"
      }
    },
    {
      "name": "displaying",
      "onEnter": "displayHuffmanCodes",
      "onExit": null,
      "on": {
        "HUMAN_READABLE_OUTPUT": "idle"
      }
    }
  ],
  "events": [
    "ENCODE_BUTTON_CLICK",
    "PROCESSING_COMPLETE",
    "HUMAN_READABLE_OUTPUT"
  ],
  "notes": "The application transitions from idle to processing when the encode button is clicked, processes the input, and then displays the output before returning to idle."
}