{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive bubble sort application that visualizes sorting of an array.",
  "states": [
    {
      "name": "idle",
      "onEnter": "createArray",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated"
      }
    },
    {
      "name": "array_generated",
      "onEnter": null,
      "onExit": null,
      "on": {
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "bubbleSort",
      "onExit": null,
      "on": {
        "SORT_COMPLETE": "sorted"
      }
    },
    {
      "name": "sorted",
      "onEnter": null,
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "SORT_ARRAY",
    "SORT_COMPLETE"
  ],
  "notes": "The application starts in the 'idle' state, generates an array, transitions to 'array_generated', then to 'sorting' when sorting is initiated, and finally to 'sorted' when sorting is complete."
}