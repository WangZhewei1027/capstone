{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Interactive Knapsack Problem Solver",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeApplication",
      "onExit": null,
      "on": {
        "ITEM_CLICK": "item_selected",
        "SLIDER_CHANGE": "weight_slider_changed",
        "RESET_CLICK": "resetting"
      }
    },
    {
      "name": "item_selected",
      "onEnter": "updateSelectedItem",
      "onExit": null,
      "on": {
        "ITEM_CLICK": "item_deselected",
        "SLIDER_CHANGE": "weight_slider_changed",
        "RESET_CLICK": "resetting"
      }
    },
    {
      "name": "item_deselected",
      "onEnter": "updateDeselectedItem",
      "onExit": null,
      "on": {
        "ITEM_CLICK": "item_selected",
        "SLIDER_CHANGE": "weight_slider_changed",
        "RESET_CLICK": "resetting"
      }
    },
    {
      "name": "weight_slider_changed",
      "onEnter": "updateMaxWeight",
      "onExit": null,
      "on": {
        "ITEM_CLICK": "item_selected",
        "RESET_CLICK": "resetting"
      }
    },
    {
      "name": "resetting",
      "onEnter": "resetSelection",
      "onExit": null,
      "on": {
        "ITEM_CLICK": "item_selected",
        "SLIDER_CHANGE": "weight_slider_changed"
      }
    }
  ],
  "events": [
    "ITEM_CLICK",
    "SLIDER_CHANGE",
    "RESET_CLICK"
  ],
  "notes": "The FSM captures the states of item selection, weight adjustment, and resetting the selections in the interactive knapsack problem solver."
}