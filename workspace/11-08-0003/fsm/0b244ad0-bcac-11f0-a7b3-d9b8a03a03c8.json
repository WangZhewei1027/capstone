{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Insertion Sort interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "drawArray",
      "on": {
        "SORT_BUTTON_CLICK": "sorting",
        "SHUFFLE_BUTTON_CLICK": "shuffled"
      }
    },
    {
      "name": "sorting",
      "onEnter": "insertionSort",
      "onExit": "drawArray",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "shuffled",
      "onEnter": "drawArray",
      "on": {
        "SORT_BUTTON_CLICK": "sorting"
      }
    },
    {
      "name": "done",
      "onEnter": "drawArray",
      "on": {
        "SHUFFLE_BUTTON_CLICK": "shuffled",
        "SORT_BUTTON_CLICK": "sorting"
      }
    }
  ],
  "events": [
    "SORT_BUTTON_CLICK",
    "SHUFFLE_BUTTON_CLICK",
    "SORT_COMPLETE"
  ],
  "notes": "The 'sorting' state involves visual feedback through highlighting and sorting animations. The 'done' state indicates that the sorting process has completed."
}