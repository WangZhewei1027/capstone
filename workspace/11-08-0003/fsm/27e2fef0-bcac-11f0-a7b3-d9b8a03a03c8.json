{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive application demonstrating Prim's Algorithm.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetColors",
      "onExit": "",
      "on": {
        "CLICK_ON_VIEWPORT": "adding_node",
        "CLICK_START_BUTTON": "running_algorithm",
        "CLICK_RESET_BUTTON": "resetting"
      }
    },
    {
      "name": "adding_node",
      "onEnter": "addNode",
      "onExit": "drawGraph",
      "on": {
        "CLICK_ON_VIEWPORT": "adding_node",
        "CLICK_ON_NODE": "adding_edges",
        "CLICK_RESET_BUTTON": "resetting"
      }
    },
    {
      "name": "adding_edges",
      "onEnter": "addEdges",
      "onExit": "drawGraph",
      "on": {
        "CLICK_ON_NODE": "adding_edges",
        "CLICK_ON_VIEWPORT": "adding_node",
        "CLICK_RESET_BUTTON": "resetting"
      }
    },
    {
      "name": "running_algorithm",
      "onEnter": "startAlgorithm",
      "onExit": "",
      "on": {
        "ALGORITHM_COMPLETE": "idle",
        "CLICK_RESET_BUTTON": "resetting"
      }
    },
    {
      "name": "resetting",
      "onEnter": "resetApplication",
      "onExit": "",
      "on": {
        "RESET_COMPLETE": "idle"
      }
    }
