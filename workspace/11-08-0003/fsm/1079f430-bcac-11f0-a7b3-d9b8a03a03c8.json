{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Floyd-Warshall Algorithm Interactive Exploration",
  "states": [
    {
      "name": "idle",
      "onEnter": "reset",
      "onExit": "",
      "on": {
        "START_ALGORITHM": "running",
        "RESET": "idle"
      }
    },
    {
      "name": "running",
      "onEnter": "startAlgorithm",
      "onExit": "",
      "on": {
        "INTERMEDIATE_UPDATE": "updating",
        "ALGORITHM_COMPLETE": "done"
      }
    },
    {
      "name": "updating",
      "onEnter": "updateGraph",
      "onExit": "",
      "on": {
        "INTERMEDIATE_UPDATE_COMPLETE": "running"
      }
    },
    {
      "name": "done",
      "onEnter": "displayResults",
      "onExit": "",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "START_ALGORITHM",
    "RESET",
    "INTERMEDIATE_UPDATE",
    "INTERMEDIATE_UPDATE_COMPLETE",
    "ALGORITHM_COMPLETE"
  ],
  "notes": "The FSM captures the states of the algorithm execution, including idle, running, updating, and completion states."
}