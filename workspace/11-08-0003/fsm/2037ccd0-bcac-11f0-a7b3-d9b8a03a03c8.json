{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Huffman Coding Interactive Module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "none",
      "onExit": "none",
      "on": {
        "GENERATE_BUTTON_CLICK": "validating_input"
      }
    },
    {
      "name": "validating_input",
      "onEnter": "none",
      "onExit": "none",
      "on": {
        "INPUT_VALID": "calculating_frequency",
        "INPUT_INVALID": "idle"
      }
    },
    {
      "name": "calculating_frequency",
      "onEnter": "getFrequency(input)",
      "onExit": "none",
      "on": {
        "FREQUENCY_CALCULATED": "displaying_frequency"
      }
    },
    {
      "name": "displaying_frequency",
      "onEnter": "displayFrequency(frequency)",
      "onExit": "none",
      "on": {
        "FREQUENCY_DISPLAYED": "building_huffman_tree"
      }
    },
    {
      "name": "building_huffman_tree",
      "onEnter": "buildHuffmanTree(frequency)",
      "onExit": "none",
      "on": {
        "HUFFMAN_TREE_BUILT": "displaying_huffman_tree"
      }
    },
    {
      "name": "displaying_huffman_tree",
      "onEnter": "displayHuffmanTree(node)",
      "onExit": "none",
      "on": {
        "HUFFMAN_TREE_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "GENERATE_BUTTON_CLICK",
    "INPUT_VALID",
    "INPUT_INVALID",
    "FREQUENCY_CALCULATED",
    "FREQUENCY_DISPLAYED",
    "HUFFMAN_TREE_BUILT",
    "HUFFMAN_TREE_DISPLAYED"
  ],
  "notes": "The FSM captures the main interactive states of the application, including user input validation, frequency calculation, and Huffman tree generation and display."
}