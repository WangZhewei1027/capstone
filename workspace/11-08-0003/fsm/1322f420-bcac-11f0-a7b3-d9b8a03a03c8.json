{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Breadth-First Search (BFS) interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetGraph",
      "onExit": null,
      "on": {
        "NODE_CLICK": "node_selected",
        "START_BFS": "bfs_running",
        "CLEAR_GRAPH": "idle"
      }
    },
    {
      "name": "node_selected",
      "onEnter": "highlightNode",
      "onExit": null,
      "on": {
        "NODE_CLICK": "node_selected",
        "START_BFS": "bfs_running",
        "CLEAR_GRAPH": "idle"
      }
    },
    {
      "name": "bfs_running",
      "onEnter": "startBFS",
      "onExit": "resetQueue",
      "on": {
        "BFS_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "NODE_CLICK",
    "START_BFS",
    "CLEAR_GRAPH",
    "BFS_COMPLETE"
  ],
  "notes": "The FSM captures the states of the BFS visualization process, including idle state, node selection, and BFS execution."
}