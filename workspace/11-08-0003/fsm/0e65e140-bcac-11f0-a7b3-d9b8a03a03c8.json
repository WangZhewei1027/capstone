{
  "topic": "Interactive Application",
  "description": "Finite State Machine for the Kruskal's Algorithm Visualizer application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "initializeGraph",
      "onExit": "clearGraph",
      "on": {
        "ADD_EDGE": "adding_edge",
        "RUN_KRUSKAL": "running_algorithm"
      }
    },
    {
      "name": "adding_edge",
      "onEnter": "addEdge",
      "onExit": "none",
      "on": {
        "EDGE_ADDED": "idle"
      }
    },
    {
      "name": "running_algorithm",
      "onEnter": "runKruskal",
      "onExit": "resetSelection",
      "on": {
        "ANIMATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "ADD_EDGE",
    "RUN_KRUSKAL",
    "EDGE_ADDED",
    "ANIMATION_COMPLETE"
  ],
  "notes": "The FSM captures the main states of the application: idle, adding edges, and running the algorithm. Events trigger transitions between these states."
}