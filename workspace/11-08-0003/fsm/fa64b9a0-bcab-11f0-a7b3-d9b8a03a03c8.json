{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive hash table exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearErrorMessage",
      "on": {
        "INSERT_BUTTON_CLICK": "inserting",
        "SEARCH_BUTTON_CLICK": "searching",
        "DELETE_BUTTON_CLICK": "deleting"
      }
    },
    {
      "name": "inserting",
      "onEnter": "insertValue",
      "onExit": "updateTable",
      "on": {
        "INSERT_COMPLETE": "idle"
      }
    },
    {
      "name": "searching",
      "onEnter": "searchValue",
      "onExit": "updateErrorMessage",
      "on": {
        "SEARCH_COMPLETE": "idle"
      }
    },
    {
      "name": "deleting",
      "onEnter": "deleteValue",
      "onExit": "updateTable",
      "on": {
        "DELETE_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_BUTTON_CLICK",
    "SEARCH_BUTTON_CLICK",
    "DELETE_BUTTON_CLICK",
    "INSERT_COMPLETE",
    "SEARCH_COMPLETE",
    "DELETE_COMPLETE"
  ],
  "notes": "The FSM captures the states of inserting, searching, and deleting values in a hash table, along with transitions based on user interactions."
}