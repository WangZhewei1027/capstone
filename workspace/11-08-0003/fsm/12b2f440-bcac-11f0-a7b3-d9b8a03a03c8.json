{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive Dijkstra's Algorithm visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetGraph",
      "onExit": null,
      "on": {
        "NODE_CLICK": "nodeToggled",
        "RUN_ALGORITHM": "running",
        "RESET_GRAPH": "idle"
      }
    },
    {
      "name": "nodeToggled",
      "onEnter": null,
      "onExit": "updateGraph",
      "on": {
        "NODE_CLICK": "nodeToggled",
        "RUN_ALGORITHM": "running",
        "RESET_GRAPH": "idle"
      }
    },
    {
      "name": "running",
      "onEnter": "startAlgorithm",
      "onExit": "finishAlgorithm",
      "on": {
        "ALGORITHM_COMPLETE": "done",
        "RESET_GRAPH": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": null,
      "onExit": null,
      "on": {
        "RESET_GRAPH": "idle"
      }
    }
  ],
  "events": [
    "NODE_CLICK",
    "RUN_ALGORITHM",
    "RESET_GRAPH",
    "ALGORITHM_COMPLETE"
  ],
  "notes": "The FSM captures the states of the application, including idle state for user interactions, toggling nodes, running the algorithm, and completion of the algorithm."
}