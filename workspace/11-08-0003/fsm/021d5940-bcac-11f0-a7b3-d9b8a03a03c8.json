{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive quick sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "generateRandomArray(10)",
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated",
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "array_generated",
      "onEnter": "drawArray()",
      "onExit": null,
      "on": {
        "SORT_ARRAY": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "quickSort(0, array.length - 1)",
      "onExit": "drawArray()",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": null,
      "onExit": null,
      "on": {
        "GENERATE_ARRAY": "array_generated"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY",
    "SORT_ARRAY",
    "SORT_COMPLETE"
  ],
  "notes": "The application starts in the 'idle' state, generates an array on load, and transitions through states based on user interactions with the buttons."
}