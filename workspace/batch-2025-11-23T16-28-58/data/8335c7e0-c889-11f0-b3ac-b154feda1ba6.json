    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Interactive Linked List Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: center;\n        }\n        #visualization {\n            margin: 20px;\n            border: 1px solid #ccc;\n            height: 80vh;\n            position: relative;\n        }\n        .node {\n            display: inline-block;\n            background-color: #4CAF50;\n            color: white;\n            padding: 10px;\n            margin: 5px;\n            border-radius: 5px;\n            position: absolute;\n            transition: all 0.5s ease;\n        }\n        .arrow {\n            width: 0; \n            height: 0; \n            border-left: 10px solid transparent;\n            border-right: 10px solid transparent;\n            border-bottom: 10px solid #4CAF50;\n            position: absolute;\n            transition: all 0.5s ease;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Interactive Linked List Visualization</h1>\n\n<div id=\"controls\">\n    <button onclick=\"addNode()\">Add Node</button>\n    <button onclick=\"removeNode()\">Remove Node</button>\n    <button onclick=\"clearList()\">Clear List</button>\n</div>\n\n<div id=\"visualization\"></div>\n\n<script>\n    class Node {\n        constructor(value, position) {\n            this.value = value;\n            this.position = position;\n            this.next = null;\n            this.element = document.createElement('div');\n            this.element.classList.add('node');\n            this.element.textContent = value;\n            this.arrow = document.createElement('div');\n            this.arrow.classList.add('arrow');\n        }\n    }\n\n    class LinkedList {\n        constructor() {\n            this.head = null;\n            this.size = 0;\n            this.visualization = document.getElementById('visualization');\n        }\n        \n        addNode() {\n            const value = prompt(\"Enter node value: \");\n            const newNode = new Node(value, this.size * 80);\n            this.size++;\n            if (this.head === null) {\n                this.head = newNode;\n            } else {\n                let current = this.head;\n                while (current.next) {\n                    current = current.next;\n                }\n                current.next = newNode;\n                this.visualization.appendChild(current.arrow);\n                current.arrow.style.left = `${current.position + 50}px`;\n                current.arrow.style.top = '20vh';\n            }\n            newNode.element.style.left = `${newNode.position}px`;\n            newNode.element.style.top = '30vh';\n            this.visualization.appendChild(newNode.element);\n        }\n\n        removeNode() {\n            if (this.head === null) {\n                alert(\"List is empty. Nothing to remove.\");\n                return;\n            }\n            let current = this.head;\n            if (this.size === 1) {\n                this.visualization.removeChild(current.element);\n                this.head = null;\n            } else {\n                let prev = null;\n                while (current.next) {\n                    prev = current;\n                    current = current.next;\n                }\n                this.visualization.removeChild(prev.arrow);\n                this.visualization.removeChild(current.element);\n                prev.next = null;\n            }\n            this.size--;\n        }\n\n        clearList() {\n            while(this.head !== null) {\n                this.removeNode();\n            }\n        }\n    }\n\n    const list = new LinkedList();\n\n    function addNode() {\n        list.addNode();\n    }\n\n    function removeNode() {\n        list.removeNode();\n    }\n\n    function clearList() {\n        list.clearList();\n    }\n</script>\n\n</body>\n</html>"
