    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Interactive Array Algorithm Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            margin: 20px;\n        }\n        .array-container {\n            display: flex;\n            justify-content: center;\n            margin: 20px 0;\n        }\n        .array-element {\n            width: 30px;\n            height: 30px;\n            margin: 5px;\n            background-color: lightblue;\n            text-align: center;\n            line-height: 30px;\n            transition: 0.5s;\n        }\n        .highlight {\n            background-color: lightcoral;\n        }\n        button {\n            margin: 5px;\n            padding: 10px;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Interactive Array Algorithm Visualization</h1>\n<div class=\"array-container\" id=\"arrayContainer\"></div>\n<button onclick=\"startSort()\">Start Sort</button>\n<button onclick=\"resetArray()\">Reset Array</button>\n\n<script>\n    const arrayContainer = document.getElementById('arrayContainer');\n    let array = [5, 3, 8, 4, 2, 7];\n    let isSorting = false;\n\n    function renderArray() {\n        arrayContainer.innerHTML = '';\n        array.forEach((value, index) => {\n            const element = document.createElement('div');\n            element.textContent = value;\n            element.className = 'array-element';\n            element.style.order = index;\n            arrayContainer.appendChild(element);\n        });\n    }\n\n    async function startSort() {\n        if (isSorting) return;\n        isSorting = true;\n        for (let i = 0; i < array.length; i++) {\n            for (let j = 0; j < array.length - i - 1; j++) {\n                highlightElements(j, j+1);\n                await new Promise(resolve => setTimeout(resolve, 500));  // Animation delay\n                if (array[j] > array[j + 1]) {\n                    swap(j, j + 1);\n                }\n                removeHighlight(j, j+1);\n            }\n            setSortedHighlight(array.length - i - 1);\n        }\n        isSorting = false;\n    }\n\n    function swap(indexA, indexB) {\n        const elements = arrayContainer.children;\n        [array[indexA], array[indexB]] = [array[indexB], array[indexA]];\n        [elements[indexA].style.order, elements[indexB].style.order] = [elements[indexB].style.order, elements[indexA].style.order];\n        renderArray();\n    }\n\n    function highlightElements(indexA, indexB) {\n        const elements = arrayContainer.children;\n        elements[indexA].classList.add('highlight');\n        elements[indexB].classList.add('highlight');\n    }\n\n    function removeHighlight(indexA, indexB) {\n        const elements = arrayContainer.children;\n        elements[indexA].classList.remove('highlight');\n        elements[indexB].classList.remove('highlight');\n    }\n\n    function setSortedHighlight(index) {\n        arrayContainer.children[index].style.backgroundColor = 'lightgreen';\n    }\n\n    function resetArray() {\n        if (isSorting) return;\n        array = [5, 3, 8, 4, 2, 7];  // Reset to original array\n        renderArray();\n    }\n\n    renderArray();\n</script>\n\n</body>\n</html>"
