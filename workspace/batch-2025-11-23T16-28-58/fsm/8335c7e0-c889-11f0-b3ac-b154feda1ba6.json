{
  "topic": "Linked List",
  "description": "Finite state machine for an interactive linked list visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_NODE_CLICKED": "addingNode",
        "REMOVE_NODE_CLICKED": "removingNode",
        "CLEAR_LIST_CLICKED": "clearingList"
      }
    },
    {
      "name": "addingNode",
      "onEnter": "promptForNodeValue",
      "onExit": "noop",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "removingNode",
      "onEnter": "removeLastNode",
      "onExit": "noop",
      "on": {
        "NODE_REMOVED": "idle"
      }
    },
    {
      "name": "clearingList",
      "onEnter": "clearAllNodes",
      "onExit": "noop",
      "on": {
        "LIST_CLEARED": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE_CLICKED",
    "REMOVE_NODE_CLICKED",
    "CLEAR_LIST_CLICKED",
    "NODE_ADDED",
    "NODE_REMOVED",
    "LIST_CLEARED"
  ],
  "triggers": {
    "ADD_NODE_CLICKED": "button:contains('Add Node')",
    "REMOVE_NODE_CLICKED": "button:contains('Remove Node')",
    "CLEAR_LIST_CLICKED": "button:contains('Clear List')"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}