{
  "topic": "Stack",
  "description": "Finite state machine for a stack visualization application with push and pop operations.",
  "states": [
    {
      "name": "empty",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "PUSH_CLICKED": "adding"
      }
    },
    {
      "name": "adding",
      "onEnter": "pushItem",
      "onExit": "noop",
      "on": {
        "ITEM_ADDED": "not_empty",
        "STACK_FULL": "full"
      }
    },
    {
      "name": "not_empty",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "PUSH_CLICKED": "adding",
        "POP_CLICKED": "removing"
      }
    },
    {
      "name": "removing",
      "onEnter": "popItem",
      "onExit": "noop",
      "on": {
        "ITEM_REMOVED": "empty",
        "STACK_NOT_EMPTY": "not_empty"
      }
    },
    {
      "name": "full",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "POP_CLICKED": "removing"
      }
    }
  ],
  "events": [
    "PUSH_CLICKED",
    "POP_CLICKED",
    "ITEM_ADDED",
    "ITEM_REMOVED",
    "STACK_FULL",
    "STACK_NOT_EMPTY"
  ],
  "triggers": {
    "PUSH_CLICKED": "button[onclick='pushItem()']",
    "POP_CLICKED": "button[onclick='popItem()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}