{
  "topic": "Array",
  "description": "Finite state machine for array sorting visualization",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderArray",
      "onExit": "noop",
      "on": {
        "START_SORT_CLICKED": "sorting",
        "RESET_ARRAY_CLICKED": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startSort",
      "onExit": "noop",
      "on": {
        "SORT_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "START_SORT_CLICKED",
    "RESET_ARRAY_CLICKED",
    "SORT_COMPLETE"
  ],
  "triggers": {
    "START_SORT_CLICKED": "button[onclick='startSort()']",
    "RESET_ARRAY_CLICKED": "button[onclick='resetArray()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}