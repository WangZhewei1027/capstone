{
  "topic": "Deque",
  "description": "Finite state machine for a deque interactive demonstration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_FRONT": "addingFront",
        "REMOVE_FRONT": "removingFront",
        "ADD_REAR": "addingRear",
        "REMOVE_REAR": "removingRear"
      }
    },
    {
      "name": "addingFront",
      "onEnter": "promptAddFront",
      "onExit": "renderDeque",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "removingFront",
      "onEnter": "removeFrontElement",
      "onExit": "renderDeque",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "addingRear",
      "onEnter": "promptAddRear",
      "onExit": "renderDeque",
      "on": {
        "COMPLETE": "idle"
      }
    },
    {
      "name": "removingRear",
      "onEnter": "removeRearElement",
      "onExit": "renderDeque",
      "on": {
        "COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "ADD_FRONT",
    "REMOVE_FRONT",
    "ADD_REAR",
    "REMOVE_REAR",
    "COMPLETE"
  ],
  "triggers": {
    "ADD_FRONT": "button[onclick='addFront()']",
    "REMOVE_FRONT": "button[onclick='removeFront()']",
    "ADD_REAR": "button[onclick='addRear()']",
    "REMOVE_REAR": "button[onclick='removeRear()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}