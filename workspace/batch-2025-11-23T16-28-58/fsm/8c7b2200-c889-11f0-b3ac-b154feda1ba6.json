{
  "topic": "Queue",
  "description": "Finite state machine for interactive queue visualization",
  "states": [
    {
      "name": "idle",
      "onEnter": "updateQueueVisualization",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "itemAdded",
        "DEQUEUE_CLICKED": "itemRemoved",
        "CLEAR_CLICKED": "cleared"
      }
    },
    {
      "name": "itemAdded",
      "onEnter": "updateQueueVisualization",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "itemAdded",
        "DEQUEUE_CLICKED": "itemRemoved",
        "CLEAR_CLICKED": "cleared"
      }
    },
    {
      "name": "itemRemoved",
      "onEnter": "updateQueueVisualization",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "itemAdded",
        "DEQUEUE_CLICKED": "itemRemoved",
        "CLEAR_CLICKED": "cleared"
      }
    },
    {
      "name": "cleared",
      "onEnter": "updateQueueVisualization",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "itemAdded"
      }
    }
  ],
  "events": [
    "ENQUEUE_CLICKED",
    "DEQUEUE_CLICKED",
    "CLEAR_CLICKED"
  ],
  "triggers": {
    "ENQUEUE_CLICKED": "button[onclick='enqueue()']",
    "DEQUEUE_CLICKED": "button[onclick='dequeue()']",
    "CLEAR_CLICKED": "button[onclick='clearQueue()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}