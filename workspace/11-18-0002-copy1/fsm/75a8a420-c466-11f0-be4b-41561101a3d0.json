{
  "topic": "Interactive Application",
  "description": "Finite state machine for the K-Nearest Neighbors interactive exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "CANVAS_CLICK": "point_placed",
        "CLEAR_POINTS": "idle",
        "PREDICT_CLASS": "classifying"
      }
    },
    {
      "name": "point_placed",
      "onEnter": "drawPoints",
      "onExit": "noop",
      "on": {
        "CANVAS_CLICK": "point_placed",
        "CLEAR_POINTS": "idle",
        "PREDICT_CLASS": "classifying"
      }
    },
    {
      "name": "classifying",
      "onEnter": "classifyPoint",
      "onExit": "noop",
      "on": {
        "CLASSIFICATION_DONE": "idle"
      }
    }
  ],
  "events": [
    "CANVAS_CLICK",
    "CLEAR_POINTS",
    "PREDICT_CLASS",
    "CLASSIFICATION_DONE"
  ],
  "notes": "The 'classifying' state transitions back to 'idle' after classification is done."
}