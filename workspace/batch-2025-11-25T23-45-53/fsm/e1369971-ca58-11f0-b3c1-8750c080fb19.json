{
  "meta": {
    "concept": "HashMap",
    "topic": "Hash Map Demonstration",
    "educational_goal": "Demonstrate basic operations of a hash map",
    "expected_interactions": [
      "store",
      "get",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_StoringValue",
      "label": "StoringValue",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_GettingValue",
      "label": "GettingValue",
      "type": "atomic",
      "entry_actions": [
        "readInputKey()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_ClearingMap",
      "label": "ClearingMap",
      "type": "atomic",
      "entry_actions": [
        "clearHashMap()",
        "showClearFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorFeedback",
      "label": "ErrorFeedback",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_STORE",
      "event_type": "user_action",
      "description": "User clicks the Store button"
    },
    {
      "id": "USER_CLICKS_GET",
      "event_type": "user_action",
      "description": "User clicks the Get button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_StoringValue",
      "event": "USER_CLICKS_STORE",
      "guard": "inputNotEmpty",
      "actions": [
        "storeValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:storeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_StoringValue",
      "to": "S0_Idle",
      "event": "USER_CLICKS_STORE",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_GettingValue",
      "event": "USER_CLICKS_GET",
      "guard": "keyExists",
      "actions": [
        "retrieveValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:getButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_GettingValue",
      "event": "USER_CLICKS_GET",
      "guard": "keyDoesNotExist",
      "actions": [
        "showError()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_ClearingMap",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearHashMap()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ClearingMap",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "showClearFeedback()"
      ],
      "expected_observables": [
        "dom:hashMapCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#key",
    "#value",
    "#storeButton",
    "#getButton",
    "#clearButton",
    "#output"
  ]
}