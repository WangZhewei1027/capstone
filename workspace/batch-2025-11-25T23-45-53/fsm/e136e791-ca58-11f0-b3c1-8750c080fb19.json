{
  "meta": {
    "concept": "RedBlackTree",
    "topic": "Red-Black Tree Visualization",
    "educational_goal": "Demonstrate Red-Black Tree insertion and visualization",
    "expected_interactions": [
      "insert"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInsertButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_TreeUpdating",
      "label": "TreeUpdating",
      "type": "atomic",
      "entry_actions": [
        "clearTreeContainer()",
        "updateTreeVisualization()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "NODE_INSERTION_COMPLETE",
      "event_type": "system_event",
      "description": "Node insertion and tree update complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableInsertButton()"
      ],
      "expected_observables": [
        "dom:valueInput",
        "dom:insertButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S2_TreeUpdating",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputIsValid",
      "actions": [
        "insertNode()",
        "prepareTreeUpdate()"
      ],
      "expected_observables": [
        "dom:nodeInserted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_TreeUpdating",
      "to": "S0_Idle",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeTreeDisplay()",
        "enableInsertButton()"
      ],
      "expected_observables": [
        "dom:treeUpdated"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#valueInput",
    "button",
    "#tree-container"
  ]
}