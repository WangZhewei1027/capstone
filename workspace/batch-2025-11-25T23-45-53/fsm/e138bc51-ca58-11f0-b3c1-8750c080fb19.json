{
  "meta": {
    "concept": "SlidingWindow",
    "topic": "Sliding Window Demonstration",
    "educational_goal": "Demonstrate the sliding window technique for calculating sums",
    "expected_interactions": [
      "calculate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S3_Result",
      "label": "Result",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "clearOutput()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate Sliding Window Sum button"
    },
    {
      "id": "CALCULATION_COMPLETE",
      "event_type": "system_event",
      "description": "Calculation of sliding window sums is complete"
    },
    {
      "id": "CALCULATION_FAILED",
      "event_type": "system_event",
      "description": "Calculation failed due to invalid input"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "inputIsValid",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Calculating",
      "to": "S3_Result",
      "event": "CALCULATION_COMPLETE",
      "guard": "true",
      "actions": [
        "processResults()"
      ],
      "expected_observables": [
        "dom:calculationCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Calculating",
      "to": "S2_Error",
      "event": "CALCULATION_FAILED",
      "guard": "true",
      "actions": [
        "handleError()"
      ],
      "expected_observables": [
        "dom:errorOccurred"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:errorHandled"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Result",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "resetOutput()"
      ],
      "expected_observables": [
        "dom:outputDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#windowSize",
    "#arrayInput",
    "button",
    "#output"
  ]
}