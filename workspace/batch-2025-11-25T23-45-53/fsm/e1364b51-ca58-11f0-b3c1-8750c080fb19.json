{
  "meta": {
    "concept": "Stack",
    "topic": "Stack Implementation",
    "educational_goal": "Demonstrate stack operations (push and pop)",
    "expected_interactions": [
      "push",
      "pop"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Pushing",
      "label": "Pushing",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Popping",
      "label": "Popping",
      "type": "atomic",
      "entry_actions": [
        "checkStackState()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_PUSH",
      "event_type": "user_action",
      "description": "User clicks the Push button",
      "triggers": [
        "#inputValue",
        "button:contains('Push to Stack')"
      ]
    },
    {
      "id": "USER_CLICKS_POP",
      "event_type": "user_action",
      "description": "User clicks the Pop button",
      "triggers": [
        "button:contains('Pop from Stack')"
      ]
    },
    {
      "id": "INPUT_IS_EMPTY",
      "event_type": "system_event",
      "description": "Input value is empty when trying to push"
    },
    {
      "id": "STACK_UNDERFLOW",
      "event_type": "system_event",
      "description": "Pop operation attempted on an empty stack"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Pushing",
      "event": "USER_CLICKS_PUSH",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:pushButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Pushing",
      "to": "S0_Idle",
      "event": "USER_CLICKS_PUSH",
      "guard": "true",
      "actions": [
        "pushValue()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:valuePushed"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Pushing",
      "to": "S3_ErrorAlert",
      "event": "INPUT_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Popping",
      "event": "USER_CLICKS_POP",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:popButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Popping",
      "to": "S0_Idle",
      "event": "USER_CLICKS_POP",
      "guard": "stackNotEmpty",
      "actions": [
        "popValue()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:valuePopped"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Popping",
      "to": "S3_ErrorAlert",
      "event": "STACK_UNDERFLOW",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_PUSH",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputValue",
    "button:contains('Push to Stack')",
    "button:contains('Pop from Stack')",
    "#stackDisplay"
  ]
}