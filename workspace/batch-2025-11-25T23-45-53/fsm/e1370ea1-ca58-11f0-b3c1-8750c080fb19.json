{
  "meta": {
    "concept": "Graph",
    "topic": "Graph Visualization",
    "educational_goal": "Demonstrate graph creation and manipulation",
    "expected_interactions": [
      "add_node",
      "remove_node",
      "add_edge",
      "toggle_directed"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "createNode()",
        "highlightNode()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "removeNodeFromGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "prepareEdgeCreation()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_TogglingDirected",
      "label": "TogglingDirected",
      "type": "atomic",
      "entry_actions": [
        "toggleGraphDirection()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_RedrawingEdges",
      "label": "RedrawingEdges",
      "type": "atomic",
      "entry_actions": [
        "redrawGraphEdges()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_NODE",
      "event_type": "user_action",
      "description": "User clicks the Add Node button",
      "triggers": [
        "button: Add Node"
      ]
    },
    {
      "id": "USER_CLICKS_ADD_EDGE",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button",
      "triggers": [
        "button: Add Edge"
      ]
    },
    {
      "id": "USER_CLICKS_TOGGLE_DIRECTED",
      "event_type": "user_action",
      "description": "User clicks the Toggle Directed/Undirected button",
      "triggers": [
        "button: Toggle Directed/Undirected"
      ]
    },
    {
      "id": "NODE_REMOVED",
      "event_type": "system_event",
      "description": "A node has been removed from the graph",
      "triggers": []
    },
    {
      "id": "EDGE_REDRAWN",
      "event_type": "system_event",
      "description": "Edges have been redrawn after a change",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD_NODE",
      "guard": "true",
      "actions": [
        "addNode()"
      ],
      "expected_observables": [
        "dom:addNodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "NODE_REMOVED",
      "guard": "true",
      "actions": [
        "finalizeNodeAddition()"
      ],
      "expected_observables": [
        "dom:nodeAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_AddingEdge",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "nodesAvailable",
      "actions": [
        "addEdge()"
      ],
      "expected_observables": [
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_AddingEdge",
      "to": "S5_RedrawingEdges",
      "event": "EDGE_REDRAWN",
      "guard": "true",
      "actions": [
        "redrawEdges()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_TogglingDirected",
      "event": "USER_CLICKS_TOGGLE_DIRECTED",
      "guard": "true",
      "actions": [
        "toggleDirected()"
      ],
      "expected_observables": [
        "dom:toggleDirectedButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_TogglingDirected",
      "to": "S5_RedrawingEdges",
      "event": "EDGE_REDRAWN",
      "guard": "true",
      "actions": [
        "redrawEdges()"
      ],
      "expected_observables": [
        "dom:directionToggled"
      ],
      "timeout": 500
    },
    {
      "from": "S5_RedrawingEdges",
      "to": "S0_Idle",
      "event": "EDGE_REDRAWN",
      "guard": "true",
      "actions": [
        "finalizeEdgeRedraw()"
      ],
      "expected_observables": [
        "dom:edgesRedrawn"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "button: Add Node",
    "button: Add Edge",
    "button: Toggle Directed/Undirected",
    "div: graph"
  ]
}