{
  "meta": {
    "concept": "BinaryTree",
    "topic": "Binary Tree Visualization",
    "educational_goal": "Demonstrate Binary Tree creation and visualization",
    "expected_interactions": [
      "create_tree"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableCreateButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_CreatingTree",
      "label": "CreatingTree",
      "type": "atomic",
      "entry_actions": [
        "initializeTree()",
        "prepareVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_DrawingTree",
      "label": "DrawingTree",
      "type": "atomic",
      "entry_actions": [
        "drawTreeVisualization()"
      ],
      "exit_actions": [
        "clearTreeContainer()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CREATE_BINARY_TREE",
      "event_type": "user_action",
      "description": "User clicks the Create Binary Tree button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_CreatingTree",
      "event": "USER_CLICKS_CREATE_BINARY_TREE",
      "guard": "true",
      "actions": [
        "disableCreateButton()"
      ],
      "expected_observables": [
        "dom:createButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_CreatingTree",
      "to": "S2_DrawingTree",
      "event": "USER_CLICKS_CREATE_BINARY_TREE",
      "guard": "true",
      "actions": [
        "createBinaryTree()"
      ],
      "expected_observables": [
        "dom:treeCreated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_DrawingTree",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CREATE_BINARY_TREE",
      "guard": "true",
      "actions": [
        "resetTree()"
      ],
      "expected_observables": [
        "dom:treeVisualizationComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#tree",
    "button"
  ]
}