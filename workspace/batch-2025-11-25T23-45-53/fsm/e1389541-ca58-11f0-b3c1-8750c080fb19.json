{
  "meta": {
    "concept": "Recursion",
    "topic": "Recursion Demonstration",
    "educational_goal": "Demonstrate how recursion works through factorial calculation",
    "expected_interactions": [
      "calculate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "resetResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "showLoading()"
      ],
      "exit_actions": [
        "hideLoading()"
      ]
    },
    {
      "id": "S2_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S3_Result",
      "label": "Result",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "resetInputField()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate Factorial button"
    },
    {
      "id": "CALCULATION_COMPLETE",
      "event_type": "system_event",
      "description": "Factorial calculation is complete"
    },
    {
      "id": "INPUT_IS_INVALID",
      "event_type": "system_event",
      "description": "User input is invalid (negative number)"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "inputIsValid",
      "actions": [
        "disableInput()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Calculating",
      "to": "S3_Result",
      "event": "CALCULATION_COMPLETE",
      "guard": "true",
      "actions": [
        "calculateFactorial()"
      ],
      "expected_observables": [
        "dom:calculationComplete"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Calculating",
      "to": "S2_Error",
      "event": "INPUT_IS_INVALID",
      "guard": "inputIsNegative",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorMessageCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Result",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "resetResultDisplay()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#number-input",
    "#calculate-button",
    "#factorial-result"
  ]
}