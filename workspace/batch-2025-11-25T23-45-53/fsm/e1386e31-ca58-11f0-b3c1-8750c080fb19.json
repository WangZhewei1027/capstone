{
  "meta": {
    "concept": "FibonacciSequence",
    "topic": "Fibonacci Sequence Generator",
    "educational_goal": "Generate Fibonacci sequence up to a given number",
    "expected_interactions": [
      "generate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingNumber",
      "label": "InputtingNumber",
      "type": "atomic",
      "entry_actions": [
        "focusInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S4_GeneratingSequence",
      "label": "GeneratingSequence",
      "type": "atomic",
      "entry_actions": [
        "calculateFibonacci()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DisplayOutput",
      "label": "DisplayOutput",
      "type": "atomic",
      "entry_actions": [
        "renderOutput()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    },
    {
      "id": "SEQUENCE_GENERATION_COMPLETE",
      "event_type": "system_event",
      "description": "Fibonacci sequence generation is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingNumber",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "disableInput()"
      ],
      "expected_observables": [
        "dom:generateButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingNumber",
      "to": "S2_ValidatingInput",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "validateInput()"
      ],
      "expected_observables": [
        "dom:inputValueCaptured"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMessageDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_GeneratingSequence",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "inputIsValid",
      "actions": [
        "startFibonacciCalculation()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 500
    },
    {
      "from": "S4_GeneratingSequence",
      "to": "S5_DisplayOutput",
      "event": "SEQUENCE_GENERATION_COMPLETE",
      "guard": "true",
      "actions": [
        "renderFibonacciOutput()"
      ],
      "expected_observables": [
        "dom:sequenceGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "clearInput()"
      ],
      "expected_observables": [
        "dom:errorMessageCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#numberInput",
    "button",
    "#output"
  ],
  "triggers": [
    "#numberInput",
    "button"
  ]
}