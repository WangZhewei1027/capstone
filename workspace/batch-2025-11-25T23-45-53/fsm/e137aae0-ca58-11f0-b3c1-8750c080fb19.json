{
  "meta": {
    "concept": "QuickSort",
    "topic": "Quick Sort Visualization",
    "educational_goal": "Demonstrate Quick Sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "visualize_array"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "resetArrayVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputReceived",
      "label": "InputReceived",
      "type": "atomic",
      "entry_actions": [
        "parseInputArray()",
        "visualizeArray(inputArray)"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "startQuickSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Partitioning",
      "label": "Partitioning",
      "type": "atomic",
      "entry_actions": [
        "performPartition()"
      ],
      "exit_actions": [
        "visualizeArray(sortedArray)"
      ]
    },
    {
      "id": "S4_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "finalizeVisualization()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Sort button",
      "triggers": [
        "#arrayInput",
        "button"
      ]
    },
    {
      "id": "INPUT_ARRAY_PARSED",
      "event_type": "system_event",
      "description": "Input array has been parsed successfully"
    },
    {
      "id": "SORTING_IN_PROGRESS",
      "event_type": "system_event",
      "description": "Sorting process is currently ongoing"
    },
    {
      "id": "PARTITIONING_COMPLETE",
      "event_type": "system_event",
      "description": "Partitioning step completed"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting process completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputReceived",
      "event": "USER_CLICKS_SORT",
      "guard": "inputIsValid",
      "actions": [
        "captureInput()",
        "disableInput()"
      ],
      "expected_observables": [
        "dom:inputCaptured"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputReceived",
      "to": "S2_Sorting",
      "event": "INPUT_ARRAY_PARSED",
      "guard": "true",
      "actions": [
        "initiateSorting()"
      ],
      "expected_observables": [
        "dom:arrayVisualized"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Sorting",
      "to": "S3_Partitioning",
      "event": "SORTING_IN_PROGRESS",
      "guard": "true",
      "actions": [
        "performPartition()"
      ],
      "expected_observables": [
        "dom:partitioningStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Partitioning",
      "to": "S2_Sorting",
      "event": "PARTITIONING_COMPLETE",
      "guard": "true",
      "actions": [
        "updateArrayVisualization()"
      ],
      "expected_observables": [
        "dom:partitioningUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Partitioning",
      "to": "S4_Completed",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "button",
    "#array"
  ]
}