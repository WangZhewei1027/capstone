{
  "meta": {
    "concept": "BinarySearch",
    "topic": "Binary Search Demonstration",
    "educational_goal": "Demonstrate binary search algorithm",
    "expected_interactions": [
      "search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingData",
      "label": "InputtingData",
      "type": "atomic",
      "entry_actions": [
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S3_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    },
    {
      "id": "RESULT_DISPLAYED",
      "event_type": "system_event",
      "description": "Search result is displayed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingData",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "captureInputValues()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingData",
      "to": "S2_Searching",
      "event": "USER_CLICKS_SEARCH",
      "guard": "inputsAreValid",
      "actions": [
        "performBinarySearch()"
      ],
      "expected_observables": [
        "dom:inputsValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Searching",
      "to": "S3_ResultDisplayed",
      "event": "RESULT_DISPLAYED",
      "guard": "true",
      "actions": [
        "updateResultDisplay()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputtingData",
      "to": "S4_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorShown"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:errorCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#targetInput",
    "button",
    "#result"
  ]
}