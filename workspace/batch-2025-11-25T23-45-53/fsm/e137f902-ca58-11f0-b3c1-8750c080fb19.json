{
  "meta": {
    "concept": "BreadthFirstSearch",
    "topic": "Breadth-First Search (BFS) Visualization",
    "educational_goal": "Demonstrate BFS traversal of a graph",
    "expected_interactions": [
      "start",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ReadingInput",
      "label": "ReadingInput",
      "type": "atomic",
      "entry_actions": [
        "readInputEdges()",
        "parseEdges()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_DrawingGraph",
      "label": "DrawingGraph",
      "type": "atomic",
      "entry_actions": [
        "drawGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_BFS_Processing",
      "label": "BFSProcessing",
      "type": "atomic",
      "entry_actions": [
        "startBFS()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ClearingCanvas",
      "label": "ClearingCanvas",
      "type": "atomic",
      "entry_actions": [
        "clearCanvas()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start BFS button",
      "triggers": [
        "#edgesInput",
        "button[onclick='startBFS()']"
      ]
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button",
      "triggers": [
        "button[onclick='clearCanvas()']"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ReadingInput",
      "event": "USER_CLICKS_START",
      "guard": "inputNotEmpty",
      "actions": [
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:inputEdgesRead"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ReadingInput",
      "to": "S2_DrawingGraph",
      "event": "USER_CLICKS_START",
      "guard": "edgesParsed",
      "actions": [
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:graphDrawn"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_DrawingGraph",
      "to": "S3_BFS_Processing",
      "event": "USER_CLICKS_START",
      "guard": "graphReady",
      "actions": [
        "startBFS()"
      ],
      "expected_observables": [
        "dom:bfsStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingCanvas",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearCanvas()"
      ],
      "expected_observables": [
        "dom:canvasCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ClearingCanvas",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "enableInput()",
        "enableStartButton()"
      ],
      "expected_observables": [
        "dom:inputCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#edgesInput",
    "button[onclick='startBFS()']",
    "button[onclick='clearCanvas()']",
    "#graphCanvas"
  ]
}