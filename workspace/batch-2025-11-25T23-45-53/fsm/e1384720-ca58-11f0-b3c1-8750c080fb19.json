{
  "meta": {
    "concept": "KruskalAlgorithm",
    "topic": "Kruskal's Algorithm Visualization",
    "educational_goal": "Visualize the process of Kruskal's Algorithm for finding the Minimum Spanning Tree",
    "expected_interactions": [
      "generate_graph",
      "run_algorithm"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingGraph",
      "label": "GeneratingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearCanvas()",
        "generateGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "runKruskal()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_HighlightingMST",
      "label": "HighlightingMST",
      "type": "atomic",
      "entry_actions": [
        "highlightMST()"
      ],
      "exit_actions": [
        "clearCanvas()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE_GRAPH",
      "event_type": "user_action",
      "description": "User clicks the Generate Random Graph button"
    },
    {
      "id": "USER_CLICKS_RUN_ALGORITHM",
      "event_type": "user_action",
      "description": "User clicks the Run Kruskal's Algorithm button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingGraph",
      "event": "USER_CLICKS_GENERATE_GRAPH",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:generateGraphButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_GeneratingGraph",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE_GRAPH",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:graphGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_RunningAlgorithm",
      "event": "USER_CLICKS_RUN_ALGORITHM",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:runAlgorithmButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RunningAlgorithm",
      "to": "S3_HighlightingMST",
      "event": "USER_CLICKS_RUN_ALGORITHM",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:algorithmRunComplete"
      ],
      "timeout": 2000
    },
    {
      "from": "S3_HighlightingMST",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RUN_ALGORITHM",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:MSTHighlighted"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#controls",
    "#graphCanvas"
  ]
}