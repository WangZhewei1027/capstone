{
  "meta": {
    "concept": "PriorityQueue",
    "topic": "Priority Queue Demo",
    "educational_goal": "Demonstrate enqueue and dequeue operations in a priority queue",
    "expected_interactions": [
      "enqueue",
      "dequeue"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Enqueueing",
      "label": "Enqueueing",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    },
    {
      "id": "S2_ProcessingTask",
      "label": "ProcessingTask",
      "type": "atomic",
      "entry_actions": [
        "showProcessingFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_QueueEmptyAlert",
      "label": "QueueEmptyAlert",
      "type": "atomic",
      "entry_actions": [
        "showEmptyQueueAlert()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_TO_QUEUE",
      "event_type": "user_action",
      "description": "User clicks the Add to Queue button",
      "triggers": [
        "#task",
        "#priority",
        "button[onclick='enqueue()']"
      ]
    },
    {
      "id": "USER_CLICKS_PROCESS_TASK",
      "event_type": "user_action",
      "description": "User clicks the Process Task button",
      "triggers": [
        "button[onclick='dequeue()']"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "TASK_PROCESSED",
      "event_type": "system_event",
      "description": "Task has been processed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Enqueueing",
      "event": "USER_CLICKS_ADD_TO_QUEUE",
      "guard": "inputNotEmpty",
      "actions": [
        "enqueueTask()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:taskAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Enqueueing",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showValidationError()"
      ],
      "expected_observables": [
        "dom:validationErrorShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_ProcessingTask",
      "event": "USER_CLICKS_PROCESS_TASK",
      "guard": "queueNotEmpty",
      "actions": [
        "processTask()"
      ],
      "expected_observables": [
        "dom:taskProcessed"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ProcessingTask",
      "to": "S0_Idle",
      "event": "TASK_PROCESSED",
      "guard": "true",
      "actions": [
        "showTaskProcessedAlert()"
      ],
      "expected_observables": [
        "dom:taskProcessedAlertShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_QueueEmptyAlert",
      "event": "USER_CLICKS_PROCESS_TASK",
      "guard": "queueIsEmpty",
      "actions": [
        "showEmptyQueueAlert()"
      ],
      "expected_observables": [
        "dom:emptyQueueAlertShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#task",
    "#priority",
    "button[onclick='enqueue()']",
    "button[onclick='dequeue()']",
    "#queueDisplay"
  ]
}