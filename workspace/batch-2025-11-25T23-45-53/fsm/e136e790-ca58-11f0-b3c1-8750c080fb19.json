{
  "meta": {
    "concept": "BinarySearchTree",
    "topic": "Binary Search Tree Visualization",
    "educational_goal": "Demonstrate BST insertion and traversal",
    "expected_interactions": [
      "insert",
      "delete",
      "search",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "insertNode()",
        "drawTree()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_TreeResetting",
      "label": "TreeResetting",
      "type": "atomic",
      "entry_actions": [
        "resetTree()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:#valueInput",
        "dom:button[onclick='insertNode()']"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputIsValid",
      "actions": [
        "insertNode()",
        "drawTree()"
      ],
      "expected_observables": [
        "dom:#valueInput"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_TreeResetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetTree()"
      ],
      "expected_observables": [
        "dom:button[onclick='resetTree()']"
      ],
      "timeout": 500
    },
    {
      "from": "S3_TreeResetting",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:#bst"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#valueInput",
    "button[onclick='insertNode()']",
    "button[onclick='resetTree()']",
    "#bst"
  ]
}