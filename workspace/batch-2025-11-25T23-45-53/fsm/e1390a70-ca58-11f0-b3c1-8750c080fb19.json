{
  "meta": {
    "concept": "LinearRegression",
    "topic": "Linear Regression Demo",
    "educational_goal": "Demonstrate linear regression through interactive point addition",
    "expected_interactions": [
      "add_point",
      "draw_line"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableCanvasClick()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_PointAdded",
      "label": "PointAdded",
      "type": "atomic",
      "entry_actions": [
        "updatePointsList()",
        "draw()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_LineDrawn",
      "label": "LineDrawn",
      "type": "atomic",
      "entry_actions": [
        "drawLine(m, b)"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CANVAS",
      "event_type": "user_action",
      "description": "User clicks on the canvas to add a point"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_PointAdded",
      "event": "USER_CLICKS_CANVAS",
      "guard": "true",
      "actions": [
        "addPointToList()"
      ],
      "expected_observables": [
        "dom:canvasClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_PointAdded",
      "to": "S2_LineDrawn",
      "event": "USER_CLICKS_CANVAS",
      "guard": "points.length >= 2",
      "actions": [
        "calculateLineParameters()"
      ],
      "expected_observables": [
        "dom:lineDrawn"
      ],
      "timeout": 500
    },
    {
      "from": "S1_PointAdded",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CANVAS",
      "guard": "points.length < 2",
      "actions": [
        "noop()"
      ],
      "expected_observables": [
        "dom:pointAdded"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#regressionCanvas"
  ],
  "triggers": [
    "#regressionCanvas"
  ]
}