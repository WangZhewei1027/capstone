{
  "meta": {
    "concept": "RadixSort",
    "topic": "Radix Sort Visualization",
    "educational_goal": "Demonstrate the Radix Sort algorithm step by step",
    "expected_interactions": [
      "start_sort",
      "input_array"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingArray",
      "label": "InputtingArray",
      "type": "atomic",
      "entry_actions": [
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "startRadixSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START_SORT",
      "event_type": "user_action",
      "description": "User clicks the Start Radix Sort button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingArray",
      "event": "USER_CLICKS_START_SORT",
      "guard": "true",
      "actions": [
        "captureInputValue()",
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:startSortButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingArray",
      "to": "S2_ValidatingInput",
      "event": "USER_CLICKS_START_SORT",
      "guard": "inputNotEmpty",
      "actions": [
        "validateInput()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_Sorting",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "beginSorting()"
      ],
      "expected_observables": [
        "dom:sortingStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Sorting",
      "to": "S0_Idle",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "updateDisplay()",
        "enableStartButton()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#inputArray",
    "#startSort",
    "#arrayDisplay",
    "#steps"
  ]
}