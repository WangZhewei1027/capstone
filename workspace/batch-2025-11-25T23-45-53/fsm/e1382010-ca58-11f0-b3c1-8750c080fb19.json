{
  "meta": {
    "concept": "DijkstraAlgorithm",
    "topic": "Dijkstra's Algorithm Visualization",
    "educational_goal": "Demonstrate Dijkstra's algorithm for shortest path finding",
    "expected_interactions": [
      "run_algorithm"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "drawGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "initializeAlgorithm()"
      ],
      "exit_actions": [
        "finalizeAlgorithm()"
      ]
    },
    {
      "id": "S2_VisualizingIteration",
      "label": "VisualizingIteration",
      "type": "atomic",
      "entry_actions": [
        "highlightCurrentNode()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN_ALGORITHM",
      "event_type": "user_action",
      "description": "User clicks the Run Dijkstra's Algorithm button"
    },
    {
      "id": "ALGORITHM_ITERATION_COMPLETE",
      "event_type": "system_event",
      "description": "Algorithm iteration is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_RunningAlgorithm",
      "event": "USER_CLICKS_RUN_ALGORITHM",
      "guard": "true",
      "actions": [
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:runAlgorithmButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_RunningAlgorithm",
      "to": "S2_VisualizingIteration",
      "event": "ALGORITHM_ITERATION_COMPLETE",
      "guard": "true",
      "actions": [
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:algorithmIterationVisualized"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_VisualizingIteration",
      "to": "S1_RunningAlgorithm",
      "event": "ALGORITHM_ITERATION_COMPLETE",
      "guard": "true",
      "actions": [
        "highlightCurrentNode()"
      ],
      "expected_observables": [
        "dom:currentNodeHighlighted"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#canvas",
    "#runAlgorithm"
  ]
}