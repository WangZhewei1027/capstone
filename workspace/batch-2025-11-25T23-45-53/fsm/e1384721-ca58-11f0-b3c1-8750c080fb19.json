{
  "meta": {
    "concept": "PrimsAlgorithm",
    "topic": "Prim's Algorithm Visualization",
    "educational_goal": "Demonstrate Prim's algorithm for finding the minimum spanning tree",
    "expected_interactions": [
      "generate_graph",
      "visualize_mst"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "generateGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingGraph",
      "label": "GeneratingGraph",
      "type": "atomic",
      "entry_actions": [
        "generateGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_VisualizingMST",
      "label": "VisualizingMST",
      "type": "atomic",
      "entry_actions": [
        "visualizeMST()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE_GRAPH",
      "event_type": "user_action",
      "description": "User clicks the Generate Random Graph button"
    },
    {
      "id": "GRAPH_GENERATED",
      "event_type": "system_event",
      "description": "Graph has been generated"
    },
    {
      "id": "MST_VISUALIZATION_COMPLETE",
      "event_type": "system_event",
      "description": "Minimum Spanning Tree visualization is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingGraph",
      "event": "USER_CLICKS_GENERATE_GRAPH",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:generateGraphButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_GeneratingGraph",
      "to": "S2_VisualizingMST",
      "event": "GRAPH_GENERATED",
      "guard": "true",
      "actions": [
        "setTimeout(visualizeMST, 1000)"
      ],
      "expected_observables": [
        "dom:graphGenerated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_VisualizingMST",
      "to": "S0_Idle",
      "event": "MST_VISUALIZATION_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:mstVisualizationComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#generateGraph",
    "#graphCanvas"
  ]
}