{
  "topic": "Array",
  "description": "FSM modeling interactive states for the array UI element represented by the <ul id=\"myArray\"> in the provided HTML.",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderEmpty",
      "onExit": "prepareLoad",
      "on": {
        "LOAD_ARRAY": "populated",
        "CLICK_ARRAY": "populated",
        "RESET": "idle"
      }
    },
    {
      "name": "populated",
      "onEnter": "renderArray",
      "onExit": "clearHighlights",
      "on": {
        "ITEM_CLICKED": "selecting",
        "CLEAR": "idle",
        "RESET": "idle"
      }
    },
    {
      "name": "selecting",
      "onEnter": "highlightItem",
      "onExit": "unhighlightItem",
      "on": {
        "CONFIRM_SELECTION": "populated",
        "REMOVE_ITEM": "populated",
        "CANCEL_SELECTION": "populated",
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "LOAD_ARRAY",
    "CLICK_ARRAY",
    "ITEM_CLICKED",
    "CONFIRM_SELECTION",
    "REMOVE_ITEM",
    "CANCEL_SELECTION",
    "CLEAR",
    "RESET"
  ],
  "triggers": {
    "LOAD_ARRAY": "ul#myArray, #myArray",
    "CLICK_ARRAY": "ul#myArray, #myArray",
    "ITEM_CLICKED": "#myArray li",
    "CONFIRM_SELECTION": "ul#myArray, #myArray, #myArray li",
    "REMOVE_ITEM": "#myArray li, ul#myArray",
    "CANCEL_SELECTION": "ul#myArray, #myArray",
    "CLEAR": "ul#myArray, #myArray",
    "RESET": "ul#myArray, #myArray"
  },
  "notes": "The only explicit DOM selector present in the HTML is the list element #myArray (ul#myArray). Item selectors (#myArray li) are included to represent interactions with child elements that would exist when the array is populated. All triggers map to selectors actually present in the HTML: '#myArray' and 'ul#myArray' (and '#myArray li' for dynamic child items)."
}