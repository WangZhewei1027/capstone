    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Quick Sort Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            display: flex;\n            flex-direction: column;\n            align-items: center;\n            margin: 0;\n            padding: 20px;\n        }\n        #array-container {\n            display: flex;\n            margin: 20px 0;\n        }\n        .bar {\n            width: 20px;\n            margin: 0 2px;\n            background-color: teal;\n            display: inline-block;\n            transition: height 0.3s, background-color 0.3s;\n        }\n        .pivot {\n            background-color: red;\n        }\n        .current {\n            background-color: yellow;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Quick Sort Visualization</h1>\n<button onclick=\"startQuickSort()\">Start Quick Sort</button>\n<div id=\"array-container\"></div>\n\n<script>\n    let array = [30, 10, 50, 20, 60, 40, 70];\n    const container = document.getElementById(\"array-container\");\n\n    function createBars() {\n        container.innerHTML = '';\n        array.forEach(value => {\n            const bar = document.createElement('div');\n            bar.className = 'bar';\n            bar.style.height = `${value * 3}px`; // scale height\n            container.appendChild(bar);\n        });\n    }\n\n    async function quickSort(arr, left, right) {\n        if (left < right) {\n            let pivotIndex = await partition(arr, left, right);\n            await quickSort(arr, left, pivotIndex - 1);\n            await quickSort(arr, pivotIndex + 1, right);\n        }\n        createBars();\n    }\n\n    async function partition(arr, left, right) {\n        let pivot = arr[right];\n        let i = left - 1;\n\n        for (let j = left; j < right; j++) {\n            if (arr[j] <= pivot) {\n                i++;\n                [arr[i], arr[j]] = [arr[j], arr[i]];\n                createBars();\n                await delay(300);\n            }\n        }\n        \n        [arr[i + 1], arr[right]] = [arr[right], arr[i + 1]];\n        createBars();\n        await delay(300);\n        return i + 1;\n    }\n\n    function delay(ms) {\n        return new Promise(resolve => setTimeout(resolve, ms));\n    }\n\n    function startQuickSort() {\n        array = [...array].sort(() => Math.random() - 0.5); // shuffle for demonstration\n        createBars();\n        quickSort(array, 0, array.length - 1);\n    }\n\n    createBars();\n</script>\n\n</body>\n</html>"
