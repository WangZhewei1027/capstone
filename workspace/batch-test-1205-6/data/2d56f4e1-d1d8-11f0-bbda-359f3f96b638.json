    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Counting Sort Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: center;\n            padding: 20px;\n            background-color: #f4f4f4;\n        }\n        #inputArray {\n            width: 300px;\n            margin-bottom: 20px;\n        }\n        #sortButton {\n            padding: 10px 20px;\n            font-size: 16px;\n            cursor: pointer;\n        }\n        #result {\n            margin-top: 20px;\n            font-size: 18px;\n        }\n        .bar {\n            display: inline-block;\n            background-color: #4caf50;\n            margin: 1px;\n        }\n    </style>\n</head>\n<body>\n\n    <h1>Counting Sort Visualization</h1>\n    <p>Enter integers separated by commas (e.g., 3, 6, 4, 1, 2):</p>\n    <input type=\"text\" id=\"inputArray\" placeholder=\"Enter numbers\">\n    <button id=\"sortButton\">Sort</button>\n\n    <div id=\"result\"></div>\n    <div id=\"visualization\"></div>\n\n    <script>\n        function countingSort(arr) {\n            const maxElement = Math.max(...arr);\n            const count = new Array(maxElement + 1).fill(0);\n            const sortedArray = new Array(arr.length);\n\n            // Count occurrence of each number\n            for (const num of arr) {\n                count[num]++;\n            }\n\n            // Update the sortedArray based on count\n            let index = 0;\n            for (let i = 0; i < count.length; i++) {\n                while (count[i] > 0) {\n                    sortedArray[index++] = i;\n                    count[i]--;\n                }\n            }\n            return sortedArray;\n        }\n\n        function visualizeSorting(sortedArray) {\n            const visualizationContainer = document.getElementById('visualization');\n            visualizationContainer.innerHTML = ''; // Clear previous visualization\n            sortedArray.forEach(num => {\n                const bar = document.createElement('div');\n                bar.style.height = num * 20 + 'px'; // Scale height\n                bar.style.width = '20px';\n                bar.className = 'bar';\n                visualizationContainer.appendChild(bar);\n            });\n        }\n\n        document.getElementById('sortButton').addEventListener('click', () => {\n            const input = document.getElementById('inputArray').value;\n            const arr = input.split(',').map(Number);\n            const sortedArray = countingSort(arr);\n            document.getElementById('result').innerText = 'Sorted Array: ' + sortedArray.join(', ');\n            visualizeSorting(sortedArray);\n        });\n    </script>\n\n</body>\n</html>"
