    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Counting Sort Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: center;\n            background-color: #f4f4f4;\n            padding: 20px;\n        }\n        canvas {\n            border: 1px solid #ccc;\n            margin: 10px 0;\n        }\n        input[type=\"text\"] {\n            width: 200px;\n            padding: 10px;\n            margin: 5px 0;\n        }\n    </style>\n</head>\n<body>\n\n    <h1>Counting Sort Visualization</h1>\n    <label for=\"arrayInput\">Enter array elements (comma separated):</label>\n    <input type=\"text\" id=\"arrayInput\" placeholder=\"e.g., 4,2,2,8,3,3,1\" />\n    <button id=\"sortButton\">Sort</button>\n    \n    <h3>Sorted Array:</h3>\n    <div id=\"result\"></div>\n    \n    <canvas id=\"sortCanvas\" width=\"600\" height=\"200\"></canvas>\n\n    <script>\n        document.getElementById('sortButton').addEventListener('click', function() {\n            const input = document.getElementById('arrayInput').value;\n            const array = input.split(',').map(Number);\n            const max = Math.max(...array);\n            countingSort(array, max);\n        });\n\n        function countingSort(array, max) {\n            const count = new Array(max + 1).fill(0);\n            const output = new Array(array.length);\n            const canvas = document.getElementById('sortCanvas');\n            const ctx = canvas.getContext('2d');\n\n            // Counting occurrences\n            for (let num of array) {\n                count[num]++;\n            }\n\n            // Draw the initial count state\n            drawCountArray(count);\n\n            // Build the output array\n            for (let i = 1; i <= max; i++) {\n                count[i] += count[i - 1];\n            }\n            drawCountArray(count);\n\n            // Build the sorted array\n            for (let i = array.length - 1; i >= 0; i--) {\n                output[count[array[i]] - 1] = array[i];\n                count[array[i]]--;\n            }\n\n            // Display the result\n            document.getElementById('result').textContent = output.join(', ');\n\n            // Draw the sorted output\n            drawSortedArray(output);\n        }\n\n        function drawCountArray(count) {\n            const canvas = document.getElementById('sortCanvas');\n            const ctx = canvas.getContext('2d');\n            ctx.clearRect(0, 0, canvas.width, canvas.height);\n            ctx.fillStyle = '#007BFF';\n            const barWidth = canvas.width / count.length;\n\n            count.forEach((value, index) => {\n                ctx.fillRect(index * barWidth, canvas.height - value * 5, barWidth, value * 5);\n            });\n        }\n\n        function drawSortedArray(sortedArray) {\n            setTimeout(function() {\n                const canvas = document.getElementById('sortCanvas');\n                const ctx = canvas.getContext('2d');\n                ctx.clearRect(0, 0, canvas.width, canvas.height);\n                ctx.fillStyle = '#28A745';\n                const barWidth = canvas.width / sortedArray.length;\n\n                sortedArray.forEach((value, index) => {\n                    ctx.fillRect(index * barWidth, canvas.height - value * 5, barWidth, value * 5);\n                });\n            }, 3000); // Draw sorted array after delay\n        }\n    </script>\n</body>\n</html>"
