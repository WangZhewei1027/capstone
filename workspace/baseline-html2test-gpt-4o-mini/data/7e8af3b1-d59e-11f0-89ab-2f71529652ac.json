eight] = edge.trim().split(' ').map(Number);\n            return { src, dest, weight };\n        });\n\n        const vertices = new Set();\n        edges.forEach(edge => {\n            vertices.add(edge.src);\n            vertices.add(edge.dest);\n        });\n        const V = vertices.size;\n\n        // Initialize distances with Infinity\n        const distance = {};\n        for (let i = 0; i < V; i++) {\n            distance[i] = Infinity;\n        }\n        distance[source] = 0;\n\n        // Relax edges V-1 times\n        for (let i = 0; i < V - 1; i++) {\n            for (const edge of edges) {\n                if (distance[edge.src] !== Infinity && distance[edge.src] + edge.weight < distance[edge.dest]) {\n                    distance[edge.dest] = distance[edge.src] + edge.weight;\n                }\n            }\n        }\n\n        // Check for negative weight cycles\n        let hasNegativeCycle = false;\n        for (const edge of edges) {\n            if (distance[edge.src] !== Infinity && distance[edge.src] + edge.weight < distance[edge.dest]) {\n                hasNegativeCycle = true;\n                break;\n            }\n        }\n\n        const outputDiv = document.getElementById('output');\n        if (hasNegativeCycle) {\n            outputDiv.innerHTML = '<strong>Graph contains a negative weight cycle!</strong>';\n        } else {\n            outputDiv.innerHTML = '<strong>Shortest distances from source ' + source + ':</strong><br>';\n            for (const vertex in distance) {\n                outputDiv.innerHTML += 'Vertex ' + vertex + ': ' + distance[vertex] + '<br>';\n            }\n        }\n    }\n</script>\n\n</body>\n</html>"
