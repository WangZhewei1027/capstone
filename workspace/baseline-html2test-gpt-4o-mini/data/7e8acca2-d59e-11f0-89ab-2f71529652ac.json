    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Heap Sort Visualization</title>\n    <style>\n        body { font-family: Arial, sans-serif; }\n        #array { margin: 20px 0; }\n        .bar {\n            display: inline-block;\n            width: 20px;\n            margin: 0 2px;\n            background-color: teal;\n        }\n        .highlight {\n            background-color: orange;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Heap Sort Visualization</h1>\n<button onclick=\"startHeapSort()\">Sort Array</button>\n<div id=\"array\"></div>\n\n<script>\n    const array = [35, 33, 42, 10, 14, 19, 27, 44, 26, 31];\n    const arrayDiv = document.getElementById('array');\n\n    function drawArray() {\n        arrayDiv.innerHTML = '';\n        array.forEach(value => {\n            const bar = document.createElement('div');\n            bar.classList.add('bar');\n            bar.style.height = value * 5 + 'px';\n            bar.title = value;\n            arrayDiv.appendChild(bar);\n        });\n    }\n\n    function heapify(arr, n, i, highlightIndices) {\n        let largest = i; \n        const left = 2 * i + 1; \n        const right = 2 * i + 2; \n\n        if (left < n && arr[left] > arr[largest]) {\n            largest = left;\n        }\n        if (right < n && arr[right] > arr[largest]) {\n            largest = right;\n        }\n\n        if (largest !== i) {\n            highlightIndices.push(i, largest); \n            [arr[i], arr[largest]] = [arr[largest], arr[i]]; \n            drawArrayWithHighlights(highlightIndices);\n            return heapify(arr, n, largest, highlightIndices);\n        }\n        highlightIndices.push(i);\n        drawArrayWithHighlights(highlightIndices);\n    }\n\n    function heapSort(arr) {\n        const n = arr.length;\n        const highlightIndices = [];\n\n        for (let i = Math.floor(n / 2) - 1; i >= 0; i--) {\n            heapify(arr, n, i, highlightIndices);\n        }\n\n        for (let i = n - 1; i > 0; i--) {\n            highlightIndices.push(0, i); \n            [arr[0], arr[i]] = [arr[i], arr[0]];\n            drawArrayWithHighlights(highlightIndices);\n            heapify(arr, i, 0, highlightIndices);\n        }\n    }\n\n    function drawArrayWithHighlights(highlightIndices) {\n        drawArray();\n        const bars = arrayDiv.children;\n        highlightIndices.forEach(index => {\n            if (bars[index]) {\n                bars[index].classList.add('highlight');\n            }\n        });\n        setTimeout(() => {\n            highlightIndices.forEach(index => {\n                if (bars[index]) {\n                    bars[index].classList.remove('highlight');\n                }\n            });\n        }, 500);\n    }\n\n    function startHeapSort() {\n        heapSort(array);\n    }\n\n    // Initial Array Drawing\n    drawArray();\n</script>\n\n</body>\n</html>"
