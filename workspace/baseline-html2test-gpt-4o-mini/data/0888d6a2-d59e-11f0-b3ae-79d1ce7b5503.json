    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Min/Max Heap Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: center;\n            margin: 20px;\n        }\n        .heap {\n            margin: 20px auto;\n            display: inline-block;\n            text-align: left;\n        }\n        .node {\n            display: inline-block;\n            background-color: #4CAF50;\n            color: white;\n            padding: 10px;\n            margin: 5px;\n            border-radius: 5px;\n            min-width: 50px;\n            text-align: center;\n            position: relative;\n        }\n        .node::before {\n            content: '';\n            position: absolute;\n            top: 100%;\n            left: 50%;\n            border-left: 2px solid black;\n            height: 20px;\n        }\n        .node:first-child::before {\n            display: none;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Min/Max Heap Visualization</h1>\n<div id=\"heapVisual\" class=\"heap\"></div>\n\n<input type=\"number\" id=\"valueInput\" placeholder=\"Enter a number\" />\n<button onclick=\"insertMinHeap()\">Insert Min Heap</button>\n<button onclick=\"insertMaxHeap()\">Insert Max Heap</button>\n\n<h2>Min Heap</h2>\n<div id=\"minHeap\"></div>\n\n<h2>Max Heap</h2>\n<div id=\"maxHeap\"></div>\n\n<script>\n    let minHeap = [];\n    let maxHeap = [];\n\n    function insertMinHeap() {\n        const value = parseInt(document.getElementById('valueInput').value);\n        if (!isNaN(value)) {\n            minHeap.push(value);\n            buildMinHeap();\n            document.getElementById('valueInput').value = '';\n            renderHeap(minHeap, 'minHeap');\n        } else {\n            alert('Please enter a valid number.');\n        }\n    }\n\n    function insertMaxHeap() {\n        const value = parseInt(document.getElementById('valueInput').value);\n        if (!isNaN(value)) {\n            maxHeap.push(value);\n            buildMaxHeap();\n            document.getElementById('valueInput').value = '';\n            renderHeap(maxHeap, 'maxHeap');\n        } else {\n            alert('Please enter a valid number.');\n        }\n    }\n\n    function buildMinHeap() {\n        for (let i = Math.floor(minHeap.length / 2); i >= 0; i--) {\n            heapifyMin(minHeap, i);\n        }\n    }\n\n    function buildMaxHeap() {\n        for (let i = Math.floor(maxHeap.length / 2); i >= 0; i--) {\n            heapifyMax(maxHeap, i);\n        }\n    }\n\n    function heapifyMin(heap, idx) {\n        let smallest = idx;\n        const left = 2 * idx + 1;\n        const right = 2 * idx + 2;\n\n        if (left < heap.length && heap[left] < heap[smallest]) {\n            smallest = left;\n        }\n\n        if (right < heap.length && heap[right] < heap[smallest]) {\n            smallest = right;\n        }\n\n        if (smallest !== idx) {\n            [heap[idx], heap[smallest]] = [heap[smallest], heap[idx]];\n            heapifyMin(heap, smallest);\n        }\n    }\n\n    function heapifyMax(heap, idx) {\n        let largest = idx;\n        const left = 2 * idx + 1;\n        const right = 2 * idx + 2;\n\n        if (left < heap.length && heap[left] > heap[largest]) {\n            largest = left;\n        }\n\n        if (right < heap.length && heap[right] > heap[largest]) {\n            largest = right;\n        }\n\n        if (largest !== idx) {\n            [heap[idx], heap[largest]] = [heap[largest], heap[idx]];\n            heapifyMax(heap, largest);\n        }\n    }\n\n    function renderHeap(heap, elementId) {\n        const heapElement = document.getElementById(elementId);\n        heapElement.innerHTML = '';\n        for (let i = 0; i < heap.length; i++) {\n            const node = document.createElement('div');\n            node.classList.add('node');\n            node.innerText = heap[i];\n            heapElement.appendChild(node);\n        }\n    }\n</script>\n\n</body>\n</html>"
