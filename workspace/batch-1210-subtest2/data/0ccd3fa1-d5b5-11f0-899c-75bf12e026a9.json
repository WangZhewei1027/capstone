sorted array whose sum equals target.\n// We'll animate the two pointers moving toward each other.\n\nconst inputArray = document.getElementById(\"inputArray\");\nconst inputTarget = document.getElementById(\"inputTarget\");\nconst runBtn = document.getElementById(\"runBtn\");\nconst output = document.getElementById(\"output\");\n\nfunction sleep(ms) {\n  return new Promise(resolve => setTimeout(resolve, ms));\n}\n\nfunction renderArray(arr, left, right) {\n  // Render the array visually, highlighting left and right pointers\n  // We'll mark left pointer in blue and right pointer in blue as well.\n  // If left and right meet, highlight once.\n  let str = \"\";\n  for (let i = 0; i < arr.length; i++) {\n    if (i === left && i === right) {\n      str += `[<span class=\"pointer\">${arr[i]}</span>] `;\n    } else if (i === left) {\n      str += `<span class=\"pointer\">[${arr[i]}</span>] `;\n    } else if (i === right) {\n      str += `[<span class=\"pointer\">${arr[i]}</span>] `;\n    } else {\n      str += `${arr[i]} `;\n    }\n  }\n  return str.trim();\n}\n\nasync function twoPointersDemo(arr, target) {\n  output.innerHTML = \"\";\n  let left = 0,\n    right = arr.length - 1;\n\n  output.innerHTML += `Starting with array:\\n`;\n  output.innerHTML += renderArray(arr, left, right) + \"\\n\\n\";\n  output.innerHTML += `Target sum: <span class=\"highlight\">${target}</span>\\n\\n`;\n  \n  while (left < right) {\n    output.innerHTML += `Checking pair: ${arr[left]} + ${arr[right]} = ${arr[left] + arr[right]}\\n`;\n    output.innerHTML += renderArray(arr, left, right) + \"\\n\\n\";\n\n    await sleep(1000);\n\n    if (arr[left] + arr[right] === target) {\n      output.innerHTML += `<span class=\"highlight\">Found!</span> The pair (${arr[left]}, ${arr[right]}) sums to ${target}.\\n`;\n      output.innerHTML += renderArray(arr, left, right) + \"\\n\";\n      return;\n    } else if (arr[left] + arr[right] < target) {\n      output.innerHTML += `Sum is less than target. Move left pointer right.\\n\\n`;\n      left++;\n    } else {\n      output.innerHTML += `Sum is greater than target. Move right pointer left.\\n\\n`;\n      right--;\n    }\n    await sleep(800);\n  }\n  output.innerHTML += `<span class=\"highlight\">No pair found</span> with sum = ${target}.`;\n}\n\nrunBtn.addEventListener(\"click\", () => {\n  // Parse input\n  let arrStr = inputArray.value.trim();\n  if (!arrStr) {\n    alert(\"Please enter a sorted array.\");\n    return;\n  }\n  let arr = arrStr.split(\",\").map(s => parseInt(s.trim())).filter(n => !isNaN(n));\n  // Verify sorted\n  for (let i = 1; i < arr.length; i++) {\n    if (arr[i] < arr[i-1]) {\n      alert(\"Array must be sorted in non-decreasing order for two pointers technique.\");\n      return;\n    }\n  }\n  let target = parseInt(inputTarget.value);\n  if (isNaN(target)) {\n    alert(\"Please enter a valid target number.\");\n    return;\n  }\n  output.innerHTML = `<em>Running...</em>`;\n\n  twoPointersDemo(arr, target);\n});\n</script>\n</body>\n</html>"
