{
  "meta": {
    "concept": "Depth-First Search",
    "topic": "DFS Algorithm Visualization",
    "educational_goal": "Demonstrate DFS traversal on a graph",
    "expected_interactions": [
      "start_traversal",
      "step_forward",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_StartDFS",
      "label": "StartDFS",
      "type": "atomic",
      "entry_actions": [
        "selectStartNode()",
        "highlightStartNode()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_DFSInProgress",
      "label": "DFSInProgress",
      "type": "operation",
      "entry_actions": [
        "beginDFSTraversal()",
        "highlightCurrentNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_StepForward",
      "label": "StepForward",
      "type": "atomic",
      "entry_actions": [
        "moveToNextNode()",
        "highlightTraversalPath()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_TraversalComplete",
      "label": "TraversalComplete",
      "type": "atomic",
      "entry_actions": [
        "showCompletionFeedback()",
        "highlightTraversalComplete()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllHighlights()",
        "resetGraph()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start DFS button"
    },
    {
      "id": "UserClicksStepForward",
      "event_type": "user_action",
      "description": "User clicks the Step Forward button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "DFSInitialized",
      "event_type": "system_event",
      "description": "DFS traversal initialized"
    },
    {
      "id": "NodeVisited",
      "event_type": "system_event",
      "description": "A node has been visited in the DFS traversal"
    },
    {
      "id": "TraversalComplete",
      "event_type": "system_event",
      "description": "DFS traversal has completed"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Graph has been reset"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_StartDFS",
      "event": "UserClicksStart",
      "guard": "graphNotEmpty",
      "actions": [
        "disableControls()",
        "captureStartNode()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_StartDFS",
      "to": "S2_DFSInProgress",
      "event": "DFSInitialized",
      "guard": "startNodeIsValid",
      "actions": [
        "prepareDFS()",
        "beginTraversalAnimation()"
      ],
      "expected_observables": [
        "dom:dfsStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_DFSInProgress",
      "to": "S3_StepForward",
      "event": "NodeVisited",
      "guard": "moreNodesToVisit",
      "actions": [
        "highlightNextNode()",
        "showPathProgress()"
      ],
      "expected_observables": [
        "dom:currentNodeHighlighted"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_DFSInProgress",
      "to": "S4_TraversalComplete",
      "event": "TraversalComplete",
      "guard": "allNodesVisited",
      "actions": [
        "showTraversalComplete()",
        "displayFinishedState()"
      ],
      "expected_observables": [
        "dom:dfsComplete"
      ],
      "timeout": 2000
    },
    {
      "from": "S3_StepForward",
      "to": "S2_DFSInProgress",
      "event": "UserClicksStepForward",
      "guard": "moreNodesToVisit",
      "actions": [
        "advanceToNextNode()"
      ],
      "expected_observables": [
        "dom:stepForwardClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_TraversalComplete",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "initiateGraphReset()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginGraphClearOperation()"
      ],
      "expected_observables": [
        "dom:resetInitiated"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "renderResetGraph()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:graphResetComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "step_forward",
    "reset",
    "graph_visualization"
  ]
}