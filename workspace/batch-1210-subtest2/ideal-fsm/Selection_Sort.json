{
  "meta": {
    "concept": "SelectionSort",
    "topic": "Selection Sort Visualization",
    "educational_goal": "Demonstrate the process of selection sort on an array",
    "expected_interactions": [
      "inputArray",
      "sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputArray",
      "label": "InputArray",
      "type": "atomic",
      "entry_actions": [
        "readInputArray()",
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputArray()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_Sorting",
      "label": "Sorting",
      "type": "operation",
      "entry_actions": [
        "beginSelectionSort()",
        "disableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "showSortedArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsArray",
      "event_type": "user_action",
      "description": "User enters values in input field"
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input array validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input array validation fails"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputArray",
      "event": "UserInputsArray",
      "guard": "inputNotEmpty",
      "actions": [
        "captureArrayInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputArray",
        "dom:inputFieldFocused"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputArray",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateArray()",
        "prepareForSorting()"
      ],
      "expected_observables": [
        "dom:arrayValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputArray",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInputField()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_Sorting",
      "event": "UserClicksSort",
      "guard": "arrayValid",
      "actions": [
        "startSortingProcess()"
      ],
      "expected_observables": [
        "dom:sortingStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S4_Sorting",
      "to": "S5_Sorted",
      "event": "SortingComplete",
      "guard": "sortingSuccessful",
      "actions": [
        "displaySortedArray()"
      ],
      "expected_observables": [
        "dom:sortedArrayDisplayed"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_Sorted",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "clearSortedState()",
        "prepareForNextInput()"
      ],
      "expected_observables": [
        "dom:resetTriggered"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_Sorted",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputArray()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "sort",
    "reset",
    "array_visualization"
  ]
}