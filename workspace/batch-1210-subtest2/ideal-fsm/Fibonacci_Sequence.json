{
  "meta": {
    "concept": "FibonacciSequence",
    "topic": "Fibonacci Sequence Calculation",
    "educational_goal": "Demonstrate Fibonacci sequence generation",
    "expected_interactions": [
      "calculate",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderUI()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputStart",
      "label": "InputStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_CalculatingSequence",
      "label": "CalculatingSequence",
      "type": "atomic",
      "entry_actions": [
        "computeFibonacci()",
        "updateCalculationProgress()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "showResult()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearResults()",
        "resetUI()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksCalculate",
      "event_type": "user_action",
      "description": "User clicks the Calculate button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters value in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "CalculationComplete",
      "event_type": "system_event",
      "description": "Fibonacci sequence calculation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputStart",
      "event": "UserClicksCalculate",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:calculateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareCalculation()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_CalculatingSequence",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginCalculation()"
      ],
      "expected_observables": [
        "dom:calculationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_CalculatingSequence",
      "to": "S5_DisplayResult",
      "event": "CalculationComplete",
      "guard": "calculationSuccessful",
      "actions": [
        "displayFibonacciSequence()",
        "triggerResultDisplay()"
      ],
      "expected_observables": [
        "dom:sequenceDisplayed",
        "dom:resultVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_DisplayResult",
      "to": "S0_Idle",
      "event": "CalculationComplete",
      "guard": "displayComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:displayComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "resultsNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "CalculationComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:resultsCleared",
        "dom:uiReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "calculate",
    "reset",
    "result_display"
  ]
}