{
  "meta": {
    "concept": "K-Means Clustering",
    "topic": "K-Means Clustering Visualization",
    "educational_goal": "Demonstrate the K-Means clustering process",
    "expected_interactions": [
      "initialize",
      "assign",
      "update",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderClusters()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Initializing",
      "label": "Initializing",
      "type": "atomic",
      "entry_actions": [
        "readKValue()",
        "initializeCentroids()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Assigning",
      "label": "Assigning",
      "type": "atomic",
      "entry_actions": [
        "assignPointsToClusters()",
        "showAssignmentFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Updating",
      "label": "Updating",
      "type": "atomic",
      "entry_actions": [
        "updateCentroids()",
        "showUpdateFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearClusters()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInitialize",
      "event_type": "user_action",
      "description": "User clicks the Initialize button"
    },
    {
      "id": "UserClicksAssign",
      "event_type": "user_action",
      "description": "User clicks the Assign button"
    },
    {
      "id": "UserClicksUpdate",
      "event_type": "user_action",
      "description": "User clicks the Update button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InitializationComplete",
      "event_type": "system_event",
      "description": "Centroid initialization completes"
    },
    {
      "id": "AssignmentComplete",
      "event_type": "system_event",
      "description": "Point assignment to clusters completes"
    },
    {
      "id": "UpdateComplete",
      "event_type": "system_event",
      "description": "Centroid update completes"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Initializing",
      "event": "UserClicksInitialize",
      "guard": "kValueValid",
      "actions": [
        "captureKValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:kValueCaptured",
        "dom:initializeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Initializing",
      "to": "S2_Assigning",
      "event": "InitializationComplete",
      "guard": "centroidsInitialized",
      "actions": [
        "prepareAssignment()"
      ],
      "expected_observables": [
        "dom:centroidsInitialized"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Assigning",
      "to": "S3_Updating",
      "event": "AssignmentComplete",
      "guard": "pointsAssigned",
      "actions": [
        "prepareUpdate()"
      ],
      "expected_observables": [
        "dom:pointsAssigned"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_Updating",
      "to": "S0_Idle",
      "event": "UpdateComplete",
      "guard": "centroidsUpdated",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:centroidsUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ErrorAlert",
      "event": "UserClicksInitialize",
      "guard": "kValueInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "clustersNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:clustersCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "initialize",
    "assign",
    "update",
    "reset",
    "cluster_visualization"
  ]
}