{
  "meta": {
    "concept": "Deque",
    "topic": "Double-Ended Queue Operations",
    "educational_goal": "Demonstrate deque insertion and deletion from both ends",
    "expected_interactions": [
      "insertFront",
      "insertRear",
      "deleteFront",
      "deleteRear",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderDeque()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertFrontStart",
      "label": "InsertFrontStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_InsertRearStart",
      "label": "InsertRearStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S5_InsertingFront",
      "label": "InsertingFront",
      "type": "atomic",
      "entry_actions": [
        "insertAtFront()",
        "updateDequeVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_InsertingRear",
      "label": "InsertingRear",
      "type": "atomic",
      "entry_actions": [
        "insertAtRear()",
        "updateDequeVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_DeletingFront",
      "label": "DeletingFront",
      "type": "atomic",
      "entry_actions": [
        "removeFromFront()",
        "updateDequeVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S8_DeletingRear",
      "label": "DeletingRear",
      "type": "atomic",
      "entry_actions": [
        "removeFromRear()",
        "updateDequeVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S9_DequeResetting",
      "label": "DequeResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllElements()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsertFront",
      "event_type": "user_action",
      "description": "User clicks the Insert Front button"
    },
    {
      "id": "UserClicksInsertRear",
      "event_type": "user_action",
      "description": "User clicks the Insert Rear button"
    },
    {
      "id": "UserClicksDeleteFront",
      "event_type": "user_action",
      "description": "User clicks the Delete Front button"
    },
    {
      "id": "UserClicksDeleteRear",
      "event_type": "user_action",
      "description": "User clicks the Delete Rear button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "InsertionComplete",
      "event_type": "system_event",
      "description": "Insertion operation complete"
    },
    {
      "id": "DeletionComplete",
      "event_type": "system_event",
      "description": "Deletion operation complete"
    },
    {
      "id": "DequeResetComplete",
      "event_type": "system_event",
      "description": "Deque reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertFrontStart",
      "event": "UserClicksInsertFront",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertFrontButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S2_InsertRearStart",
      "event": "UserClicksInsertRear",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertRearButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertFrontStart",
      "to": "S3_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_InsertRearStart",
      "to": "S3_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ValidatingInput",
      "to": "S5_InsertingFront",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:nodeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_ValidatingInput",
      "to": "S6_InsertingRear",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:nodeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertFrontStart",
      "to": "S4_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_InsertRearStart",
      "to": "S4_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S5_InsertingFront",
      "to": "S0_Idle",
      "event": "InsertionComplete",
      "guard": "insertionSuccessful",
      "actions": [
        "updateDequeStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:dequeStructureChanged",
        "dom:newNodeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S6_InsertingRear",
      "to": "S0_Idle",
      "event": "InsertionComplete",
      "guard": "insertionSuccessful",
      "actions": [
        "updateDequeStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:dequeStructureChanged",
        "dom:newNodeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S7_DeletingFront",
      "event": "UserClicksDeleteFront",
      "guard": "dequeNotEmpty",
      "actions": [
        "beginDeletion()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:deleteFrontButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S8_DeletingRear",
      "event": "UserClicksDeleteRear",
      "guard": "dequeNotEmpty",
      "actions": [
        "beginDeletion()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:deleteRearButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S7_DeletingFront",
      "to": "S0_Idle",
      "event": "DeletionComplete",
      "guard": "deletionSuccessful",
      "actions": [
        "updateDequeStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:dequeStructureChanged"
      ],
      "timeout": 3000
    },
    {
      "from": "S8_DeletingRear",
      "to": "S0_Idle",
      "event": "DeletionComplete",
      "guard": "deletionSuccessful",
      "actions": [
        "updateDequeStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:dequeStructureChanged"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S9_DequeResetting",
      "event": "UserClicksReset",
      "guard": "dequeNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S9_DequeResetting",
      "to": "S0_Idle",
      "event": "DequeResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:dequeCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insertFront",
    "insertRear",
    "deleteFront",
    "deleteRear",
    "reset",
    "deque_visualization"
  ]
}