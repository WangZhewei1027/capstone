{
  "meta": {
    "concept": "Set",
    "topic": "Set Operations and Properties",
    "educational_goal": "Understand and perform basic set operations",
    "expected_interactions": [
      "addElement",
      "removeElement",
      "checkMembership",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderSet()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddElementStart",
      "label": "AddElementStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightAddInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingAddInput",
      "label": "ValidatingAddInput",
      "type": "atomic",
      "entry_actions": [
        "validateAddInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_RemovingElement",
      "label": "RemovingElement",
      "type": "atomic",
      "entry_actions": [
        "findElementToRemove()",
        "proceedWithRemoval()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_CheckingMembership",
      "label": "CheckingMembership",
      "type": "atomic",
      "entry_actions": [
        "findElementInSet()",
        "showMembershipResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_SetResetting",
      "label": "SetResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllElements()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAdd",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "UserEntersAddInput",
      "event_type": "user_action",
      "description": "User enters value in add input field"
    },
    {
      "id": "UserClicksRemove",
      "event_type": "user_action",
      "description": "User clicks the Remove button"
    },
    {
      "id": "UserClicksCheck",
      "event_type": "user_action",
      "description": "User clicks the Check button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "AddInputValidationComplete",
      "event_type": "system_event",
      "description": "Add input validation completes successfully"
    },
    {
      "id": "ElementRemoved",
      "event_type": "system_event",
      "description": "Element removal completes successfully"
    },
    {
      "id": "MembershipCheckComplete",
      "event_type": "system_event",
      "description": "Membership check completes"
    },
    {
      "id": "SetResetComplete",
      "event_type": "system_event",
      "description": "Set reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddElementStart",
      "event": "UserClicksAdd",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:addButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddElementStart",
      "to": "S2_ValidatingAddInput",
      "event": "AddInputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareAddition()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddElementStart",
      "to": "S0_Idle",
      "event": "AddInputValidationComplete",
      "guard": "inputIsInvalid",
      "actions": [
        "showValidationError()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:validationErrorShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingElement",
      "event": "UserClicksRemove",
      "guard": "elementExists",
      "actions": [
        "locateElement()",
        "initiateRemoval()"
      ],
      "expected_observables": [
        "dom:removeButtonClicked"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_RemovingElement",
      "to": "S0_Idle",
      "event": "ElementRemoved",
      "guard": "removalSuccess",
      "actions": [
        "updateSetVisualization()",
        "notifyRemoval()"
      ],
      "expected_observables": [
        "dom:setUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_CheckingMembership",
      "event": "UserClicksCheck",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "checkMembership()"
      ],
      "expected_observables": [
        "dom:checkButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_CheckingMembership",
      "to": "S0_Idle",
      "event": "MembershipCheckComplete",
      "guard": "true",
      "actions": [
        "displayMembershipResult()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:membershipResultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_SetResetting",
      "event": "UserClicksReset",
      "guard": "setNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_SetResetting",
      "to": "S0_Idle",
      "event": "SetResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:setCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add",
    "remove",
    "check",
    "reset",
    "set_visualization"
  ]
}