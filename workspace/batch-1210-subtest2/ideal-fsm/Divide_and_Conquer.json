{
  "meta": {
    "concept": "Divide and Conquer",
    "topic": "Divide and Conquer Strategy",
    "educational_goal": "Illustrate the divide and conquer approach with a simple problem",
    "expected_interactions": [
      "divide",
      "conquer",
      "combine",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderProblem()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Divide",
      "label": "Divide",
      "type": "atomic",
      "entry_actions": [
        "highlightDivideStep()",
        "showSubproblems()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Conquer",
      "label": "Conquer",
      "type": "atomic",
      "entry_actions": [
        "solveSubproblems()",
        "showSolutions()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Combine",
      "label": "Combine",
      "type": "atomic",
      "entry_actions": [
        "combineSolutions()",
        "showFinalSolution()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllSteps()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksDivide",
      "event_type": "user_action",
      "description": "User clicks the Divide button"
    },
    {
      "id": "UserClicksConquer",
      "event_type": "user_action",
      "description": "User clicks the Conquer button"
    },
    {
      "id": "UserClicksCombine",
      "event_type": "user_action",
      "description": "User clicks the Combine button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "DivisionComplete",
      "event_type": "system_event",
      "description": "Division of problem into subproblems complete"
    },
    {
      "id": "ConquerComplete",
      "event_type": "system_event",
      "description": "Conquering of subproblems complete"
    },
    {
      "id": "CombinationComplete",
      "event_type": "system_event",
      "description": "Combination of solutions complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Divide",
      "event": "UserClicksDivide",
      "guard": "problemNotEmpty",
      "actions": [
        "captureProblemState()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:divideButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Divide",
      "to": "S2_Conquer",
      "event": "DivisionComplete",
      "guard": "subproblemsGenerated",
      "actions": [
        "prepareConquerStep()"
      ],
      "expected_observables": [
        "dom:subproblemsDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_Conquer",
      "to": "S3_Combine",
      "event": "ConquerComplete",
      "guard": "subproblemsSolved",
      "actions": [
        "prepareCombineStep()"
      ],
      "expected_observables": [
        "dom:solutionsDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_Combine",
      "to": "S0_Idle",
      "event": "CombinationComplete",
      "guard": "solutionCombined",
      "actions": [
        "enableControls()",
        "clearIntermediateSteps()"
      ],
      "expected_observables": [
        "dom:finalSolutionDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "UserClicksReset",
      "guard": "problemNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetProblemState()"
      ],
      "expected_observables": [
        "dom:problemCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "divide",
    "conquer",
    "combine",
    "reset",
    "problem_visualization"
  ]
}