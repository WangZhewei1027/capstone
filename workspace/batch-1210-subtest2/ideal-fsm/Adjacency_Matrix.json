{
  "meta": {
    "concept": "Adjacency Matrix",
    "topic": "Graph Representation",
    "educational_goal": "Teach adjacency matrix creation and interpretation",
    "expected_interactions": [
      "add_edge",
      "remove_edge",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderMatrix()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readVerticesInput()",
        "highlightVerticesInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingVertices",
      "label": "ValidatingVertices",
      "type": "atomic",
      "entry_actions": [
        "validateVertices()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_UpdatingMatrix",
      "label": "UpdatingMatrix",
      "type": "atomic",
      "entry_actions": [
        "updateMatrixForEdge()",
        "animateEdgeAddition()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ResettingMatrix",
      "label": "ResettingMatrix",
      "type": "atomic",
      "entry_actions": [
        "clearMatrix()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserEntersVertices",
      "event_type": "user_action",
      "description": "User enters vertices in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "VerticesValidationComplete",
      "event_type": "system_event",
      "description": "Vertices validation completes successfully"
    },
    {
      "id": "VerticesValidationFailed",
      "event_type": "system_event",
      "description": "Vertices validation fails"
    },
    {
      "id": "MatrixUpdateComplete",
      "event_type": "system_event",
      "description": "Matrix update operation complete"
    },
    {
      "id": "MatrixResetComplete",
      "event_type": "system_event",
      "description": "Matrix reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "verticesInputNotEmpty",
      "actions": [
        "captureVerticesInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:verticesInputRead",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S2_ValidatingVertices",
      "event": "UserEntersVertices",
      "guard": "inputIsValid",
      "actions": [
        "validateVerticesPair()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:verticesValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingVertices",
      "to": "S4_UpdatingMatrix",
      "event": "VerticesValidationComplete",
      "guard": "validVertices",
      "actions": [
        "updateMatrix()",
        "beginEdgeAnimation()"
      ],
      "expected_observables": [
        "dom:matrixUpdateStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S3_ErrorAlert",
      "event": "VerticesValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusVerticesInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetVerticesInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_UpdatingMatrix",
      "to": "S0_Idle",
      "event": "MatrixUpdateComplete",
      "guard": "matrixUpdateSuccess",
      "actions": [
        "enableControls()",
        "clearVerticesInput()"
      ],
      "expected_observables": [
        "dom:matrixUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingMatrix",
      "event": "UserClicksReset",
      "guard": "matrixNotEmpty",
      "actions": [
        "confirmReset()",
        "beginMatrixClearing()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingMatrix",
      "to": "S0_Idle",
      "event": "MatrixResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetVerticesInput()"
      ],
      "expected_observables": [
        "dom:matrixCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add_edge",
    "reset",
    "matrix_visualization"
  ]
}