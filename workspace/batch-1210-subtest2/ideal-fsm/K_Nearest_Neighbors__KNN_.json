{
  "meta": {
    "concept": "K-Nearest Neighbors",
    "topic": "KNN Algorithm Visualization",
    "educational_goal": "Demonstrate KNN classification process",
    "expected_interactions": [
      "input_data",
      "set_k",
      "classify",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderPlot()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputData",
      "label": "InputData",
      "type": "atomic",
      "entry_actions": [
        "readDataInput()",
        "highlightDataInput()"
      ],
      "exit_actions": [
        "clearDataHighlight()"
      ]
    },
    {
      "id": "S2_SetK",
      "label": "SetK",
      "type": "atomic",
      "entry_actions": [
        "readKValue()",
        "highlightKInput()"
      ],
      "exit_actions": [
        "clearKHighlight()"
      ]
    },
    {
      "id": "S3_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S5_Classifying",
      "label": "Classifying",
      "type": "atomic",
      "entry_actions": [
        "computeDistances()",
        "findNearestNeighbors()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_DrawingResult",
      "label": "DrawingResult",
      "type": "atomic",
      "entry_actions": [
        "updatePlotWithResult()",
        "animateClassification()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S7_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearPlot()",
        "resetInputs()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsData",
      "event_type": "user_action",
      "description": "User inputs data points"
    },
    {
      "id": "UserSetsK",
      "event_type": "user_action",
      "description": "User sets the value of K"
    },
    {
      "id": "UserClicksClassify",
      "event_type": "user_action",
      "description": "User clicks the Classify button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ClassificationComplete",
      "event_type": "system_event",
      "description": "Classification process complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputData",
      "event": "UserInputsData",
      "guard": "dataInputNotEmpty",
      "actions": [
        "captureDataInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:dataInputCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputData",
      "to": "S2_SetK",
      "event": "UserSetsK",
      "guard": "kValueValid",
      "actions": [
        "captureKValue()",
        "prepareForValidation()"
      ],
      "expected_observables": [
        "dom:kValueCaptured"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SetK",
      "to": "S3_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputsAreValid",
      "actions": [
        "validateInputs()",
        "prepareClassification()"
      ],
      "expected_observables": [
        "dom:inputsValidated"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_ValidatingInput",
      "to": "S5_Classifying",
      "event": "InputValidationComplete",
      "guard": "validInputs",
      "actions": [
        "beginClassification()"
      ],
      "expected_observables": [
        "dom:classificationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_ValidatingInput",
      "to": "S4_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "invalidInputs",
      "actions": [
        "showError()",
        "focusDataInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetDataInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Classifying",
      "to": "S6_DrawingResult",
      "event": "ClassificationComplete",
      "guard": "classificationSuccessful",
      "actions": [
        "updatePlot()",
        "triggerResultVisualization()"
      ],
      "expected_observables": [
        "dom:plotUpdated",
        "dom:classificationResultVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S6_DrawingResult",
      "to": "S0_Idle",
      "event": "ClassificationComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInputs()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S7_Resetting",
      "event": "UserClicksReset",
      "guard": "plotNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:plotCleared",
        "dom:inputsReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "data_input",
    "k_input",
    "classify",
    "reset",
    "plot_visualization"
  ]
}