{
  "meta": {
    "concept": "Array",
    "topic": "Array Operations Visualization",
    "educational_goal": "Demonstrate basic array operations such as insertion, deletion, and search",
    "expected_interactions": [
      "insert",
      "delete",
      "search",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_InsertingElement",
      "label": "InsertingElement",
      "type": "atomic",
      "entry_actions": [
        "findInsertPosition()",
        "insertElement()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DeletingElement",
      "label": "DeletingElement",
      "type": "atomic",
      "entry_actions": [
        "findElementToDelete()",
        "removeElement()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_SearchingElement",
      "label": "SearchingElement",
      "type": "atomic",
      "entry_actions": [
        "searchForElement()",
        "highlightSearchResult()"
      ],
      "exit_actions": [
        "clearSearchHighlight()"
      ]
    },
    {
      "id": "S7_ArrayResetting",
      "label": "ArrayResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllElements()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsert",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "UserClicksDelete",
      "event_type": "user_action",
      "description": "User clicks the Delete button"
    },
    {
      "id": "UserClicksSearch",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ElementInsertionComplete",
      "event_type": "system_event",
      "description": "Element insertion complete"
    },
    {
      "id": "ElementDeletionComplete",
      "event_type": "system_event",
      "description": "Element deletion complete"
    },
    {
      "id": "ElementSearchComplete",
      "event_type": "system_event",
      "description": "Element search complete"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "UserClicksInsert",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_InsertingElement",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:elementInsertionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_InsertingElement",
      "to": "S0_Idle",
      "event": "ElementInsertionComplete",
      "guard": "elementInsertedSuccessfully",
      "actions": [
        "updateArrayStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:arrayStructureChanged",
        "dom:newElementVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_DeletingElement",
      "event": "UserClicksDelete",
      "guard": "elementExists",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:deleteButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_DeletingElement",
      "to": "S0_Idle",
      "event": "ElementDeletionComplete",
      "guard": "elementDeletedSuccessfully",
      "actions": [
        "updateArrayStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:arrayStructureChanged",
        "dom:elementRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S6_SearchingElement",
      "event": "UserClicksSearch",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S6_SearchingElement",
      "to": "S0_Idle",
      "event": "ElementSearchComplete",
      "guard": "searchComplete",
      "actions": [
        "highlightSearchResult()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:searchResultHighlighted"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S7_ArrayResetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_ArrayResetting",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insert",
    "delete",
    "search",
    "reset",
    "array_visualization"
  ]
}