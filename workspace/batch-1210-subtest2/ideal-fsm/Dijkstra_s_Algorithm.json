{
  "meta": {
    "concept": "Dijkstraâ€™s Algorithm",
    "topic": "Shortest Path Visualization",
    "educational_goal": "Demonstrate finding the shortest path in a graph using Dijkstra's Algorithm",
    "expected_interactions": [
      "set_start",
      "set_end",
      "run_algorithm",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SettingStart",
      "label": "SettingStart",
      "type": "atomic",
      "entry_actions": [
        "highlightStartNodeSelection()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_SettingEnd",
      "label": "SettingEnd",
      "type": "atomic",
      "entry_actions": [
        "highlightEndNodeSelection()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "operation",
      "entry_actions": [
        "executeDijkstra()",
        "showProgress()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ShowingResult",
      "label": "ShowingResult",
      "type": "atomic",
      "entry_actions": [
        "displayShortestPath()",
        "highlightPath()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksSetStart",
      "event_type": "user_action",
      "description": "User clicks to set the start node"
    },
    {
      "id": "UserClicksSetEnd",
      "event_type": "user_action",
      "description": "User clicks to set the end node"
    },
    {
      "id": "UserClicksRun",
      "event_type": "user_action",
      "description": "User clicks the Run button to start the algorithm"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "AlgorithmComplete",
      "event_type": "system_event",
      "description": "Dijkstra's algorithm completes execution"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SettingStart",
      "event": "UserClicksSetStart",
      "guard": "graphLoaded",
      "actions": [
        "promptStartNodeSelection()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startNodeSelectionPrompt"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SettingStart",
      "to": "S2_SettingEnd",
      "event": "UserClicksSetEnd",
      "guard": "startNodeSelected",
      "actions": [
        "promptEndNodeSelection()"
      ],
      "expected_observables": [
        "dom:endNodeSelectionPrompt"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_SettingEnd",
      "to": "S3_RunningAlgorithm",
      "event": "UserClicksRun",
      "guard": "endNodeSelected",
      "actions": [
        "beginAlgorithmExecution()"
      ],
      "expected_observables": [
        "dom:algorithmRunning"
      ],
      "timeout": 3000
    },
    {
      "from": "S3_RunningAlgorithm",
      "to": "S4_ShowingResult",
      "event": "AlgorithmComplete",
      "guard": "pathFound",
      "actions": [
        "highlightShortestPath()"
      ],
      "expected_observables": [
        "dom:shortestPathDisplayed"
      ],
      "timeout": 2000
    },
    {
      "from": "S4_ShowingResult",
      "to": "S0_Idle",
      "event": "AlgorithmComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearSelection()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginGraphClear()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetNodeSelections()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "graph_visualization",
    "set_start",
    "set_end",
    "run",
    "reset"
  ]
}