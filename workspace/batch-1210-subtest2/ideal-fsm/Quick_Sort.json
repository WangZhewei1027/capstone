{
  "meta": {
    "concept": "QuickSort",
    "topic": "Quick Sort Algorithm Visualization",
    "educational_goal": "Demonstrate the quick sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SortingStart",
      "label": "SortingStart",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "highlightPivotSelection()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Partitioning",
      "label": "Partitioning",
      "type": "atomic",
      "entry_actions": [
        "performPartition()",
        "showPartitionFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_SortingComplete",
      "label": "SortingComplete",
      "type": "atomic",
      "entry_actions": [
        "showSortedArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ArrayResetting",
      "label": "ArrayResetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "PartitionComplete",
      "event_type": "system_event",
      "description": "Partition operation completes"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting operation completes"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SortingStart",
      "event": "UserClicksStartSort",
      "guard": "arrayNotEmpty",
      "actions": [
        "captureArrayState()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startSortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SortingStart",
      "to": "S2_Partitioning",
      "event": "PartitionComplete",
      "guard": "pivotSelected",
      "actions": [
        "executePartition()",
        "highlightPartition()"
      ],
      "expected_observables": [
        "dom:partitionStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S2_Partitioning",
      "to": "S3_SortingComplete",
      "event": "SortingComplete",
      "guard": "arraySorted",
      "actions": [
        "finalizeSort()",
        "displaySortedArray()"
      ],
      "expected_observables": [
        "dom:arraySorted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ArrayResetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginArrayClear()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ArrayResetting",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start_sort",
    "reset",
    "array_visualization"
  ]
}