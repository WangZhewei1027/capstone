{
  "meta": {
    "concept": "Stack",
    "topic": "Stack Operations Visualization",
    "educational_goal": "Demonstrate stack push and pop operations",
    "expected_interactions": [
      "push",
      "pop",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderStack()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_PushStart",
      "label": "PushStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_PushingElement",
      "label": "PushingElement",
      "type": "atomic",
      "entry_actions": [
        "pushElementToStack()",
        "updateStackVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_PoppingElement",
      "label": "PoppingElement",
      "type": "atomic",
      "entry_actions": [
        "popElementFromStack()",
        "updateStackVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_StackResetting",
      "label": "StackResetting",
      "type": "atomic",
      "entry_actions": [
        "clearStack()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksPush",
      "event_type": "user_action",
      "description": "User clicks the Push button"
    },
    {
      "id": "UserClicksPop",
      "event_type": "user_action",
      "description": "User clicks the Pop button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "PushOperationComplete",
      "event_type": "system_event",
      "description": "Push operation and stack update complete"
    },
    {
      "id": "PopOperationComplete",
      "event_type": "system_event",
      "description": "Pop operation and stack update complete"
    },
    {
      "id": "StackResetComplete",
      "event_type": "system_event",
      "description": "Stack reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_PushStart",
      "event": "UserClicksPush",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:pushButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_PushStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "preparePush()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_PushingElement",
      "event": "InputValidationComplete",
      "guard": "validValue",
      "actions": [
        "parseInputValue()",
        "beginPush()"
      ],
      "expected_observables": [
        "dom:elementPushStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_PushStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_PushingElement",
      "to": "S0_Idle",
      "event": "PushOperationComplete",
      "guard": "elementPushedSuccessfully",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:stackUpdated",
        "dom:elementVisible"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_PoppingElement",
      "event": "UserClicksPop",
      "guard": "stackNotEmpty",
      "actions": [
        "disableControls()",
        "beginPop()"
      ],
      "expected_observables": [
        "dom:popButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_PoppingElement",
      "to": "S0_Idle",
      "event": "PopOperationComplete",
      "guard": "elementPoppedSuccessfully",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:stackUpdated",
        "dom:elementRemoved"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_StackResetting",
      "event": "UserClicksReset",
      "guard": "stackNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_StackResetting",
      "to": "S0_Idle",
      "event": "StackResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:stackCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "push",
    "pop",
    "reset",
    "stack_visualization"
  ]
}