{
  "meta": {
    "concept": "HuffmanCoding",
    "topic": "Huffman Coding Visualization",
    "educational_goal": "Demonstrate Huffman coding tree creation and encoding process",
    "expected_interactions": [
      "input",
      "generate_tree",
      "encode",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitialUI()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputStart",
      "label": "InputStart",
      "type": "atomic",
      "entry_actions": [
        "readInputText()",
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputText()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_GeneratingTree",
      "label": "GeneratingTree",
      "type": "atomic",
      "entry_actions": [
        "calculateFrequencies()",
        "buildHuffmanTree()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_EncodingText",
      "label": "EncodingText",
      "type": "atomic",
      "entry_actions": [
        "encodeInputText()",
        "displayEncodedResult()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksGenerateTree",
      "event_type": "user_action",
      "description": "User clicks the Generate Tree button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters text in input field"
    },
    {
      "id": "UserClicksEncode",
      "event_type": "user_action",
      "description": "User clicks the Encode button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "TreeGenerationComplete",
      "event_type": "system_event",
      "description": "Huffman tree generation complete"
    },
    {
      "id": "EncodingComplete",
      "event_type": "system_event",
      "description": "Text encoding complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputStart",
      "event": "UserEntersInput",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInputText()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:inputTextCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateText()",
        "prepareTreeGeneration()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInputField()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_GeneratingTree",
      "event": "UserClicksGenerateTree",
      "guard": "inputIsValid",
      "actions": [
        "startTreeGeneration()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:treeGenerationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_GeneratingTree",
      "to": "S5_EncodingText",
      "event": "TreeGenerationComplete",
      "guard": "treeGeneratedSuccessfully",
      "actions": [
        "startEncoding()",
        "triggerEncodingProcess()"
      ],
      "expected_observables": [
        "dom:encodingStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_EncodingText",
      "to": "S0_Idle",
      "event": "EncodingComplete",
      "guard": "encodingSuccessful",
      "actions": [
        "enableControls()",
        "clearInputField()"
      ],
      "expected_observables": [
        "dom:encodingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "dataNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:dataCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "generate_tree",
    "encode",
    "reset",
    "tree_visualization"
  ]
}