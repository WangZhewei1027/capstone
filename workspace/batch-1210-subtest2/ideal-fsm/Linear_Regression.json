{
  "meta": {
    "concept": "LinearRegression",
    "topic": "Linear Regression Visualization",
    "educational_goal": "Demonstrate linear regression fitting and prediction",
    "expected_interactions": [
      "input_data",
      "fit_model",
      "predict",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputData",
      "label": "InputData",
      "type": "atomic",
      "entry_actions": [
        "readInputData()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingData",
      "label": "ValidatingData",
      "type": "atomic",
      "entry_actions": [
        "validateData()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_FittingModel",
      "label": "FittingModel",
      "type": "atomic",
      "entry_actions": [
        "computeRegressionLine()",
        "updateModelParameters()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DrawingGraph",
      "label": "DrawingGraph",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "animateLineDrawing()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsData",
      "event_type": "user_action",
      "description": "User inputs data points"
    },
    {
      "id": "UserClicksFit",
      "event_type": "user_action",
      "description": "User clicks the Fit Model button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "DataValidationComplete",
      "event_type": "system_event",
      "description": "Data validation completes successfully"
    },
    {
      "id": "DataValidationFailed",
      "event_type": "system_event",
      "description": "Data validation fails"
    },
    {
      "id": "ModelFittingComplete",
      "event_type": "system_event",
      "description": "Model fitting and graph update complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputData",
      "event": "UserInputsData",
      "guard": "inputNotEmpty",
      "actions": [
        "captureData()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:dataInputCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputData",
      "to": "S2_ValidatingData",
      "event": "DataValidationComplete",
      "guard": "dataIsValid",
      "actions": [
        "validateDataPoints()",
        "prepareFitting()"
      ],
      "expected_observables": [
        "dom:dataValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingData",
      "to": "S4_FittingModel",
      "event": "DataValidationComplete",
      "guard": "validData",
      "actions": [
        "parseDataPoints()",
        "beginFitting()"
      ],
      "expected_observables": [
        "dom:modelFittingStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputData",
      "to": "S3_ErrorAlert",
      "event": "DataValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_FittingModel",
      "to": "S5_DrawingGraph",
      "event": "ModelFittingComplete",
      "guard": "modelFittedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerGraphVisualization()"
      ],
      "expected_observables": [
        "dom:graphStructureChanged",
        "dom:regressionLineVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_DrawingGraph",
      "to": "S0_Idle",
      "event": "ModelFittingComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInputFields()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "fit",
    "reset",
    "graph_visualization"
  ]
}