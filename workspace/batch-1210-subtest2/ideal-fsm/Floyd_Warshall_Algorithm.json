{
  "meta": {
    "concept": "Floyd-Warshall Algorithm",
    "topic": "All-Pairs Shortest Path Visualization",
    "educational_goal": "Demonstrate the Floyd-Warshall algorithm for finding shortest paths",
    "expected_interactions": [
      "initialize",
      "step",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Initializing",
      "label": "Initializing",
      "type": "atomic",
      "entry_actions": [
        "initializeMatrix()",
        "displayInitialMatrix()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Stepping",
      "label": "Stepping",
      "type": "atomic",
      "entry_actions": [
        "performStep()",
        "highlightCurrentStep()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "showFinalPaths()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetMatrix()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInitialize",
      "event_type": "user_action",
      "description": "User clicks the Initialize button"
    },
    {
      "id": "UserClicksStep",
      "event_type": "user_action",
      "description": "User clicks the Step button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InitializationComplete",
      "event_type": "system_event",
      "description": "Matrix initialization completes"
    },
    {
      "id": "StepComplete",
      "event_type": "system_event",
      "description": "Current step of the algorithm completes"
    },
    {
      "id": "AlgorithmComplete",
      "event_type": "system_event",
      "description": "Algorithm completes all steps"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Initializing",
      "event": "UserClicksInitialize",
      "guard": "graphIsValid",
      "actions": [
        "disableControls()",
        "startInitialization()"
      ],
      "expected_observables": [
        "dom:initializeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Initializing",
      "to": "S2_Stepping",
      "event": "InitializationComplete",
      "guard": "true",
      "actions": [
        "enableStepControl()",
        "highlightStepOption()"
      ],
      "expected_observables": [
        "dom:matrixInitialized"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Stepping",
      "to": "S2_Stepping",
      "event": "UserClicksStep",
      "guard": "stepsRemaining",
      "actions": [
        "executeNextStep()",
        "updateMatrixDisplay()"
      ],
      "expected_observables": [
        "dom:stepExecuted"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_Stepping",
      "to": "S3_Completed",
      "event": "AlgorithmComplete",
      "guard": "noStepsRemaining",
      "actions": [
        "displayFinalResults()",
        "highlightCompletion()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "clearMatrixDisplay()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "initialize",
    "step",
    "reset",
    "graph_visualization",
    "matrix_display"
  ]
}