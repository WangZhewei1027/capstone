{
  "meta": {
    "concept": "Breadth-First Search (BFS)",
    "topic": "Graph Traversal using BFS",
    "educational_goal": "Demonstrate BFS traversal on a graph",
    "expected_interactions": [
      "startTraversal",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_TraversalStart",
      "label": "TraversalStart",
      "type": "atomic",
      "entry_actions": [
        "highlightStartNode()",
        "disableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Traversing",
      "label": "Traversing",
      "type": "operation",
      "entry_actions": [
        "beginBFS()",
        "highlightCurrentNode()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S3_TraversalComplete",
      "label": "TraversalComplete",
      "type": "atomic",
      "entry_actions": [
        "showTraversalResult()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartTraversal",
      "event_type": "user_action",
      "description": "User clicks the Start Traversal button"
    },
    {
      "id": "TraversalStepComplete",
      "event_type": "system_event",
      "description": "A step in the BFS traversal completes"
    },
    {
      "id": "TraversalFinished",
      "event_type": "system_event",
      "description": "BFS traversal completes"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_TraversalStart",
      "event": "UserClicksStartTraversal",
      "guard": "graphNotEmpty",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_TraversalStart",
      "to": "S2_Traversing",
      "event": "TraversalStepComplete",
      "guard": "moreNodesToVisit",
      "actions": [
        "visitNextNode()",
        "highlightEdge()"
      ],
      "expected_observables": [
        "dom:nodeVisited"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_Traversing",
      "to": "S3_TraversalComplete",
      "event": "TraversalFinished",
      "guard": "allNodesVisited",
      "actions": [
        "displayTraversalOrder()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:traversalComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginGraphClear()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "reset",
    "graph_visualization"
  ]
}