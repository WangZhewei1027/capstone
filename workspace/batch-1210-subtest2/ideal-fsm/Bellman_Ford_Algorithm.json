{
  "meta": {
    "concept": "Bellman-Ford Algorithm",
    "topic": "Shortest Path Finding",
    "educational_goal": "Demonstrate the Bellman-Ford algorithm for finding shortest paths in a graph",
    "expected_interactions": [
      "initialize",
      "relaxEdges",
      "detectNegativeCycle",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Initializing",
      "label": "Initializing",
      "type": "atomic",
      "entry_actions": [
        "readSourceVertex()",
        "initializeDistances()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_RelaxingEdges",
      "label": "RelaxingEdges",
      "type": "atomic",
      "entry_actions": [
        "relaxAllEdges()",
        "updateDistances()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_CheckingNegativeCycle",
      "label": "CheckingNegativeCycle",
      "type": "atomic",
      "entry_actions": [
        "checkForNegativeCycle()",
        "highlightCycleIfExists()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInitialize",
      "event_type": "user_action",
      "description": "User clicks the Initialize button"
    },
    {
      "id": "UserClicksRelaxEdges",
      "event_type": "user_action",
      "description": "User clicks the Relax Edges button"
    },
    {
      "id": "UserClicksCheckCycle",
      "event_type": "user_action",
      "description": "User clicks the Check Negative Cycle button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InitializationComplete",
      "event_type": "system_event",
      "description": "Initialization of distances completes"
    },
    {
      "id": "RelaxationComplete",
      "event_type": "system_event",
      "description": "Edge relaxation completes"
    },
    {
      "id": "NegativeCycleCheckComplete",
      "event_type": "system_event",
      "description": "Negative cycle check completes"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Initializing",
      "event": "UserClicksInitialize",
      "guard": "sourceVertexSelected",
      "actions": [
        "captureSourceVertex()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:initializeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Initializing",
      "to": "S2_RelaxingEdges",
      "event": "InitializationComplete",
      "guard": "initializationSuccessful",
      "actions": [
        "enableRelaxation()"
      ],
      "expected_observables": [
        "dom:distancesInitialized"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RelaxingEdges",
      "to": "S3_CheckingNegativeCycle",
      "event": "RelaxationComplete",
      "guard": "relaxationSuccessful",
      "actions": [
        "enableCycleCheck()"
      ],
      "expected_observables": [
        "dom:edgesRelaxed"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_CheckingNegativeCycle",
      "to": "S0_Idle",
      "event": "NegativeCycleCheckComplete",
      "guard": "noNegativeCycleDetected",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:cycleCheckComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_CheckingNegativeCycle",
      "to": "S4_ErrorAlert",
      "event": "NegativeCycleCheckComplete",
      "guard": "negativeCycleDetected",
      "actions": [
        "showError()",
        "highlightCycle()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "NegativeCycleCheckComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "initialize",
    "relaxEdges",
    "checkCycle",
    "reset",
    "graph_visualization"
  ]
}