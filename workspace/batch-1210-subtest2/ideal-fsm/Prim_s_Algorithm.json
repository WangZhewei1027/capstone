{
  "meta": {
    "concept": "Prim's Algorithm",
    "topic": "Minimum Spanning Tree Visualization",
    "educational_goal": "Demonstrate Prim's algorithm for finding a minimum spanning tree",
    "expected_interactions": [
      "select_start_node",
      "step_through",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SelectingStartNode",
      "label": "SelectingStartNode",
      "type": "atomic",
      "entry_actions": [
        "highlightSelectableNodes()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_AlgorithmRunning",
      "label": "AlgorithmRunning",
      "type": "operation",
      "entry_actions": [
        "initializeAlgorithm()",
        "highlightCurrentNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_StepComplete",
      "label": "StepComplete",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "highlightNewEdges()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S4_AlgorithmComplete",
      "label": "AlgorithmComplete",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "highlightMST()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSelectsStartNode",
      "event_type": "user_action",
      "description": "User selects a start node for the algorithm"
    },
    {
      "id": "UserClicksStep",
      "event_type": "user_action",
      "description": "User clicks the Step button to proceed with the algorithm"
    },
    {
      "id": "AlgorithmStepComplete",
      "event_type": "system_event",
      "description": "A step in the algorithm completes"
    },
    {
      "id": "AlgorithmComplete",
      "event_type": "system_event",
      "description": "The algorithm completes and the MST is found"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SelectingStartNode",
      "event": "UserSelectsStartNode",
      "guard": "nodeSelectable",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startNodeSelected"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SelectingStartNode",
      "to": "S2_AlgorithmRunning",
      "event": "UserClicksStep",
      "guard": "startNodeSelected",
      "actions": [
        "beginAlgorithm()",
        "highlightCurrentNode()"
      ],
      "expected_observables": [
        "dom:algorithmStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AlgorithmRunning",
      "to": "S3_StepComplete",
      "event": "AlgorithmStepComplete",
      "guard": "stepSuccessful",
      "actions": [
        "updateGraph()",
        "highlightEdges()"
      ],
      "expected_observables": [
        "dom:stepCompleted"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_StepComplete",
      "to": "S2_AlgorithmRunning",
      "event": "UserClicksStep",
      "guard": "moreStepsAvailable",
      "actions": [
        "proceedToNextStep()",
        "highlightCurrentNode()"
      ],
      "expected_observables": [
        "dom:nextStepInitiated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_StepComplete",
      "to": "S4_AlgorithmComplete",
      "event": "AlgorithmComplete",
      "guard": "mstComplete",
      "actions": [
        "finalizeMST()",
        "showCompletionMessage()"
      ],
      "expected_observables": [
        "dom:mstCompleted"
      ],
      "timeout": 2000
    },
    {
      "from": "S4_AlgorithmComplete",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetGraph()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:resetInitiated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "graph_visualization",
    "start_node_selector",
    "step",
    "reset"
  ]
}