{
  "meta": {
    "concept": "Graph (Directed/Undirected)",
    "topic": "Graph Visualization and Manipulation",
    "educational_goal": "Demonstrate graph creation, edge addition, and traversal",
    "expected_interactions": [
      "addNode",
      "addEdge",
      "traverse",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddNodeStart",
      "label": "AddNodeStart",
      "type": "atomic",
      "entry_actions": [
        "readNodeInput()",
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S3_ValidatingNodeInput",
      "label": "ValidatingNodeInput",
      "type": "atomic",
      "entry_actions": [
        "validateNodeInput()",
        "showNodeValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ValidatingEdgeInput",
      "label": "ValidatingEdgeInput",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showEdgeValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S6_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "createNewNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "createNewEdge()"
      ],
      "exit_actions": []
    },
    {
      "id": "S8_DrawingGraph",
      "label": "DrawingGraph",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S9_GraphResetting",
      "label": "GraphResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodesAndEdges()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "NodeInputValidationComplete",
      "event_type": "system_event",
      "description": "Node input validation completes successfully"
    },
    {
      "id": "EdgeInputValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "NodeInputValidationFailed",
      "event_type": "system_event",
      "description": "Node input validation fails"
    },
    {
      "id": "EdgeInputValidationFailed",
      "event_type": "system_event",
      "description": "Edge input validation fails"
    },
    {
      "id": "NodeAdditionComplete",
      "event_type": "system_event",
      "description": "Node addition and graph update complete"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition and graph update complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddNodeStart",
      "event": "UserClicksAddNode",
      "guard": "nodeInputNotEmpty",
      "actions": [
        "captureNodeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readNodeInput",
        "dom:addNodeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "edgeInputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddNodeStart",
      "to": "S3_ValidatingNodeInput",
      "event": "NodeInputValidationComplete",
      "guard": "nodeInputIsValid",
      "actions": [
        "validateNodeValue()",
        "prepareNodeAddition()"
      ],
      "expected_observables": [
        "dom:nodeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddEdgeStart",
      "to": "S4_ValidatingEdgeInput",
      "event": "EdgeInputValidationComplete",
      "guard": "edgeInputIsValid",
      "actions": [
        "validateEdgeValue()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ValidatingNodeInput",
      "to": "S6_AddingNode",
      "event": "NodeInputValidationComplete",
      "guard": "validNode",
      "actions": [
        "parseNodeInputValue()",
        "beginNodeAddition()"
      ],
      "expected_observables": [
        "dom:nodeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_ValidatingEdgeInput",
      "to": "S7_AddingEdge",
      "event": "EdgeInputValidationComplete",
      "guard": "validEdge",
      "actions": [
        "parseEdgeInputValue()",
        "beginEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddNodeStart",
      "to": "S5_ErrorAlert",
      "event": "NodeInputValidationFailed",
      "guard": "nodeInputIsEmpty",
      "actions": [
        "showError()",
        "focusNodeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddEdgeStart",
      "to": "S5_ErrorAlert",
      "event": "EdgeInputValidationFailed",
      "guard": "edgeInputIsEmpty",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S6_AddingNode",
      "to": "S8_DrawingGraph",
      "event": "NodeAdditionComplete",
      "guard": "nodeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:graphStructureChanged",
        "dom:newNodeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S7_AddingEdge",
      "to": "S8_DrawingGraph",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:graphStructureChanged",
        "dom:newEdgeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S8_DrawingGraph",
      "to": "S0_Idle",
      "event": "NodeAdditionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearNodeInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S8_DrawingGraph",
      "to": "S0_Idle",
      "event": "EdgeAdditionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearEdgeInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S9_GraphResetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S9_GraphResetting",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "node_input",
    "edge_input",
    "add_node",
    "add_edge",
    "reset",
    "graph_visualization"
  ]
}