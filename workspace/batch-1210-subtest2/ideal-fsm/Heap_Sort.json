{
  "meta": {
    "concept": "HeapSort",
    "topic": "Heap Sort Visualization",
    "educational_goal": "Demonstrate heap sort algorithm",
    "expected_interactions": [
      "insert",
      "sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderHeap()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_InsertingElement",
      "label": "InsertingElement",
      "type": "atomic",
      "entry_actions": [
        "insertIntoHeap()",
        "updateHeapVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_SortingHeap",
      "label": "SortingHeap",
      "type": "atomic",
      "entry_actions": [
        "performHeapSort()",
        "animateSorting()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_HeapResetting",
      "label": "HeapResetting",
      "type": "atomic",
      "entry_actions": [
        "clearHeap()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsert",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters value in input field"
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ElementInsertionComplete",
      "event_type": "system_event",
      "description": "Element insertion into heap complete"
    },
    {
      "id": "HeapSortComplete",
      "event_type": "system_event",
      "description": "Heap sort operation complete"
    },
    {
      "id": "HeapResetComplete",
      "event_type": "system_event",
      "description": "Heap reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "UserClicksInsert",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_InsertingElement",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:elementInsertionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_InsertingElement",
      "to": "S0_Idle",
      "event": "ElementInsertionComplete",
      "guard": "elementInsertedSuccessfully",
      "actions": [
        "updateHeapStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:heapStructureChanged",
        "dom:newElementVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_SortingHeap",
      "event": "UserClicksSort",
      "guard": "heapNotEmpty",
      "actions": [
        "disableControls()",
        "startHeapSort()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_SortingHeap",
      "to": "S0_Idle",
      "event": "HeapSortComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:heapSorted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_HeapResetting",
      "event": "UserClicksReset",
      "guard": "heapNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_HeapResetting",
      "to": "S0_Idle",
      "event": "HeapResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:heapCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insert",
    "sort",
    "reset",
    "heap_visualization"
  ]
}