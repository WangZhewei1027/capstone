{
  "meta": {
    "concept": "CountingSort",
    "topic": "Counting Sort Algorithm Visualization",
    "educational_goal": "Demonstrate counting sort process",
    "expected_interactions": [
      "input_array",
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitialUI()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputArray",
      "label": "InputArray",
      "type": "atomic",
      "entry_actions": [
        "readArrayInput()",
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateArrayInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_CountingElements",
      "label": "CountingElements",
      "type": "atomic",
      "entry_actions": [
        "initializeCountArray()",
        "countElements()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_AccumulatingCounts",
      "label": "AccumulatingCounts",
      "type": "atomic",
      "entry_actions": [
        "accumulateCounts()",
        "updateCountArrayVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_SortingArray",
      "label": "SortingArray",
      "type": "atomic",
      "entry_actions": [
        "sortArrayUsingCounts()",
        "updateSortedArrayVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S7_ArrayResetting",
      "label": "ArrayResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsArray",
      "event_type": "user_action",
      "description": "User inputs an array"
    },
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "CountingComplete",
      "event_type": "system_event",
      "description": "Counting of elements complete"
    },
    {
      "id": "AccumulationComplete",
      "event_type": "system_event",
      "description": "Accumulation of counts complete"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting process complete"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputArray",
      "event": "UserInputsArray",
      "guard": "inputNotEmpty",
      "actions": [
        "captureArrayInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:arrayInputCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputArray",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateArray()",
        "prepareForCounting()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_CountingElements",
      "event": "InputValidationComplete",
      "guard": "validArray",
      "actions": [
        "beginCounting()"
      ],
      "expected_observables": [
        "dom:countingStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputArray",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_CountingElements",
      "to": "S5_AccumulatingCounts",
      "event": "CountingComplete",
      "guard": "countingSuccessful",
      "actions": [
        "beginAccumulation()"
      ],
      "expected_observables": [
        "dom:countArrayUpdated"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_AccumulatingCounts",
      "to": "S6_SortingArray",
      "event": "AccumulationComplete",
      "guard": "accumulationSuccessful",
      "actions": [
        "beginSorting()"
      ],
      "expected_observables": [
        "dom:accumulationComplete"
      ],
      "timeout": 2000
    },
    {
      "from": "S6_SortingArray",
      "to": "S0_Idle",
      "event": "SortingComplete",
      "guard": "sortingSuccessful",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:sortedArrayVisible"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S7_ArrayResetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_ArrayResetting",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "start_sort",
    "reset",
    "array_visualization"
  ]
}