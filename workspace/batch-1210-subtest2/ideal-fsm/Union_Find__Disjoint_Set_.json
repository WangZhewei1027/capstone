{
  "meta": {
    "concept": "Union-Find",
    "topic": "Disjoint Set Data Structure",
    "educational_goal": "Demonstrate union and find operations",
    "expected_interactions": [
      "union",
      "find",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderSets()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_UnionStart",
      "label": "UnionStart",
      "type": "atomic",
      "entry_actions": [
        "readUnionInput()",
        "highlightUnionInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingUnionInput",
      "label": "ValidatingUnionInput",
      "type": "atomic",
      "entry_actions": [
        "validateUnionInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_PerformingUnion",
      "label": "PerformingUnion",
      "type": "atomic",
      "entry_actions": [
        "findRoots()",
        "unionSets()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DrawingSets",
      "label": "DrawingSets",
      "type": "atomic",
      "entry_actions": [
        "updateSetVisualization()",
        "animateUnion()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_FindStart",
      "label": "FindStart",
      "type": "atomic",
      "entry_actions": [
        "readFindInput()",
        "highlightFindInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S7_PerformingFind",
      "label": "PerformingFind",
      "type": "atomic",
      "entry_actions": [
        "findSetRepresentative()",
        "showFindResult()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S8_ResettingSets",
      "label": "ResettingSets",
      "type": "atomic",
      "entry_actions": [
        "clearAllSets()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksUnion",
      "event_type": "user_action",
      "description": "User clicks the Union button"
    },
    {
      "id": "UserClicksFind",
      "event_type": "user_action",
      "description": "User clicks the Find button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "UnionInputValidationComplete",
      "event_type": "system_event",
      "description": "Union input validation completes successfully"
    },
    {
      "id": "UnionInputValidationFailed",
      "event_type": "system_event",
      "description": "Union input validation fails"
    },
    {
      "id": "UnionOperationComplete",
      "event_type": "system_event",
      "description": "Union operation and set update complete"
    },
    {
      "id": "FindOperationComplete",
      "event_type": "system_event",
      "description": "Find operation complete"
    },
    {
      "id": "SetsResetComplete",
      "event_type": "system_event",
      "description": "Sets reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_UnionStart",
      "event": "UserClicksUnion",
      "guard": "inputNotEmpty",
      "actions": [
        "captureUnionInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readUnionInput",
        "dom:unionButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_UnionStart",
      "to": "S2_ValidatingUnionInput",
      "event": "UnionInputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateUnionValues()",
        "prepareUnion()"
      ],
      "expected_observables": [
        "dom:unionInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingUnionInput",
      "to": "S4_PerformingUnion",
      "event": "UnionInputValidationComplete",
      "guard": "validPair",
      "actions": [
        "parseUnionInput()",
        "beginUnion()"
      ],
      "expected_observables": [
        "dom:unionOperationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_UnionStart",
      "to": "S3_ErrorAlert",
      "event": "UnionInputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusUnionInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetUnionInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_PerformingUnion",
      "to": "S5_DrawingSets",
      "event": "UnionOperationComplete",
      "guard": "unionSuccessful",
      "actions": [
        "updateSetStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:setStructureChanged",
        "dom:unionAnimationVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_DrawingSets",
      "to": "S0_Idle",
      "event": "UnionOperationComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearUnionInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_FindStart",
      "event": "UserClicksFind",
      "guard": "inputNotEmpty",
      "actions": [
        "captureFindInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readFindInput",
        "dom:findButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S6_FindStart",
      "to": "S7_PerformingFind",
      "event": "FindOperationComplete",
      "guard": "findSuccessful",
      "actions": [
        "executeFind()",
        "displayFindResult()"
      ],
      "expected_observables": [
        "dom:findResultDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S0_Idle",
      "to": "S8_ResettingSets",
      "event": "UserClicksReset",
      "guard": "setsNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S8_ResettingSets",
      "to": "S0_Idle",
      "event": "SetsResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:setsCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "union",
    "find",
    "reset",
    "set_visualization"
  ]
}