{
  "meta": {
    "concept": "Adjacency List",
    "topic": "Graph Representation",
    "educational_goal": "Demonstrate graph representation using adjacency lists",
    "expected_interactions": [
      "addVertex",
      "addEdge",
      "removeVertex",
      "removeEdge",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddVertex",
      "label": "AddVertex",
      "type": "atomic",
      "entry_actions": [
        "readVertexInput()",
        "highlightVertexInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_AddEdge",
      "label": "AddEdge",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_RemoveVertex",
      "label": "RemoveVertex",
      "type": "atomic",
      "entry_actions": [
        "readVertexInput()",
        "highlightVertexInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S4_RemoveEdge",
      "label": "RemoveEdge",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S6_UpdatingGraph",
      "label": "UpdatingGraph",
      "type": "atomic",
      "entry_actions": [
        "updateGraphStructure()",
        "animateGraphUpdate()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S7_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddVertex",
      "event_type": "user_action",
      "description": "User clicks the Add Vertex button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksRemoveVertex",
      "event_type": "user_action",
      "description": "User clicks the Remove Vertex button"
    },
    {
      "id": "UserClicksRemoveEdge",
      "event_type": "user_action",
      "description": "User clicks the Remove Edge button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "GraphUpdateComplete",
      "event_type": "system_event",
      "description": "Graph update operation complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddVertex",
      "event": "UserClicksAddVertex",
      "guard": "inputNotEmpty",
      "actions": [
        "captureVertexInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readVertexInput",
        "dom:addVertexButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddEdge",
      "event": "UserClicksAddEdge",
      "guard": "inputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemoveVertex",
      "event": "UserClicksRemoveVertex",
      "guard": "inputNotEmpty",
      "actions": [
        "captureVertexInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readVertexInput",
        "dom:removeVertexButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S4_RemoveEdge",
      "event": "UserClicksRemoveEdge",
      "guard": "inputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:removeEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddVertex",
      "to": "S6_UpdatingGraph",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "addVertexToGraph()",
        "prepareGraphUpdate()"
      ],
      "expected_observables": [
        "dom:vertexAdded"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_AddEdge",
      "to": "S6_UpdatingGraph",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "addEdgeToGraph()",
        "prepareGraphUpdate()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_RemoveVertex",
      "to": "S6_UpdatingGraph",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "removeVertexFromGraph()",
        "prepareGraphUpdate()"
      ],
      "expected_observables": [
        "dom:vertexRemoved"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_RemoveEdge",
      "to": "S6_UpdatingGraph",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "removeEdgeFromGraph()",
        "prepareGraphUpdate()"
      ],
      "expected_observables": [
        "dom:edgeRemoved"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddVertex",
      "to": "S5_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusVertexInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddEdge",
      "to": "S5_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RemoveVertex",
      "to": "S5_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusVertexInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_RemoveEdge",
      "to": "S5_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S6_UpdatingGraph",
      "to": "S0_Idle",
      "event": "GraphUpdateComplete",
      "guard": "updateSuccessful",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:graphUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S7_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginGraphClear()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "addVertex",
    "addEdge",
    "removeVertex",
    "removeEdge",
    "reset",
    "graph_visualization"
  ]
}