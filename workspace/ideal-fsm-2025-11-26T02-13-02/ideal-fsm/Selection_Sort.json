{
  "meta": {
    "concept": "SelectionSort",
    "topic": "Selection Sort Visualization",
    "educational_goal": "Demonstrate selection sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SortStart",
      "label": "SortStart",
      "type": "atomic",
      "entry_actions": [
        "highlightArray()",
        "disableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_FindingMinimum",
      "label": "FindingMinimum",
      "type": "operation",
      "entry_actions": [
        "highlightCurrentIndex()",
        "highlightMinimumCandidate()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_SwappingElements",
      "label": "SwappingElements",
      "type": "operation",
      "entry_actions": [
        "swapElements()",
        "updateArrayVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SortComplete",
      "label": "SortComplete",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ArrayResetting",
      "label": "ArrayResetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "MinimumFound",
      "event_type": "system_event",
      "description": "Minimum element found in unsorted portion"
    },
    {
      "id": "ElementsSwapped",
      "event_type": "system_event",
      "description": "Elements swapped successfully"
    },
    {
      "id": "SortCompleted",
      "event_type": "system_event",
      "description": "Sorting operation completed"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SortStart",
      "event": "UserClicksStartSort",
      "guard": "arrayNotEmpty",
      "actions": [
        "captureArrayState()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startSortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SortStart",
      "to": "S2_FindingMinimum",
      "event": "MinimumFound",
      "guard": "unsortedPortionExists",
      "actions": [
        "highlightMinimum()",
        "prepareSwap()"
      ],
      "expected_observables": [
        "dom:minimumHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_FindingMinimum",
      "to": "S3_SwappingElements",
      "event": "MinimumFound",
      "guard": "minimumIdentified",
      "actions": [
        "swapWithCurrent()",
        "updateVisualization()"
      ],
      "expected_observables": [
        "dom:elementsSwapped"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_SwappingElements",
      "to": "S2_FindingMinimum",
      "event": "ElementsSwapped",
      "guard": "unsortedPortionExists",
      "actions": [
        "advanceToNextIndex()",
        "highlightNextMinimumCandidate()"
      ],
      "expected_observables": [
        "dom:nextIndexHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_SwappingElements",
      "to": "S4_SortComplete",
      "event": "SortCompleted",
      "guard": "arraySorted",
      "actions": [
        "showCompletion()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:sortCompletionMessage"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ArrayResetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ArrayResetting",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "array_input",
    "start_sort",
    "reset",
    "array_visualization"
  ]
}