{
  "meta": {
    "concept": "Prim's Algorithm",
    "topic": "Minimum Spanning Tree Visualization",
    "educational_goal": "Demonstrate Prim's algorithm for finding a minimum spanning tree",
    "expected_interactions": [
      "start",
      "step",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_StartingAlgorithm",
      "label": "StartingAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "selectStartingNode()",
        "highlightStartingNode()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Stepping",
      "label": "Stepping",
      "type": "atomic",
      "entry_actions": [
        "findMinimumEdge()",
        "highlightEdge()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_UpdatingTree",
      "label": "UpdatingTree",
      "type": "atomic",
      "entry_actions": [
        "addEdgeToTree()",
        "updateTreeVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "UserClicksStep",
      "event_type": "user_action",
      "description": "User clicks the Step button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "StepComplete",
      "event_type": "system_event",
      "description": "Algorithm step completes successfully"
    },
    {
      "id": "TreeUpdateComplete",
      "event_type": "system_event",
      "description": "Tree update and visualization complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_StartingAlgorithm",
      "event": "UserClicksStart",
      "guard": "graphIsValid",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_StartingAlgorithm",
      "to": "S2_Stepping",
      "event": "StepComplete",
      "guard": "nodeSelected",
      "actions": [
        "prepareStep()",
        "highlightNextEdge()"
      ],
      "expected_observables": [
        "dom:nodeHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Stepping",
      "to": "S4_UpdatingTree",
      "event": "StepComplete",
      "guard": "edgeSelected",
      "actions": [
        "addEdge()",
        "updateVisualization()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_StartingAlgorithm",
      "to": "S3_ErrorAlert",
      "event": "StepComplete",
      "guard": "noValidStartNode",
      "actions": [
        "showError()",
        "focusStartNode()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetStartNode()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_UpdatingTree",
      "to": "S0_Idle",
      "event": "TreeUpdateComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearStepData()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "step",
    "reset",
    "graph_visualization"
  ]
}