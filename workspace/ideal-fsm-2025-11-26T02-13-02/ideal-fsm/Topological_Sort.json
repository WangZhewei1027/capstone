{
  "meta": {
    "concept": "TopologicalSort",
    "topic": "Topological Sort Visualization",
    "educational_goal": "Demonstrate topological sorting of a directed acyclic graph (DAG)",
    "expected_interactions": [
      "addNode",
      "addEdge",
      "performSort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "promptNodeInput()",
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeInputHighlight()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "promptEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearEdgeInputHighlight()"
      ]
    },
    {
      "id": "S3_PerformingSort",
      "label": "PerformingSort",
      "type": "operation",
      "entry_actions": [
        "disableControls()",
        "executeTopologicalSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SortComplete",
      "label": "SortComplete",
      "type": "atomic",
      "entry_actions": [
        "displaySortResult()",
        "highlightSortedOrder()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "NodeAdditionComplete",
      "event_type": "system_event",
      "description": "Node addition completes successfully"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition completes successfully"
    },
    {
      "id": "SortOperationComplete",
      "event_type": "system_event",
      "description": "Topological sort operation completes"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "UserClicksAddNode",
      "guard": "true",
      "actions": [
        "captureNodeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:nodeInputPrompted"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "NodeAdditionComplete",
      "guard": "nodeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:nodeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "true",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:edgeInputPrompted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S0_Idle",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_PerformingSort",
      "event": "UserClicksSort",
      "guard": "graphIsDAG",
      "actions": [
        "beginSortOperation()"
      ],
      "expected_observables": [
        "dom:sortOperationStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S3_PerformingSort",
      "to": "S4_SortComplete",
      "event": "SortOperationComplete",
      "guard": "sortSuccessful",
      "actions": [
        "displaySortedOrder()"
      ],
      "expected_observables": [
        "dom:sortedOrderDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_SortComplete",
      "to": "S0_Idle",
      "event": "SortOperationComplete",
      "guard": "true",
      "actions": [
        "clearSortHighlights()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:controlsEnabled"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetOperationStarted"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "inputNode",
    "inputEdge",
    "addNode",
    "addEdge",
    "sort",
    "reset",
    "graph_visualization"
  ]
}