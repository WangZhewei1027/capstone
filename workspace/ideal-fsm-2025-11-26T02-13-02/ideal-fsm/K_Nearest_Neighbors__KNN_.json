{
  "meta": {
    "concept": "K-Nearest Neighbors",
    "topic": "KNN Algorithm Visualization",
    "educational_goal": "Demonstrate KNN classification process",
    "expected_interactions": [
      "set_k",
      "add_point",
      "classify",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderPlot()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SettingK",
      "label": "SettingK",
      "type": "atomic",
      "entry_actions": [
        "highlightKInput()"
      ],
      "exit_actions": [
        "clearKHighlight()"
      ]
    },
    {
      "id": "S2_AddingPoint",
      "label": "AddingPoint",
      "type": "atomic",
      "entry_actions": [
        "capturePointCoordinates()",
        "highlightPlotArea()"
      ],
      "exit_actions": [
        "clearPlotHighlight()"
      ]
    },
    {
      "id": "S3_Classifying",
      "label": "Classifying",
      "type": "atomic",
      "entry_actions": [
        "computeDistances()",
        "identifyNeighbors()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ShowingResult",
      "label": "ShowingResult",
      "type": "atomic",
      "entry_actions": [
        "displayClassificationResult()",
        "highlightResult()"
      ],
      "exit_actions": [
        "clearResultHighlight()"
      ]
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllPoints()",
        "resetPlot()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSetsK",
      "event_type": "user_action",
      "description": "User sets the value of K"
    },
    {
      "id": "UserAddsPoint",
      "event_type": "user_action",
      "description": "User adds a new point to the plot"
    },
    {
      "id": "UserClicksClassify",
      "event_type": "user_action",
      "description": "User clicks the Classify button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "KValueSet",
      "event_type": "system_event",
      "description": "K value is successfully set"
    },
    {
      "id": "PointAdded",
      "event_type": "system_event",
      "description": "Point is successfully added to the plot"
    },
    {
      "id": "ClassificationComplete",
      "event_type": "system_event",
      "description": "Classification process is complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SettingK",
      "event": "UserSetsK",
      "guard": "kValueValid",
      "actions": [
        "captureKValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:kValueCaptured"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_SettingK",
      "to": "S0_Idle",
      "event": "KValueSet",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:kValueSet"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingPoint",
      "event": "UserAddsPoint",
      "guard": "pointValid",
      "actions": [
        "capturePoint()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:pointCaptured"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingPoint",
      "to": "S0_Idle",
      "event": "PointAdded",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:pointAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_Classifying",
      "event": "UserClicksClassify",
      "guard": "pointsExist",
      "actions": [
        "beginClassification()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:classificationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_Classifying",
      "to": "S4_ShowingResult",
      "event": "ClassificationComplete",
      "guard": "true",
      "actions": [
        "showResult()",
        "highlightClassification()"
      ],
      "expected_observables": [
        "dom:classificationResultShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ShowingResult",
      "to": "S0_Idle",
      "event": "ClassificationComplete",
      "guard": "resultAcknowledged",
      "actions": [
        "enableControls()",
        "clearTemporaryHighlights()"
      ],
      "expected_observables": [
        "dom:resultAcknowledged"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "plotNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetInitiated"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:plotCleared",
        "dom:resetComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "k_input",
    "add_point",
    "classify",
    "reset",
    "plot_visualization"
  ]
}