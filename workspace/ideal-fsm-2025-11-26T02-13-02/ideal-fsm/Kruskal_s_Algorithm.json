{
  "meta": {
    "concept": "Kruskal's Algorithm",
    "topic": "Minimum Spanning Tree Visualization",
    "educational_goal": "Demonstrate Kruskal's algorithm for finding a minimum spanning tree",
    "expected_interactions": [
      "addEdge",
      "runAlgorithm",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "captureEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingEdge",
      "label": "ValidatingEdge",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "sortEdges()",
        "initializeDisjointSet()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_UpdatingGraph",
      "label": "UpdatingGraph",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "animateEdgeSelection()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearAllEdges()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserEntersEdgeInput",
      "event_type": "user_action",
      "description": "User enters edge details in input field"
    },
    {
      "id": "UserClicksRunAlgorithm",
      "event_type": "user_action",
      "description": "User clicks the Run Algorithm button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "EdgeValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "EdgeValidationFailed",
      "event_type": "system_event",
      "description": "Edge input validation fails"
    },
    {
      "id": "AlgorithmExecutionComplete",
      "event_type": "system_event",
      "description": "Kruskal's algorithm execution complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "inputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingEdge",
      "to": "S2_ValidatingEdge",
      "event": "EdgeValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateEdgeDetails()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingEdge",
      "to": "S0_Idle",
      "event": "EdgeValidationComplete",
      "guard": "validEdge",
      "actions": [
        "addEdgeToGraph()",
        "updateEdgeList()"
      ],
      "expected_observables": [
        "dom:edgeAddedToGraph"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddingEdge",
      "to": "S3_ErrorAlert",
      "event": "EdgeValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_RunningAlgorithm",
      "event": "UserClicksRunAlgorithm",
      "guard": "graphNotEmpty",
      "actions": [
        "disableControls()",
        "startAlgorithmExecution()"
      ],
      "expected_observables": [
        "dom:runAlgorithmButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RunningAlgorithm",
      "to": "S5_UpdatingGraph",
      "event": "AlgorithmExecutionComplete",
      "guard": "algorithmExecutedSuccessfully",
      "actions": [
        "updateMSTStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:graphStructureUpdated",
        "dom:mstEdgesHighlighted"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_UpdatingGraph",
      "to": "S0_Idle",
      "event": "AlgorithmExecutionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearEdgeInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetEdgeInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add_edge",
    "run_algorithm",
    "reset",
    "graph_visualization"
  ]
}