{
  "meta": {
    "concept": "HuffmanCoding",
    "topic": "Huffman Coding Visualization",
    "educational_goal": "Demonstrate Huffman coding tree construction and encoding process",
    "expected_interactions": [
      "build_tree",
      "encode",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitialView()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputStart",
      "label": "InputStart",
      "type": "atomic",
      "entry_actions": [
        "readInputText()",
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateTextInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_BuildingTree",
      "label": "BuildingTree",
      "type": "atomic",
      "entry_actions": [
        "constructHuffmanTree()",
        "animateTreeBuilding()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Encoding",
      "label": "Encoding",
      "type": "atomic",
      "entry_actions": [
        "generateHuffmanCodes()",
        "displayEncodedOutput()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksBuildTree",
      "event_type": "user_action",
      "description": "User clicks the Build Tree button"
    },
    {
      "id": "UserEntersText",
      "event_type": "user_action",
      "description": "User enters text in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "TreeBuildingComplete",
      "event_type": "system_event",
      "description": "Huffman tree construction complete"
    },
    {
      "id": "EncodingComplete",
      "event_type": "system_event",
      "description": "Encoding process complete"
    },
    {
      "id": "TreeResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputStart",
      "event": "UserClicksBuildTree",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInputText()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputText",
        "dom:buildTreeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateText()",
        "prepareTreeBuilding()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_BuildingTree",
      "event": "InputValidationComplete",
      "guard": "validText",
      "actions": [
        "parseInputText()",
        "beginTreeConstruction()"
      ],
      "expected_observables": [
        "dom:treeConstructionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_BuildingTree",
      "to": "S5_Encoding",
      "event": "TreeBuildingComplete",
      "guard": "treeBuiltSuccessfully",
      "actions": [
        "generateCodes()",
        "triggerEncoding()"
      ],
      "expected_observables": [
        "dom:treeStructureChanged",
        "dom:encodingStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_Encoding",
      "to": "S0_Idle",
      "event": "EncodingComplete",
      "guard": "encodingSuccessful",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:encodingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "dataNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "TreeResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:dataCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "build_tree",
    "reset",
    "tree_visualization",
    "encoded_output"
  ]
}