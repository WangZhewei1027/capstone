{
  "meta": {
    "concept": "Breadth-First Search (BFS)",
    "topic": "Graph Traversal using BFS",
    "educational_goal": "Demonstrate BFS traversal on a graph",
    "expected_interactions": [
      "startTraversal",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_TraversalStart",
      "label": "TraversalStart",
      "type": "atomic",
      "entry_actions": [
        "readStartNode()",
        "highlightStartNode()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingStartNode",
      "label": "ValidatingStartNode",
      "type": "atomic",
      "entry_actions": [
        "validateStartNode()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_TraversingGraph",
      "label": "TraversingGraph",
      "type": "operation",
      "entry_actions": [
        "initializeQueue()",
        "beginTraversal()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_TraversalComplete",
      "label": "TraversalComplete",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "showTraversalResult()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearTraversalData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartTraversal",
      "event_type": "user_action",
      "description": "User clicks the Start Traversal button"
    },
    {
      "id": "UserEntersStartNode",
      "event_type": "user_action",
      "description": "User enters start node in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "StartNodeValidationComplete",
      "event_type": "system_event",
      "description": "Start node validation completes successfully"
    },
    {
      "id": "StartNodeValidationFailed",
      "event_type": "system_event",
      "description": "Start node validation fails"
    },
    {
      "id": "TraversalComplete",
      "event_type": "system_event",
      "description": "Graph traversal complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_TraversalStart",
      "event": "UserClicksStartTraversal",
      "guard": "inputNotEmpty",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readStartNode",
        "dom:startTraversalButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_TraversalStart",
      "to": "S2_ValidatingStartNode",
      "event": "StartNodeValidationComplete",
      "guard": "startNodeIsValid",
      "actions": [
        "validateStartNode()",
        "prepareTraversal()"
      ],
      "expected_observables": [
        "dom:startNodeValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingStartNode",
      "to": "S4_TraversingGraph",
      "event": "StartNodeValidationComplete",
      "guard": "validNode",
      "actions": [
        "parseStartNode()",
        "beginTraversal()"
      ],
      "expected_observables": [
        "dom:traversalStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_TraversalStart",
      "to": "S3_ErrorAlert",
      "event": "StartNodeValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_TraversingGraph",
      "to": "S5_TraversalComplete",
      "event": "TraversalComplete",
      "guard": "traversalSuccessful",
      "actions": [
        "updateGraphStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:graphStructureChanged",
        "dom:traversalResultVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_TraversalComplete",
      "to": "S0_Idle",
      "event": "TraversalComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "startTraversal",
    "reset",
    "graph_visualization"
  ]
}