{
  "meta": {
    "concept": "InsertionSort",
    "topic": "Insertion Sort Visualization",
    "educational_goal": "Demonstrate the process of insertion sort",
    "expected_interactions": [
      "sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SortStart",
      "label": "SortStart",
      "type": "atomic",
      "entry_actions": [
        "readArrayInput()",
        "highlightArray()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ComparingElements",
      "label": "ComparingElements",
      "type": "atomic",
      "entry_actions": [
        "compareElements()",
        "showComparisonFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_SwappingElements",
      "label": "SwappingElements",
      "type": "atomic",
      "entry_actions": [
        "swapElements()",
        "updateArrayVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SortComplete",
      "label": "SortComplete",
      "type": "atomic",
      "entry_actions": [
        "showSortedArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ArrayResetting",
      "label": "ArrayResetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "UserEntersArray",
      "event_type": "user_action",
      "description": "User enters array values in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "ComparisonComplete",
      "event_type": "system_event",
      "description": "Element comparison completes"
    },
    {
      "id": "SwapComplete",
      "event_type": "system_event",
      "description": "Element swap completes"
    },
    {
      "id": "SortOperationComplete",
      "event_type": "system_event",
      "description": "Sort operation completes"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SortStart",
      "event": "UserClicksSort",
      "guard": "arrayNotEmpty",
      "actions": [
        "captureArrayInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SortStart",
      "to": "S2_ComparingElements",
      "event": "ComparisonComplete",
      "guard": "elementsToCompare",
      "actions": [
        "selectElementsForComparison()",
        "highlightComparison()"
      ],
      "expected_observables": [
        "dom:elementsCompared"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ComparingElements",
      "to": "S3_SwappingElements",
      "event": "ComparisonComplete",
      "guard": "swapNeeded",
      "actions": [
        "performSwap()",
        "updateVisualization()"
      ],
      "expected_observables": [
        "dom:elementsSwapped"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_SwappingElements",
      "to": "S2_ComparingElements",
      "event": "SwapComplete",
      "guard": "moreElementsToCompare",
      "actions": [
        "continueComparison()",
        "highlightNextElements()"
      ],
      "expected_observables": [
        "dom:comparisonContinued"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ComparingElements",
      "to": "S4_SortComplete",
      "event": "SortOperationComplete",
      "guard": "arraySorted",
      "actions": [
        "finalizeSort()",
        "showSortedVisualization()"
      ],
      "expected_observables": [
        "dom:arraySorted"
      ],
      "timeout": 3000
    },
    {
      "from": "S4_SortComplete",
      "to": "S0_Idle",
      "event": "SortOperationComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ArrayResetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ArrayResetting",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "sort",
    "reset",
    "array_visualization"
  ]
}