{
  "meta": {
    "concept": "FibonacciSequence",
    "topic": "Fibonacci Sequence Computation",
    "educational_goal": "Illustrate computation and visualization of Fibonacci numbers",
    "expected_interactions": [
      "compute",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputStart",
      "label": "InputStart",
      "type": "atomic",
      "entry_actions": [
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    },
    {
      "id": "S4_Computing",
      "label": "Computing",
      "type": "atomic",
      "entry_actions": [
        "computeFibonacci()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "showFibonacciSequence()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearResults()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksCompute",
      "event_type": "user_action",
      "description": "User clicks the Compute button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters a number in the input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ComputationComplete",
      "event_type": "system_event",
      "description": "Fibonacci computation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputStart",
      "event": "UserClicksCompute",
      "guard": "inputFieldNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:computeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputStart",
      "to": "S2_ValidatingInput",
      "event": "UserEntersInput",
      "guard": "true",
      "actions": [
        "validateValue()"
      ],
      "expected_observables": [
        "dom:inputReceived"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_Computing",
      "event": "InputValidationComplete",
      "guard": "inputIsValidNumber",
      "actions": [
        "beginComputation()"
      ],
      "expected_observables": [
        "dom:validationSuccessful"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "true",
      "actions": [
        "showValidationError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Computing",
      "to": "S5_DisplayResult",
      "event": "ComputationComplete",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:fibonacciSequenceDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S5_DisplayResult",
      "to": "S0_Idle",
      "event": "ComputationComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "clearInputField()"
      ],
      "expected_observables": [
        "dom:controlsEnabled"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "resultsDisplayed",
      "actions": [
        "confirmReset()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "returnToDefaultState()"
      ],
      "expected_observables": [
        "dom:resultsCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "compute",
    "reset",
    "result_display"
  ]
}