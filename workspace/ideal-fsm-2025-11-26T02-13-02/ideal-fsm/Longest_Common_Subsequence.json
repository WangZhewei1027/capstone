{
  "meta": {
    "concept": "LongestCommonSubsequence",
    "topic": "Longest Common Subsequence Visualization",
    "educational_goal": "Demonstrate LCS computation and visualization",
    "expected_interactions": [
      "input_sequences",
      "compute_lcs",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitialUI()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputStart",
      "label": "InputStart",
      "type": "atomic",
      "entry_actions": [
        "readInputSequences()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateSequences()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_ComputingLCS",
      "label": "ComputingLCS",
      "type": "atomic",
      "entry_actions": [
        "computeLCS()",
        "updateProgress()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ShowingResult",
      "label": "ShowingResult",
      "type": "atomic",
      "entry_actions": [
        "displayLCSResult()",
        "highlightLCS()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsSequences",
      "event_type": "user_action",
      "description": "User inputs sequences in input fields"
    },
    {
      "id": "UserClicksCompute",
      "event_type": "user_action",
      "description": "User clicks the Compute LCS button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "LCSComputationComplete",
      "event_type": "system_event",
      "description": "LCS computation and visualization complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputStart",
      "event": "UserInputsSequences",
      "guard": "inputsNotEmpty",
      "actions": [
        "captureInputSequences()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:sequencesCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputsAreValid",
      "actions": [
        "validateSequences()",
        "prepareComputation()"
      ],
      "expected_observables": [
        "dom:inputsValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_ComputingLCS",
      "event": "InputValidationComplete",
      "guard": "validSequences",
      "actions": [
        "beginLCSComputation()"
      ],
      "expected_observables": [
        "dom:computationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputsAreInvalid",
      "actions": [
        "showError()",
        "focusInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ComputingLCS",
      "to": "S5_ShowingResult",
      "event": "LCSComputationComplete",
      "guard": "computationSuccessful",
      "actions": [
        "updateVisualization()",
        "showResult()"
      ],
      "expected_observables": [
        "dom:lcsResultDisplayed"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_ShowingResult",
      "to": "S0_Idle",
      "event": "LCSComputationComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInputFields()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "dataNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:dataCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "compute",
    "reset",
    "lcs_visualization"
  ]
}