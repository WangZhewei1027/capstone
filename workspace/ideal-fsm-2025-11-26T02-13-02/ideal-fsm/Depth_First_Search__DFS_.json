{
  "meta": {
    "concept": "Depth-First Search (DFS)",
    "topic": "DFS Algorithm Visualization",
    "educational_goal": "Illustrate the DFS traversal process on a graph",
    "expected_interactions": [
      "startDFS",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_DFSStart",
      "label": "DFSStart",
      "type": "atomic",
      "entry_actions": [
        "highlightStartNode()",
        "disableControls()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Traversing",
      "label": "Traversing",
      "type": "operation",
      "entry_actions": [
        "performDFS()",
        "updateTraversalPath()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_TraversalComplete",
      "label": "TraversalComplete",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "highlightPath()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearTraversalData()",
        "resetGraphVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartDFS",
      "event_type": "user_action",
      "description": "User clicks the Start DFS button"
    },
    {
      "id": "DFSComplete",
      "event_type": "system_event",
      "description": "DFS traversal completes successfully"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_DFSStart",
      "event": "UserClicksStartDFS",
      "guard": "startNodeSelected",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startButtonClicked",
        "dom:startNodeHighlighted"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_DFSStart",
      "to": "S2_Traversing",
      "event": "DFSComplete",
      "guard": "true",
      "actions": [
        "beginTraversal()",
        "updateGraph()"
      ],
      "expected_observables": [
        "dom:traversalStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S2_Traversing",
      "to": "S3_TraversalComplete",
      "event": "DFSComplete",
      "guard": "traversalSuccessful",
      "actions": [
        "finalizeTraversal()",
        "displayPath()"
      ],
      "expected_observables": [
        "dom:traversalPathDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_TraversalComplete",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "clearPathHighlight()",
        "resetControls()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetInitiated"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "DFSComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "reset",
    "graph_visualization"
  ]
}