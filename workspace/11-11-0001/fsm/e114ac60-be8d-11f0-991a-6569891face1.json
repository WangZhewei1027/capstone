{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Bubble Sort Visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderArray",
      "onExit": "noop",
      "on": {
        "START_SORTING": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "renderArray",
      "onExit": "noop",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "START_SORTING",
    "SORT_COMPLETE",
    "RESET"
  ],
  "notes": "The sorting state will transition to done after the sorting process is complete."
}