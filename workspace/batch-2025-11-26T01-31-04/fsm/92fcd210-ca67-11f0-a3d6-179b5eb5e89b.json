{
  "meta": {
    "concept": "LinkedList",
    "topic": "Linked List Visualization and Demo",
    "educational_goal": "Demonstrate linked list insertion, removal, and visualization",
    "expected_interactions": [
      "insert",
      "remove",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderList()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInsert",
      "label": "ValidatingInsert",
      "type": "atomic",
      "entry_actions": [
        "validateInsertInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlertInsert",
      "label": "ErrorAlertInsert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "prepareRemoval()",
        "highlightRemoval()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S5_ErrorAlertRemove",
      "label": "ErrorAlertRemove",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S6_ClearingList",
      "label": "ClearingList",
      "type": "atomic",
      "entry_actions": [
        "confirmClear()",
        "clearAllNodes()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear List button"
    },
    {
      "id": "INSERT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Insert input validation completes successfully"
    },
    {
      "id": "INSERT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Insert input validation fails"
    },
    {
      "id": "REMOVE_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Remove input validation completes successfully"
    },
    {
      "id": "REMOVE_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Remove input validation fails"
    },
    {
      "id": "CLEAR_LIST_COMPLETE",
      "event_type": "system_event",
      "description": "List clear operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInsertInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S2_ValidatingInsert",
      "event": "INSERT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "validateInsertValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S3_ErrorAlertInsert",
      "event": "INSERT_VALIDATION_FAILED",
      "guard": "inputIsEmpty",
      "actions": [
        "showInsertError()",
        "focusInsertInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_RemovingNode",
      "event": "USER_CLICKS_REMOVE",
      "guard": "removalInputValid",
      "actions": [
        "prepareRemovalInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S4_RemovingNode",
      "to": "S5_ErrorAlertRemove",
      "event": "REMOVE_VALIDATION_FAILED",
      "guard": "removalInputInvalid",
      "actions": [
        "showRemoveError()",
        "focusRemoveInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ClearingList",
      "event": "USER_CLICKS_CLEAR",
      "guard": "listNotEmpty",
      "actions": [
        "confirmClearOperation()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ClearingList",
      "to": "S0_Idle",
      "event": "CLEAR_LIST_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:listCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#insertValue",
    "#insertPosition",
    "#insertIndex",
    "#insertBtn",
    "#removePosition",
    "#removeIndex",
    "#removeValue",
    "#removeBtn",
    "#clearBtn",
    "#message",
    "#listContainer"
  ]
}