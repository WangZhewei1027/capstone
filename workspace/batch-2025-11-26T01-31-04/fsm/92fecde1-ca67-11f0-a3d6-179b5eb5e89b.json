{
  "meta": {
    "concept": "FloydWarshall",
    "topic": "Floyd-Warshall Algorithm Visualization",
    "educational_goal": "Demonstrate the Floyd-Warshall algorithm step-by-step",
    "expected_interactions": [
      "start",
      "next",
      "previous"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ParsingInput",
      "label": "ParsingInput",
      "type": "atomic",
      "entry_actions": [
        "readInputMatrix()",
        "validateInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_AlgorithmRunning",
      "label": "AlgorithmRunning",
      "type": "atomic",
      "entry_actions": [
        "executeFloydWarshall()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_RenderingStep",
      "label": "RenderingStep",
      "type": "atomic",
      "entry_actions": [
        "renderStep(currentStepIndex)"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start button",
      "triggers": [
        "#startButton"
      ]
    },
    {
      "id": "USER_CLICKS_NEXT",
      "event_type": "user_action",
      "description": "User clicks the Next button",
      "triggers": [
        "#nextStep"
      ]
    },
    {
      "id": "USER_CLICKS_PREVIOUS",
      "event_type": "user_action",
      "description": "User clicks the Previous button",
      "triggers": [
        "#prevStep"
      ]
    },
    {
      "id": "INPUT_PARSED_SUCCESSFULLY",
      "event_type": "system_event",
      "description": "Input matrix parsed successfully"
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Floyd-Warshall algorithm completed"
    },
    {
      "id": "INPUT_PARSING_FAILED",
      "event_type": "system_event",
      "description": "Input parsing failed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ParsingInput",
      "event": "USER_CLICKS_START",
      "guard": "inputNotEmpty",
      "actions": [
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_ParsingInput",
      "to": "S2_AlgorithmRunning",
      "event": "INPUT_PARSED_SUCCESSFULLY",
      "guard": "true",
      "actions": [
        "initializeSteps()"
      ],
      "expected_observables": [
        "dom:inputParsed"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ParsingInput",
      "to": "S4_ErrorAlert",
      "event": "INPUT_PARSING_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AlgorithmRunning",
      "to": "S3_RenderingStep",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "renderFinalStep()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RenderingStep",
      "to": "S3_RenderingStep",
      "event": "USER_CLICKS_NEXT",
      "guard": "currentStepIndex < steps.length - 1",
      "actions": [
        "renderStep(currentStepIndex + 1)"
      ],
      "expected_observables": [
        "dom:nextStepRendered"
      ],
      "timeout": 500
    },
    {
      "from": "S3_RenderingStep",
      "to": "S3_RenderingStep",
      "event": "USER_CLICKS_PREVIOUS",
      "guard": "currentStepIndex > 0",
      "actions": [
        "renderStep(currentStepIndex - 1)"
      ],
      "expected_observables": [
        "dom:previousStepRendered"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#matrixInput",
    "#startButton",
    "#prevStep",
    "#nextStep",
    "#output",
    "#stepInfo",
    "#controls"
  ]
}