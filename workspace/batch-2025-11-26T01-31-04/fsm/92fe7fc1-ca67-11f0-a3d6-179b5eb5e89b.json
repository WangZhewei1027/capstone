{
  "meta": {
    "concept": "LinearSearch",
    "topic": "Linear Search Visualization",
    "educational_goal": "Demonstrate linear search algorithm step-by-step",
    "expected_interactions": [
      "perform_search",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputValidation",
      "label": "InputValidation",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "startSearch()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_SearchComplete",
      "label": "SearchComplete",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showError()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Perform Linear Search button",
      "triggers": [
        "#search-btn"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails due to empty input",
      "triggers": []
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds",
      "triggers": []
    },
    {
      "id": "SEARCH_COMPLETE",
      "event_type": "system_event",
      "description": "Search operation completes",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputValidation",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputValidation",
      "to": "S2_Searching",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "inputsAreValid",
      "actions": [
        "parseInputs()"
      ],
      "expected_observables": [
        "dom:inputsValidated"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputValidation",
      "to": "S4_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputsAreInvalid",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Searching",
      "to": "S3_SearchComplete",
      "event": "SEARCH_COMPLETE",
      "guard": "searchFinished",
      "actions": [
        "finalizeSearch()"
      ],
      "expected_observables": [
        "dom:searchCompleted"
      ],
      "timeout": 7000
    },
    {
      "from": "S2_Searching",
      "to": "S1_InputValidation",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "resetSearch()"
      ],
      "expected_observables": [
        "dom:searchReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#array-input",
    "#search-input",
    "#search-btn",
    "#array-display",
    "#result"
  ]
}