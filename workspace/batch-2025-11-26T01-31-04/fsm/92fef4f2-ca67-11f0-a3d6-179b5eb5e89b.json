{
  "meta": {
    "concept": "TopologicalSort",
    "topic": "Topological Sort Demo",
    "educational_goal": "Demonstrate topological sorting of a directed graph",
    "expected_interactions": [
      "run",
      "reset",
      "error"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "enableRunButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "readGraphInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S3_RunningSort",
      "label": "RunningSort",
      "type": "atomic",
      "entry_actions": [
        "executeTopologicalSort()",
        "disableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "displayTopologicalOrder()",
        "visualizeGraph()"
      ],
      "exit_actions": [
        "clearOutput()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN",
      "event_type": "user_action",
      "description": "User clicks the Run Topological Sort button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "SORT_COMPLETED",
      "event_type": "system_event",
      "description": "Topological sort operation completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ValidatingInput",
      "event": "USER_CLICKS_RUN",
      "guard": "inputNotEmpty",
      "actions": [
        "validateInput()",
        "disableRunButton()"
      ],
      "expected_observables": [
        "dom:runButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S2_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S3_RunningSort",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "normalizeGraph()",
        "executeSort()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RunningSort",
      "to": "S4_DisplayResult",
      "event": "SORT_COMPLETED",
      "guard": "sortCompletedSuccessfully",
      "actions": [
        "displayResult()",
        "visualizeGraph()"
      ],
      "expected_observables": [
        "dom:sortCompleted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graphInput",
    "#runBtn",
    "#output",
    "#graphViz"
  ],
  "triggers": [
    "#runBtn",
    "#graphInput"
  ]
}