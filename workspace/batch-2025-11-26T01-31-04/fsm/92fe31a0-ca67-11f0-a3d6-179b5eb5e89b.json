{
  "meta": {
    "concept": "SelectionSort",
    "topic": "Selection Sort Visualization",
    "educational_goal": "Demonstrate the selection sort algorithm",
    "expected_interactions": [
      "start",
      "reset",
      "change_speed"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "generateArray()",
        "renderArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "startSorting()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S2_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "renderArray(-1, -1, array.length - 1)"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Sorting button",
      "triggers": [
        "#startBtn"
      ]
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset Array button",
      "triggers": [
        "#resetBtn"
      ]
    },
    {
      "id": "USER_CHANGES_SPEED",
      "event_type": "user_action",
      "description": "User changes the speed using the range input",
      "triggers": [
        "#speedRange"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_START",
      "guard": "notSorting",
      "actions": [
        "selectionSort()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Sorted",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "renderArray(-1, -1, array.length - 1)"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "notSorting",
      "actions": [
        "generateArray()",
        "renderArray()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Sorting",
      "to": "S1_Sorting",
      "event": "USER_CHANGES_SPEED",
      "guard": "true",
      "actions": [
        "updateDelay()"
      ],
      "expected_observables": [
        "dom:speedChanged"
      ],
      "timeout": 100
    }
  ],
  "components": [
    "#startBtn",
    "#resetBtn",
    "#speedRange",
    "#arrayContainer"
  ]
}