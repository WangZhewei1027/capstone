{
  "meta": {
    "concept": "PriorityQueue",
    "topic": "Priority Queue Demo",
    "educational_goal": "Demonstrate enqueueing, dequeueing, peeking, and clearing a priority queue",
    "expected_interactions": [
      "enqueue",
      "dequeue",
      "peek",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateButtons()",
        "displayQueue()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Enqueueing",
      "label": "Enqueueing",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "validateInput()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    },
    {
      "id": "S2_Dequeuing",
      "label": "Dequeuing",
      "type": "atomic",
      "entry_actions": [
        "dequeueItem()",
        "updateQueueDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Peeking",
      "label": "Peeking",
      "type": "atomic",
      "entry_actions": [
        "peekItem()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ClearingQueue",
      "label": "ClearingQueue",
      "type": "atomic",
      "entry_actions": [
        "clearQueue()",
        "updateQueueDisplay()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ENQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Enqueue button"
    },
    {
      "id": "USER_CLICKS_DEQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Dequeue button"
    },
    {
      "id": "USER_CLICKS_PEEK",
      "event_type": "user_action",
      "description": "User clicks the Peek button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Queue button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ITEM_ENQUEUED",
      "event_type": "system_event",
      "description": "Item has been successfully enqueued"
    },
    {
      "id": "ITEM_DEQUEUED",
      "event_type": "system_event",
      "description": "Item has been successfully dequeued"
    },
    {
      "id": "QUEUE_CLEARED",
      "event_type": "system_event",
      "description": "Queue has been cleared"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Enqueueing",
      "event": "USER_CLICKS_ENQUEUE",
      "guard": "inputNotEmpty",
      "actions": [
        "enqueueItem()"
      ],
      "expected_observables": [
        "dom:enqueueBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Enqueueing",
      "to": "S0_Idle",
      "event": "ITEM_ENQUEUED",
      "guard": "true",
      "actions": [
        "updateButtons()",
        "displayQueue()"
      ],
      "expected_observables": [
        "dom:itemEnqueued"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Dequeuing",
      "event": "USER_CLICKS_DEQUEUE",
      "guard": "queueNotEmpty",
      "actions": [
        "dequeueItem()"
      ],
      "expected_observables": [
        "dom:dequeueBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Dequeuing",
      "to": "S0_Idle",
      "event": "ITEM_DEQUEUED",
      "guard": "true",
      "actions": [
        "updateButtons()",
        "displayQueue()"
      ],
      "expected_observables": [
        "dom:itemDequeued"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_Peeking",
      "event": "USER_CLICKS_PEEK",
      "guard": "queueNotEmpty",
      "actions": [
        "peekItem()"
      ],
      "expected_observables": [
        "dom:peekBtnClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingQueue",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearQueue()"
      ],
      "expected_observables": [
        "dom:clearBtnClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ClearingQueue",
      "to": "S0_Idle",
      "event": "QUEUE_CLEARED",
      "guard": "true",
      "actions": [
        "updateButtons()",
        "displayQueue()"
      ],
      "expected_observables": [
        "dom:queueCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#itemInput",
    "#priorityInput",
    "#enqueueBtn",
    "#dequeueBtn",
    "#peekBtn",
    "#clearBtn",
    "#output",
    "#queueDisplay"
  ]
}