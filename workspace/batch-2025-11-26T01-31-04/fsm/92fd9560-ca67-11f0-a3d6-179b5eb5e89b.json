{
  "meta": {
    "concept": "BinarySearchTree",
    "topic": "Binary Search Tree Visualization",
    "educational_goal": "Demonstrate BST insertion and traversal",
    "expected_interactions": [
      "insert",
      "search",
      "delete",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_SearchingNode",
      "label": "SearchingNode",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_DeletingNode",
      "label": "DeletingNode",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S4_ClearingTree",
      "label": "ClearingTree",
      "type": "atomic",
      "entry_actions": [
        "clearTreeVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "USER_CLICKS_DELETE",
      "event_type": "user_action",
      "description": "User clicks the Delete button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Tree button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "NODE_INSERTION_COMPLETE",
      "event_type": "system_event",
      "description": "Node insertion complete"
    },
    {
      "id": "NODE_SEARCH_COMPLETE",
      "event_type": "system_event",
      "description": "Node search complete"
    },
    {
      "id": "NODE_DELETION_COMPLETE",
      "event_type": "system_event",
      "description": "Node deletion complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:#insertBtn"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S0_Idle",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "true",
      "actions": [
        "refreshBSTView()"
      ],
      "expected_observables": [
        "dom:#output"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:#output"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_SearchingNode",
      "event": "USER_CLICKS_SEARCH",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:#searchBtn"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_SearchingNode",
      "to": "S0_Idle",
      "event": "NODE_SEARCH_COMPLETE",
      "guard": "true",
      "actions": [
        "refreshBSTView()"
      ],
      "expected_observables": [
        "dom:#output"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SearchingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:#output"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_DeletingNode",
      "event": "USER_CLICKS_DELETE",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:#deleteBtn"
      ],
      "timeout": 2000
    },
    {
      "from": "S3_DeletingNode",
      "to": "S0_Idle",
      "event": "NODE_DELETION_COMPLETE",
      "guard": "true",
      "actions": [
        "refreshBSTView()"
      ],
      "expected_observables": [
        "dom:#output"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_DeletingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:#output"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingTree",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearTreeVisualization()"
      ],
      "expected_observables": [
        "dom:#clearBtn"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ClearingTree",
      "to": "S0_Idle",
      "event": "NODE_DELETION_COMPLETE",
      "guard": "true",
      "actions": [
        "clearOutput()"
      ],
      "expected_observables": [
        "dom:#output"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#valueInput",
    "#insertBtn",
    "#searchBtn",
    "#deleteBtn",
    "#clearBtn",
    "#output",
    "#tree-container"
  ]
}