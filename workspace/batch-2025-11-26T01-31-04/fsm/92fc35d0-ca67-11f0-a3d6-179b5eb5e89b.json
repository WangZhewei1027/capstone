{
  "meta": {
    "concept": "Array",
    "topic": "JavaScript Array Demo",
    "educational_goal": "Demonstrate array operations such as add, remove, find, sort, reverse, and clear",
    "expected_interactions": [
      "add",
      "remove",
      "find",
      "sort",
      "reverse",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateDisplay()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingElement",
      "label": "AddingElement",
      "type": "atomic",
      "entry_actions": [
        "readAddValue()",
        "highlightAddInput()"
      ],
      "exit_actions": [
        "clearAddInputHighlight()"
      ]
    },
    {
      "id": "S2_RemovingElement",
      "label": "RemovingElement",
      "type": "atomic",
      "entry_actions": [
        "highlightRemoveInput()"
      ],
      "exit_actions": [
        "clearRemoveInputHighlight()"
      ]
    },
    {
      "id": "S3_FindingElement",
      "label": "FindingElement",
      "type": "atomic",
      "entry_actions": [
        "readFindValue()",
        "highlightFindInput()"
      ],
      "exit_actions": [
        "clearFindInputHighlight()"
      ]
    },
    {
      "id": "S4_SortingArray",
      "label": "SortingArray",
      "type": "atomic",
      "entry_actions": [
        "sortArray()",
        "updateDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ReversingArray",
      "label": "ReversingArray",
      "type": "atomic",
      "entry_actions": [
        "reverseArray()",
        "updateDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_ClearingArray",
      "label": "ClearingArray",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "updateDisplay()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove button"
    },
    {
      "id": "USER_CLICKS_FIND",
      "event_type": "user_action",
      "description": "User clicks the Find Index button"
    },
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "USER_CLICKS_REVERSE",
      "event_type": "user_action",
      "description": "User clicks the Reverse button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    },
    {
      "id": "USER_INPUT_ADDED",
      "event_type": "system_event",
      "description": "User input for adding an element is processed"
    },
    {
      "id": "USER_INPUT_REMOVED",
      "event_type": "system_event",
      "description": "User input for removing an element is processed"
    },
    {
      "id": "USER_INPUT_FOUND",
      "event_type": "system_event",
      "description": "User input for finding an element is processed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingElement",
      "event": "USER_CLICKS_ADD",
      "guard": "inputNotEmpty",
      "actions": [
        "addElement()"
      ],
      "expected_observables": [
        "dom:btnAddClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingElement",
      "to": "S0_Idle",
      "event": "USER_INPUT_ADDED",
      "guard": "true",
      "actions": [
        "logAction('Element added')"
      ],
      "expected_observables": [
        "dom:arrayUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_RemovingElement",
      "event": "USER_CLICKS_REMOVE",
      "guard": "arrayNotEmpty",
      "actions": [
        "removeElement()"
      ],
      "expected_observables": [
        "dom:btnRemoveClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RemovingElement",
      "to": "S0_Idle",
      "event": "USER_INPUT_REMOVED",
      "guard": "true",
      "actions": [
        "logAction('Element removed')"
      ],
      "expected_observables": [
        "dom:arrayUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_FindingElement",
      "event": "USER_CLICKS_FIND",
      "guard": "inputNotEmpty",
      "actions": [
        "findIndex()"
      ],
      "expected_observables": [
        "dom:btnFindClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_FindingElement",
      "to": "S0_Idle",
      "event": "USER_INPUT_FOUND",
      "guard": "true",
      "actions": [
        "logAction('Element found')"
      ],
      "expected_observables": [
        "dom:elementFound"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_SortingArray",
      "event": "USER_CLICKS_SORT",
      "guard": "true",
      "actions": [
        "sortArray()"
      ],
      "expected_observables": [
        "dom:btnSortClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ReversingArray",
      "event": "USER_CLICKS_REVERSE",
      "guard": "true",
      "actions": [
        "reverseArray()"
      ],
      "expected_observables": [
        "dom:btnReverseClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ClearingArray",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearArray()"
      ],
      "expected_observables": [
        "dom:btnClearClicked"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#addValue",
    "#addPosition",
    "#btnAdd",
    "#removePosition",
    "#btnRemove",
    "#findValue",
    "#btnFind",
    "#btnSort",
    "#btnReverse",
    "#btnClear",
    "#arrayDisplay",
    "#log"
  ]
}