{
  "meta": {
    "concept": "Queue",
    "topic": "Queue Demonstration",
    "educational_goal": "Demonstrate queue operations: enqueue, dequeue, peek, and clear",
    "expected_interactions": [
      "enqueue",
      "dequeue",
      "peek",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderQueue()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Enqueueing",
      "label": "Enqueueing",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Dequeuing",
      "label": "Dequeuing",
      "type": "atomic",
      "entry_actions": [
        "removeFrontItem()",
        "updateMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Peeking",
      "label": "Peeking",
      "type": "atomic",
      "entry_actions": [
        "showFrontItem()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ClearingQueue",
      "label": "ClearingQueue",
      "type": "atomic",
      "entry_actions": [
        "clearAllItems()",
        "updateMessage()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ENQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Enqueue button",
      "triggers": [
        "#enqueueBtn"
      ]
    },
    {
      "id": "USER_CLICKS_DEQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Dequeue button",
      "triggers": [
        "#dequeueBtn"
      ]
    },
    {
      "id": "USER_CLICKS_PEEK",
      "event_type": "user_action",
      "description": "User clicks the Peek Front button",
      "triggers": [
        "#peekBtn"
      ]
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Queue button",
      "triggers": [
        "#clearBtn"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails for enqueue",
      "triggers": []
    },
    {
      "id": "ITEM_ENQUEUED",
      "event_type": "system_event",
      "description": "An item is successfully enqueued",
      "triggers": []
    },
    {
      "id": "ITEM_DEQUEUED",
      "event_type": "system_event",
      "description": "An item is successfully dequeued",
      "triggers": []
    },
    {
      "id": "QUEUE_CLEARED",
      "event_type": "system_event",
      "description": "The queue is cleared",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Enqueueing",
      "event": "USER_CLICKS_ENQUEUE",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:enqueueButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Enqueueing",
      "to": "S0_Idle",
      "event": "ITEM_ENQUEUED",
      "guard": "true",
      "actions": [
        "updateQueueDisplay()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:itemEnqueued"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_Dequeuing",
      "event": "USER_CLICKS_DEQUEUE",
      "guard": "queueNotEmpty",
      "actions": [
        "removeFrontItem()",
        "updateMessage()"
      ],
      "expected_observables": [
        "dom:dequeueButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Dequeuing",
      "to": "S0_Idle",
      "event": "ITEM_DEQUEUED",
      "guard": "true",
      "actions": [
        "updateQueueDisplay()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:itemDequeued"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_Peeking",
      "event": "USER_CLICKS_PEEK",
      "guard": "queueNotEmpty",
      "actions": [
        "showFrontItem()"
      ],
      "expected_observables": [
        "dom:peekButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingQueue",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearAllItems()",
        "updateMessage()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ClearingQueue",
      "to": "S0_Idle",
      "event": "QUEUE_CLEARED",
      "guard": "true",
      "actions": [
        "updateQueueDisplay()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:queueCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#enqueueInput",
    "#enqueueBtn",
    "#dequeueBtn",
    "#peekBtn",
    "#clearBtn",
    "#queueDisplay",
    "#message"
  ]
}