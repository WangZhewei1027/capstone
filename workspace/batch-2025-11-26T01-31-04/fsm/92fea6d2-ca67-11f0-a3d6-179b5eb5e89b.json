{
  "meta": {
    "concept": "DijkstraAlgorithm",
    "topic": "Dijkstra's Algorithm Visualization",
    "educational_goal": "Demonstrate Dijkstra's algorithm for finding shortest paths",
    "expected_interactions": [
      "reset",
      "next_step",
      "auto_run",
      "stop_auto_run"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "populateNodeOptions()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "reset()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_StepExecuting",
      "label": "StepExecuting",
      "type": "atomic",
      "entry_actions": [
        "nextStep()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_AutoRunning",
      "label": "AutoRunning",
      "type": "atomic",
      "entry_actions": [
        "startAutoRun()"
      ],
      "exit_actions": [
        "stopAutoRun()"
      ]
    },
    {
      "id": "S4_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "highlightResults()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset Graph button"
    },
    {
      "id": "USER_CLICKS_NEXT_STEP",
      "event_type": "user_action",
      "description": "User clicks the Next Step button"
    },
    {
      "id": "USER_CLICKS_AUTO_RUN",
      "event_type": "user_action",
      "description": "User clicks the Auto Run button"
    },
    {
      "id": "USER_CLICKS_STOP_AUTO_RUN",
      "event_type": "user_action",
      "description": "User clicks the Stop Auto Run button"
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Dijkstra's algorithm has completed execution"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Resetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "reset()"
      ],
      "expected_observables": [
        "dom:reset-btn-clicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Resetting",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:graph-reset"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_StepExecuting",
      "event": "USER_CLICKS_NEXT_STEP",
      "guard": "true",
      "actions": [
        "nextStep()"
      ],
      "expected_observables": [
        "dom:next-step-btn-clicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_StepExecuting",
      "to": "S2_StepExecuting",
      "event": "USER_CLICKS_NEXT_STEP",
      "guard": "true",
      "actions": [
        "nextStep()"
      ],
      "expected_observables": [
        "dom:next-step-executed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_AutoRunning",
      "event": "USER_CLICKS_AUTO_RUN",
      "guard": "true",
      "actions": [
        "startAutoRun()"
      ],
      "expected_observables": [
        "dom:auto-run-btn-clicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_AutoRunning",
      "to": "S3_AutoRunning",
      "event": "USER_CLICKS_AUTO_RUN",
      "guard": "true",
      "actions": [
        "nextStep()"
      ],
      "expected_observables": [
        "dom:auto-run-executed"
      ],
      "timeout": 900
    },
    {
      "from": "S3_AutoRunning",
      "to": "S0_Idle",
      "event": "USER_CLICKS_STOP_AUTO_RUN",
      "guard": "true",
      "actions": [
        "stopAutoRun()"
      ],
      "expected_observables": [
        "dom:stop-auto-run-btn-clicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_StepExecuting",
      "to": "S4_Completed",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "highlightResults()"
      ],
      "expected_observables": [
        "dom:algorithm-completed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#start-node",
    "#end-node",
    "#reset-btn",
    "#next-step-btn",
    "#auto-run-btn",
    "#stop-auto-btn",
    "#graph-canvas"
  ]
}