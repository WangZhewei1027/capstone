{
  "meta": {
    "concept": "Stack",
    "topic": "Stack Data Structure Demonstration",
    "educational_goal": "Demonstrate stack operations: push, pop, peek, and clear",
    "expected_interactions": [
      "push",
      "pop",
      "peek",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderStack()",
        "updateButtons()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_PushingItem",
      "label": "PushingItem",
      "type": "atomic",
      "entry_actions": [
        "clearMessage()",
        "readInputValue()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S2_PoppingItem",
      "label": "PoppingItem",
      "type": "atomic",
      "entry_actions": [
        "clearMessage()",
        "removeTopItem()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_PeekingItem",
      "label": "PeekingItem",
      "type": "atomic",
      "entry_actions": [
        "clearMessage()",
        "showTopItem()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ClearingStack",
      "label": "ClearingStack",
      "type": "atomic",
      "entry_actions": [
        "clearMessage()",
        "clearStack()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorState",
      "label": "ErrorState",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_PUSH",
      "event_type": "user_action",
      "description": "User clicks the Push button"
    },
    {
      "id": "USER_CLICKS_POP",
      "event_type": "user_action",
      "description": "User clicks the Pop button"
    },
    {
      "id": "USER_CLICKS_PEEK",
      "event_type": "user_action",
      "description": "User clicks the Peek button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    },
    {
      "id": "INPUT_NOT_VALID",
      "event_type": "system_event",
      "description": "Input is not valid for push action"
    },
    {
      "id": "STACK_IS_EMPTY",
      "event_type": "system_event",
      "description": "Stack is empty during pop or peek action"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_PushingItem",
      "event": "USER_CLICKS_PUSH",
      "guard": "inputNotEmpty",
      "actions": [
        "pushItem()",
        "renderStack()",
        "updateButtons()"
      ],
      "expected_observables": [
        "dom:pushButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_PushingItem",
      "to": "S5_ErrorState",
      "event": "INPUT_NOT_VALID",
      "guard": "inputIsEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_PoppingItem",
      "event": "USER_CLICKS_POP",
      "guard": "stackNotEmpty",
      "actions": [
        "popItem()",
        "renderStack()",
        "updateButtons()"
      ],
      "expected_observables": [
        "dom:popButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_PoppingItem",
      "to": "S5_ErrorState",
      "event": "STACK_IS_EMPTY",
      "guard": "stackIsEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_PeekingItem",
      "event": "USER_CLICKS_PEEK",
      "guard": "stackNotEmpty",
      "actions": [
        "peekItem()",
        "renderStack()"
      ],
      "expected_observables": [
        "dom:peekButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_PeekingItem",
      "to": "S5_ErrorState",
      "event": "STACK_IS_EMPTY",
      "guard": "stackIsEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingStack",
      "event": "USER_CLICKS_CLEAR",
      "guard": "stackNotEmpty",
      "actions": [
        "clearStack()",
        "renderStack()",
        "updateButtons()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#itemInput",
    "#pushBtn",
    "#popBtn",
    "#peekBtn",
    "#clearBtn",
    "#stackDisplay",
    "#message"
  ],
  "triggers": [
    "#pushBtn",
    "#popBtn",
    "#peekBtn",
    "#clearBtn",
    "#itemInput"
  ]
}