{
  "meta": {
    "concept": "Deque",
    "topic": "Deque (Double-Ended Queue) Visualization",
    "educational_goal": "Demonstrate deque operations (push and pop)",
    "expected_interactions": [
      "pushFront",
      "pushBack",
      "popFront",
      "popBack",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateDisplay()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_PushingFront",
      "label": "PushingFront",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_PushingBack",
      "label": "PushingBack",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_PoppingFront",
      "label": "PoppingFront",
      "type": "atomic",
      "entry_actions": [
        "confirmPopFront()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_PoppingBack",
      "label": "PoppingBack",
      "type": "atomic",
      "entry_actions": [
        "confirmPopBack()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ClearingDeque",
      "label": "ClearingDeque",
      "type": "atomic",
      "entry_actions": [
        "confirmClearDeque()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_PUSH_FRONT",
      "event_type": "user_action",
      "description": "User clicks the Push Front button"
    },
    {
      "id": "USER_CLICKS_PUSH_BACK",
      "event_type": "user_action",
      "description": "User clicks the Push Back button"
    },
    {
      "id": "USER_CLICKS_POP_FRONT",
      "event_type": "user_action",
      "description": "User clicks the Pop Front button"
    },
    {
      "id": "USER_CLICKS_POP_BACK",
      "event_type": "user_action",
      "description": "User clicks the Pop Back button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    },
    {
      "id": "USER_INPUT_ENTERED",
      "event_type": "user_action",
      "description": "User enters a value in the input field"
    },
    {
      "id": "DEQUE_UPDATED",
      "event_type": "system_event",
      "description": "Deque display updated"
    },
    {
      "id": "DEQUE_CLEARED",
      "event_type": "system_event",
      "description": "Deque has been cleared"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_PushingFront",
      "event": "USER_CLICKS_PUSH_FRONT",
      "guard": "inputNotEmpty",
      "actions": [
        "pushFront()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:pushFrontBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_PushingBack",
      "event": "USER_CLICKS_PUSH_BACK",
      "guard": "inputNotEmpty",
      "actions": [
        "pushBack()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:pushBackBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_PoppingFront",
      "event": "USER_CLICKS_POP_FRONT",
      "guard": "dequeNotEmpty",
      "actions": [
        "popFront()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:popFrontBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_PoppingBack",
      "event": "USER_CLICKS_POP_BACK",
      "guard": "dequeNotEmpty",
      "actions": [
        "popBack()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:popBackBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ClearingDeque",
      "event": "USER_CLICKS_CLEAR",
      "guard": "dequeNotEmpty",
      "actions": [
        "clearDeque()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:clearBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_PushingFront",
      "to": "S0_Idle",
      "event": "DEQUE_UPDATED",
      "guard": "true",
      "actions": [
        "clearInput()"
      ],
      "expected_observables": [
        "dom:dequeUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_PushingBack",
      "to": "S0_Idle",
      "event": "DEQUE_UPDATED",
      "guard": "true",
      "actions": [
        "clearInput()"
      ],
      "expected_observables": [
        "dom:dequeUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S3_PoppingFront",
      "to": "S0_Idle",
      "event": "DEQUE_UPDATED",
      "guard": "true",
      "actions": [
        "clearInput()"
      ],
      "expected_observables": [
        "dom:dequeUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S4_PoppingBack",
      "to": "S0_Idle",
      "event": "DEQUE_UPDATED",
      "guard": "true",
      "actions": [
        "clearInput()"
      ],
      "expected_observables": [
        "dom:dequeUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ClearingDeque",
      "to": "S0_Idle",
      "event": "DEQUE_CLEARED",
      "guard": "true",
      "actions": [
        "clearInput()"
      ],
      "expected_observables": [
        "dom:dequeCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "inputValue",
    "pushFrontBtn",
    "pushBackBtn",
    "popFrontBtn",
    "popBackBtn",
    "clearBtn",
    "dequeDisplay"
  ]
}