{
  "meta": {
    "concept": "InsertionSort",
    "topic": "Insertion Sort Visualization",
    "educational_goal": "Demonstrate the insertion sort algorithm step-by-step",
    "expected_interactions": [
      "start",
      "input",
      "adjust_speed"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputReceived",
      "label": "InputReceived",
      "type": "atomic",
      "entry_actions": [
        "createBars(inputArray)",
        "disableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "highlightCurrentKey()",
        "animateSorting()"
      ],
      "exit_actions": [
        "markSorted()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Sorting button",
      "triggers": [
        "#startBtn"
      ]
    },
    {
      "id": "USER_ENTERS_INPUT",
      "event_type": "user_action",
      "description": "User enters numbers in the input field",
      "triggers": [
        "#arrayInput"
      ]
    },
    {
      "id": "USER_ADJUSTS_SPEED",
      "event_type": "user_action",
      "description": "User adjusts the speed slider",
      "triggers": [
        "#speedRange"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails",
      "triggers": []
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting process is complete",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputReceived",
      "event": "USER_CLICKS_START",
      "guard": "inputIsValid",
      "actions": [
        "captureInput()",
        "createBars()"
      ],
      "expected_observables": [
        "dom:startButtonClicked",
        "dom:inputCaptured"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputReceived",
      "to": "S2_Sorting",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:sortingStarted"
      ],
      "timeout": 5000
    },
    {
      "from": "S1_InputReceived",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "clearErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#startBtn",
    "#speedRange",
    "#barsContainer"
  ]
}