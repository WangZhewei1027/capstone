{
  "meta": {
    "concept": "KnapsackProblem",
    "topic": "0/1 Knapsack Problem Solver",
    "educational_goal": "Demonstrate the solution to the Knapsack problem using dynamic programming",
    "expected_interactions": [
      "inputItems",
      "inputCapacity",
      "solve"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingItems",
      "label": "InputtingItems",
      "type": "atomic",
      "entry_actions": [
        "focusItemsInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_InputtingCapacity",
      "label": "InputtingCapacity",
      "type": "atomic",
      "entry_actions": [
        "focusCapacityInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Computing",
      "label": "Computing",
      "type": "atomic",
      "entry_actions": [
        "displayComputingMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SOLVE",
      "event_type": "user_action",
      "description": "User clicks the Solve Knapsack button"
    },
    {
      "id": "INPUT_ITEMS_CHANGED",
      "event_type": "user_action",
      "description": "User changes the items input"
    },
    {
      "id": "INPUT_CAPACITY_CHANGED",
      "event_type": "user_action",
      "description": "User changes the knapsack capacity input"
    },
    {
      "id": "COMPUTATION_COMPLETE",
      "event_type": "system_event",
      "description": "Computation of the knapsack problem is complete"
    },
    {
      "id": "ERROR_OCCURRED",
      "event_type": "system_event",
      "description": "An error occurred during input validation or computation"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingItems",
      "event": "INPUT_ITEMS_CHANGED",
      "guard": "true",
      "actions": [
        "enableSolveButton()"
      ],
      "expected_observables": [
        "dom:itemsInputChanged"
      ],
      "timeout": 0
    },
    {
      "from": "S0_Idle",
      "to": "S2_InputtingCapacity",
      "event": "INPUT_CAPACITY_CHANGED",
      "guard": "true",
      "actions": [
        "enableSolveButton()"
      ],
      "expected_observables": [
        "dom:capacityInputChanged"
      ],
      "timeout": 0
    },
    {
      "from": "S1_InputtingItems",
      "to": "S3_Computing",
      "event": "USER_CLICKS_SOLVE",
      "guard": "inputsAreValid",
      "actions": [
        "startComputation()"
      ],
      "expected_observables": [
        "dom:solveButtonClicked"
      ],
      "timeout": 0
    },
    {
      "from": "S2_InputtingCapacity",
      "to": "S3_Computing",
      "event": "USER_CLICKS_SOLVE",
      "guard": "inputsAreValid",
      "actions": [
        "startComputation()"
      ],
      "expected_observables": [
        "dom:solveButtonClicked"
      ],
      "timeout": 0
    },
    {
      "from": "S3_Computing",
      "to": "S5_ResultDisplayed",
      "event": "COMPUTATION_COMPLETE",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:computationComplete"
      ],
      "timeout": 0
    },
    {
      "from": "S3_Computing",
      "to": "S4_ErrorAlert",
      "event": "ERROR_OCCURRED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorOccurred"
      ],
      "timeout": 0
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SOLVE",
      "guard": "true",
      "actions": [
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:errorAcknowledged"
      ],
      "timeout": 0
    }
  ],
  "components": [
    "#itemsInput",
    "#capacityInput",
    "#solveBtn",
    "#result"
  ],
  "triggers": [
    "#solveBtn",
    "#itemsInput",
    "#capacityInput"
  ]
}