{
  "meta": {
    "concept": "HuffmanCoding",
    "topic": "Huffman Coding Demonstration",
    "educational_goal": "Demonstrate Huffman coding for text compression",
    "expected_interactions": [
      "generate",
      "error"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearErrorMsg()",
        "resetOutput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingCodes",
      "label": "GeneratingCodes",
      "type": "atomic",
      "entry_actions": [
        "readInputText()",
        "showLoadingIndicator()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_DisplayResults",
      "label": "DisplayResults",
      "type": "atomic",
      "entry_actions": [
        "displayFrequencyTable()",
        "displayCodesTable()",
        "displayEncodedOutput()",
        "drawHuffmanTree()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMsg()"
      ],
      "exit_actions": [
        "clearErrorMsg()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate Huffman Codes button"
    },
    {
      "id": "INPUT_IS_EMPTY",
      "event_type": "system_event",
      "description": "Input text is empty"
    },
    {
      "id": "CODES_GENERATED",
      "event_type": "system_event",
      "description": "Huffman codes have been generated successfully"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingCodes",
      "event": "USER_CLICKS_GENERATE",
      "guard": "inputNotEmpty",
      "actions": [
        "disableGenerateButton()"
      ],
      "expected_observables": [
        "dom:generateBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_GeneratingCodes",
      "to": "S2_DisplayResults",
      "event": "CODES_GENERATED",
      "guard": "true",
      "actions": [
        "enableGenerateButton()"
      ],
      "expected_observables": [
        "dom:codesGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S1_GeneratingCodes",
      "to": "S3_ErrorAlert",
      "event": "INPUT_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showErrorMsg()"
      ],
      "expected_observables": [
        "dom:errorMsgDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "clearErrorMsg()"
      ],
      "expected_observables": [
        "dom:errorMsgCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputText",
    "#generateBtn",
    "#errorMsg",
    "#output",
    "#freqTable",
    "#codesTable",
    "#encodedOutput",
    "#treeSVGContainer"
  ]
}