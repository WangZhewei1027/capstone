{
  "meta": {
    "concept": "HashTable",
    "topic": "Hash Table Demonstration",
    "educational_goal": "Demonstrate basic operations of a hash table",
    "expected_interactions": [
      "add",
      "remove",
      "get",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderTable()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEntry",
      "label": "AddingEntry",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_RemovingEntry",
      "label": "RemovingEntry",
      "type": "atomic",
      "entry_actions": [
        "readKeyInput()",
        "highlightKeyInput()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S3_GettingValue",
      "label": "GettingValue",
      "type": "atomic",
      "entry_actions": [
        "readKeyInput()",
        "highlightKeyInput()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S4_ClearingTable",
      "label": "ClearingTable",
      "type": "atomic",
      "entry_actions": [
        "confirmClear()",
        "resetTable()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorState",
      "label": "ErrorState",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add / Update button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove by Key button"
    },
    {
      "id": "USER_CLICKS_GET",
      "event_type": "user_action",
      "description": "User clicks the Get Value by Key button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Table button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEntry",
      "event": "USER_CLICKS_ADD",
      "guard": "inputValuesNotEmpty",
      "actions": [
        "addEntry()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addBtnClicked",
        "dom:inputValuesRead"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_RemovingEntry",
      "event": "USER_CLICKS_REMOVE",
      "guard": "keyInputNotEmpty",
      "actions": [
        "removeEntry()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeBtnClicked",
        "dom:keyInputRead"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_GettingValue",
      "event": "USER_CLICKS_GET",
      "guard": "keyInputNotEmpty",
      "actions": [
        "getValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:getBtnClicked",
        "dom:keyInputRead"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingTable",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearTable()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:clearBtnClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingEntry",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "showSuccessMessage()",
        "renderTable()"
      ],
      "expected_observables": [
        "dom:entryAddedOrUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RemovingEntry",
      "to": "S0_Idle",
      "event": "USER_CLICKS_REMOVE",
      "guard": "true",
      "actions": [
        "showSuccessMessage()",
        "renderTable()"
      ],
      "expected_observables": [
        "dom:entryRemoved"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_GettingValue",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GET",
      "guard": "true",
      "actions": [
        "showValueMessage()"
      ],
      "expected_observables": [
        "dom:valueRetrieved"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ClearingTable",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "showSuccessMessage()",
        "renderTable()"
      ],
      "expected_observables": [
        "dom:tableCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingEntry",
      "to": "S5_ErrorState",
      "event": "USER_CLICKS_ADD",
      "guard": "inputValuesEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_RemovingEntry",
      "to": "S5_ErrorState",
      "event": "USER_CLICKS_REMOVE",
      "guard": "keyInputEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_GettingValue",
      "to": "S5_ErrorState",
      "event": "USER_CLICKS_GET",
      "guard": "keyInputEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#keyInput",
    "#valueInput",
    "#addBtn",
    "#removeBtn",
    "#getBtn",
    "#clearBtn",
    "#message",
    "#hashTableDisplay"
  ]
}