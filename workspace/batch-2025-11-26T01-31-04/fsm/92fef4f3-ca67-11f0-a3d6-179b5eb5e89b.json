{
  "meta": {
    "concept": "FibonacciSequence",
    "topic": "Fibonacci Sequence Generator",
    "educational_goal": "Generate Fibonacci sequence based on user input",
    "expected_interactions": [
      "generate",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "clearErrorMsg()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMsg()"
      ],
      "exit_actions": [
        "clearErrorMsg()"
      ]
    },
    {
      "id": "S3_GeneratingSequence",
      "label": "GeneratingSequence",
      "type": "atomic",
      "entry_actions": [
        "generateFibonacciSequence()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "displayFibonacciResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserSubmitsForm",
      "event_type": "user_action",
      "description": "User submits the Fibonacci form",
      "triggers": [
        "#fibForm"
      ]
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails",
      "triggers": [
        "#errorMsg"
      ]
    },
    {
      "id": "InputValidationSuccess",
      "event_type": "system_event",
      "description": "Input validation succeeds",
      "triggers": [
        "#numTerms"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ValidatingInput",
      "event": "UserSubmitsForm",
      "guard": "true",
      "actions": [
        "validateInput()"
      ],
      "expected_observables": [
        "dom:formSubmitted"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S2_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S3_GeneratingSequence",
      "event": "InputValidationSuccess",
      "guard": "inputIsValid",
      "actions": [
        "startFibonacciGeneration()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 500
    },
    {
      "from": "S3_GeneratingSequence",
      "to": "S4_DisplayResult",
      "event": "InputValidationSuccess",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_DisplayResult",
      "to": "S0_Idle",
      "event": "UserSubmitsForm",
      "guard": "true",
      "actions": [
        "resetForm()"
      ],
      "expected_observables": [
        "dom:formReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#fibForm",
    "#numTerms",
    "#errorMsg",
    "#result"
  ]
}