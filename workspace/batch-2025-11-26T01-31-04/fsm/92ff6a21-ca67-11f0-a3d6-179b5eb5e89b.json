{
  "meta": {
    "concept": "TwoPointers",
    "topic": "Two Pointers Technique Demo",
    "educational_goal": "Demonstrate finding pairs in a sorted array that sum to a target value using the two pointers technique",
    "expected_interactions": [
      "find_pairs",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingData",
      "label": "InputtingData",
      "type": "atomic",
      "entry_actions": [
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_FindingPairs",
      "label": "FindingPairs",
      "type": "atomic",
      "entry_actions": [
        "executeTwoPointers()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DisplayResults",
      "label": "DisplayResults",
      "type": "atomic",
      "entry_actions": [
        "renderResults()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_FIND_PAIRS",
      "event_type": "user_action",
      "description": "User clicks the Find Pairs button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "PAIRS_FOUND",
      "event_type": "system_event",
      "description": "Pairs found and results displayed"
    },
    {
      "id": "USER_DISMISSES_ERROR",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingData",
      "event": "USER_CLICKS_FIND_PAIRS",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:findPairsButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputtingData",
      "to": "S2_ValidatingInput",
      "event": "USER_CLICKS_FIND_PAIRS",
      "guard": "true",
      "actions": [
        "validateInputs()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_FindingPairs",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputsAreValid",
      "actions": [
        "executeTwoPointers()"
      ],
      "expected_observables": [
        "dom:validationPassed"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_DISMISSES_ERROR",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_FindingPairs",
      "to": "S5_DisplayResults",
      "event": "PAIRS_FOUND",
      "guard": "true",
      "actions": [
        "renderResults()"
      ],
      "expected_observables": [
        "dom:resultsDisplayed"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_DisplayResults",
      "to": "S0_Idle",
      "event": "USER_CLICKS_FIND_PAIRS",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:resultsCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#targetInput",
    "#findPairsButton",
    "#output"
  ],
  "triggers": [
    "#findPairsButton",
    "#arrayInput",
    "#targetInput"
  ]
}