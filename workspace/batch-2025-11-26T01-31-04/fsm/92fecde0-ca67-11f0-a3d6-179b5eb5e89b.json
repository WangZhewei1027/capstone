{
  "meta": {
    "concept": "BellmanFordAlgorithm",
    "topic": "Bellman-Ford Algorithm Visualization",
    "educational_goal": "Demonstrate the Bellman-Ford algorithm for finding shortest paths and detecting negative cycles",
    "expected_interactions": [
      "add_node",
      "add_edge",
      "run_algorithm",
      "step_algorithm",
      "reset_graph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "readNodeName()",
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeInput()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "readEdgeData()",
        "highlightEdgeInputs()"
      ],
      "exit_actions": [
        "clearEdgeInputs()"
      ]
    },
    {
      "id": "S3_InitializingAlgorithm",
      "label": "InitializingAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "initializeBellmanFord()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SteppingThroughAlgorithm",
      "label": "SteppingThroughAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "performBellmanFordStep()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "resetGraphState()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_DetectingNegativeCycle",
      "label": "DetectingNegativeCycle",
      "type": "atomic",
      "entry_actions": [
        "detectNegativeCycle()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_NODE",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "USER_CLICKS_ADD_EDGE",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "USER_CLICKS_RUN_ALGORITHM",
      "event_type": "user_action",
      "description": "User clicks the Run Bellman-Ford button"
    },
    {
      "id": "USER_CLICKS_STEP_ALGORITHM",
      "event_type": "user_action",
      "description": "User clicks the Step button"
    },
    {
      "id": "USER_CLICKS_RESET_GRAPH",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Bellman-Ford algorithm has completed execution"
    },
    {
      "id": "NEGATIVE_CYCLE_DETECTED",
      "event_type": "system_event",
      "description": "Negative cycle has been detected"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD_NODE",
      "guard": "true",
      "actions": [
        "captureNodeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addNodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_NODE",
      "guard": "nodeAddedSuccessfully",
      "actions": [
        "addNodeToGraph()"
      ],
      "expected_observables": [
        "dom:nodeAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "true",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "addEdgeToGraph()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_InitializingAlgorithm",
      "event": "USER_CLICKS_RUN_ALGORITHM",
      "guard": "graphIsValid",
      "actions": [
        "initializeBellmanFord()"
      ],
      "expected_observables": [
        "dom:runAlgorithmButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_InitializingAlgorithm",
      "to": "S4_SteppingThroughAlgorithm",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "updateGraphVisualization()"
      ],
      "expected_observables": [
        "dom:algorithmInitialized"
      ],
      "timeout": 500
    },
    {
      "from": "S4_SteppingThroughAlgorithm",
      "to": "S4_SteppingThroughAlgorithm",
      "event": "USER_CLICKS_STEP_ALGORITHM",
      "guard": "algorithmNotCompleted",
      "actions": [
        "performBellmanFordStep()"
      ],
      "expected_observables": [
        "dom:stepAlgorithmButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_SteppingThroughAlgorithm",
      "to": "S6_DetectingNegativeCycle",
      "event": "ALGORITHM_COMPLETED",
      "guard": "algorithmCompleted",
      "actions": [
        "detectNegativeCycle()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "USER_CLICKS_RESET_GRAPH",
      "guard": "true",
      "actions": [
        "resetGraphState()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET_GRAPH",
      "guard": "true",
      "actions": [
        "clearGraph()"
      ],
      "expected_observables": [
        "dom:graphReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#node-name",
    "#add-node-btn",
    "#edge-from",
    "#edge-to",
    "#edge-weight",
    "#add-edge-btn",
    "#source-node",
    "#start-btn",
    "#step-btn",
    "#reset-btn",
    "#messages",
    "#graph-svg"
  ]
}