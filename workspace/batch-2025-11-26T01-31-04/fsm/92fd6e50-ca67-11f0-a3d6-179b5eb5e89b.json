{
  "meta": {
    "concept": "BinaryTree",
    "topic": "Binary Tree Visualization & Demo",
    "educational_goal": "Demonstrate Binary Tree insertion and visualization",
    "expected_interactions": [
      "insert",
      "clear",
      "click_node"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderTree()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S3_ClearingTree",
      "label": "ClearingTree",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodes()",
        "resetOutput()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User submits the insert form",
      "triggers": [
        "#insertForm"
      ]
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Tree button",
      "triggers": [
        "#clearBtn"
      ]
    },
    {
      "id": "USER_CLICKS_NODE",
      "event_type": "user_action",
      "description": "User clicks a node in the tree",
      "triggers": [
        ".node"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "NODE_INSERTION_COMPLETE",
      "event_type": "system_event",
      "description": "Node insertion and tree update complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S0_Idle",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "nodeInsertedSuccessfully",
      "actions": [
        "updateTreeVisualization()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:treeStructureChanged"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S2_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_ClearingTree",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "confirmClear()",
        "clearAllNodes()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ClearingTree",
      "to": "S0_Idle",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "true",
      "actions": [
        "resetOutput()"
      ],
      "expected_observables": [
        "dom:treeCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#insertForm",
    "#valueInput",
    "#clearBtn",
    "#treeSVG",
    "#output"
  ]
}