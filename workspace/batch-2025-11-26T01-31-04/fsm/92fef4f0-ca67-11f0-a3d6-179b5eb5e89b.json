{
  "meta": {
    "concept": "KruskalAlgorithm",
    "topic": "Kruskal's Algorithm Visualization",
    "educational_goal": "Demonstrate Kruskal's Algorithm for finding Minimum Spanning Tree",
    "expected_interactions": [
      "generate_random_graph",
      "start_algorithm",
      "next_step",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "drawGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_LoadingGraph",
      "label": "LoadingGraph",
      "type": "atomic",
      "entry_actions": [
        "loadGraphFromInput()",
        "resetState()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_RandomGraphGenerated",
      "label": "RandomGraphGenerated",
      "type": "atomic",
      "entry_actions": [
        "initializeRandomGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_AlgorithmRunning",
      "label": "AlgorithmRunning",
      "type": "atomic",
      "entry_actions": [
        "startAlgorithm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_StepExecuting",
      "label": "StepExecuting",
      "type": "atomic",
      "entry_actions": [
        "stepAlgorithm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_AlgorithmCompleted",
      "label": "AlgorithmCompleted",
      "type": "atomic",
      "entry_actions": [
        "logCompletion()",
        "disableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_AlgorithmReset",
      "label": "AlgorithmReset",
      "type": "atomic",
      "entry_actions": [
        "resetState()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE_RANDOM",
      "event_type": "user_action",
      "description": "User clicks the Generate Random Graph button"
    },
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Kruskal's Algorithm button"
    },
    {
      "id": "USER_CLICKS_NEXT_STEP",
      "event_type": "user_action",
      "description": "User clicks the Next Step button"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "GRAPH_LOADED",
      "event_type": "system_event",
      "description": "Graph is successfully loaded from input"
    },
    {
      "id": "ALGORITHM_STARTED",
      "event_type": "system_event",
      "description": "Kruskal's Algorithm has started"
    },
    {
      "id": "STEP_EXECUTED",
      "event_type": "system_event",
      "description": "A step of Kruskal's Algorithm has been executed"
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Kruskal's Algorithm has completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_LoadingGraph",
      "event": "GRAPH_LOADED",
      "guard": "true",
      "actions": [
        "loadGraphFromInput()"
      ],
      "expected_observables": [
        "dom:numVerticesInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S1_LoadingGraph",
      "to": "S3_AlgorithmRunning",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "startAlgorithm()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_AlgorithmRunning",
      "to": "S4_StepExecuting",
      "event": "USER_CLICKS_NEXT_STEP",
      "guard": "true",
      "actions": [
        "stepAlgorithm()"
      ],
      "expected_observables": [
        "dom:stepButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_StepExecuting",
      "to": "S5_AlgorithmCompleted",
      "event": "ALGORITHM_COMPLETED",
      "guard": "mstEdges.length === numVertices - 1",
      "actions": [
        "logCompletion()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_AlgorithmRunning",
      "to": "S4_StepExecuting",
      "event": "STEP_EXECUTED",
      "guard": "true",
      "actions": [
        "stepAlgorithm()"
      ],
      "expected_observables": [
        "dom:stepExecuted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_RandomGraphGenerated",
      "event": "USER_CLICKS_GENERATE_RANDOM",
      "guard": "true",
      "actions": [
        "initializeRandomGraph()"
      ],
      "expected_observables": [
        "dom:generateRandomButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_StepExecuting",
      "to": "S6_AlgorithmReset",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetState()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#numVertices",
    "#edgesInput",
    "#generateRandom",
    "#startBtn",
    "#stepBtn",
    "#resetBtn",
    "#log"
  ]
}