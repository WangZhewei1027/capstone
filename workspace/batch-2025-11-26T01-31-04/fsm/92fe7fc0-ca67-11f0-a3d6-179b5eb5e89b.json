{
  "meta": {
    "concept": "RadixSort",
    "topic": "Radix Sort Visualization",
    "educational_goal": "Demonstrate the Radix Sort algorithm step by step",
    "expected_interactions": [
      "start_sort",
      "input_validation"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearVisualization()",
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputValidation",
      "label": "InputValidation",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_InvalidInput",
      "label": "InvalidInput",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    },
    {
      "id": "S3_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "initializeSorting()",
        "renderInitialArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "renderSortedArray()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START_SORT",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button",
      "triggers": [
        "#startSort"
      ]
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputValidation",
      "event": "USER_CLICKS_START_SORT",
      "guard": "inputNotEmpty",
      "actions": [
        "parseInput()",
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:inputArrayValueRead",
        "dom:startSortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputValidation",
      "to": "S3_Sorting",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "initializeSorting()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputValidation",
      "to": "S2_InvalidInput",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Sorting",
      "to": "S4_Sorted",
      "event": "SORTING_COMPLETE",
      "guard": "sortingFinished",
      "actions": [
        "renderFinalResult()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 2000
    }
  ],
  "components": [
    "#inputArray",
    "#startSort",
    "#steps",
    "#output-area"
  ]
}