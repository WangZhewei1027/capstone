{
  "meta": {
    "concept": "HashMap",
    "topic": "Hash Map Demonstration",
    "educational_goal": "Demonstrate basic operations of a hash map",
    "expected_interactions": [
      "add",
      "get",
      "remove",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateMapVisual()",
        "clearMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEntry",
      "label": "AddingEntry",
      "type": "atomic",
      "entry_actions": [
        "clearMessage()",
        "getInputValues()"
      ],
      "exit_actions": [
        "showMessage(msg, isError)"
      ]
    },
    {
      "id": "S2_GettingValue",
      "label": "GettingValue",
      "type": "atomic",
      "entry_actions": [
        "clearMessage()",
        "getInputKey()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_RemovingEntry",
      "label": "RemovingEntry",
      "type": "atomic",
      "entry_actions": [
        "clearMessage()",
        "getInputKey()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ClearingMap",
      "label": "ClearingMap",
      "type": "atomic",
      "entry_actions": [
        "clearHashMap()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorState",
      "label": "ErrorState",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add / Update Entry button"
    },
    {
      "id": "USER_CLICKS_GET",
      "event_type": "user_action",
      "description": "User clicks the Get Value by Key button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove Entry by Key button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Hash Map button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEntry",
      "event": "USER_CLICKS_ADD",
      "guard": "inputKeyNotEmpty",
      "actions": [
        "hashMap.put(key, value)",
        "updateMapVisual()"
      ],
      "expected_observables": [
        "dom:addBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingEntry",
      "to": "S5_ErrorState",
      "event": "USER_CLICKS_ADD",
      "guard": "inputKeyIsEmpty",
      "actions": [
        "showMessage('Please enter a non-empty key.', true)"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_GettingValue",
      "event": "USER_CLICKS_GET",
      "guard": "inputKeyNotEmpty",
      "actions": [
        "hashMap.get(key)",
        "updateOutput()"
      ],
      "expected_observables": [
        "dom:getBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_GettingValue",
      "to": "S5_ErrorState",
      "event": "USER_CLICKS_GET",
      "guard": "inputKeyIsEmpty",
      "actions": [
        "showMessage('Please enter a key to get its value.', true)"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingEntry",
      "event": "USER_CLICKS_REMOVE",
      "guard": "inputKeyNotEmpty",
      "actions": [
        "hashMap.remove(key)",
        "updateMapVisual()"
      ],
      "expected_observables": [
        "dom:removeBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RemovingEntry",
      "to": "S5_ErrorState",
      "event": "USER_CLICKS_REMOVE",
      "guard": "inputKeyIsEmpty",
      "actions": [
        "showMessage('Please enter a key to remove.', true)"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingMap",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "hashMap.clear()",
        "updateMapVisual()"
      ],
      "expected_observables": [
        "dom:clearBtnClicked"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#keyInput",
    "#valueInput",
    "#addBtn",
    "#getBtn",
    "#removeBtn",
    "#clearBtn",
    "#message",
    "#output",
    "#mapVisual"
  ]
}