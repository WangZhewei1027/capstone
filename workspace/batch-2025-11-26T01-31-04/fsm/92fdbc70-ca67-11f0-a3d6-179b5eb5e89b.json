{
  "meta": {
    "concept": "Heap",
    "topic": "Heap (Min/Max)",
    "educational_goal": "Demonstrate Min/Max Heap operations",
    "expected_interactions": [
      "insert",
      "extract",
      "clear",
      "switch"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateUI()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Inserting",
      "label": "Inserting",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "logInsertion()"
      ],
      "exit_actions": [
        "clearInput()"
      ]
    },
    {
      "id": "S2_Extracting",
      "label": "Extracting",
      "type": "atomic",
      "entry_actions": [
        "logExtraction()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Clearing",
      "label": "Clearing",
      "type": "atomic",
      "entry_actions": [
        "logClearing()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SwitchingHeapType",
      "label": "SwitchingHeapType",
      "type": "atomic",
      "entry_actions": [
        "logHeapTypeSwitch()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button",
      "triggers": [
        "#insertBtn"
      ]
    },
    {
      "id": "USER_CLICKS_EXTRACT",
      "event_type": "user_action",
      "description": "User clicks the Extract Top button",
      "triggers": [
        "#extractBtn"
      ]
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button",
      "triggers": [
        "#clearBtn"
      ]
    },
    {
      "id": "USER_CLICKS_SWITCH",
      "event_type": "user_action",
      "description": "User clicks the Switch to Max Heap button",
      "triggers": [
        "#switchBtn"
      ]
    },
    {
      "id": "USER_INPUT_NUMBER",
      "event_type": "user_action",
      "description": "User inputs a number in the input field",
      "triggers": [
        "#numInput"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Inserting",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputIsValid",
      "actions": [
        "insertValue()"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Inserting",
      "to": "S0_Idle",
      "event": "USER_CLICKS_INSERT",
      "guard": "true",
      "actions": [
        "updateUI()"
      ],
      "expected_observables": [
        "dom:valueInserted"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Extracting",
      "event": "USER_CLICKS_EXTRACT",
      "guard": "heapNotEmpty",
      "actions": [
        "extractTopValue()"
      ],
      "expected_observables": [
        "dom:extractButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Extracting",
      "to": "S0_Idle",
      "event": "USER_CLICKS_EXTRACT",
      "guard": "true",
      "actions": [
        "updateUI()"
      ],
      "expected_observables": [
        "dom:valueExtracted"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_Clearing",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearHeap()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Clearing",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "updateUI()"
      ],
      "expected_observables": [
        "dom:heapCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_SwitchingHeapType",
      "event": "USER_CLICKS_SWITCH",
      "guard": "true",
      "actions": [
        "switchHeapType()"
      ],
      "expected_observables": [
        "dom:switchButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_SwitchingHeapType",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SWITCH",
      "guard": "true",
      "actions": [
        "updateUI()"
      ],
      "expected_observables": [
        "dom:heapTypeSwitched"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#numInput",
    "#insertBtn",
    "#extractBtn",
    "#clearBtn",
    "#switchBtn",
    "#heapArray",
    "#heapSVG",
    "#log"
  ]
}