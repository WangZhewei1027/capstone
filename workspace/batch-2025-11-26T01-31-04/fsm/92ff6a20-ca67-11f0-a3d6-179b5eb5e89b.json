{
  "meta": {
    "concept": "SlidingWindow",
    "topic": "Sliding Window Technique Visualization",
    "educational_goal": "Demonstrate the Sliding Window technique for array summation",
    "expected_interactions": [
      "start",
      "next",
      "previous",
      "example"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputReceived",
      "label": "InputReceived",
      "type": "atomic",
      "entry_actions": [
        "parseInputValues()",
        "renderArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_WindowSliding",
      "label": "WindowSliding",
      "type": "atomic",
      "entry_actions": [
        "highlightWindow(currentWindowStart)",
        "updateStatus()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start button",
      "triggers": [
        "#startBtn"
      ]
    },
    {
      "id": "USER_CLICKS_NEXT",
      "event_type": "user_action",
      "description": "User clicks the Next button",
      "triggers": [
        "#nextBtn"
      ]
    },
    {
      "id": "USER_CLICKS_PREVIOUS",
      "event_type": "user_action",
      "description": "User clicks the Previous button",
      "triggers": [
        "#prevBtn"
      ]
    },
    {
      "id": "USER_CLICKS_EXAMPLE",
      "event_type": "user_action",
      "description": "User clicks an example button",
      "triggers": [
        "#exampleArrays button"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputReceived",
      "event": "USER_CLICKS_START",
      "guard": "inputIsValid",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputReceived",
      "to": "S2_WindowSliding",
      "event": "USER_CLICKS_NEXT",
      "guard": "canSlideRight",
      "actions": [
        "slideWindowTo(currentWindowStart + 1)"
      ],
      "expected_observables": [
        "dom:windowSlidRight"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputReceived",
      "to": "S2_WindowSliding",
      "event": "USER_CLICKS_PREVIOUS",
      "guard": "canSlideLeft",
      "actions": [
        "slideWindowTo(currentWindowStart - 1)"
      ],
      "expected_observables": [
        "dom:windowSlidLeft"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputReceived",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_WindowSliding",
      "to": "S2_WindowSliding",
      "event": "USER_CLICKS_NEXT",
      "guard": "canSlideRight",
      "actions": [
        "slideWindowTo(currentWindowStart + 1)"
      ],
      "expected_observables": [
        "dom:windowSlidRight"
      ],
      "timeout": 500
    },
    {
      "from": "S2_WindowSliding",
      "to": "S2_WindowSliding",
      "event": "USER_CLICKS_PREVIOUS",
      "guard": "canSlideLeft",
      "actions": [
        "slideWindowTo(currentWindowStart - 1)"
      ],
      "expected_observables": [
        "dom:windowSlidLeft"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#windowSize",
    "#startBtn",
    "#prevBtn",
    "#nextBtn",
    "#exampleArrays button",
    "#arrayDisplay",
    "#sum-display",
    "#status"
  ]
}