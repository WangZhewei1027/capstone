{
  "meta": {
    "concept": "WeightedGraph",
    "topic": "Weighted Graph Visualization",
    "educational_goal": "Demonstrate graph creation and manipulation",
    "expected_interactions": [
      "add_node",
      "add_edge",
      "clear_graph",
      "drag_node"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "readNodeLabel()",
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeInput()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInputs()",
        "highlightEdgeInputs()"
      ],
      "exit_actions": [
        "clearEdgeInputs()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    },
    {
      "id": "S4_ClearingGraph",
      "label": "ClearingGraph",
      "type": "atomic",
      "entry_actions": [
        "confirmClearGraph()",
        "clearAllNodesAndEdges()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DraggingNode",
      "label": "DraggingNode",
      "type": "atomic",
      "entry_actions": [
        "trackNodeMovement()"
      ],
      "exit_actions": [
        "updateNodePosition()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_NODE",
      "event_type": "user_action",
      "description": "User clicks the Add Node button",
      "triggers": [
        "#add-node-btn"
      ]
    },
    {
      "id": "USER_CLICKS_ADD_EDGE",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button",
      "triggers": [
        "#add-edge-btn"
      ]
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Graph button",
      "triggers": [
        "#clear-btn"
      ]
    },
    {
      "id": "USER_DRAGS_NODE",
      "event_type": "user_action",
      "description": "User drags a node",
      "triggers": [
        ".node"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails during node or edge addition"
    },
    {
      "id": "NODE_ADDED",
      "event_type": "system_event",
      "description": "Node is successfully added to the graph"
    },
    {
      "id": "EDGE_ADDED",
      "event_type": "system_event",
      "description": "Edge is successfully added to the graph"
    },
    {
      "id": "GRAPH_CLEARED",
      "event_type": "system_event",
      "description": "Graph is cleared"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD_NODE",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addNodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "NODE_ADDED",
      "guard": "nodeAddedSuccessfully",
      "actions": [
        "renderGraph()"
      ],
      "expected_observables": [
        "dom:nodeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S0_Idle",
      "event": "EDGE_ADDED",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "renderGraph()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingGraph",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "confirmClearGraph()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ClearingGraph",
      "to": "S0_Idle",
      "event": "GRAPH_CLEARED",
      "guard": "true",
      "actions": [
        "renderGraph()"
      ],
      "expected_observables": [
        "dom:graphCleared"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_DraggingNode",
      "event": "USER_DRAGS_NODE",
      "guard": "true",
      "actions": [
        "startDraggingNode()"
      ],
      "expected_observables": [
        "dom:nodeDraggingStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_DraggingNode",
      "to": "S0_Idle",
      "event": "USER_DRAGS_NODE",
      "guard": "true",
      "actions": [
        "stopDraggingNode()"
      ],
      "expected_observables": [
        "dom:nodeDraggingStopped"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#node-label",
    "#add-node-btn",
    "#edge-from",
    "#edge-to",
    "#edge-weight",
    "#add-edge-btn",
    "#clear-btn",
    "#graph-svg"
  ]
}