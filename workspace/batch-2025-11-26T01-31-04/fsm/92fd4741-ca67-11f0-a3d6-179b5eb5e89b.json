{
  "meta": {
    "concept": "Set",
    "topic": "JavaScript Set Demo",
    "educational_goal": "Demonstrate adding unique values to a Set",
    "expected_interactions": [
      "add",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "displaySet(mySet)"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingValues",
      "label": "AddingValues",
      "type": "atomic",
      "entry_actions": [
        "parseInput(input.value)",
        "convertValues(rawValues)"
      ],
      "exit_actions": [
        "clearInput()"
      ]
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showError('Please enter some values to add.')"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ClearingSet",
      "label": "ClearingSet",
      "type": "atomic",
      "entry_actions": [
        "mySet.clear()",
        "displaySet(mySet)"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add to Set button",
      "triggers": "#addButton"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Set button",
      "triggers": "#clearButton"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingValues",
      "event": "USER_CLICKS_ADD",
      "guard": "inputNotEmpty",
      "actions": [
        "addValuesToSet()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingValues",
      "to": "S2_ErrorAlert",
      "event": "USER_CLICKS_ADD",
      "guard": "inputIsEmpty",
      "actions": [
        "showError('Please enter some values to add.')"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingValues",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD",
      "guard": "valuesAdded",
      "actions": [
        "displaySet(mySet)",
        "alertAddedCount()"
      ],
      "expected_observables": [
        "dom:setUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_ClearingSet",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearSet()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ClearingSet",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "displaySet(mySet)"
      ],
      "expected_observables": [
        "dom:setCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputValues",
    "#addButton",
    "#clearButton",
    "#output"
  ]
}