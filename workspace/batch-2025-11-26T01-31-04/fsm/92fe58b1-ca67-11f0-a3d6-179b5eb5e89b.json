{
  "meta": {
    "concept": "HeapSort",
    "topic": "Heap Sort Visualization",
    "educational_goal": "Demonstrate Heap Sort algorithm step-by-step",
    "expected_interactions": [
      "generate",
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray(array)",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingArray",
      "label": "GeneratingArray",
      "type": "atomic",
      "entry_actions": [
        "generateRandomArray()",
        "renderArray(array)"
      ],
      "exit_actions": [
        "clearLog()"
      ]
    },
    {
      "id": "S2_ParsingInput",
      "label": "ParsingInput",
      "type": "atomic",
      "entry_actions": [
        "parseInput()",
        "renderArray(array)"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "heapSort()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S4_Heapifying",
      "label": "Heapifying",
      "type": "atomic",
      "entry_actions": [
        "heapify(n, i)"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Swapping",
      "label": "Swapping",
      "type": "atomic",
      "entry_actions": [
        "swap(i, j)"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate Random button"
    },
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Start Heap Sort button"
    },
    {
      "id": "INPUT_PARSED",
      "event_type": "system_event",
      "description": "Input array has been parsed successfully"
    },
    {
      "id": "SORTING_COMPLETED",
      "event_type": "system_event",
      "description": "Heap Sort operation completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingArray",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:generateButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_GeneratingArray",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "clearLog()"
      ],
      "expected_observables": [
        "dom:arrayGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_ParsingInput",
      "event": "USER_CLICKS_SORT",
      "guard": "inputIsValid",
      "actions": [
        "parseInput()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ParsingInput",
      "to": "S3_Sorting",
      "event": "INPUT_PARSED",
      "guard": "true",
      "actions": [
        "startHeapSort()"
      ],
      "expected_observables": [
        "dom:inputParsed"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Sorting",
      "to": "S4_Heapifying",
      "event": "SORTING_COMPLETED",
      "guard": "true",
      "actions": [
        "heapify(n, i)"
      ],
      "expected_observables": [
        "dom:sortingStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S4_Heapifying",
      "to": "S5_Swapping",
      "event": "SORTING_COMPLETED",
      "guard": "true",
      "actions": [
        "swap(i, j)"
      ],
      "expected_observables": [
        "dom:heapifyingStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_Swapping",
      "to": "S3_Sorting",
      "event": "SORTING_COMPLETED",
      "guard": "true",
      "actions": [
        "completeSwap()"
      ],
      "expected_observables": [
        "dom:swappingCompleted"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#arrayInput",
    "#generateBtn",
    "#sortBtn",
    "#arrayContainer",
    "#log"
  ],
  "triggers": [
    "#generateBtn",
    "#sortBtn"
  ]
}