{
  "meta": {
    "concept": "PrimsAlgorithm",
    "topic": "Prim's Algorithm Visualization",
    "educational_goal": "Demonstrate Prim's algorithm for finding the minimum spanning tree",
    "expected_interactions": [
      "load_graph",
      "next_step",
      "run_automatically",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearLog()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_LoadingGraph",
      "label": "LoadingGraph",
      "type": "atomic",
      "entry_actions": [
        "parseInput()",
        "initializeGraph()"
      ],
      "exit_actions": [
        "drawGraph()"
      ]
    },
    {
      "id": "S2_StepExecution",
      "label": "StepExecution",
      "type": "atomic",
      "entry_actions": [
        "executeNextStep()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_AutomaticRun",
      "label": "AutomaticRun",
      "type": "atomic",
      "entry_actions": [
        "startAutoRun()"
      ],
      "exit_actions": [
        "stopAutoRun()"
      ]
    },
    {
      "id": "S4_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "finalizeMST()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_LOAD_GRAPH",
      "event_type": "user_action",
      "description": "User clicks the Load Graph button",
      "triggers": [
        "#loadGraphBtn"
      ]
    },
    {
      "id": "USER_CLICKS_NEXT_STEP",
      "event_type": "user_action",
      "description": "User clicks the Next Step button",
      "triggers": [
        "#stepBtn"
      ]
    },
    {
      "id": "USER_CLICKS_RUN_AUTOMATICALLY",
      "event_type": "user_action",
      "description": "User clicks the Run Automatically button",
      "triggers": [
        "#runBtn"
      ]
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button",
      "triggers": [
        "#resetBtn"
      ]
    },
    {
      "id": "GRAPH_LOADED",
      "event_type": "system_event",
      "description": "Graph is successfully loaded"
    },
    {
      "id": "STEP_EXECUTED",
      "event_type": "system_event",
      "description": "Next step of Prim's algorithm is executed"
    },
    {
      "id": "AUTOMATIC_RUN_COMPLETE",
      "event_type": "system_event",
      "description": "Automatic run of Prim's algorithm is complete"
    },
    {
      "id": "RESET_COMPLETE",
      "event_type": "system_event",
      "description": "Graph has been reset"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_LoadingGraph",
      "event": "USER_CLICKS_LOAD_GRAPH",
      "guard": "inputIsValid",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:loadGraphButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_LoadingGraph",
      "to": "S2_StepExecution",
      "event": "GRAPH_LOADED",
      "guard": "true",
      "actions": [
        "enableStepControls()"
      ],
      "expected_observables": [
        "dom:graphLoaded"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_StepExecution",
      "to": "S2_StepExecution",
      "event": "USER_CLICKS_NEXT_STEP",
      "guard": "true",
      "actions": [
        "executeNextStep()"
      ],
      "expected_observables": [
        "dom:stepExecuted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_StepExecution",
      "to": "S4_Completed",
      "event": "STEP_EXECUTED",
      "guard": "algorithmComplete",
      "actions": [
        "finalizeMST()"
      ],
      "expected_observables": [
        "dom:algorithmComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_StepExecution",
      "to": "S3_AutomaticRun",
      "event": "USER_CLICKS_RUN_AUTOMATICALLY",
      "guard": "true",
      "actions": [
        "startAutoRun()"
      ],
      "expected_observables": [
        "dom:autoRunStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_AutomaticRun",
      "to": "S4_Completed",
      "event": "AUTOMATIC_RUN_COMPLETE",
      "guard": "true",
      "actions": [
        "stopAutoRun()"
      ],
      "expected_observables": [
        "dom:autoRunCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "clearGraph()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "RESET_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:graphReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#edgesList",
    "#startNode",
    "#loadGraphBtn",
    "#stepBtn",
    "#runBtn",
    "#resetBtn",
    "#graphCanvas",
    "#log"
  ]
}