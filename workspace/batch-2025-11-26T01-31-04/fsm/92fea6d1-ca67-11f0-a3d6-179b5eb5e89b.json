{
  "meta": {
    "concept": "BreadthFirstSearch",
    "topic": "Breadth-First Search (BFS) Visualization",
    "educational_goal": "Demonstrate BFS algorithm and pathfinding",
    "expected_interactions": [
      "set_start",
      "set_target",
      "toggle_wall",
      "run_bfs",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "initGrid()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SetStart",
      "label": "SetStart",
      "type": "atomic",
      "entry_actions": [
        "highlightCurrentMode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_SetTarget",
      "label": "SetTarget",
      "type": "atomic",
      "entry_actions": [
        "highlightCurrentMode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ToggleWall",
      "label": "ToggleWall",
      "type": "atomic",
      "entry_actions": [
        "highlightCurrentMode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_RunningBFS",
      "label": "RunningBFS",
      "type": "atomic",
      "entry_actions": [
        "runBFS()",
        "disableControls()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_Clear",
      "label": "Clear",
      "type": "atomic",
      "entry_actions": [
        "initGrid()",
        "highlightCurrentMode()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SET_START",
      "event_type": "user_action",
      "description": "User clicks the Set Start button",
      "triggers": [
        "#setStartBtn"
      ]
    },
    {
      "id": "USER_CLICKS_SET_TARGET",
      "event_type": "user_action",
      "description": "User clicks the Set Target button",
      "triggers": [
        "#setTargetBtn"
      ]
    },
    {
      "id": "USER_CLICKS_TOGGLE_WALL",
      "event_type": "user_action",
      "description": "User clicks the Toggle Walls button",
      "triggers": [
        "#toggleWallBtn"
      ]
    },
    {
      "id": "USER_CLICKS_RUN_BFS",
      "event_type": "user_action",
      "description": "User clicks the Run BFS button",
      "triggers": [
        "#runBFSBtn"
      ]
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button",
      "triggers": [
        "#clearBtn"
      ]
    },
    {
      "id": "USER_CLICKS_GRID_NODE",
      "event_type": "user_action",
      "description": "User clicks on a grid node",
      "triggers": [
        ".node"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SetStart",
      "event": "USER_CLICKS_SET_START",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:setStartButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_SetTarget",
      "event": "USER_CLICKS_SET_TARGET",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:setTargetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_ToggleWall",
      "event": "USER_CLICKS_TOGGLE_WALL",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:toggleWallButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_SetStart",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GRID_NODE",
      "guard": "startNodeIsSet",
      "actions": [
        "setStartNode()"
      ],
      "expected_observables": [
        "dom:startNodeSet"
      ],
      "timeout": 500
    },
    {
      "from": "S2_SetTarget",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GRID_NODE",
      "guard": "targetNodeIsSet",
      "actions": [
        "setTargetNode()"
      ],
      "expected_observables": [
        "dom:targetNodeSet"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ToggleWall",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GRID_NODE",
      "guard": "wallToggleIsValid",
      "actions": [
        "toggleWall()"
      ],
      "expected_observables": [
        "dom:wallToggled"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_RunningBFS",
      "event": "USER_CLICKS_RUN_BFS",
      "guard": "startAndTargetSet",
      "actions": [
        "runBFS()"
      ],
      "expected_observables": [
        "dom:bfsRunning"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_Clear",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearGrid()"
      ],
      "expected_observables": [
        "dom:gridCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RunningBFS",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "stopBFS()"
      ],
      "expected_observables": [
        "dom:bfsStopped"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#setStartBtn",
    "#setTargetBtn",
    "#toggleWallBtn",
    "#runBFSBtn",
    "#clearBtn",
    ".node"
  ]
}