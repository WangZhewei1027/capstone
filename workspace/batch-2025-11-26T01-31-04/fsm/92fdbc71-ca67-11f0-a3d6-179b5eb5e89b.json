{
  "meta": {
    "concept": "Graph",
    "topic": "Directed/Undirected Graph Visualization",
    "educational_goal": "Demonstrate graph creation and manipulation",
    "expected_interactions": [
      "add_node",
      "clear_graph",
      "drag_edge",
      "change_graph_type"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "highlightCanvas()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_DraggingEdge",
      "label": "DraggingEdge",
      "type": "atomic",
      "entry_actions": [
        "showEdgePreview()"
      ],
      "exit_actions": [
        "clearEdgePreview()"
      ]
    },
    {
      "id": "S3_ClearingGraph",
      "label": "ClearingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraphData()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_NODE",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Graph button"
    },
    {
      "id": "USER_CLICKS_ON_CANVAS",
      "event_type": "user_action",
      "description": "User clicks on the canvas to place a node"
    },
    {
      "id": "USER_DRAGS_EDGE",
      "event_type": "user_action",
      "description": "User drags from one node to another to create an edge"
    },
    {
      "id": "GRAPH_TYPE_CHANGED",
      "event_type": "user_action",
      "description": "User changes the graph type (directed/undirected)"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD_NODE",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addNodeBtnClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ON_CANVAS",
      "guard": "true",
      "actions": [
        "placeNode()",
        "draw()"
      ],
      "expected_observables": [
        "dom:canvasClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_ClearingGraph",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearGraph()"
      ],
      "expected_observables": [
        "dom:clearBtnClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ClearingGraph",
      "to": "S0_Idle",
      "event": "GRAPH_TYPE_CHANGED",
      "guard": "true",
      "actions": [
        "resetGraph()"
      ],
      "expected_observables": [
        "dom:graphCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_DraggingEdge",
      "event": "USER_DRAGS_EDGE",
      "guard": "true",
      "actions": [
        "startDraggingEdge()"
      ],
      "expected_observables": [
        "dom:edgeDraggingStarted"
      ],
      "timeout": 500
    },
    {
      "from": "S2_DraggingEdge",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ON_CANVAS",
      "guard": "true",
      "actions": [
        "finalizeEdge()"
      ],
      "expected_observables": [
        "dom:edgeCreated"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#addNodeBtn",
    "#clearBtn",
    "#graphCanvas",
    "input[name='graphType']"
  ]
}