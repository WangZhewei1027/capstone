{
  "meta": {
    "concept": "LinearRegression",
    "topic": "Linear Regression Demo",
    "educational_goal": "Demonstrate linear regression through interactive data point addition",
    "expected_interactions": [
      "add_point",
      "reset_points"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "draw()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingPoint",
      "label": "AddingPoint",
      "type": "atomic",
      "entry_actions": [
        "capturePoint()"
      ],
      "exit_actions": [
        "draw()"
      ]
    },
    {
      "id": "S2_ResettingPoints",
      "label": "ResettingPoints",
      "type": "atomic",
      "entry_actions": [
        "clearPoints()"
      ],
      "exit_actions": [
        "draw()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksCanvas",
      "event_type": "user_action",
      "description": "User clicks on the canvas to add a data point"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset Points button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingPoint",
      "event": "UserClicksCanvas",
      "guard": "true",
      "actions": [
        "addPoint()"
      ],
      "expected_observables": [
        "dom:canvasClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingPoint",
      "to": "S0_Idle",
      "event": "UserClicksCanvas",
      "guard": "true",
      "actions": [
        "draw()"
      ],
      "expected_observables": [
        "dom:pointAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_ResettingPoints",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetPoints()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ResettingPoints",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "draw()"
      ],
      "expected_observables": [
        "dom:pointsCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#plot",
    "#resetBtn",
    "#info",
    "#instructions"
  ]
}