{
  "meta": {
    "concept": "Recursion",
    "topic": "Recursion Demonstration",
    "educational_goal": "Demonstrate factorial calculation using recursion",
    "expected_interactions": [
      "calculate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "enableButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "clearResult()",
        "appendTrace('Starting calculation...')"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearResult()"
      ]
    },
    {
      "id": "S3_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "appendTrace('Calculation complete.')"
      ],
      "exit_actions": [
        "resetInput()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate Factorial button"
    },
    {
      "id": "INPUT_IS_INVALID",
      "event_type": "system_event",
      "description": "Input value is invalid"
    },
    {
      "id": "CALCULATION_COMPLETE",
      "event_type": "system_event",
      "description": "Factorial calculation is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "inputIsValid",
      "actions": [
        "startCalculation()"
      ],
      "expected_observables": [
        "dom:calcBtnClicked",
        "dom:numInputValue"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Calculating",
      "to": "S3_Completed",
      "event": "CALCULATION_COMPLETE",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:calculationCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Calculating",
      "to": "S2_Error",
      "event": "INPUT_IS_INVALID",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMessageDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:errorCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Completed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "resetForNewCalculation()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#numInput",
    "#calcBtn",
    "#result"
  ]
}