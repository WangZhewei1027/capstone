{
  "meta": {
    "concept": "UnionFind",
    "topic": "Union-Find (Disjoint Set)",
    "educational_goal": "Demonstrate Union-Find operations",
    "expected_interactions": [
      "search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSearchForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "readSearchInput()",
        "highlightSearchField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ProcessingSearch",
      "label": "ProcessingSearch",
      "type": "atomic",
      "entry_actions": [
        "validateSearchInput()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S3_SearchResults",
      "label": "SearchResults",
      "type": "atomic",
      "entry_actions": [
        "displaySearchResults()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSubmitsSearch",
      "event_type": "user_action",
      "description": "User submits the search form"
    },
    {
      "id": "SearchInputValidated",
      "event_type": "system_event",
      "description": "Search input is validated successfully"
    },
    {
      "id": "SearchInputInvalid",
      "event_type": "system_event",
      "description": "Search input is invalid"
    },
    {
      "id": "SearchResultsDisplayed",
      "event_type": "system_event",
      "description": "Search results are displayed"
    },
    {
      "id": "UserDismissesError",
      "event_type": "user_action",
      "description": "User dismisses the error alert"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Searching",
      "event": "UserSubmitsSearch",
      "guard": "inputNotEmpty",
      "actions": [
        "captureSearchInput()",
        "disableSearchForm()"
      ],
      "expected_observables": [
        "dom:searchFormSubmitted"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Searching",
      "to": "S2_ProcessingSearch",
      "event": "SearchInputValidated",
      "guard": "inputIsValid",
      "actions": [
        "processSearch()",
        "prepareResults()"
      ],
      "expected_observables": [
        "dom:searchInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ProcessingSearch",
      "to": "S3_SearchResults",
      "event": "SearchResultsDisplayed",
      "guard": "resultsAvailable",
      "actions": [
        "updateTableWithResults()"
      ],
      "expected_observables": [
        "dom:resultsDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_Searching",
      "to": "S4_ErrorAlert",
      "event": "SearchInputInvalid",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusSearchInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesError",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetSearchInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#unionFindForm",
    "#search",
    "button[type='submit']",
    "#unionTable",
    "#unionTableBody"
  ],
  "triggers": [
    "#unionFindForm",
    "#search",
    "button[type='submit']"
  ]
}