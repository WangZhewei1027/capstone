{
  "meta": {
    "concept": "RadixSort",
    "topic": "Radix Sort Visualization",
    "educational_goal": "Demonstrate the Radix Sort algorithm",
    "expected_interactions": [
      "startSort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "initializeSort()",
        "highlightCurrentDigit()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "displaySortedArray()",
        "resetHighlights()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting operation is complete"
    },
    {
      "id": "SORTING_ERROR",
      "event_type": "system_event",
      "description": "An error occurred during sorting"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_START",
      "guard": "inputIsValid",
      "actions": [
        "startSorting()",
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Completed",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeSort()",
        "enableResetButton()"
      ],
      "expected_observables": [
        "dom:sortingFinished"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Sorting",
      "to": "S3_Error",
      "event": "SORTING_ERROR",
      "guard": "true",
      "actions": [
        "handleError()"
      ],
      "expected_observables": [
        "dom:sortingErrorOccurred"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetSortState()",
        "enableStartButton()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Completed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetSortVisualization()",
        "enableStartButton()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#startButton",
    "#resetButton",
    "#radixSort"
  ]
}