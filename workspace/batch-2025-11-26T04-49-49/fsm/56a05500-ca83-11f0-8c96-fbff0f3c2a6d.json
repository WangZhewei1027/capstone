{
  "meta": {
    "concept": "KMeansClustering",
    "topic": "K-Means Clustering",
    "educational_goal": "Demonstrate K-Means clustering process",
    "expected_interactions": [
      "add_cluster",
      "remove_cluster",
      "update_map"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableAddCluster()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingCluster",
      "label": "AddingCluster",
      "type": "atomic",
      "entry_actions": [
        "prepareNewCluster()"
      ],
      "exit_actions": [
        "clearNewClusterInput()"
      ]
    },
    {
      "id": "S2_UpdatingMap",
      "label": "UpdatingMap",
      "type": "atomic",
      "entry_actions": [
        "validateClusters()",
        "updateClusterLabels()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_RemovingCluster",
      "label": "RemovingCluster",
      "type": "atomic",
      "entry_actions": [
        "confirmClusterRemoval()"
      ],
      "exit_actions": [
        "clearRemovedCluster()"
      ]
    },
    {
      "id": "S4_ClusterAdded",
      "label": "ClusterAdded",
      "type": "atomic",
      "entry_actions": [
        "showSuccessMessage()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_NEW_CLUSTER",
      "event_type": "user_action",
      "description": "User clicks the Add New Cluster link",
      "triggers": [
        "#cluster .label"
      ]
    },
    {
      "id": "USER_CLICKS_UPDATE_MAP",
      "event_type": "user_action",
      "description": "User clicks the Update Map button",
      "triggers": [
        "#updateMap"
      ]
    },
    {
      "id": "USER_CLICKS_REMOVE_CLUSTER",
      "event_type": "user_action",
      "description": "User clicks to remove a cluster",
      "triggers": [
        "#labels li"
      ]
    },
    {
      "id": "CLUSTER_ADDED_SUCCESSFULLY",
      "event_type": "system_event",
      "description": "Cluster added successfully",
      "triggers": []
    },
    {
      "id": "CLUSTER_REMOVED_SUCCESSFULLY",
      "event_type": "system_event",
      "description": "Cluster removed successfully",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingCluster",
      "event": "USER_CLICKS_ADD_NEW_CLUSTER",
      "guard": "true",
      "actions": [
        "addNewCluster()"
      ],
      "expected_observables": [
        "dom:clusterAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingCluster",
      "to": "S4_ClusterAdded",
      "event": "CLUSTER_ADDED_SUCCESSFULLY",
      "guard": "true",
      "actions": [
        "displayClusterOnMap()"
      ],
      "expected_observables": [
        "dom:clusterDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_UpdatingMap",
      "event": "USER_CLICKS_UPDATE_MAP",
      "guard": "true",
      "actions": [
        "updateMap()"
      ],
      "expected_observables": [
        "dom:mapUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingCluster",
      "event": "USER_CLICKS_REMOVE_CLUSTER",
      "guard": "true",
      "actions": [
        "removeCluster()"
      ],
      "expected_observables": [
        "dom:clusterRemoved"
      ],
      "timeout": 500
    },
    {
      "from": "S3_RemovingCluster",
      "to": "S0_Idle",
      "event": "CLUSTER_REMOVED_SUCCESSFULLY",
      "guard": "true",
      "actions": [
        "clearClusterFromMap()"
      ],
      "expected_observables": [
        "dom:clusterCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#map",
    "#cluster",
    "#labels",
    "#updateMap"
  ]
}