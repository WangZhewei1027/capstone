{
  "meta": {
    "concept": "Deque",
    "topic": "Deque Visualization",
    "educational_goal": "Demonstrate deque operations",
    "expected_interactions": [
      "push",
      "pop",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderDeque()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_PushingElement",
      "label": "PushingElement",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_PoppingElement",
      "label": "PoppingElement",
      "type": "atomic",
      "entry_actions": [
        "removeLastElement()",
        "updateVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_DequeResetting",
      "label": "DequeResetting",
      "type": "atomic",
      "entry_actions": [
        "clearDeque()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksPush",
      "event_type": "user_action",
      "description": "User clicks the Push button"
    },
    {
      "id": "UserClicksPop",
      "event_type": "user_action",
      "description": "User clicks the Pop button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_PushingElement",
      "event": "UserClicksPush",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:inputValueCaptured",
        "dom:pushButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_PushingElement",
      "to": "S0_Idle",
      "event": "UserClicksPush",
      "guard": "true",
      "actions": [
        "executePush()",
        "updateDequeVisualization()"
      ],
      "expected_observables": [
        "dom:elementPushed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_PoppingElement",
      "event": "UserClicksPop",
      "guard": "dequeNotEmpty",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:popButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_PoppingElement",
      "to": "S0_Idle",
      "event": "UserClicksPop",
      "guard": "true",
      "actions": [
        "executePop()",
        "updateDequeVisualization()"
      ],
      "expected_observables": [
        "dom:elementPopped"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_DequeResetting",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_DequeResetting",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:dequeCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "push_button",
    "pop_button",
    "reset_button",
    "deque_visualization"
  ]
}