{
  "meta": {
    "concept": "TopologicalSort",
    "topic": "Topological Sort Visualization",
    "educational_goal": "Demonstrate topological sorting of an array",
    "expected_interactions": [
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingData",
      "label": "InputtingData",
      "type": "atomic",
      "entry_actions": [
        "focusInput()"
      ],
      "exit_actions": [
        "clearInput()"
      ]
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "initiateSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "displaySortedArray()"
      ],
      "exit_actions": [
        "resetInputField()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "InputReceived",
      "event_type": "system_event",
      "description": "Input has been received and sorting initiated"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting operation has completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingData",
      "event": "UserClicksSort",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()"
      ],
      "expected_observables": [
        "dom:inputFocused"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputtingData",
      "to": "S2_Sorting",
      "event": "UserClicksSort",
      "guard": "inputIsValid",
      "actions": [
        "validateInput()",
        "startSorting()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Sorting",
      "to": "S3_Sorted",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "finalizeSort()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 2000
    }
  ],
  "components": [
    "#arrayInput",
    "button"
  ]
}