{
  "meta": {
    "concept": "DijkstraAlgorithm",
    "topic": "Dijkstra's Algorithm Visualization",
    "educational_goal": "Demonstrate Dijkstra's algorithm for finding the shortest path",
    "expected_interactions": [
      "startAlgorithm",
      "resetAlgorithm"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AlgorithmRunning",
      "label": "AlgorithmRunning",
      "type": "atomic",
      "entry_actions": [
        "initializeGraph()",
        "startDijkstra()"
      ],
      "exit_actions": [
        "clearGraph()"
      ]
    },
    {
      "id": "S2_AlgorithmCompleted",
      "label": "AlgorithmCompleted",
      "type": "atomic",
      "entry_actions": [
        "displayShortestPath()",
        "highlightPath()"
      ],
      "exit_actions": [
        "resetVisualization()"
      ]
    },
    {
      "id": "S3_ErrorState",
      "label": "ErrorState",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button",
      "triggers": [
        "#main"
      ]
    },
    {
      "id": "AlgorithmFinished",
      "event_type": "system_event",
      "description": "Dijkstra's algorithm has completed execution"
    },
    {
      "id": "AlgorithmError",
      "event_type": "system_event",
      "description": "An error occurred during the algorithm execution"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AlgorithmRunning",
      "event": "UserClicksStart",
      "guard": "true",
      "actions": [
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AlgorithmRunning",
      "to": "S2_AlgorithmCompleted",
      "event": "AlgorithmFinished",
      "guard": "true",
      "actions": [
        "enableStartButton()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AlgorithmRunning",
      "to": "S3_ErrorState",
      "event": "AlgorithmError",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorOccurred"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorState",
      "to": "S0_Idle",
      "event": "UserClicksStart",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorResolved"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#main"
  ]
}