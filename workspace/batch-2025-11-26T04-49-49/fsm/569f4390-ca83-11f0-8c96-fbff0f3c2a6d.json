{
  "meta": {
    "concept": "LongestCommonSubsequence",
    "topic": "Longest Common Subsequence Calculation",
    "educational_goal": "Demonstrate LCS algorithm and visualization",
    "expected_interactions": [
      "calculate",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableCalculateButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "showLoadingSpinner()",
        "computeLCS()"
      ],
      "exit_actions": [
        "hideLoadingSpinner()"
      ]
    },
    {
      "id": "S2_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "clearResult()"
      ]
    },
    {
      "id": "S3_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate button"
    },
    {
      "id": "CALCULATION_COMPLETE",
      "event_type": "system_event",
      "description": "Calculation of LCS is complete"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "CALCULATION_FAILED",
      "event_type": "system_event",
      "description": "Calculation of LCS has failed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "inputIsValid",
      "actions": [
        "disableCalculateButton()",
        "startCalculation()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Calculating",
      "to": "S2_ResultDisplayed",
      "event": "CALCULATION_COMPLETE",
      "guard": "true",
      "actions": [
        "showResult()",
        "enableResetButton()"
      ],
      "expected_observables": [
        "dom:calculationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Calculating",
      "to": "S3_Error",
      "event": "CALCULATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()",
        "disableResetButton()"
      ],
      "expected_observables": [
        "dom:calculationFailed"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ResultDisplayed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "clearInputFields()",
        "resetResultDisplay()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:errorCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "calculateButton",
    "resetButton",
    "resultDisplay",
    "errorDisplay"
  ]
}