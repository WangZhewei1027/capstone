{
  "meta": {
    "concept": "LinearSearch",
    "topic": "Linear Search Visualization",
    "educational_goal": "Demonstrate linear search algorithm",
    "expected_interactions": [
      "search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSearch()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightSearching()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_SearchComplete",
      "label": "SearchComplete",
      "type": "atomic",
      "entry_actions": [
        "showSearchResults()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "SEARCH_COMPLETE",
      "event_type": "system_event",
      "description": "Search operation completes"
    },
    {
      "id": "INPUT_IS_EMPTY",
      "event_type": "system_event",
      "description": "Input field is empty"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Searching",
      "event": "USER_CLICKS_SEARCH",
      "guard": "inputNotEmpty",
      "actions": [
        "startSearch()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Searching",
      "to": "S2_SearchComplete",
      "event": "SEARCH_COMPLETE",
      "guard": "true",
      "actions": [
        "processSearchResults()"
      ],
      "expected_observables": [
        "dom:searchCompleted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_Searching",
      "to": "S3_ErrorAlert",
      "event": "INPUT_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_SearchComplete",
      "to": "S0_Idle",
      "event": "SEARCH_COMPLETE",
      "guard": "true",
      "actions": [
        "resetSearch()"
      ],
      "expected_observables": [
        "dom:searchResultsDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input[type=text]",
    "button"
  ]
}