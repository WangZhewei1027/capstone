{
  "meta": {
    "concept": "LinearRegression",
    "topic": "Linear Regression",
    "educational_goal": "Demonstrate linear regression techniques",
    "expected_interactions": [
      "generate_regression"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableGenerateButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingRegression",
      "label": "GeneratingRegression",
      "type": "atomic",
      "entry_actions": [
        "disableGenerateButton()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_RegressionComplete",
      "label": "RegressionComplete",
      "type": "atomic",
      "entry_actions": [
        "displayRegressionResults()"
      ],
      "exit_actions": [
        "resetLoadingState()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE_REGRESSION",
      "event_type": "user_action",
      "description": "User clicks the Generate Regression button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingRegression",
      "event": "USER_CLICKS_GENERATE_REGRESSION",
      "guard": "true",
      "actions": [
        "startRegressionProcess()"
      ],
      "expected_observables": [
        "dom:generateRegressionButtonClicked"
      ],
      "timeout": 3000
    },
    {
      "from": "S1_GeneratingRegression",
      "to": "S2_RegressionComplete",
      "event": "REGRESSION_PROCESS_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeRegression()"
      ],
      "expected_observables": [
        "dom:regressionResultsDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RegressionComplete",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE_REGRESSION",
      "guard": "true",
      "actions": [
        "resetForNewRegression()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "button.generate_regression"
  ]
}