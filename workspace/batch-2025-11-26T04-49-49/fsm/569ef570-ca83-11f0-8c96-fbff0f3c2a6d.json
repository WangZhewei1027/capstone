{
  "meta": {
    "concept": "FibonacciSequence",
    "topic": "Fibonacci Sequence Generation",
    "educational_goal": "Demonstrate Fibonacci sequence generation",
    "expected_interactions": [
      "generate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitialSequence()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Generating",
      "label": "Generating",
      "type": "atomic",
      "entry_actions": [
        "startFibonacciGeneration()"
      ],
      "exit_actions": [
        "updateDisplay()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Generating",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "generateFibonacci()"
      ],
      "expected_observables": [
        "dom:generateButtonClicked"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "button#generate",
    "p#fibonacci"
  ],
  "triggers": [
    "button[onclick='generate()']"
  ]
}