{
  "meta": {
    "concept": "PrimsAlgorithm",
    "topic": "Prim's Algorithm Visualization",
    "educational_goal": "Demonstrate Prim's Algorithm for generating permutations",
    "expected_interactions": [
      "start",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Processing",
      "label": "Processing",
      "type": "atomic",
      "entry_actions": [
        "disableStartButton()",
        "showProcessingAnimation()"
      ],
      "exit_actions": [
        "hideProcessingAnimation()"
      ]
    },
    {
      "id": "S2_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S3_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "displayResults()"
      ],
      "exit_actions": [
        "clearResults()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "PROCESSING_COMPLETE",
      "event_type": "system_event",
      "description": "Processing of permutations is complete"
    },
    {
      "id": "PROCESSING_ERROR",
      "event_type": "system_event",
      "description": "An error occurred during processing"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Processing",
      "event": "USER_CLICKS_START",
      "guard": "inputIsValid",
      "actions": [
        "startProcessing()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Processing",
      "to": "S3_Completed",
      "event": "PROCESSING_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeResults()"
      ],
      "expected_observables": [
        "dom:processingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Processing",
      "to": "S2_Error",
      "event": "PROCESSING_ERROR",
      "guard": "true",
      "actions": [
        "handleError()"
      ],
      "expected_observables": [
        "dom:errorOccurred"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetApplication()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Completed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetApplication()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "startButton",
    "resetButton"
  ]
}