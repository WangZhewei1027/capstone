{
  "meta": {
    "concept": "HashTable",
    "topic": "Hash Table Visualization",
    "educational_goal": "Demonstrate hash table insertion",
    "expected_interactions": [
      "add_entry"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableTable()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEntry",
      "label": "AddingEntry",
      "type": "atomic",
      "entry_actions": [
        "prepareNewEntry()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksTable",
      "event_type": "user_action",
      "description": "User clicks on the hash table to add a new entry"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEntry",
      "event": "UserClicksTable",
      "guard": "true",
      "actions": [
        "addNewEntry()"
      ],
      "expected_observables": [
        "dom:entryAdded"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "hashTable"
  ],
  "triggers": [
    "#hashTable"
  ]
}