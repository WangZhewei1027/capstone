{
  "meta": {
    "concept": "KruskalAlgorithm",
    "topic": "Kruskal's Algorithm Visualization",
    "educational_goal": "Demonstrate Kruskal's algorithm for finding the k-th smallest element",
    "expected_interactions": [
      "startSorting",
      "resetSorting"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "initializeSorting()",
        "renderSortingVisualization()"
      ],
      "exit_actions": [
        "clearSortingVisualization()"
      ]
    },
    {
      "id": "S2_SortingComplete",
      "label": "SortingComplete",
      "type": "atomic",
      "entry_actions": [
        "displayResult()",
        "highlightKthElement()"
      ],
      "exit_actions": [
        "resetVisualization()"
      ]
    },
    {
      "id": "S3_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting operation completes"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "SortingError",
      "event_type": "system_event",
      "description": "An error occurs during sorting"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "UserClicksStart",
      "guard": "inputArrayProvided",
      "actions": [
        "startSortingProcess()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_SortingComplete",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 3000
    },
    {
      "from": "S1_Sorting",
      "to": "S3_Error",
      "event": "SortingError",
      "guard": "true",
      "actions": [
        "handleSortingError()"
      ],
      "expected_observables": [
        "dom:errorOccurred"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SortingComplete",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetSortingState()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Error",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetErrorState()"
      ],
      "expected_observables": [
        "dom:errorResetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#startButton",
    "#resetButton",
    "#inputArray",
    "#resultDisplay"
  ],
  "triggers": "#startButton, #resetButton"
}