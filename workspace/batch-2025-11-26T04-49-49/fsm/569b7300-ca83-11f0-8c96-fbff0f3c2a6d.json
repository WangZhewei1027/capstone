{
  "meta": {
    "concept": "Graph",
    "topic": "Directed/Undirected Graph Visualization",
    "educational_goal": "Demonstrate graph creation and manipulation",
    "expected_interactions": [
      "addNode",
      "addEdge",
      "removeNode",
      "removeEdge",
      "resetGraph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "prepareToAddNode()",
        "highlightCanvas()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "prepareToAddEdge()",
        "highlightNodes()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S3_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "prepareToRemoveNode()",
        "showRemovalFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_RemovingEdge",
      "label": "RemovingEdge",
      "type": "atomic",
      "entry_actions": [
        "prepareToRemoveEdge()",
        "showEdgeRemovalFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodes()",
        "resetGraphVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksRemoveNode",
      "event_type": "user_action",
      "description": "User clicks the Remove Node button"
    },
    {
      "id": "UserClicksRemoveEdge",
      "event_type": "user_action",
      "description": "User clicks the Remove Edge button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "UserClicksAddNode",
      "guard": "true",
      "actions": [
        "disableControls()",
        "showNodeInput()"
      ],
      "expected_observables": [
        "dom:addNodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "true",
      "actions": [
        "disableControls()",
        "showEdgeInput()"
      ],
      "expected_observables": [
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingNode",
      "event": "UserClicksRemoveNode",
      "guard": "true",
      "actions": [
        "disableControls()",
        "showNodeRemovalInput()"
      ],
      "expected_observables": [
        "dom:removeNodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_RemovingEdge",
      "event": "UserClicksRemoveEdge",
      "guard": "true",
      "actions": [
        "disableControls()",
        "showEdgeRemovalInput()"
      ],
      "expected_observables": [
        "dom:removeEdgeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "NodeAdded",
      "guard": "true",
      "actions": [
        "updateGraph()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:nodeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S0_Idle",
      "event": "EdgeAdded",
      "guard": "true",
      "actions": [
        "updateGraph()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RemovingNode",
      "to": "S0_Idle",
      "event": "NodeRemoved",
      "guard": "true",
      "actions": [
        "updateGraph()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:nodeRemoved"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_RemovingEdge",
      "to": "S0_Idle",
      "event": "EdgeRemoved",
      "guard": "true",
      "actions": [
        "updateGraph()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:edgeRemoved"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "clearInputFields()"
      ],
      "expected_observables": [
        "dom:graphReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "canvas#myCanvas"
  ]
}