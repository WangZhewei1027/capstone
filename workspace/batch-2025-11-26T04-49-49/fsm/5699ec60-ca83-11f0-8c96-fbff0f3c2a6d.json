{
  "meta": {
    "concept": "HashMap",
    "topic": "Hash Map Visualization",
    "educational_goal": "Demonstrate hash map creation and manipulation",
    "expected_interactions": [
      "add",
      "remove",
      "retrieve",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEntry",
      "label": "AddingEntry",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_InsertingEntry",
      "label": "InsertingEntry",
      "type": "atomic",
      "entry_actions": [
        "insertEntryIntoMap()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_EntryInserted",
      "label": "EntryInserted",
      "type": "atomic",
      "entry_actions": [
        "updateMapDisplay()",
        "clearInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_ResettingMap",
      "label": "ResettingMap",
      "type": "atomic",
      "entry_actions": [
        "clearAllEntries()",
        "resetMapDisplay()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAdd",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters key-value pairs in input fields"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "EntryInsertionComplete",
      "event_type": "system_event",
      "description": "Entry insertion into the map is complete"
    },
    {
      "id": "MapResetComplete",
      "event_type": "system_event",
      "description": "Map reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEntry",
      "event": "UserClicksAdd",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingEntry",
      "to": "S2_ValidatingInput",
      "event": "UserEntersInput",
      "guard": "true",
      "actions": [
        "validateInput()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputEntered"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_InsertingEntry",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "parseInputValues()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_InsertingEntry",
      "to": "S5_EntryInserted",
      "event": "EntryInsertionComplete",
      "guard": "entryInsertedSuccessfully",
      "actions": [
        "updateMapStructure()",
        "triggerDisplayUpdate()"
      ],
      "expected_observables": [
        "dom:entryInserted"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingMap",
      "event": "UserClicksReset",
      "guard": "mapNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingMap",
      "to": "S0_Idle",
      "event": "MapResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:mapCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "addButton",
    "resetButton",
    "mapDisplay"
  ]
}