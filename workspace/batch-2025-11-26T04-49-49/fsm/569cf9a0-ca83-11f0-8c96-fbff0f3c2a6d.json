{
  "meta": {
    "concept": "MergeSort",
    "topic": "Merge Sort Visualization",
    "educational_goal": "Demonstrate the merge sort algorithm step by step",
    "expected_interactions": [
      "start_sort",
      "reset_sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "initializeSorting()",
        "highlightCurrentElements()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Merging",
      "label": "Merging",
      "type": "atomic",
      "entry_actions": [
        "prepareMerge()",
        "visualizeMergeStep()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "displaySortedArray()",
        "enableResetButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearVisualization()",
        "resetInputField()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Merging",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "mergeSortedArrays()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_Merging",
      "to": "S3_Completed",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeMerge()"
      ],
      "expected_observables": [
        "dom:mergingComplete"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_Completed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetSorting()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "beginReset()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "completeReset()"
      ],
      "expected_observables": [
        "dom:resetComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#startButton",
    "#resetButton",
    ".arrayVisualization"
  ]
}