{
  "meta": {
    "concept": "BreadthFirstSearch",
    "topic": "Breadth-First Search Visualization",
    "educational_goal": "Demonstrate BFS algorithm step-by-step",
    "expected_interactions": [
      "start",
      "pause",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "initializeSearch()",
        "highlightCurrentNode()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Paused",
      "label": "Paused",
      "type": "atomic",
      "entry_actions": [
        "pauseSearch()"
      ],
      "exit_actions": [
        "resumeSearch()"
      ]
    },
    {
      "id": "S3_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "displayResults()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "clearResults()"
      ]
    },
    {
      "id": "S4_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "USER_CLICKS_PAUSE",
      "event_type": "user_action",
      "description": "User clicks the Pause button"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "SEARCH_COMPLETED",
      "event_type": "system_event",
      "description": "Search operation completed"
    },
    {
      "id": "SEARCH_ERROR",
      "event_type": "system_event",
      "description": "An error occurred during search"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Searching",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "startSearch()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Searching",
      "to": "S2_Paused",
      "event": "USER_CLICKS_PAUSE",
      "guard": "true",
      "actions": [
        "pauseCurrentSearch()"
      ],
      "expected_observables": [
        "dom:pauseButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Paused",
      "to": "S1_Searching",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "resumeSearch()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Searching",
      "to": "S3_Completed",
      "event": "SEARCH_COMPLETED",
      "guard": "true",
      "actions": [
        "finalizeResults()"
      ],
      "expected_observables": [
        "dom:searchCompleted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_Searching",
      "to": "S4_Error",
      "event": "SEARCH_ERROR",
      "guard": "true",
      "actions": [
        "handleError()"
      ],
      "expected_observables": [
        "dom:errorOccurred"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Completed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetSearch()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "clearError()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#start-button",
    "#pause-button",
    "#reset-button",
    "#search-box"
  ]
}