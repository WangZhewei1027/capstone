{
  "meta": {
    "concept": "FloydWarshallAlgorithm",
    "topic": "Floyd-Warshall Algorithm Visualization",
    "educational_goal": "Demonstrate the Floyd-Warshall algorithm for finding shortest paths in a graph",
    "expected_interactions": [
      "calculate",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "resetResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "displayResult()",
        "highlightResult()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate Min References button"
    },
    {
      "id": "CALCULATION_COMPLETE",
      "event_type": "system_event",
      "description": "Calculation of minimum references is complete"
    },
    {
      "id": "CALCULATION_FAILED",
      "event_type": "system_event",
      "description": "Calculation fails due to invalid input"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Calculating",
      "to": "S2_DisplayResult",
      "event": "CALCULATION_COMPLETE",
      "guard": "calculationSuccessful",
      "actions": [
        "processResult()",
        "showResult()"
      ],
      "expected_observables": [
        "dom:calculationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Calculating",
      "to": "S3_ErrorAlert",
      "event": "CALCULATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_DisplayResult",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "resetInputField()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#min-references",
    "button",
    "#result"
  ],
  "triggers": [
    "#min-references",
    "button"
  ]
}