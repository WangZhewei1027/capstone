{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Bubble Sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "drawArray",
      "onExit": "noop",
      "on": {
        "SORT_BUTTON_CLICKED": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "SORT_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "SORT_BUTTON_CLICKED",
    "SORT_COMPLETE"
  ],
  "triggers": {
    "SORT_BUTTON_CLICKED": "#sortButton",
    "SORT_COMPLETE": "#array"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}