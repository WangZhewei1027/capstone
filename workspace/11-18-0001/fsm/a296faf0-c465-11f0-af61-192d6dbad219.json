{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Interactive Linked List Explorer application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_NODE": "addingNode",
        "REMOVE_NODE": "removingNode"
      }
    },
    {
      "name": "addingNode",
      "onEnter": "addNode",
      "onExit": "noop",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "removingNode",
      "onEnter": "removeNode",
      "onExit": "noop",
      "on": {
        "NODE_REMOVED": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "REMOVE_NODE",
    "NODE_ADDED",
    "NODE_REMOVED"
  ],
  "notes": "States represent the main actions of adding and removing nodes in the linked list."
}