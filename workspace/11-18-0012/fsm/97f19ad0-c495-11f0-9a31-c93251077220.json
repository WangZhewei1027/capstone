{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Bubble Sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "GENERATE_ARRAY_CLICKED": "array_generated",
        "SORT_ARRAY_CLICKED": "sorting"
      }
    },
    {
      "name": "array_generated",
      "onEnter": "renderArray",
      "onExit": "noop",
      "on": {
        "SORT_ARRAY_CLICKED": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "bubbleSort",
      "onExit": "noop",
      "on": {
        "SORT_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "GENERATE_ARRAY_CLICKED",
    "SORT_ARRAY_CLICKED",
    "SORT_COMPLETE"
  ],
  "triggers": {
    "GENERATE_ARRAY_CLICKED": "button:contains('Generate Array')",
    "SORT_ARRAY_CLICKED": "button:contains('Sort Array')"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}