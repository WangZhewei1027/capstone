{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive web application that manages an array through user inputs.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearInputField",
      "onExit": "",
      "on": {
        "ADD_ITEM": "updating",
        "REMOVE_ITEM": "updating",
        "DISPLAY_ARRAY": "displaying"
      }
    },
    {
      "name": "updating",
      "onEnter": "updateArray",
      "onExit": "",
      "on": {
        "ITEM_ADDED": "idle",
        "ITEM_REMOVED": "idle"
      }
    },
    {
      "name": "displaying",
      "onEnter": "showArray",
      "onExit": "",
      "on": {
        "ARRAY_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "ADD_ITEM",
    "REMOVE_ITEM",
    "DISPLAY_ARRAY",
    "ITEM_ADDED",
    "ITEM_REMOVED",
    "ARRAY_DISPLAYED"
  ],
  "notes": "The 'idle' state is where the user can input data. The 'updating' state handles changes to the array, and the 'displaying' state shows the current contents of the array."
}