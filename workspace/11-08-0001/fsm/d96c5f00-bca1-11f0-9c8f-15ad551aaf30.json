{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive web application that allows users to manage a JavaScript array.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearInputField",
      "onExit": null,
      "on": {
        "ADD_BUTTON_CLICK": "updating",
        "SORT_BUTTON_CLICK": "sorting"
      }
    },
    {
      "name": "updating",
      "onEnter": "addItemToArray",
      "onExit": "updateArrayDisplay",
      "on": {
        "ITEM_ADDED": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "sortArray",
      "onExit": "updateArrayDisplay",
      "on": {
        "ARRAY_SORTED": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "initiateRemoveItem",
      "onExit": "updateArrayDisplay",
      "on": {
        "ITEM_REMOVED": "idle"
      }
    }
  ],
  "events": [
    "ADD_BUTTON_CLICK",
    "SORT_BUTTON_CLICK",
    "ITEM_ADDED",
    "ARRAY_SORTED",
    "ITEM_REMOVED"
  ],
  "notes": "The application transitions between states based on user interactions with buttons for adding and sorting items in an array, as well as removing items by clicking on them."
}