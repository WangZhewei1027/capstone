{
  "topic": "Queue",
  "description": "Finite state machine modeling the operations of a queue including enqueue and dequeue actions.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ENQUEUE_ITEM": "item_enqueued",
        "DEQUEUE_ITEM": "item_dequeued"
      }
    },
    {
      "name": "item_enqueued",
      "onEnter": "enqueueItem",
      "onExit": "noop",
      "on": {
        "DEQUEUE_ITEM": "item_dequeued",
        "RESET_QUEUE": "idle"
      }
    },
    {
      "name": "item_dequeued",
      "onEnter": "dequeueItem",
      "onExit": "noop",
      "on": {
        "ENQUEUE_ITEM": "item_enqueued",
        "RESET_QUEUE": "idle"
      }
    }
  ],
  "events": [
    "ENQUEUE_ITEM",
    "DEQUEUE_ITEM",
    "RESET_QUEUE"
  ],
  "triggers": {
    "ENQUEUE_ITEM": ".queue",
    "DEQUEUE_ITEM": ".queue",
    "RESET_QUEUE": ".queue"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}