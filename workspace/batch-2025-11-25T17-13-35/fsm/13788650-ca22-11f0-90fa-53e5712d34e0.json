{
  "topic": "Linked List",
  "description": "Finite state machine modeling the interactive states of a linked list application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_NODE_CLICKED": "adding_node",
        "DISPLAY_LIST_CLICKED": "displaying_list"
      }
    },
    {
      "name": "adding_node",
      "onEnter": "addNode",
      "onExit": "noop",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "displaying_list",
      "onEnter": "displayList",
      "onExit": "noop",
      "on": {
        "LIST_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE_CLICKED",
    "NODE_ADDED",
    "DISPLAY_LIST_CLICKED",
    "LIST_DISPLAYED"
  ],
  "triggers": {
    "ADD_NODE_CLICKED": "#add-node-button",
    "NODE_ADDED": "#list",
    "DISPLAY_LIST_CLICKED": "#display-list-button",
    "LIST_DISPLAYED": "#list"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}