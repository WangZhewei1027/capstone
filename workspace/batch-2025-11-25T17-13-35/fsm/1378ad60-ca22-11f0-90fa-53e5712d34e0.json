{
  "topic": "Stack",
  "description": "Finite state machine modeling the interactive states and transitions of a stack application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "START_STACK_CLICKED": "stacking"
      }
    },
    {
      "name": "stacking",
      "onEnter": "popStack",
      "onExit": "noop",
      "on": {
        "DISPLAY_STACK_CLICKED": "displaying",
        "STACK_COMPLETE": "idle"
      }
    },
    {
      "name": "displaying",
      "onEnter": "displayStack",
      "onExit": "noop",
      "on": {
        "STACK_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "START_STACK_CLICKED",
    "DISPLAY_STACK_CLICKED",
    "STACK_COMPLETE"
  ],
  "triggers": {
    "START_STACK_CLICKED": "button",
    "DISPLAY_STACK_CLICKED": "button",
    "STACK_COMPLETE": "button"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}