{
  "topic": "Binary Search Tree",
  "description": "Finite state machine modeling the interactions within a Binary Search Tree application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_CLICKED": "inserting",
        "FIND_CLICKED": "finding"
      }
    },
    {
      "name": "inserting",
      "onEnter": "startInsertAnimation",
      "onExit": "stopInsertAnimation",
      "on": {
        "INSERT_COMPLETE": "idle",
        "INSERT_FAILED": "idle"
      }
    },
    {
      "name": "finding",
      "onEnter": "startFindAnimation",
      "onExit": "stopFindAnimation",
      "on": {
        "FIND_COMPLETE": "idle",
        "FIND_NOT_FOUND": "idle"
      }
    }
  ],
  "events": [
    "INSERT_CLICKED",
    "INSERT_COMPLETE",
    "INSERT_FAILED",
    "FIND_CLICKED",
    "FIND_COMPLETE",
    "FIND_NOT_FOUND"
  ],
  "triggers": {
    "INSERT_CLICKED": ".insert-btn",
    "FIND_CLICKED": ".find-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}