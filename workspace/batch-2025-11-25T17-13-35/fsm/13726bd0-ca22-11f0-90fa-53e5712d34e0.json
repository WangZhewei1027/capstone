{
  "topic": "Bubble Sort",
  "description": "Finite state machine for the Bubble Sort interactive application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "SORT_CLICKED": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startSorting",
      "onExit": "noop",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displaySortedArray",
      "onExit": "noop",
      "on": {
        "RESET_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "SORT_CLICKED",
    "SORT_COMPLETE",
    "RESET_CLICKED"
  ],
  "triggers": {
    "SORT_CLICKED": "button, #bubbleSortInput",
    "SORT_COMPLETE": "#sortedArray",
    "RESET_CLICKED": "#bubbleSortInput"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}