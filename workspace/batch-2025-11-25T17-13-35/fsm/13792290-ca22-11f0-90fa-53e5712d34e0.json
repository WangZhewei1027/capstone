{
  "topic": "Heap (Min/Max)",
  "description": "Finite state machine for heap operations including testing and sorting.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "TEST_HEAP_CLICKED": "testing",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "testing",
      "onEnter": "heapTest",
      "onExit": "noop",
      "on": {
        "COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "displayResults",
      "onExit": "noop",
      "on": {
        "RESET_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "TEST_HEAP_CLICKED",
    "COMPLETE",
    "RESET_CLICKED"
  ],
  "triggers": {
    "TEST_HEAP_CLICKED": "button",
    "RESET_CLICKED": "button"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}