{
  "topic": "K-Nearest Neighbors",
  "description": "Finite State Machine for the K-Nearest Neighbors interactive application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "CALCULATE_CLICKED": "calculating"
      }
    },
    {
      "name": "calculating",
      "onEnter": "startCalculation",
      "onExit": "displayResult",
      "on": {
        "COMPUTATION_COMPLETE": "done",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "RESET_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "CALCULATE_CLICKED",
    "COMPUTATION_COMPLETE",
    "RESET_CLICKED"
  ],
  "triggers": {
    "CALCULATE_CLICKED": "#calculate-button, .calculate-btn",
    "COMPUTATION_COMPLETE": "#result",
    "RESET_CLICKED": "#reset-button, .reset-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}