{
  "topic": "Interactive Application",
  "description": "Finite State Machine for Bubble Sort Visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "generateArray",
      "onExit": "noop",
      "on": {
        "GENERATE_NEW_ARRAY": "array_generated",
        "START_SORTING": "sorting"
      }
    },
    {
      "name": "array_generated",
      "onEnter": "renderArray",
      "onExit": "noop",
      "on": {
        "START_SORTING": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "bubbleSort",
      "onExit": "noop",
      "on": {
        "SORTING_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "GENERATE_NEW_ARRAY": "array_generated",
        "START_SORTING": "sorting"
      }
    }
  ],
  "events": [
    "GENERATE_NEW_ARRAY",
    "START_SORTING",
    "SORTING_COMPLETE"
  ],
  "notes": "The FSM captures states for generating a new array, sorting, and completion of sorting."
}