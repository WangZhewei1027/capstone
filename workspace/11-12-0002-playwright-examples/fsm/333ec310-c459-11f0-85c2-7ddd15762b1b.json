{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive binary search tree exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_BUTTON_CLICKED": "inserting",
        "REMOVE_BUTTON_CLICKED": "removing"
      }
    },
    {
      "name": "inserting",
      "onEnter": "insertNode",
      "onExit": "noop",
      "on": {
        "NODE_INSERTED": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "removeNode",
      "onExit": "noop",
      "on": {
        "NODE_REMOVED": "idle"
      }
    }
  ],
  "events": [
    "INSERT_BUTTON_CLICKED",
    "REMOVE_BUTTON_CLICKED",
    "NODE_INSERTED",
    "NODE_REMOVED"
  ],
  "notes": "The application transitions between idle, inserting, and removing states based on user interactions with the buttons."
}