{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive stack exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "PUSH_BUTTON_CLICKED": "value_entered",
        "POP_BUTTON_CLICKED": "stack_empty_alert"
      }
    },
    {
      "name": "value_entered",
      "onEnter": "updateStackDisplay",
      "onExit": "noop",
      "on": {
        "PUSH_BUTTON_CLICKED": "value_entered",
        "POP_BUTTON_CLICKED": "stack_updated"
      }
    },
    {
      "name": "stack_updated",
      "onEnter": "updateStackDisplay",
      "onExit": "noop",
      "on": {
        "PUSH_BUTTON_CLICKED": "value_entered",
        "POP_BUTTON_CLICKED": "stack_updated",
        "STACK_EMPTY_ALERT": "idle"
      }
    },
    {
      "name": "stack_empty_alert",
      "onEnter": "alertStackEmpty",
      "onExit": "noop",
      "on": {
        "PUSH_BUTTON_CLICKED": "value_entered",
        "POP_BUTTON_CLICKED": "noop"
      }
    }
  ],
  "events": [
    "PUSH_BUTTON_CLICKED",
    "POP_BUTTON_CLICKED",
    "STACK_EMPTY_ALERT"
  ],
  "notes": "The FSM captures the states of the stack operations and user interactions."
}