{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive heap exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_BUTTON_CLICKED": "inserting",
        "DELETE_BUTTON_CLICKED": "deleting"
      }
    },
    {
      "name": "inserting",
      "onEnter": "renderHeap",
      "onExit": "noop",
      "on": {
        "INSERT_COMPLETED": "idle"
      }
    },
    {
      "name": "deleting",
      "onEnter": "renderHeap",
      "onExit": "noop",
      "on": {
        "DELETE_COMPLETED": "idle"
      }
    }
  ],
  "events": [
    "INSERT_BUTTON_CLICKED",
    "DELETE_BUTTON_CLICKED",
    "INSERT_COMPLETED",
    "DELETE_COMPLETED"
  ],
  "notes": "The 'inserting' state is triggered after a value is inserted into the heap, and the 'deleting' state is triggered after the root is deleted."
}