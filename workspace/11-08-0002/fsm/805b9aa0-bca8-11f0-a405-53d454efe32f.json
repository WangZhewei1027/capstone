{
  "topic": "Interactive Application",
  "description": "Finite State Machine for an interactive deque module allowing users to add or remove items from both ends.",
  "states": [
    {
      "name": "idle",
      "onEnter": "clearFeedback",
      "onExit": "",
      "on": {
        "ADD_TO_FRONT": "addingFront",
        "ADD_TO_BACK": "addingBack",
        "REMOVE_FROM_FRONT": "removingFront",
        "REMOVE_FROM_BACK": "removingBack"
      }
    },
    {
      "name": "addingFront",
      "onEnter": "addFrontAction",
      "onExit": "renderDeque",
      "on": {
        "INPUT_VALID": "idle",
        "INPUT_INVALID": "idle"
      }
    },
    {
      "name": "addingBack",
      "onEnter": "addBackAction",
      "onExit": "renderDeque",
      "on": {
        "INPUT_VALID": "idle",
        "INPUT_INVALID": "idle"
      }
    },
    {
      "name": "removingFront",
      "onEnter": "removeFrontAction",
      "onExit": "renderDeque",
      "on": {
        "DEQUE_NOT_EMPTY": "idle",
        "DEQUE_EMPTY": "idle"
      }
    },
    {
      "name": "removingBack",
      "onEnter": "removeBackAction",
      "onExit": "renderDeque",
      "on": {
        "DEQUE_NOT_EMPTY": "idle",
        "DEQUE_EMPTY": "idle"
      }
    }
  ],
  "events": [
    "ADD_TO_FRONT",
    "ADD_TO_BACK",
    "REMOVE_FROM_FRONT",
    "REMOVE_FROM_BACK",
    "INPUT_VALID",
    "INPUT_INVALID",
    "DEQUE_NOT_EMPTY",
    "DEQUE_EMPTY"
  ],
  "notes": "States represent the main actions of adding and removing items from the deque, with transitions based on user input and deque status."
}