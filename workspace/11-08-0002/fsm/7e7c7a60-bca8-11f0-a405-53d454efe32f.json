{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive hash table application allowing users to add, retrieve, and delete entries.",
  "states": [
    {
      "name": "idle",
      "onEnter": "createHashTableUI",
      "on": {
        "ADD_ENTRY": "adding",
        "RETRIEVE_ENTRY": "retrieving",
        "DELETE_ENTRY": "deleting"
      }
    },
    {
      "name": "adding",
      "onEnter": "addEntry",
      "onExit": "alertUser",
      "on": {
        "ENTRY_ADDED": "idle"
      }
    },
    {
      "name": "retrieving",
      "onEnter": "retrieveEntry",
      "onExit": "highlightBucket",
      "on": {
        "ENTRY_RETRIEVED": "idle",
        "ENTRY_NOT_FOUND": "idle"
      }
    },
    {
      "name": "deleting",
      "onEnter": "deleteEntry",
      "onExit": "alertUser",
      "on": {
        "ENTRY_DELETED": "idle",
        "ENTRY_NOT_FOUND": "idle"
      }
    }
  ],
  "events": [
    "ADD_ENTRY",
    "RETRIEVE_ENTRY",
    "DELETE_ENTRY",
    "ENTRY_ADDED",
    "ENTRY_RETRIEVED",
    "ENTRY_NOT_FOUND",
    "ENTRY_DELETED"
  ],
  "notes": "The application transitions between states based on user interactions with the buttons to add, retrieve, or delete hash table entries."
}