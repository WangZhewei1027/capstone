{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Stack Explorer application managing stack operations.",
  "states": [
    {
      "name": "idle",
      "onEnter": "displayEmptyStackMessage",
      "onExit": null,
      "on": {
        "PUSH_ITEM": "item_added",
        "POP_ITEM": "empty_stack"
      }
    },
    {
      "name": "item_added",
      "onEnter": "updateStackDisplay",
      "onExit": null,
      "on": {
        "PUSH_ITEM": "item_added",
        "POP_ITEM": "item_removed"
      }
    },
    {
      "name": "item_removed",
      "onEnter": "updateStackDisplay",
      "onExit": null,
      "on": {
        "PUSH_ITEM": "item_added",
        "POP_ITEM": "empty_stack"
      }
    },
    {
      "name": "empty_stack",
      "onEnter": "displayEmptyStackMessage",
      "onExit": null,
      "on": {
        "PUSH_ITEM": "item_added"
      }
    }
  ],
  "events": [
    "PUSH_ITEM",
    "POP_ITEM"
  ],
  "notes": "The application starts in the 'idle' state. Pushing an item transitions to 'item_added', while popping an item transitions to 'item_removed'. If the stack is empty and a pop is attempted, it transitions to 'empty_stack'."
}