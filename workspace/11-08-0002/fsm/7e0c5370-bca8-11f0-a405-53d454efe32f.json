        "REMOVE_FIRST": "removing_first",
        "RESET_ARRAY": "resetting"
      }
    },
    {
      "name": "adding",
      "onEnter": "addElementToArray",
      "onExit": "updateArrayOutput",
      "on": {
        "ELEMENT_ADDED": "idle"
      }
    },
    {
      "name": "removing_last",
      "onEnter": "removeLastElement",
      "onExit": "updateArrayOutput",
      "on": {
