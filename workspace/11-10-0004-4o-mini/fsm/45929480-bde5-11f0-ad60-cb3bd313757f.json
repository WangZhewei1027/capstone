{
  "topic": "Interactive Application",
  "description": "Finite state machine for the K-Nearest Neighbors interactive module.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "CANVAS_CLICK": "point_added",
        "CLASSIFY_BUTTON_CLICK": "classifying"
      }
    },
    {
      "name": "point_added",
      "onEnter": "draw_point",
      "onExit": "noop",
      "on": {
        "CANVAS_CLICK": "point_added",
        "CLASSIFY_BUTTON_CLICK": "classifying"
      }
    },
    {
      "name": "classifying",
      "onEnter": "start_classification",
      "onExit": "noop",
      "on": {
        "CLASSIFICATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "CANVAS_CLICK",
    "CLASSIFY_BUTTON_CLICK",
    "CLASSIFICATION_COMPLETE"
  ],
  "notes": "The FSM captures the states of adding points to the canvas and classifying them based on the KNN algorithm."
}