{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive linked list application that allows users to add, delete, traverse, and clear nodes.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_NODE": "node_added",
        "DELETE_NODE": "node_deleted",
        "TRAVERSE_LIST": "traversing",
        "CLEAR_LIST": "list_cleared"
      }
    },
    {
      "name": "node_added",
      "onEnter": "highlight_new_node",
      "onExit": "noop",
      "on": {
        "ADD_NODE": "noop",
        "DELETE_NODE": "node_deleted",
        "TRAVERSE_LIST": "traversing",
        "CLEAR_LIST": "list_cleared"
      }
    },
    {
      "name": "node_deleted",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_NODE": "node_added",
        "DELETE_NODE": "noop",
        "TRAVERSE_LIST": "traversing",
        "CLEAR_LIST": "list_cleared"
      }
    },
    {
      "name": "traversing",
      "onEnter": "start_traversal",
      "onExit": "stop_traversal",
      "on": {
        "ADD_NODE": "node_added",
        "DELETE_NODE": "node_deleted",
        "CLEAR_LIST": "list_cleared"
      }
    },
    {
      "name": "list_cleared",
      "onEnter": "reset_state",
      "onExit": "noop",
      "on": {
        "ADD_NODE": "node_added",
        "DELETE_NODE": "noop",
        "TRAVERSE_LIST": "traversing",
        "CLEAR_LIST": "noop"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "DELETE_NODE",
    "TRAVERSE_LIST",
    "CLEAR_LIST"
  ],
  "notes": "The FSM captures the states of adding, deleting, traversing, and clearing nodes in a linked list visualization."
}