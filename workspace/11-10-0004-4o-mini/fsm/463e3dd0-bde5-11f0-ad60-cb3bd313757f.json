{
  "topic": "Interactive Application",
  "description": "Finite state machine for a Min/Max Heap exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_MIN": "updating_min_heap",
        "ADD_MAX": "updating_max_heap",
        "REMOVE_MIN": "updating_min_heap",
        "REMOVE_MAX": "updating_max_heap"
      }
    },
    {
      "name": "updating_min_heap",
      "onEnter": "addMinHeap",
      "onExit": "updateHeapDisplay",
      "on": {
        "ADD_MIN": "idle",
        "REMOVE_MIN": "idle"
      }
    },
    {
      "name": "updating_max_heap",
      "onEnter": "addMaxHeap",
      "onExit": "updateHeapDisplay",
      "on": {
        "ADD_MAX": "idle",
        "REMOVE_MAX": "idle"
      }
    }
  ],
  "events": [
    "ADD_MIN",
    "ADD_MAX",
    "REMOVE_MIN",
    "REMOVE_MAX"
  ],
  "notes": "The FSM captures the states of adding and removing elements from the min and max heaps, as well as the idle state when no operations are being performed."
}