{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Bubble Sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "generateArray",
      "onExit": "noop",
      "on": {
        "START_SORTING": "sorting",
        "RESET": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "bubbleSort",
      "onExit": "noop",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "START_SORTING",
    "RESET",
    "SORT_COMPLETE"
  ],
  "notes": "The 'sorting' state transitions to 'done' when the bubble sort is complete. The 'idle' state initializes the array."
}