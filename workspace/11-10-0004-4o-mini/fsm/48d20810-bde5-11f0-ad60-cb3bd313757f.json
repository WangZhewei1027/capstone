{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Binary Search Tree interactive module, capturing user interactions and state transitions.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_BUTTON_CLICKED": "inserting"
      }
    },
    {
      "name": "inserting",
      "onEnter": "validateInput",
      "onExit": "clearInput",
      "on": {
        "INPUT_VALID": "visualizing",
        "INPUT_INVALID": "idle"
      }
    },
    {
      "name": "visualizing",
      "onEnter": "updateTreeVisualization",
      "onExit": "noop",
      "on": {
        "VISUALIZATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_BUTTON_CLICKED",
    "INPUT_VALID",
    "INPUT_INVALID",
    "VISUALIZATION_COMPLETE"
  ],
  "notes": "States represent the process of inserting a node into a binary search tree and visualizing the result."
}