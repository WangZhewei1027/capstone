{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Interactive Stack Explorer application managing stack operations.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "PUSH_BUTTON_CLICKED": "pushing",
        "POP_BUTTON_CLICKED": "popping"
      }
    },
    {
      "name": "pushing",
      "onEnter": "push(value)",
      "onExit": "noop",
      "on": {
        "ITEM_PUSHED": "idle"
      }
    },
    {
      "name": "popping",
      "onEnter": "pop()",
      "onExit": "noop",
      "on": {
        "ITEM_REMOVED": "idle",
        "STACK_EMPTY_ALERT": "idle"
      }
    }
  ],
  "events": [
    "PUSH_BUTTON_CLICKED",
    "POP_BUTTON_CLICKED",
    "ITEM_PUSHED",
    "ITEM_REMOVED",
    "STACK_EMPTY_ALERT"
  ],
  "notes": "The application handles stack operations with visual feedback for pushing and popping items."
}