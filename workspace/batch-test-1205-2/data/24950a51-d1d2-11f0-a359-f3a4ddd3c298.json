    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Huffman Coding Demonstration</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            max-width: 600px;\n            margin: auto;\n            padding: 20px;\n            border: 1px solid #ccc;\n            border-radius: 10px;\n        }\n        textarea {\n            width: 100%;\n            height: 100px;\n        }\n        pre {\n            background: #f4f4f4;\n            padding: 10px;\n            border-left: 3px solid #ccc;\n        }\n    </style>\n</head>\n<body>\n\n    <h1>Huffman Coding Demonstration</h1>\n    <p>Enter text to see its Huffman coding.</p>\n    \n    <textarea id=\"inputText\" placeholder=\"Enter text here...\"></textarea><br>\n    <button onclick=\"generateHuffmanCode()\">Generate Huffman Code</button>\n    \n    <h2>Huffman Codes:</h2>\n    <pre id=\"huffmanCodes\"></pre>\n    \n    <h2>Encoded Output:</h2>\n    <pre id=\"encodedOutput\"></pre>\n\n    <script>\n        class Node {\n            constructor(char, frequency) {\n                this.char = char;\n                this.frequency = frequency;\n                this.left = null;\n                this.right = null;\n            }\n        }\n\n        function calculateFrequency(text) {\n            const frequency = {};\n            for (let char of text) {\n                frequency[char] = (frequency[char] || 0) + 1;\n            }\n            return frequency;\n        }\n\n        function buildHuffmanTree(frequency) {\n            const nodes = Object.keys(frequency).map(char => new Node(char, frequency[char]));\n            while (nodes.length > 1) {\n                nodes.sort((a, b) => a.frequency - b.frequency);\n                const left = nodes.shift();\n                const right = nodes.shift();\n                const newNode = new Node(null, left.frequency + right.frequency);\n                newNode.left = left;\n                newNode.right = right;\n                nodes.push(newNode);\n            }\n            return nodes[0];\n        }\n\n        function generateCodes(node, prefix = '', codes = {}) {\n            if (node) {\n                if (node.char) {\n                    codes[node.char] = prefix;\n                }\n                generateCodes(node.left, prefix + '0', codes);\n                generateCodes(node.right, prefix + '1', codes);\n            }\n            return codes;\n        }\n\n        function encodeText(text, codes) {\n            return text.split('').map(char => codes[char]).join('');\n        }\n\n        function generateHuffmanCode() {\n            const inputText = document.getElementById('inputText').value;\n            const frequency = calculateFrequency(inputText);\n            const huffmanTree = buildHuffmanTree(frequency);\n            const huffmanCodes = generateCodes(huffmanTree);\n\n            document.getElementById('huffmanCodes').textContent = JSON.stringify(huffmanCodes, null, 2);\n            document.getElementById('encodedOutput').textContent = encodeText(inputText, huffmanCodes);\n        }\n    </script>\n\n</body>\n</html>"
