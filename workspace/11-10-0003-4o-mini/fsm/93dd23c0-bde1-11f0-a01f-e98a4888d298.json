{
  "topic": "Interactive Application",
  "description": "Finite State Machine for exploring Binary Search Trees (BST) through user interactions.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_BUTTON_CLICKED": "validating_input"
      }
    },
    {
      "name": "validating_input",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "VALID_INPUT": "building_bst",
        "INVALID_INPUT": "idle"
      }
    },
    {
      "name": "building_bst",
      "onEnter": "buildBST",
      "onExit": "noop",
      "on": {
        "BST_BUILT": "idle"
      }
    },
    {
      "name": "node_clicked",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "NODE_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "INSERT_BUTTON_CLICKED",
    "VALID_INPUT",
    "INVALID_INPUT",
    "BST_BUILT",
    "NODE_CLICKED"
  ],
  "notes": "The FSM captures the states of the application as the user interacts with the input and BST visualization."
}