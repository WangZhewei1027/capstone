{
  "topic": "Interactive Application",
  "description": "Finite State Machine for K-Nearest Neighbors Interactive Module",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "CLICK_ON_PLOT": "drawing_point",
        "CHANGE_K_VALUE": "updating_k"
      }
    },
    {
      "name": "drawing_point",
      "onEnter": "drawPoint",
      "onExit": "noop",
      "on": {
        "POINT_DRAWN": "idle"
      }
    },
    {
      "name": "updating_k",
      "onEnter": "updateCurrentKDisplay",
      "onExit": "noop",
      "on": {
        "K_UPDATED": "idle"
      }
    },
    {
      "name": "calculating_neighbors",
      "onEnter": "drawNeighbors",
      "onExit": "noop",
      "on": {
        "NEIGHBORS_CALCULATED": "displaying_result"
      }
    },
    {
      "name": "displaying_result",
      "onEnter": "displayClassificationResult",
      "onExit": "noop",
      "on": {
        "RESULT_DISPLAYED": "idle"
      }
    }
  ],
  "events": [
    "CLICK_ON_PLOT",
    "POINT_DRAWN",
    "CHANGE_K_VALUE",
    "K_UPDATED",
    "NEIGHBORS_CALCULATED",
    "RESULT_DISPLAYED"
  ],
  "notes": "States represent different phases of user interaction, including drawing points, updating K value, calculating neighbors, and displaying results."
}