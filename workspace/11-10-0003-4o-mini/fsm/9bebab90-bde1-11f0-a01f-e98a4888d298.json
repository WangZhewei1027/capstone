{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Bubble Sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "generateRandomArray(10)",
      "onExit": "noop",
      "on": {
        "START_SORTING": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "bubbleSort()",
      "onExit": "noop",
      "on": {
        "SORTING_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "RESET": "idle"
      }
    }
  ],
  "events": [
    "START_SORTING",
    "SORTING_COMPLETE",
    "RESET"
  ],
  "notes": "The 'idle' state initializes the array, 'sorting' handles the bubble sort process, and 'done' indicates the completion of sorting."
}