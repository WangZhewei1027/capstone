{
  "meta": {
    "concept": "BubbleSort",
    "topic": "Bubble Sort Visualization",
    "educational_goal": "Demonstrate the bubble sort algorithm step-by-step",
    "expected_interactions": [
      "start",
      "pause",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "operation",
      "entry_actions": [
        "disableControls()",
        "highlightCurrentPair()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Paused",
      "label": "Paused",
      "type": "atomic",
      "entry_actions": [
        "showPauseOverlay()"
      ],
      "exit_actions": [
        "hidePauseOverlay()"
      ]
    },
    {
      "id": "S3_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "UserClicksPause",
      "event_type": "user_action",
      "description": "User clicks the Pause button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "SortingStepComplete",
      "event_type": "system_event",
      "description": "A single sorting step is completed"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting is completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "UserClicksStart",
      "guard": "arrayNotEmpty",
      "actions": [
        "beginSorting()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Paused",
      "event": "UserClicksPause",
      "guard": "true",
      "actions": [
        "pauseSorting()"
      ],
      "expected_observables": [
        "dom:pauseButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Paused",
      "to": "S1_Sorting",
      "event": "UserClicksStart",
      "guard": "true",
      "actions": [
        "resumeSorting()"
      ],
      "expected_observables": [
        "dom:resumeSorting"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Sorting",
      "to": "S3_Completed",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginReset()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "pause",
    "reset",
    "array_visualization"
  ]
}