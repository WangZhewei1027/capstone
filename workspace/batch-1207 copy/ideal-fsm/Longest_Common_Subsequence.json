{
  "meta": {
    "concept": "LongestCommonSubsequence",
    "topic": "Longest Common Subsequence Visualization",
    "educational_goal": "Demonstrate LCS calculation and visualization",
    "expected_interactions": [
      "input_sequences",
      "calculate_lcs",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitialUI()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputStart",
      "label": "InputStart",
      "type": "atomic",
      "entry_actions": [
        "readSequencesInput()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearInputHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateSequences()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightErrorFields()"
      ],
      "exit_actions": [
        "clearErrorHighlight()"
      ]
    },
    {
      "id": "S4_CalculatingLCS",
      "label": "CalculatingLCS",
      "type": "atomic",
      "entry_actions": [
        "computeLCS()",
        "updateProgress()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ShowingResult",
      "label": "ShowingResult",
      "type": "atomic",
      "entry_actions": [
        "displayLCSResult()",
        "highlightLCS()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllFields()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksCalculate",
      "event_type": "user_action",
      "description": "User clicks the Calculate LCS button"
    },
    {
      "id": "UserEntersSequences",
      "event_type": "user_action",
      "description": "User enters sequences in input fields"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "LCSCalculationComplete",
      "event_type": "system_event",
      "description": "LCS calculation and visualization complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputStart",
      "event": "UserClicksCalculate",
      "guard": "inputFieldsNotEmpty",
      "actions": [
        "captureSequences()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateSequences()",
        "prepareCalculation()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_CalculatingLCS",
      "event": "InputValidationComplete",
      "guard": "validSequences",
      "actions": [
        "parseSequences()",
        "beginLCSCalculation()"
      ],
      "expected_observables": [
        "dom:calculationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmptyOrInvalid",
      "actions": [
        "showError()",
        "focusInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_CalculatingLCS",
      "to": "S5_ShowingResult",
      "event": "LCSCalculationComplete",
      "guard": "calculationSuccessful",
      "actions": [
        "updateResultDisplay()",
        "triggerResultVisualization()"
      ],
      "expected_observables": [
        "dom:resultDisplayed",
        "dom:lcsHighlighted"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_ShowingResult",
      "to": "S0_Idle",
      "event": "LCSCalculationComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInputFields()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "fieldsNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:fieldsCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "calculate",
    "reset",
    "lcs_visualization"
  ]
}