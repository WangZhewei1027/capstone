{
  "meta": {
    "concept": "AdjacencyList",
    "topic": "Graph Representation using Adjacency List",
    "educational_goal": "Demonstrate graph operations using adjacency list",
    "expected_interactions": [
      "addNode",
      "addEdge",
      "removeNode",
      "removeEdge",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddNodeStart",
      "label": "AddNodeStart",
      "type": "atomic",
      "entry_actions": [
        "readNodeInput()",
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S3_ValidatingNodeInput",
      "label": "ValidatingNodeInput",
      "type": "atomic",
      "entry_actions": [
        "validateNodeInput()",
        "showNodeValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ValidatingEdgeInput",
      "label": "ValidatingEdgeInput",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showEdgeValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S6_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "createNewNode()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "createNewEdge()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S8_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "removeNode()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S9_RemovingEdge",
      "label": "RemovingEdge",
      "type": "atomic",
      "entry_actions": [
        "removeEdge()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S10_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodesAndEdges()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksRemoveNode",
      "event_type": "user_action",
      "description": "User clicks the Remove Node button"
    },
    {
      "id": "UserClicksRemoveEdge",
      "event_type": "user_action",
      "description": "User clicks the Remove Edge button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "NodeInputValidationComplete",
      "event_type": "system_event",
      "description": "Node input validation completes successfully"
    },
    {
      "id": "EdgeInputValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "NodeInputValidationFailed",
      "event_type": "system_event",
      "description": "Node input validation fails"
    },
    {
      "id": "EdgeInputValidationFailed",
      "event_type": "system_event",
      "description": "Edge input validation fails"
    },
    {
      "id": "NodeAdditionComplete",
      "event_type": "system_event",
      "description": "Node addition and list update complete"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition and list update complete"
    },
    {
      "id": "NodeRemovalComplete",
      "event_type": "system_event",
      "description": "Node removal and list update complete"
    },
    {
      "id": "EdgeRemovalComplete",
      "event_type": "system_event",
      "description": "Edge removal and list update complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddNodeStart",
      "event": "UserClicksAddNode",
      "guard": "inputNotEmpty",
      "actions": [
        "captureNodeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readNodeInput",
        "dom:addNodeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddNodeStart",
      "to": "S3_ValidatingNodeInput",
      "event": "NodeInputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateNodeValue()",
        "prepareNodeAddition()"
      ],
      "expected_observables": [
        "dom:nodeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ValidatingNodeInput",
      "to": "S6_AddingNode",
      "event": "NodeInputValidationComplete",
      "guard": "validNode",
      "actions": [
        "parseNodeInputValue()",
        "beginNodeAddition()"
      ],
      "expected_observables": [
        "dom:nodeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddNodeStart",
      "to": "S5_ErrorAlert",
      "event": "NodeInputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusNodeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetNodeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S6_AddingNode",
      "to": "S0_Idle",
      "event": "NodeAdditionComplete",
      "guard": "nodeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerNodeVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListUpdated",
        "dom:newNodeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "inputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_AddEdgeStart",
      "to": "S4_ValidatingEdgeInput",
      "event": "EdgeInputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateEdgeValue()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ValidatingEdgeInput",
      "to": "S7_AddingEdge",
      "event": "EdgeInputValidationComplete",
      "guard": "validEdge",
      "actions": [
        "parseEdgeInputValue()",
        "beginEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_AddEdgeStart",
      "to": "S5_ErrorAlert",
      "event": "EdgeInputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S7_AddingEdge",
      "to": "S0_Idle",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerEdgeVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListUpdated",
        "dom:newEdgeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S8_RemovingNode",
      "event": "UserClicksRemoveNode",
      "guard": "nodeExists",
      "actions": [
        "confirmNodeRemoval()",
        "beginNodeRemoval()"
      ],
      "expected_observables": [
        "dom:removeNodeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S8_RemovingNode",
      "to": "S0_Idle",
      "event": "NodeRemovalComplete",
      "guard": "nodeRemovedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerNodeRemovalVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListUpdated",
        "dom:nodeRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S9_RemovingEdge",
      "event": "UserClicksRemoveEdge",
      "guard": "edgeExists",
      "actions": [
        "confirmEdgeRemoval()",
        "beginEdgeRemoval()"
      ],
      "expected_observables": [
        "dom:removeEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S9_RemovingEdge",
      "to": "S0_Idle",
      "event": "EdgeRemovalComplete",
      "guard": "edgeRemovedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerEdgeRemovalVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListUpdated",
        "dom:edgeRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S10_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S10_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "addNode",
    "addEdge",
    "removeNode",
    "removeEdge",
    "reset",
    "adjacency_list_visualization"
  ]
}