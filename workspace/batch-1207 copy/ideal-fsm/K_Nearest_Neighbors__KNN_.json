{
  "meta": {
    "concept": "K-Nearest Neighbors",
    "topic": "K-Nearest Neighbors Algorithm Visualization",
    "educational_goal": "Demonstrate KNN classification and prediction",
    "expected_interactions": [
      "add_point",
      "classify",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderPlot()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingPoint",
      "label": "AddingPoint",
      "type": "atomic",
      "entry_actions": [
        "capturePointCoordinates()",
        "highlightPlotArea()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingPoint",
      "label": "ValidatingPoint",
      "type": "atomic",
      "entry_actions": [
        "validatePoint()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_Classifying",
      "label": "Classifying",
      "type": "atomic",
      "entry_actions": [
        "computeDistances()",
        "findNearestNeighbors()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_UpdatingPlot",
      "label": "UpdatingPlot",
      "type": "atomic",
      "entry_actions": [
        "updatePlotVisualization()",
        "animateClassification()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_ResettingPlot",
      "label": "ResettingPlot",
      "type": "atomic",
      "entry_actions": [
        "clearAllPoints()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddPoint",
      "event_type": "user_action",
      "description": "User clicks to add a point on the plot"
    },
    {
      "id": "UserClicksClassify",
      "event_type": "user_action",
      "description": "User clicks the Classify button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "PointValidationComplete",
      "event_type": "system_event",
      "description": "Point validation completes successfully"
    },
    {
      "id": "PointValidationFailed",
      "event_type": "system_event",
      "description": "Point validation fails"
    },
    {
      "id": "ClassificationComplete",
      "event_type": "system_event",
      "description": "Classification and plot update complete"
    },
    {
      "id": "PlotResetComplete",
      "event_type": "system_event",
      "description": "Plot reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingPoint",
      "event": "UserClicksAddPoint",
      "guard": "plotAreaSelected",
      "actions": [
        "captureCoordinates()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:pointCoordinatesCaptured",
        "dom:addPointClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingPoint",
      "to": "S2_ValidatingPoint",
      "event": "PointValidationComplete",
      "guard": "pointIsValid",
      "actions": [
        "validateCoordinates()",
        "prepareForClassification()"
      ],
      "expected_observables": [
        "dom:pointValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingPoint",
      "to": "S4_Classifying",
      "event": "PointValidationComplete",
      "guard": "validCoordinates",
      "actions": [
        "parseCoordinates()",
        "beginClassification()"
      ],
      "expected_observables": [
        "dom:classificationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddingPoint",
      "to": "S3_ErrorAlert",
      "event": "PointValidationFailed",
      "guard": "coordinatesInvalid",
      "actions": [
        "showError()",
        "focusPlotArea()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetPlotArea()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Classifying",
      "to": "S5_UpdatingPlot",
      "event": "ClassificationComplete",
      "guard": "classificationSuccessful",
      "actions": [
        "updatePlotStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:plotStructureChanged",
        "dom:classificationVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_UpdatingPlot",
      "to": "S0_Idle",
      "event": "ClassificationComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearPlotArea()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingPlot",
      "event": "UserClicksReset",
      "guard": "plotNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingPlot",
      "to": "S0_Idle",
      "event": "PlotResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetPlotArea()"
      ],
      "expected_observables": [
        "dom:plotCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "plot_area",
    "add_point",
    "classify",
    "reset",
    "visualization"
  ]
}