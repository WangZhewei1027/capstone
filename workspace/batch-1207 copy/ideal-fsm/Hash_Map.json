{
  "meta": {
    "concept": "HashMap",
    "topic": "Hash Map Visualization",
    "educational_goal": "Demonstrate hash map insertion and retrieval",
    "expected_interactions": [
      "insert",
      "retrieve",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderHashMap()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputKeyValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_InsertingEntry",
      "label": "InsertingEntry",
      "type": "atomic",
      "entry_actions": [
        "computeHash()",
        "insertEntry()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DrawingMap",
      "label": "DrawingMap",
      "type": "atomic",
      "entry_actions": [
        "updateMapVisualization()",
        "animateInsertion()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_RetrievingEntry",
      "label": "RetrievingEntry",
      "type": "atomic",
      "entry_actions": [
        "computeHash()",
        "retrieveEntry()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_DisplayEntry",
      "label": "DisplayEntry",
      "type": "atomic",
      "entry_actions": [
        "showRetrievedEntry()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S8_MapResetting",
      "label": "MapResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllEntries()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsert",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "UserClicksRetrieve",
      "event_type": "user_action",
      "description": "User clicks the Retrieve button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters key-value pair in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "EntryInsertionComplete",
      "event_type": "system_event",
      "description": "Entry insertion and map update complete"
    },
    {
      "id": "EntryRetrievalComplete",
      "event_type": "system_event",
      "description": "Entry retrieval complete"
    },
    {
      "id": "MapResetComplete",
      "event_type": "system_event",
      "description": "Map reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "UserClicksInsert",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputKeyValue",
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateKeyValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_InsertingEntry",
      "event": "InputValidationComplete",
      "guard": "validKeyValue",
      "actions": [
        "parseInputKeyValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:entryCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_InsertingEntry",
      "to": "S5_DrawingMap",
      "event": "EntryInsertionComplete",
      "guard": "entryInsertedSuccessfully",
      "actions": [
        "updateMapStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:mapStructureChanged",
        "dom:newEntryVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_DrawingMap",
      "to": "S0_Idle",
      "event": "EntryInsertionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_RetrievingEntry",
      "event": "UserClicksRetrieve",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:retrieveButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S6_RetrievingEntry",
      "to": "S7_DisplayEntry",
      "event": "EntryRetrievalComplete",
      "guard": "entryFound",
      "actions": [
        "displayEntry()"
      ],
      "expected_observables": [
        "dom:entryDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S0_Idle",
      "to": "S8_MapResetting",
      "event": "UserClicksReset",
      "guard": "mapNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S8_MapResetting",
      "to": "S0_Idle",
      "event": "MapResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:mapCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insert",
    "retrieve",
    "reset",
    "map_visualization"
  ]
}