{
  "meta": {
    "concept": "Deque",
    "topic": "Double-Ended Queue Operations",
    "educational_goal": "Demonstrate deque insertion and deletion from both ends",
    "expected_interactions": [
      "insertFront",
      "insertRear",
      "deleteFront",
      "deleteRear",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderDeque()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertFrontStart",
      "label": "InsertFrontStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInputFront()"
      ],
      "exit_actions": [
        "clearHighlightFront()"
      ]
    },
    {
      "id": "S2_InsertRearStart",
      "label": "InsertRearStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInputRear()"
      ],
      "exit_actions": [
        "clearHighlightRear()"
      ]
    },
    {
      "id": "S3_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S5_InsertingNodeFront",
      "label": "InsertingNodeFront",
      "type": "atomic",
      "entry_actions": [
        "createNewNodeFront()",
        "updateDequeFront()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_InsertingNodeRear",
      "label": "InsertingNodeRear",
      "type": "atomic",
      "entry_actions": [
        "createNewNodeRear()",
        "updateDequeRear()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_DeletingNodeFront",
      "label": "DeletingNodeFront",
      "type": "atomic",
      "entry_actions": [
        "removeNodeFront()",
        "updateDequeFront()"
      ],
      "exit_actions": []
    },
    {
      "id": "S8_DeletingNodeRear",
      "label": "DeletingNodeRear",
      "type": "atomic",
      "entry_actions": [
        "removeNodeRear()",
        "updateDequeRear()"
      ],
      "exit_actions": []
    },
    {
      "id": "S9_DrawingDeque",
      "label": "DrawingDeque",
      "type": "atomic",
      "entry_actions": [
        "updateDequeVisualization()",
        "animateChange()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S10_DequeResetting",
      "label": "DequeResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodes()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsertFront",
      "event_type": "user_action",
      "description": "User clicks the Insert Front button"
    },
    {
      "id": "UserClicksInsertRear",
      "event_type": "user_action",
      "description": "User clicks the Insert Rear button"
    },
    {
      "id": "UserClicksDeleteFront",
      "event_type": "user_action",
      "description": "User clicks the Delete Front button"
    },
    {
      "id": "UserClicksDeleteRear",
      "event_type": "user_action",
      "description": "User clicks the Delete Rear button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "NodeInsertionComplete",
      "event_type": "system_event",
      "description": "Node insertion and deque update complete"
    },
    {
      "id": "NodeDeletionComplete",
      "event_type": "system_event",
      "description": "Node deletion and deque update complete"
    },
    {
      "id": "DequeResetComplete",
      "event_type": "system_event",
      "description": "Deque reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertFrontStart",
      "event": "UserClicksInsertFront",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertFrontButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S2_InsertRearStart",
      "event": "UserClicksInsertRear",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertRearButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertFrontStart",
      "to": "S3_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertionFront()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_InsertRearStart",
      "to": "S3_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertionRear()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ValidatingInput",
      "to": "S5_InsertingNodeFront",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginInsertionFront()"
      ],
      "expected_observables": [
        "dom:nodeCreationStartedFront"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_ValidatingInput",
      "to": "S6_InsertingNodeRear",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginInsertionRear()"
      ],
      "expected_observables": [
        "dom:nodeCreationStartedRear"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertFrontStart",
      "to": "S4_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInputFront()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_InsertRearStart",
      "to": "S4_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInputRear()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S5_InsertingNodeFront",
      "to": "S9_DrawingDeque",
      "event": "NodeInsertionComplete",
      "guard": "nodeInsertedSuccessfully",
      "actions": [
        "updateDequeStructureFront()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:dequeStructureChangedFront",
        "dom:newNodeVisibleFront"
      ],
      "timeout": 3000
    },
    {
      "from": "S6_InsertingNodeRear",
      "to": "S9_DrawingDeque",
      "event": "NodeInsertionComplete",
      "guard": "nodeInsertedSuccessfully",
      "actions": [
        "updateDequeStructureRear()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:dequeStructureChangedRear",
        "dom:newNodeVisibleRear"
      ],
      "timeout": 3000
    },
    {
      "from": "S9_DrawingDeque",
      "to": "S0_Idle",
      "event": "NodeInsertionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S7_DeletingNodeFront",
      "event": "UserClicksDeleteFront",
      "guard": "dequeNotEmpty",
      "actions": [
        "confirmDeletionFront()",
        "beginDeleteOperationFront()"
      ],
      "expected_observables": [
        "dom:deleteFrontButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S8_DeletingNodeRear",
      "event": "UserClicksDeleteRear",
      "guard": "dequeNotEmpty",
      "actions": [
        "confirmDeletionRear()",
        "beginDeleteOperationRear()"
      ],
      "expected_observables": [
        "dom:deleteRearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_DeletingNodeFront",
      "to": "S9_DrawingDeque",
      "event": "NodeDeletionComplete",
      "guard": "nodeDeletedSuccessfully",
      "actions": [
        "updateDequeStructureFront()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:dequeStructureChangedFront",
        "dom:nodeRemovedFront"
      ],
      "timeout": 3000
    },
    {
      "from": "S8_DeletingNodeRear",
      "to": "S9_DrawingDeque",
      "event": "NodeDeletionComplete",
      "guard": "nodeDeletedSuccessfully",
      "actions": [
        "updateDequeStructureRear()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:dequeStructureChangedRear",
        "dom:nodeRemovedRear"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S10_DequeResetting",
      "event": "UserClicksReset",
      "guard": "dequeNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S10_DequeResetting",
      "to": "S0_Idle",
      "event": "DequeResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:dequeCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insertFront",
    "insertRear",
    "deleteFront",
    "deleteRear",
    "reset",
    "deque_visualization"
  ]
}