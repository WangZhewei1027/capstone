{
  "meta": {
    "concept": "Set",
    "topic": "Set Operations Visualization",
    "educational_goal": "Demonstrate basic set operations like add, remove, and check membership",
    "expected_interactions": [
      "add",
      "remove",
      "check_membership",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderSet()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddStart",
      "label": "AddStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingAddInput",
      "label": "ValidatingAddInput",
      "type": "atomic",
      "entry_actions": [
        "validateAddInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_AddingElement",
      "label": "AddingElement",
      "type": "atomic",
      "entry_actions": [
        "addElementToSet()",
        "updateSetVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_RemovingElement",
      "label": "RemovingElement",
      "type": "atomic",
      "entry_actions": [
        "removeElementFromSet()",
        "updateSetVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_CheckingMembership",
      "label": "CheckingMembership",
      "type": "atomic",
      "entry_actions": [
        "checkElementInSet()",
        "showMembershipResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_SetResetting",
      "label": "SetResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllElements()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAdd",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "UserClicksRemove",
      "event_type": "user_action",
      "description": "User clicks the Remove button"
    },
    {
      "id": "UserClicksCheckMembership",
      "event_type": "user_action",
      "description": "User clicks the Check Membership button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "AddInputValidationComplete",
      "event_type": "system_event",
      "description": "Add input validation completes successfully"
    },
    {
      "id": "AddInputValidationFailed",
      "event_type": "system_event",
      "description": "Add input validation fails"
    },
    {
      "id": "ElementAdditionComplete",
      "event_type": "system_event",
      "description": "Element addition and set update complete"
    },
    {
      "id": "ElementRemovalComplete",
      "event_type": "system_event",
      "description": "Element removal and set update complete"
    },
    {
      "id": "MembershipCheckComplete",
      "event_type": "system_event",
      "description": "Membership check complete"
    },
    {
      "id": "SetResetComplete",
      "event_type": "system_event",
      "description": "Set reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddStart",
      "event": "UserClicksAdd",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:addButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddStart",
      "to": "S2_ValidatingAddInput",
      "event": "AddInputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareAddition()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingAddInput",
      "to": "S4_AddingElement",
      "event": "AddInputValidationComplete",
      "guard": "validElement",
      "actions": [
        "parseInputValue()",
        "beginAddition()"
      ],
      "expected_observables": [
        "dom:elementAdditionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddStart",
      "to": "S3_ErrorAlert",
      "event": "AddInputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_AddingElement",
      "to": "S0_Idle",
      "event": "ElementAdditionComplete",
      "guard": "elementAddedSuccessfully",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:setUpdated",
        "dom:newElementVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_RemovingElement",
      "event": "UserClicksRemove",
      "guard": "elementExists",
      "actions": [
        "captureInput()",
        "removeElement()"
      ],
      "expected_observables": [
        "dom:removeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_RemovingElement",
      "to": "S0_Idle",
      "event": "ElementRemovalComplete",
      "guard": "elementRemovedSuccessfully",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:setUpdated",
        "dom:elementRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S6_CheckingMembership",
      "event": "UserClicksCheckMembership",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "checkMembership()"
      ],
      "expected_observables": [
        "dom:checkMembershipButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S6_CheckingMembership",
      "to": "S0_Idle",
      "event": "MembershipCheckComplete",
      "guard": "true",
      "actions": [
        "showMembershipResult()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:membershipResultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S7_SetResetting",
      "event": "UserClicksReset",
      "guard": "setNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_SetResetting",
      "to": "S0_Idle",
      "event": "SetResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:setCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add",
    "remove",
    "check_membership",
    "reset",
    "set_visualization"
  ]
}