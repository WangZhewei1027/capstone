{
  "meta": {
    "concept": "Graph",
    "topic": "Graph Visualization",
    "educational_goal": "Demonstrate graph creation and traversal",
    "expected_interactions": [
      "addNode",
      "addEdge",
      "removeNode",
      "removeEdge",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "readNodeInput()",
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S3_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "selectNodeToRemove()",
        "highlightNodeToRemove()"
      ],
      "exit_actions": [
        "clearNodeRemoveHighlight()"
      ]
    },
    {
      "id": "S4_RemovingEdge",
      "label": "RemovingEdge",
      "type": "atomic",
      "entry_actions": [
        "selectEdgeToRemove()",
        "highlightEdgeToRemove()"
      ],
      "exit_actions": [
        "clearEdgeRemoveHighlight()"
      ]
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S6_DrawingGraph",
      "label": "DrawingGraph",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "animateGraphChange()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S7_GraphResetting",
      "label": "GraphResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodesAndEdges()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksRemoveNode",
      "event_type": "user_action",
      "description": "User clicks the Remove Node button"
    },
    {
      "id": "UserClicksRemoveEdge",
      "event_type": "user_action",
      "description": "User clicks the Remove Edge button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "NodeAdditionComplete",
      "event_type": "system_event",
      "description": "Node addition completes successfully"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition completes successfully"
    },
    {
      "id": "NodeRemovalComplete",
      "event_type": "system_event",
      "description": "Node removal completes successfully"
    },
    {
      "id": "EdgeRemovalComplete",
      "event_type": "system_event",
      "description": "Edge removal completes successfully"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "UserClicksAddNode",
      "guard": "inputNotEmpty",
      "actions": [
        "captureNodeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readNodeInput",
        "dom:addNodeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingNode",
      "to": "S6_DrawingGraph",
      "event": "NodeAdditionComplete",
      "guard": "nodeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerNodeVisualization()"
      ],
      "expected_observables": [
        "dom:nodeAdded",
        "dom:graphUpdated"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "inputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S6_DrawingGraph",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerEdgeVisualization()"
      ],
      "expected_observables": [
        "dom:edgeAdded",
        "dom:graphUpdated"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingNode",
      "event": "UserClicksRemoveNode",
      "guard": "nodeExists",
      "actions": [
        "selectNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:nodeSelected",
        "dom:removeNodeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S3_RemovingNode",
      "to": "S6_DrawingGraph",
      "event": "NodeRemovalComplete",
      "guard": "nodeRemovedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerNodeRemovalVisualization()"
      ],
      "expected_observables": [
        "dom:nodeRemoved",
        "dom:graphUpdated"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S4_RemovingEdge",
      "event": "UserClicksRemoveEdge",
      "guard": "edgeExists",
      "actions": [
        "selectEdge()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:edgeSelected",
        "dom:removeEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S4_RemovingEdge",
      "to": "S6_DrawingGraph",
      "event": "EdgeRemovalComplete",
      "guard": "edgeRemovedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerEdgeRemovalVisualization()"
      ],
      "expected_observables": [
        "dom:edgeRemoved",
        "dom:graphUpdated"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S7_GraphResetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_GraphResetting",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S5_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusNodeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S5_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input",
    "addNode",
    "addEdge",
    "removeNode",
    "removeEdge",
    "reset",
    "graph_visualization"
  ]
}