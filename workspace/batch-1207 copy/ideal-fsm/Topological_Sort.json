{
  "meta": {
    "concept": "Topological Sort",
    "topic": "Graph Topological Sorting",
    "educational_goal": "Demonstrate topological sorting of a directed acyclic graph",
    "expected_interactions": [
      "addNode",
      "addEdge",
      "performSort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "readNodeInput()",
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S3_PerformingSort",
      "label": "PerformingSort",
      "type": "operation",
      "entry_actions": [
        "executeTopologicalSort()",
        "showSortAnimation()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksPerformSort",
      "event_type": "user_action",
      "description": "User clicks the Perform Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "NodeInputValidationComplete",
      "event_type": "system_event",
      "description": "Node input validation completes successfully"
    },
    {
      "id": "EdgeInputValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "SortComplete",
      "event_type": "system_event",
      "description": "Topological sort operation complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "UserClicksAddNode",
      "guard": "nodeInputNotEmpty",
      "actions": [
        "captureNodeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readNodeInput",
        "dom:addNodeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "edgeInputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "NodeInputValidationComplete",
      "guard": "nodeInputIsValid",
      "actions": [
        "addNodeToGraph()",
        "updateGraphVisualization()"
      ],
      "expected_observables": [
        "dom:nodeAdded",
        "dom:graphUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S0_Idle",
      "event": "EdgeInputValidationComplete",
      "guard": "edgeInputIsValid",
      "actions": [
        "addEdgeToGraph()",
        "updateGraphVisualization()"
      ],
      "expected_observables": [
        "dom:edgeAdded",
        "dom:graphUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_PerformingSort",
      "event": "UserClicksPerformSort",
      "guard": "graphIsValidForSort",
      "actions": [
        "disableControls()",
        "beginSortOperation()"
      ],
      "expected_observables": [
        "dom:performSortButtonClicked"
      ],
      "timeout": 3000
    },
    {
      "from": "S3_PerformingSort",
      "to": "S0_Idle",
      "event": "SortComplete",
      "guard": "sortSuccessful",
      "actions": [
        "enableControls()",
        "displaySortResult()"
      ],
      "expected_observables": [
        "dom:sortResultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S4_ErrorAlert",
      "event": "NodeInputValidationFailed",
      "guard": "nodeInputIsInvalid",
      "actions": [
        "showError()",
        "focusNodeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S4_ErrorAlert",
      "event": "EdgeInputValidationFailed",
      "guard": "edgeInputIsInvalid",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "node_input",
    "edge_input",
    "add_node",
    "add_edge",
    "perform_sort",
    "reset",
    "graph_visualization"
  ]
}