{
  "meta": {
    "concept": "Prim's Algorithm",
    "topic": "Minimum Spanning Tree Visualization",
    "educational_goal": "Demonstrate Prim's algorithm for finding a minimum spanning tree",
    "expected_interactions": [
      "select_start_node",
      "step_through",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SelectStartNode",
      "label": "SelectStartNode",
      "type": "atomic",
      "entry_actions": [
        "promptSelectNode()",
        "highlightSelectableNodes()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_AlgorithmRunning",
      "label": "AlgorithmRunning",
      "type": "operation",
      "entry_actions": [
        "initializeAlgorithm()",
        "highlightCurrentNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_StepComplete",
      "label": "StepComplete",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "showStepFeedback()"
      ],
      "exit_actions": [
        "prepareNextStep()"
      ]
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S5_AlgorithmResetting",
      "label": "AlgorithmResetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSelectsStartNode",
      "event_type": "user_action",
      "description": "User selects a start node"
    },
    {
      "id": "UserClicksStep",
      "event_type": "user_action",
      "description": "User clicks the Step button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "StepExecutionComplete",
      "event_type": "system_event",
      "description": "Algorithm step execution completes"
    },
    {
      "id": "AlgorithmResetComplete",
      "event_type": "system_event",
      "description": "Algorithm reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SelectStartNode",
      "event": "UserSelectsStartNode",
      "guard": "nodeSelectable",
      "actions": [
        "captureSelectedNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startNodeSelected"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SelectStartNode",
      "to": "S2_AlgorithmRunning",
      "event": "UserClicksStep",
      "guard": "startNodeSelected",
      "actions": [
        "beginAlgorithmStep()",
        "highlightCurrentEdge()"
      ],
      "expected_observables": [
        "dom:stepButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AlgorithmRunning",
      "to": "S3_StepComplete",
      "event": "StepExecutionComplete",
      "guard": "stepSuccessful",
      "actions": [
        "finalizeStep()",
        "updateMST()"
      ],
      "expected_observables": [
        "dom:graphUpdated",
        "dom:currentEdgeHighlighted"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_StepComplete",
      "to": "S2_AlgorithmRunning",
      "event": "UserClicksStep",
      "guard": "moreStepsAvailable",
      "actions": [
        "proceedToNextStep()",
        "highlightNextEdge()"
      ],
      "expected_observables": [
        "dom:nextStepPrepared"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_StepComplete",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetAlgorithmState()",
        "clearGraphHighlight()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_AlgorithmResetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetInitiated"
      ],
      "timeout": 500
    },
    {
      "from": "S5_AlgorithmResetting",
      "to": "S0_Idle",
      "event": "AlgorithmResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AlgorithmRunning",
      "to": "S4_ErrorAlert",
      "event": "StepExecutionComplete",
      "guard": "stepFailed",
      "actions": [
        "showError()",
        "focusError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "graph_visualization",
    "start_node_selection",
    "step",
    "reset"
  ]
}