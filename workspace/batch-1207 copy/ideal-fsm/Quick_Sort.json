{
  "meta": {
    "concept": "QuickSort",
    "topic": "Quick Sort Algorithm Visualization",
    "educational_goal": "Demonstrate the process of quick sort",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_StartingSort",
      "label": "StartingSort",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "highlightPivotSelection()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Partitioning",
      "label": "Partitioning",
      "type": "atomic",
      "entry_actions": [
        "partitionArray()",
        "showPartitioningAnimation()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_SortingSubarrays",
      "label": "SortingSubarrays",
      "type": "atomic",
      "entry_actions": [
        "sortSubarrays()",
        "updateVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SortComplete",
      "label": "SortComplete",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "PartitionComplete",
      "event_type": "system_event",
      "description": "Partitioning of the array is complete"
    },
    {
      "id": "SubarraySortComplete",
      "event_type": "system_event",
      "description": "Sorting of subarrays is complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_StartingSort",
      "event": "UserClicksStartSort",
      "guard": "arrayNotEmpty",
      "actions": [
        "captureArrayState()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startSortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_StartingSort",
      "to": "S2_Partitioning",
      "event": "PartitionComplete",
      "guard": "pivotSelected",
      "actions": [
        "performPartition()",
        "highlightPartition()"
      ],
      "expected_observables": [
        "dom:pivotHighlighted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_Partitioning",
      "to": "S3_SortingSubarrays",
      "event": "SubarraySortComplete",
      "guard": "partitionSuccessful",
      "actions": [
        "sortLeftSubarray()",
        "sortRightSubarray()"
      ],
      "expected_observables": [
        "dom:subarraysSorted"
      ],
      "timeout": 3000
    },
    {
      "from": "S3_SortingSubarrays",
      "to": "S4_SortComplete",
      "event": "SubarraySortComplete",
      "guard": "allSubarraysSorted",
      "actions": [
        "finalizeSort()",
        "displaySortedArray()"
      ],
      "expected_observables": [
        "dom:arraySorted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "array_input",
    "start_sort",
    "reset",
    "array_visualization"
  ]
}