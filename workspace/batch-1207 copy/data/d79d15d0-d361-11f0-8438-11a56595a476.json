by comma, trim and filter out empty strings\n    return str.split(',')\n      .map(s => s.trim())\n      .filter(s => s.length > 0);\n  }\n\n  // Linear Search Algorithm Demo with step by step explanations\n  function linearSearch(array, target, onStep) {\n    for (let i = 0; i < array.length; i++) {\n      onStep(i, array[i]);\n      if (array[i] === target) {\n        return i;\n      }\n    }\n    return -1;\n  }\n\n  // Main handler\n  document.getElementById('searchBtn').addEventListener('click', () => {\n    const arrayInput = document.getElementById('arrayInput').value;\n    const targetInput = document.getElementById('targetInput').value;\n\n    const resultDiv = document.getElementById('result');\n    resultDiv.textContent = '';\n\n    if (!arrayInput.trim()) {\n      resultDiv.textContent = 'Please enter array elements.';\n      return;\n    }\n    if (!targetInput.trim()) {\n      resultDiv.textContent = 'Please enter a target value.';\n      return;\n    }\n\n    // Parse array as strings\n    let array = parseInputArray(arrayInput);\n\n    // We'll do a type-agnostic search but try to detect if all elements and target are numbers\n    // If all array elements parse as numbers and target too, treat all as numbers for equality\n    const allNumbers = array.every(x => !isNaN(x)) && !isNaN(targetInput);\n\n    if (allNumbers) {\n      array = array.map(Number);\n    }\n    const target = allNumbers ? Number(targetInput) : targetInput;\n\n    let log = '';\n    log += `Starting linear search for target: ${JSON.stringify(target)}\\n\\n`;\n    \n    let foundIndex = -1;\n\n    const delay = 500; // ms per step (for demonstration implemented as sync logs here)\n\n    // We'll simulate steps immediately but build log step by step\n    for (let i = 0; i < array.length; i++) {\n      log += `Step ${i+1}: Check element at index ${i}, value = ${JSON.stringify(array[i])}\\n`;\n      if (array[i] === target) {\n        log += `\\n=> Target found at index ${i}.\\n`;\n        foundIndex = i;\n        break;\n      }\n    }\n    if (foundIndex === -1) {\n      log += '\\n=> Target not found in the array.\\n';\n    }\n\n    // Show full log\n    resultDiv.textContent = log;\n  });\n</script>\n</body>\n</html>"
