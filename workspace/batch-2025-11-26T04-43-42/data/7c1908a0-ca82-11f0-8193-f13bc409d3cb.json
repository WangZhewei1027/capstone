e) - 1;\n            graph[u][v] = weight[i];\n        }\n\n        const distance = new Array(vertices).fill(Infinity);\n        distance[source] = 0;\n\n        for (let i = 0; i < vertices - 1; i++) {\n            for (let u = 0; u < vertices; u++) {\n                for (let v = 0; v < vertices; v++) {\n                    if (graph[u][v] !== 0 && distance[u] + graph[u][v] < distance[v]) {\n                        distance[v] = distance[u] + graph[u][v];\n                    }\n                }\n            }\n        }\n\n        const output = document.getElementById(\"output\");\n        output.innerText = \"Vertex\\tDistance from Source\";\n        for (let i = 0; i < vertices; i++) {\n            output += \"<tr><td>\" + i + \"</td><td>\" + distance[i] + \"</td></tr>\";\n        }\n\n        const canvas = document.getElementById(\"graphCanvas\");\n        const ctx = canvas.getContext(\"2d\");\n        canvas.width = 400;\n        canvas.height = 400;\n        drawGraph(ctx, graph, source, vertices);\n    </script>\n</body>\n</html>"
