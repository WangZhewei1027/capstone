{
  "meta": {
    "concept": "KNearestNeighbors",
    "topic": "K-Nearest Neighbors (KNN) Example",
    "educational_goal": "Demonstrate KNN algorithm functionality",
    "expected_interactions": [
      "input_features",
      "input_k",
      "calculate_knn"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputFeatures",
      "label": "InputFeatures",
      "type": "atomic",
      "entry_actions": [
        "clearResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_InputK",
      "label": "InputK",
      "type": "atomic",
      "entry_actions": [
        "clearResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_CalculatingKNN",
      "label": "CalculatingKNN",
      "type": "atomic",
      "entry_actions": [
        "calculateKnn()"
      ],
      "exit_actions": [
        "displayResult()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_INPUT_FEATURES",
      "event_type": "user_action",
      "description": "User inputs features in the features input field",
      "triggers": [
        "#features"
      ]
    },
    {
      "id": "USER_INPUT_K",
      "event_type": "user_action",
      "description": "User inputs K in the K input field",
      "triggers": [
        "#k"
      ]
    },
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button",
      "triggers": [
        ".button"
      ]
    },
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate button",
      "triggers": [
        ".button"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputFeatures",
      "event": "USER_INPUT_FEATURES",
      "guard": "true",
      "actions": [
        "setInputFeatures()"
      ],
      "expected_observables": [
        "dom:featuresInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputFeatures",
      "to": "S3_CalculatingKNN",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "calculateKnn()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputFeatures",
      "to": "S2_InputK",
      "event": "USER_INPUT_K",
      "guard": "true",
      "actions": [
        "setInputK()"
      ],
      "expected_observables": [
        "dom:kInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S2_InputK",
      "to": "S3_CalculatingKNN",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "calculateKnn()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_CalculatingKNN",
      "to": "S0_Idle",
      "event": "USER_INPUT_FEATURES",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S3_CalculatingKNN",
      "to": "S0_Idle",
      "event": "USER_INPUT_K",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#features",
    "#k",
    ".button",
    "#result"
  ]
}