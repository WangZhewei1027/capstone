{
  "meta": {
    "concept": "QuickSort",
    "topic": "Quick Sort Algorithm",
    "educational_goal": "Demonstrate the Quick Sort algorithm",
    "expected_interactions": [
      "submit",
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingNumbers",
      "label": "InputtingNumbers",
      "type": "atomic",
      "entry_actions": [
        "focusInputField()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "performQuickSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DisplayOutput",
      "label": "DisplayOutput",
      "type": "atomic",
      "entry_actions": [
        "showSortedNumbers()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_SUBMITS_FORM",
      "event_type": "user_action",
      "description": "User submits the form"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting operation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingNumbers",
      "event": "USER_SUBMITS_FORM",
      "guard": "true",
      "actions": [
        "disableInput()"
      ],
      "expected_observables": [
        "dom:userFormSubmitted"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingNumbers",
      "to": "S2_ValidatingInput",
      "event": "USER_SUBMITS_FORM",
      "guard": "inputNotEmpty",
      "actions": [
        "validateInput()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_Sorting",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "performQuickSort()"
      ],
      "expected_observables": [
        "dom:sortingStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Sorting",
      "to": "S4_DisplayOutput",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "showSortedNumbers()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_SUBMITS_FORM",
      "guard": "true",
      "actions": [
        "clearErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#user-form",
    "#numbers",
    "button[type='submit']",
    "#output"
  ]
}