{
  "meta": {
    "concept": "HashMap",
    "topic": "Hash Map Implementation",
    "educational_goal": "Demonstrate basic operations of a hash map",
    "expected_interactions": [
      "add",
      "delete",
      "search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableButtons()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEntry",
      "label": "AddingEntry",
      "type": "atomic",
      "entry_actions": [
        "promptForKeyValue()",
        "highlightAddButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_DeletingEntry",
      "label": "DeletingEntry",
      "type": "atomic",
      "entry_actions": [
        "promptForKey()",
        "highlightDeleteButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_SearchingEntry",
      "label": "SearchingEntry",
      "type": "atomic",
      "entry_actions": [
        "promptForKey()",
        "highlightSearchButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "USER_CLICKS_DELETE",
      "event_type": "user_action",
      "description": "User clicks the Delete button"
    },
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "USER_INPUT_INVALID",
      "event_type": "system_event",
      "description": "User input is invalid"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEntry",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "disableButtons()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingEntry",
      "to": "S0_Idle",
      "event": "USER_INPUT_INVALID",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_DeletingEntry",
      "event": "USER_CLICKS_DELETE",
      "guard": "true",
      "actions": [
        "disableButtons()"
      ],
      "expected_observables": [
        "dom:deleteButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_SearchingEntry",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "disableButtons()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#add-btn",
    "#delete-btn",
    "#search-btn",
    "#map"
  ]
}