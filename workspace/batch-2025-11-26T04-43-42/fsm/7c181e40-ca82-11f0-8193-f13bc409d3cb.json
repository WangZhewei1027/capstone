{
  "meta": {
    "concept": "AdjacencyList",
    "topic": "Adjacency List Visualization",
    "educational_goal": "Demonstrate how to build and visualize an adjacency list",
    "expected_interactions": [
      "add"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_BuildingAdjacencyList",
      "label": "BuildingAdjacencyList",
      "type": "atomic",
      "entry_actions": [
        "buildAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "renderAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksAdd",
      "event_type": "user_action",
      "description": "User clicks the Add button",
      "triggers": [
        "#add-btn"
      ]
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails",
      "triggers": []
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully",
      "triggers": []
    },
    {
      "id": "AdjacencyListBuildingComplete",
      "event_type": "system_event",
      "description": "Adjacency list building completes",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ValidatingInput",
      "event": "UserClicksAdd",
      "guard": "true",
      "actions": [
        "disableForm()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S2_BuildingAdjacencyList",
      "event": "InputValidationComplete",
      "guard": "inputsAreValid",
      "actions": [
        "processInputs()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S4_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputsAreInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_BuildingAdjacencyList",
      "to": "S3_DisplayResult",
      "event": "AdjacencyListBuildingComplete",
      "guard": "true",
      "actions": [
        "updateResultDisplay()"
      ],
      "expected_observables": [
        "dom:adjacencyListBuilt"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_DisplayResult",
      "to": "S0_Idle",
      "event": "UserClicksAdd",
      "guard": "true",
      "actions": [
        "clearInputs()",
        "enableForm()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#source",
    "#target",
    "#adjacency-list",
    "#add-btn",
    "#result"
  ]
}