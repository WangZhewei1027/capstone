{
  "meta": {
    "concept": "TopologicalSort",
    "topic": "Topological Sort Visualization",
    "educational_goal": "Demonstrate topological sorting of a directed graph",
    "expected_interactions": [
      "inputGraph",
      "inputVertices",
      "inputEdges",
      "clickSort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSortButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputGraph",
      "label": "InputGraph",
      "type": "atomic",
      "entry_actions": [
        "highlightGraphInput()"
      ],
      "exit_actions": [
        "clearGraphHighlight()"
      ]
    },
    {
      "id": "S2_InputVertices",
      "label": "InputVertices",
      "type": "atomic",
      "entry_actions": [
        "highlightVerticesInput()"
      ],
      "exit_actions": [
        "clearVerticesHighlight()"
      ]
    },
    {
      "id": "S3_InputEdges",
      "label": "InputEdges",
      "type": "atomic",
      "entry_actions": [
        "highlightEdgesInput()"
      ],
      "exit_actions": [
        "clearEdgesHighlight()"
      ]
    },
    {
      "id": "S4_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "prepareSorting()"
      ],
      "exit_actions": [
        "clearSortingState()"
      ]
    },
    {
      "id": "S5_SortedResult",
      "label": "SortedResult",
      "type": "atomic",
      "entry_actions": [
        "displaySortedResult()"
      ],
      "exit_actions": [
        "clearResultDisplay()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsGraph",
      "event_type": "user_action",
      "description": "User inputs graph data in the textarea"
    },
    {
      "id": "UserInputsVertices",
      "event_type": "user_action",
      "description": "User inputs number of vertices"
    },
    {
      "id": "UserInputsEdges",
      "event_type": "user_action",
      "description": "User inputs number of edges"
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputGraph",
      "event": "UserInputsGraph",
      "guard": "true",
      "actions": [
        "updateGraphValue()"
      ],
      "expected_observables": [
        "dom:graphInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_InputVertices",
      "event": "UserInputsVertices",
      "guard": "true",
      "actions": [
        "updateVerticesValue()"
      ],
      "expected_observables": [
        "dom:verticesInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_InputEdges",
      "event": "UserInputsEdges",
      "guard": "true",
      "actions": [
        "updateEdgesValue()"
      ],
      "expected_observables": [
        "dom:edgesInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Sorting",
      "event": "UserClicksSort",
      "guard": "graphIsValid",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_Sorting",
      "to": "S5_SortedResult",
      "event": "UserClicksSort",
      "guard": "true",
      "actions": [
        "completeSorting()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_SortedResult",
      "to": "S0_Idle",
      "event": "UserClicksSort",
      "guard": "true",
      "actions": [
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graph",
    "#vertices",
    "#edges",
    "#sort-btn",
    "#graph-container",
    "#result"
  ]
}