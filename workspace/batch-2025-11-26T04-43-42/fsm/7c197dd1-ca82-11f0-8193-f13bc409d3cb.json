{
  "meta": {
    "concept": "Recursion",
    "topic": "Recursion Example",
    "educational_goal": "Demonstrate recursive factorial calculation",
    "expected_interactions": [
      "start"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Processing",
      "label": "Processing",
      "type": "atomic",
      "entry_actions": [
        "disableInput()",
        "showLoading()"
      ],
      "exit_actions": [
        "hideLoading()"
      ]
    },
    {
      "id": "S2_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "clearInput()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Processing",
      "event": "USER_CLICKS_START",
      "guard": "inputNotEmpty",
      "actions": [
        "startRecursion()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Processing",
      "to": "S2_Completed",
      "event": "RecursionComplete",
      "guard": "true",
      "actions": [
        "showResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Completed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "resetState()"
      ],
      "expected_observables": [
        "dom:inputCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input",
    "start-button",
    "result"
  ],
  "triggers": [
    "#start-button",
    "#number"
  ]
}