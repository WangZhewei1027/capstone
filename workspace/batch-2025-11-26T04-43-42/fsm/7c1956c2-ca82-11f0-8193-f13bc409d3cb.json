{
  "meta": {
    "concept": "LongestCommonSubsequence",
    "topic": "Longest Common Subsequence",
    "educational_goal": "Demonstrate the calculation of the longest common subsequence between two strings",
    "expected_interactions": [
      "find_lcs"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Processing",
      "label": "Processing",
      "type": "atomic",
      "entry_actions": [
        "disableInputFields()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "displayLCSResult()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_FIND_LCS",
      "event_type": "user_action",
      "description": "User clicks the Find LCS button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Processing",
      "event": "USER_CLICKS_FIND_LCS",
      "guard": "inputFieldsNotEmpty",
      "actions": [
        "startLCSCalculation()"
      ],
      "expected_observables": [
        "dom:findLCSButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Processing",
      "to": "S2_DisplayResult",
      "event": "USER_CLICKS_FIND_LCS",
      "guard": "true",
      "actions": [
        "calculateLCS()"
      ],
      "expected_observables": [
        "dom:lcsCalculated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_DisplayResult",
      "to": "S0_Idle",
      "event": "USER_CLICKS_FIND_LCS",
      "guard": "true",
      "actions": [
        "resetFields()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#s1",
    "#s2",
    "#find-lcs",
    "#result"
  ]
}