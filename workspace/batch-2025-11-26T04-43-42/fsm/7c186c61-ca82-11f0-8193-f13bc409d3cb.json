{
  "meta": {
    "concept": "MergeSort",
    "topic": "Merge Sort Visualization",
    "educational_goal": "Demonstrate the merge sort algorithm",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "initializeSort()",
        "displaySorting()"
      ],
      "exit_actions": [
        "clearOutput()"
      ]
    },
    {
      "id": "S2_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "displaySortedArray()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "UserClicksStartSort",
      "guard": "true",
      "actions": [
        "startMergeSort()"
      ],
      "expected_observables": [
        "dom:startSortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Sorted",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "finalizeSort()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#output"
  ]
}