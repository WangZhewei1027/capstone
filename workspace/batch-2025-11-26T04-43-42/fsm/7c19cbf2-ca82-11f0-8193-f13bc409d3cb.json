{
  "meta": {
    "concept": "KMeansClustering",
    "topic": "K-Means Clustering Visualization",
    "educational_goal": "Demonstrate K-Means clustering algorithm",
    "expected_interactions": [
      "submitData"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_DataInput",
      "label": "DataInput",
      "type": "atomic",
      "entry_actions": [
        "focusInput()"
      ],
      "exit_actions": [
        "clearInput()"
      ]
    },
    {
      "id": "S2_ProcessingData",
      "label": "ProcessingData",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S3_VisualizingClusters",
      "label": "VisualizingClusters",
      "type": "atomic",
      "entry_actions": [
        "renderClusters()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SUBMIT",
      "event_type": "user_action",
      "description": "User clicks the Submit button"
    },
    {
      "id": "DATA_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Data validation completes successfully"
    },
    {
      "id": "DATA_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Data validation fails"
    },
    {
      "id": "CLUSTERING_COMPLETE",
      "event_type": "system_event",
      "description": "K-Means clustering operation completes"
    },
    {
      "id": "USER_DISMISSES_ERROR",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_DataInput",
      "event": "USER_CLICKS_SUBMIT",
      "guard": "true",
      "actions": [
        "disableForm()"
      ],
      "expected_observables": [
        "dom:submitButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_DataInput",
      "to": "S2_ProcessingData",
      "event": "USER_CLICKS_SUBMIT",
      "guard": "inputIsNotEmpty",
      "actions": [
        "validateData()"
      ],
      "expected_observables": [
        "dom:dataValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ProcessingData",
      "to": "S3_VisualizingClusters",
      "event": "DATA_VALIDATION_COMPLETE",
      "guard": "dataIsValid",
      "actions": [
        "runKMeans()"
      ],
      "expected_observables": [
        "dom:clusteringCompleted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_ProcessingData",
      "to": "S4_ErrorAlert",
      "event": "DATA_VALIDATION_FAILED",
      "guard": "dataIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S1_DataInput",
      "event": "USER_DISMISSES_ERROR",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S3_VisualizingClusters",
      "to": "S0_Idle",
      "event": "CLUSTERING_COMPLETE",
      "guard": "true",
      "actions": [
        "enableForm()"
      ],
      "expected_observables": [
        "dom:clustersVisualized"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#form",
    "#data",
    "button[type='submit']",
    "#chart"
  ],
  "triggers": [
    "#form",
    "#data",
    "button[type='submit']"
  ]
}