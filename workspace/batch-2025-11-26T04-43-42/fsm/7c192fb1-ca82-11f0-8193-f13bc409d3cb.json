{
  "meta": {
    "concept": "PrimsAlgorithm",
    "topic": "Prim's Algorithm Visualization",
    "educational_goal": "Demonstrate Prim's algorithm for minimum spanning tree",
    "expected_interactions": [
      "generate",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingGraph",
      "label": "GeneratingGraph",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "initializeGraph()"
      ],
      "exit_actions": [
        "clearGraphDisplay()"
      ]
    },
    {
      "id": "S2_VisualizingGraph",
      "label": "VisualizingGraph",
      "type": "atomic",
      "entry_actions": [
        "displayGraph()",
        "animateGraph()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate Graph button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingGraph",
      "event": "USER_CLICKS_GENERATE",
      "guard": "inputIsValid",
      "actions": [
        "disableInput()",
        "startGraphGeneration()"
      ],
      "expected_observables": [
        "dom:generateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_GeneratingGraph",
      "to": "S2_VisualizingGraph",
      "event": "GraphGenerationComplete",
      "guard": "true",
      "actions": [
        "renderGraph()"
      ],
      "expected_observables": [
        "dom:graphGenerated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_VisualizingGraph",
      "to": "S0_Idle",
      "event": "VisualizationComplete",
      "guard": "true",
      "actions": [
        "enableInput()"
      ],
      "expected_observables": [
        "dom:visualizationDone"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#input-form",
    "#vertices",
    "#edges",
    "#generate-button",
    "#graph"
  ],
  "triggers": [
    "#generate-button"
  ]
}