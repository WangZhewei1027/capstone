{
  "meta": {
    "concept": "DijkstraAlgorithm",
    "topic": "Dijkstra's Algorithm Visualization",
    "educational_goal": "Demonstrate Dijkstra's algorithm for finding the shortest path in a graph",
    "expected_interactions": [
      "generate_graph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableGenerateButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingGraph",
      "label": "GeneratingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraphCanvas()",
        "drawGraph()"
      ],
      "exit_actions": [
        "logGraphGeneration()"
      ]
    },
    {
      "id": "S2_ProcessingGraph",
      "label": "ProcessingGraph",
      "type": "atomic",
      "entry_actions": [
        "initializeDistances()",
        "calculateShortestPath()"
      ],
      "exit_actions": [
        "displayShortestPath()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate Graph button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingGraph",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "disableGenerateButton()"
      ],
      "expected_observables": [
        "dom:generateButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_GeneratingGraph",
      "to": "S2_ProcessingGraph",
      "event": "GraphGenerated",
      "guard": "true",
      "actions": [
        "startProcessing()"
      ],
      "expected_observables": [
        "dom:graphDrawn"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_ProcessingGraph",
      "to": "S0_Idle",
      "event": "ProcessingComplete",
      "guard": "true",
      "actions": [
        "enableGenerateButton()"
      ],
      "expected_observables": [
        "dom:shortestPathDisplayed"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#generate-btn",
    "#graph"
  ]
}