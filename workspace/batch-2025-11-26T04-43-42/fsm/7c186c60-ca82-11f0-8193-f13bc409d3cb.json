{
  "meta": {
    "concept": "InsertionSort",
    "topic": "Insertion Sort Visualization",
    "educational_goal": "Demonstrate the insertion sort algorithm",
    "expected_interactions": [
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_CollectingInput",
      "label": "CollectingInput",
      "type": "atomic",
      "entry_actions": [
        "promptUserForInput()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "performSorting()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_DisplayOutput",
      "label": "DisplayOutput",
      "type": "atomic",
      "entry_actions": [
        "showSortedArray()"
      ],
      "exit_actions": [
        "clearOutput()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_CollectingInput",
      "event": "UserClicksSort",
      "guard": "inputIsValid",
      "actions": [
        "disableInput()",
        "initializeArray()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_CollectingInput",
      "to": "S2_Sorting",
      "event": "UserClicksSort",
      "guard": "allInputsCollected",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:inputCollectionComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Sorting",
      "to": "S3_DisplayOutput",
      "event": "UserClicksSort",
      "guard": "sortingComplete",
      "actions": [
        "displaySortedArray()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_DisplayOutput",
      "to": "S0_Idle",
      "event": "UserClicksSort",
      "guard": "outputDisplayed",
      "actions": [
        "resetForNextSort()"
      ],
      "expected_observables": [
        "dom:outputDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input",
    "sort-btn",
    "output"
  ],
  "triggers": [
    "#sort-btn",
    "#n"
  ]
}