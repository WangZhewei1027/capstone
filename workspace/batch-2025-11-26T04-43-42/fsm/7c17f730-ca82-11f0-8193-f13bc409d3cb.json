{
  "meta": {
    "concept": "Graph",
    "topic": "Graph (Directed/Undirected)",
    "educational_goal": "Demonstrate graph creation and manipulation",
    "expected_interactions": [
      "add_vertex",
      "add_edge"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingVertex",
      "label": "AddingVertex",
      "type": "atomic",
      "entry_actions": [
        "prepareToAddVertex()"
      ],
      "exit_actions": [
        "finalizeVertexAddition()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "prepareToAddEdge()"
      ],
      "exit_actions": [
        "finalizeEdgeAddition()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_VERTEX",
      "event_type": "user_action",
      "description": "User clicks the Add Vertex button"
    },
    {
      "id": "USER_CLICKS_ADD_EDGE",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "VERTEX_ADDED",
      "event_type": "system_event",
      "description": "A vertex has been added to the graph"
    },
    {
      "id": "EDGE_ADDED",
      "event_type": "system_event",
      "description": "An edge has been added to the graph"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingVertex",
      "event": "USER_CLICKS_ADD_VERTEX",
      "guard": "true",
      "actions": [
        "captureVertexClick()"
      ],
      "expected_observables": [
        "dom:addVertexButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingVertex",
      "to": "S0_Idle",
      "event": "VERTEX_ADDED",
      "guard": "true",
      "actions": [
        "updateGraphData()",
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:vertexAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "true",
      "actions": [
        "captureEdgeClick()"
      ],
      "expected_observables": [
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_AddingEdge",
      "to": "S0_Idle",
      "event": "EDGE_ADDED",
      "guard": "true",
      "actions": [
        "updateGraphData()",
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#n",
    "#add-vertex",
    "#add-edge",
    "#graph"
  ]
}