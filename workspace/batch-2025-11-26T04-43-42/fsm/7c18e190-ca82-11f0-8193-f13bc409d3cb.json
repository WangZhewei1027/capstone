{
  "meta": {
    "concept": "DepthFirstSearch",
    "topic": "Depth-First Search (DFS)",
    "educational_goal": "Visualize the DFS algorithm",
    "expected_interactions": [
      "start_search",
      "reset_graph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "initializeSearch()",
        "highlightCurrentNode()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "resetGraph()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "SearchCompleted",
      "event_type": "system_event",
      "description": "Depth-First Search has completed"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Searching",
      "event": "UserClicksStart",
      "guard": "true",
      "actions": [
        "startDFS()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Searching",
      "to": "S2_Completed",
      "event": "SearchCompleted",
      "guard": "true",
      "actions": [
        "finalizeSearch()"
      ],
      "expected_observables": [
        "dom:searchCompleted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_Completed",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetSearchState()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graph",
    "#startButton",
    "#resetButton"
  ]
}