{
  "meta": {
    "concept": "RedBlackTree",
    "topic": "Red-Black Tree Visualization",
    "educational_goal": "Demonstrate Red-Black Tree insertion and properties",
    "expected_interactions": [
      "insert",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderTree()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "findInsertPosition()",
        "createNewNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_DrawingTree",
      "label": "DrawingTree",
      "type": "atomic",
      "entry_actions": [
        "updateTreeVisualization()",
        "animateInsertion()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S4_TreeResetting",
      "label": "TreeResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodes()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "NODE_INSERTION_COMPLETE",
      "event_type": "system_event",
      "description": "Node insertion and tree update complete"
    },
    {
      "id": "TREE_RESET_COMPLETE",
      "event_type": "system_event",
      "description": "Tree reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_InsertingNode",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:nodeInsertionStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_InsertingNode",
      "to": "S3_DrawingTree",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "nodeInsertedSuccessfully",
      "actions": [
        "updateTreeStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:treeStructureChanged"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_DrawingTree",
      "to": "S0_Idle",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_TreeResetting",
      "event": "USER_CLICKS_RESET",
      "guard": "treeNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_TreeResetting",
      "to": "S0_Idle",
      "event": "TREE_RESET_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:treeCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#insertButton",
    "#resetButton",
    "#tree"
  ]
}