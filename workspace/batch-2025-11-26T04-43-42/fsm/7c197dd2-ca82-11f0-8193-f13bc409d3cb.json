{
  "meta": {
    "concept": "DivideAndConquer",
    "topic": "Divide and Conquer",
    "educational_goal": "Demonstrate the divide and conquer algorithm",
    "expected_interactions": [
      "inputNumber",
      "calculateResult"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputNumber",
      "label": "InputNumber",
      "type": "atomic",
      "entry_actions": [
        "promptUserForInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "executeDivideAndConquer()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "showResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserInputsNumber",
      "event_type": "user_action",
      "description": "User inputs a number via prompt"
    },
    {
      "id": "CalculationComplete",
      "event_type": "system_event",
      "description": "Calculation of the divide and conquer result is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputNumber",
      "event": "UserInputsNumber",
      "guard": "true",
      "actions": [
        "disableInput()"
      ],
      "expected_observables": [
        "dom:inputPromptShown"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputNumber",
      "to": "S2_Calculating",
      "event": "UserInputsNumber",
      "guard": "inputIsValid",
      "actions": [
        "startCalculation()"
      ],
      "expected_observables": [
        "dom:calculationStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Calculating",
      "to": "S3_DisplayResult",
      "event": "CalculationComplete",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S3_DisplayResult",
      "to": "S0_Idle",
      "event": "UserInputsNumber",
      "guard": "true",
      "actions": [
        "resetInput()"
      ],
      "expected_observables": [
        "dom:inputReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#div"
  ]
}