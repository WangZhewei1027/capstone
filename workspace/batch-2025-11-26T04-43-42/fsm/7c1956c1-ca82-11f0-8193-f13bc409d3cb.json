{
  "meta": {
    "concept": "KnapsackProblem",
    "topic": "Knapsack Problem",
    "educational_goal": "Demonstrate the knapsack problem solution",
    "expected_interactions": [
      "submit",
      "reset",
      "display_results"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ProcessingInput",
      "label": "ProcessingInput",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "validateInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_InvalidInput",
      "label": "InvalidInput",
      "type": "atomic",
      "entry_actions": [
        "showAlert('Invalid input')"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_CalculatingResult",
      "label": "CalculatingResult",
      "type": "atomic",
      "entry_actions": [
        "calculateKnapsack()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DisplayResults",
      "label": "DisplayResults",
      "type": "atomic",
      "entry_actions": [
        "renderResults()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserSubmitsForm",
      "event_type": "user_action",
      "description": "User submits the knapsack form"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "InputValidationPassed",
      "event_type": "system_event",
      "description": "Input validation passes"
    },
    {
      "id": "ResultsRendered",
      "event_type": "system_event",
      "description": "Results are rendered on the page"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ProcessingInput",
      "event": "UserSubmitsForm",
      "guard": "true",
      "actions": [
        "disableForm()"
      ],
      "expected_observables": [
        "dom:formSubmitted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ProcessingInput",
      "to": "S2_InvalidInput",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showAlert()"
      ],
      "expected_observables": [
        "dom:inputValidationFailed"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ProcessingInput",
      "to": "S3_CalculatingResult",
      "event": "InputValidationPassed",
      "guard": "inputIsValid",
      "actions": [
        "calculateKnapsack()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_CalculatingResult",
      "to": "S4_DisplayResults",
      "event": "ResultsRendered",
      "guard": "true",
      "actions": [
        "renderResults()"
      ],
      "expected_observables": [
        "dom:resultsCalculated"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_DisplayResults",
      "to": "S0_Idle",
      "event": "ResultsRendered",
      "guard": "true",
      "actions": [
        "enableForm()"
      ],
      "expected_observables": [
        "dom:resultsDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#knapsack-form",
    "#weight",
    "#value",
    "#capacity",
    "button[type='submit']",
    "#knapsack-results"
  ]
}