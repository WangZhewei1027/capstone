{
  "meta": {
    "concept": "BubbleSort",
    "topic": "Bubble Sort Visualization",
    "educational_goal": "Demonstrate Bubble Sort algorithm",
    "expected_interactions": [
      "input",
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputReceived",
      "label": "InputReceived",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "prepareSorting()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "performBubbleSort()",
        "updateResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters a number in the input field",
      "triggers": [
        "#number"
      ]
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button",
      "triggers": [
        "#sort-button"
      ]
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails",
      "triggers": []
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully",
      "triggers": []
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting operation complete",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputReceived",
      "event": "UserEntersInput",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()"
      ],
      "expected_observables": [
        "dom:inputReceived"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputReceived",
      "to": "S2_Sorting",
      "event": "UserClicksSort",
      "guard": "inputIsValid",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputReceived",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Sorting",
      "to": "S0_Idle",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "displaySortedResult()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#number",
    "#sort-button",
    "#result"
  ]
}