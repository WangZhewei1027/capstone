{
  "meta": {
    "concept": "HashTable",
    "topic": "Hash Table",
    "educational_goal": "Demonstrate hash table insertion and updating",
    "expected_interactions": [
      "insert",
      "update"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Inserting",
      "label": "Inserting",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "disableForm()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    },
    {
      "id": "S2_Updating",
      "label": "Updating",
      "type": "atomic",
      "entry_actions": [
        "updateHashTable()",
        "showUpdateFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorFeedback()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserSubmitsForm",
      "event_type": "user_action",
      "description": "User submits the form"
    },
    {
      "id": "KeyAlreadyExists",
      "event_type": "system_event",
      "description": "Key already exists in the hash table"
    },
    {
      "id": "KeyInserted",
      "event_type": "system_event",
      "description": "New key-value pair inserted into the hash table"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Inserting",
      "event": "UserSubmitsForm",
      "guard": "true",
      "actions": [
        "captureInput()",
        "disableForm()"
      ],
      "expected_observables": [
        "dom:formSubmitted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Inserting",
      "to": "S2_Updating",
      "event": "KeyInserted",
      "guard": "keyDoesNotExist",
      "actions": [
        "insertKeyValuePair()",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:keyInserted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Inserting",
      "to": "S3_Error",
      "event": "KeyAlreadyExists",
      "guard": "keyExists",
      "actions": [
        "showError()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#hash-table-form",
    "#key",
    "#value",
    ".submit-btn",
    "#hash-table"
  ]
}