{
  "meta": {
    "concept": "SelectionSort",
    "topic": "Selection Sort Visualization",
    "educational_goal": "Demonstrate selection sort algorithm",
    "expected_interactions": [
      "input",
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSortButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputReceived",
      "label": "InputReceived",
      "type": "atomic",
      "entry_actions": [
        "updateNumbersArray()",
        "displayCurrentState()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "startSorting()",
        "showSortingAnimation()"
      ],
      "exit_actions": [
        "stopSortingAnimation()"
      ]
    },
    {
      "id": "S3_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "displaySortedResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserInputsNumber",
      "event_type": "user_action",
      "description": "User inputs a number to sort"
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputReceived",
      "event": "UserInputsNumber",
      "guard": "inputIsValid",
      "actions": [
        "captureInputValue()"
      ],
      "expected_observables": [
        "dom:numberInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputReceived",
      "to": "S0_Idle",
      "event": "UserInputsNumber",
      "guard": "inputIsValid",
      "actions": [
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:currentNumbersUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Sorting",
      "event": "UserClicksSort",
      "guard": "true",
      "actions": [
        "initiateSort()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Sorting",
      "to": "S3_Sorted",
      "event": "UserClicksSort",
      "guard": "sortingComplete",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#number",
    "#sort-btn",
    "#result"
  ],
  "triggers": [
    "#number",
    "#sort-btn"
  ]
}