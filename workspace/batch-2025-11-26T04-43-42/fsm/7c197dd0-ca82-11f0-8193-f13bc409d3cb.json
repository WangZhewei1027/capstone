{
  "meta": {
    "concept": "HuffmanCoding",
    "topic": "Huffman Coding Visualization",
    "educational_goal": "Demonstrate Huffman encoding and decoding",
    "expected_interactions": [
      "encode",
      "decode"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Encoding",
      "label": "Encoding",
      "type": "atomic",
      "entry_actions": [
        "readInputText()",
        "calculateFrequency()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S2_EncodingComplete",
      "label": "EncodingComplete",
      "type": "atomic",
      "entry_actions": [
        "displayEncodedText()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Decoding",
      "label": "Decoding",
      "type": "atomic",
      "entry_actions": [
        "readEncodedText()",
        "buildDecodingTree()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DecodingComplete",
      "label": "DecodingComplete",
      "type": "atomic",
      "entry_actions": [
        "displayDecodedText()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ENCODE",
      "event_type": "user_action",
      "description": "User clicks the Encode button"
    },
    {
      "id": "USER_CLICKS_DECODE",
      "event_type": "user_action",
      "description": "User clicks the Decode button"
    },
    {
      "id": "ENCODING_COMPLETE",
      "event_type": "system_event",
      "description": "Encoding process is complete"
    },
    {
      "id": "DECODING_COMPLETE",
      "event_type": "system_event",
      "description": "Decoding process is complete"
    },
    {
      "id": "ERROR_OCCURRED",
      "event_type": "system_event",
      "description": "An error occurred during processing"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Encoding",
      "event": "USER_CLICKS_ENCODE",
      "guard": "inputNotEmpty",
      "actions": [
        "disableInput()"
      ],
      "expected_observables": [
        "dom:encodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Encoding",
      "to": "S2_EncodingComplete",
      "event": "ENCODING_COMPLETE",
      "guard": "true",
      "actions": [
        "generateEncodedText()"
      ],
      "expected_observables": [
        "dom:encodingCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_EncodingComplete",
      "to": "S0_Idle",
      "event": "USER_CLICKS_DECODE",
      "guard": "encodedTextAvailable",
      "actions": [
        "prepareForDecoding()"
      ],
      "expected_observables": [
        "dom:decodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_Decoding",
      "event": "USER_CLICKS_DECODE",
      "guard": "encodedTextAvailable",
      "actions": [
        "disableInput()"
      ],
      "expected_observables": [
        "dom:decodeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Decoding",
      "to": "S4_DecodingComplete",
      "event": "DECODING_COMPLETE",
      "guard": "true",
      "actions": [
        "generateDecodedText()"
      ],
      "expected_observables": [
        "dom:decodingCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Encoding",
      "to": "S5_Error",
      "event": "ERROR_OCCURRED",
      "guard": "true",
      "actions": [
        "handleError()"
      ],
      "expected_observables": [
        "dom:errorMessageDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ENCODE",
      "guard": "true",
      "actions": [
        "resetErrorState()"
      ],
      "expected_observables": [
        "dom:errorMessageCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input-text",
    "encode-button",
    "output-text",
    "decode-button",
    "error-message"
  ],
  "triggers": [
    "#input-text",
    "#encode-button",
    "#output-text",
    "#decode-button",
    "#error-message"
  ]
}