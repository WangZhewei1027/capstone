{
  "meta": {
    "concept": "AdjacencyMatrix",
    "topic": "Adjacency Matrix Visualization",
    "educational_goal": "Demonstrate how to calculate and visualize an adjacency matrix",
    "expected_interactions": [
      "submit",
      "alert"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputReceived",
      "label": "InputReceived",
      "type": "atomic",
      "entry_actions": [
        "readInputMatrix()",
        "validateMatrix()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    },
    {
      "id": "S3_CalculatingMatrix",
      "label": "CalculatingMatrix",
      "type": "atomic",
      "entry_actions": [
        "calculateAdjacencyMatrix()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "renderAdjacencyMatrix()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserSubmitsForm",
      "event_type": "user_action",
      "description": "User submits the matrix form"
    },
    {
      "id": "MatrixValidationFailed",
      "event_type": "system_event",
      "description": "Matrix validation fails"
    },
    {
      "id": "MatrixValidationSuccessful",
      "event_type": "system_event",
      "description": "Matrix validation succeeds"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputReceived",
      "event": "UserSubmitsForm",
      "guard": "true",
      "actions": [
        "disableForm()"
      ],
      "expected_observables": [
        "dom:matrixFormSubmitted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputReceived",
      "to": "S2_ErrorAlert",
      "event": "MatrixValidationFailed",
      "guard": "matrixNotSquare",
      "actions": [
        "showError('The matrix must be square.')"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputReceived",
      "to": "S3_CalculatingMatrix",
      "event": "MatrixValidationSuccessful",
      "guard": "matrixIsValid",
      "actions": [
        "calculateAdjacencyMatrix()"
      ],
      "expected_observables": [
        "dom:matrixValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_CalculatingMatrix",
      "to": "S4_DisplayResult",
      "event": "MatrixValidationSuccessful",
      "guard": "true",
      "actions": [
        "renderAdjacencyMatrix()"
      ],
      "expected_observables": [
        "dom:adjacencyMatrixCalculated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserSubmitsForm",
      "guard": "true",
      "actions": [
        "clearErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#matrix-form",
    "#matrix",
    "#result",
    "button[type='submit']"
  ]
}