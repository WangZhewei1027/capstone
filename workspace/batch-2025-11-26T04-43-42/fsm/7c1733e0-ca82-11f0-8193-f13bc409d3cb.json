{
  "meta": {
    "concept": "Deque",
    "topic": "Deque Implementation",
    "educational_goal": "Demonstrate deque operations: enqueue, dequeue, peek, clear, and print",
    "expected_interactions": [
      "enqueue",
      "dequeue",
      "peek",
      "clear",
      "print"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Enqueueing",
      "label": "Enqueueing",
      "type": "atomic",
      "entry_actions": [
        "readEnqueueValue()",
        "updateDequeDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Dequeueing",
      "label": "Dequeueing",
      "type": "atomic",
      "entry_actions": [
        "readDequeueValue()",
        "updateDequeDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Peeking",
      "label": "Peeking",
      "type": "atomic",
      "entry_actions": [
        "readPeekValue()",
        "updateDequeDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Clearing",
      "label": "Clearing",
      "type": "atomic",
      "entry_actions": [
        "clearDeque()",
        "updateDequeDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Printing",
      "label": "Printing",
      "type": "atomic",
      "entry_actions": [
        "printDeque()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove button"
    },
    {
      "id": "USER_CLICKS_PEEK",
      "event_type": "user_action",
      "description": "User clicks the Peek button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    },
    {
      "id": "USER_CLICKS_PRINT",
      "event_type": "user_action",
      "description": "User clicks the Print button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Enqueueing",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "enqueueValue()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Dequeueing",
      "event": "USER_CLICKS_REMOVE",
      "guard": "true",
      "actions": [
        "dequeueValue()"
      ],
      "expected_observables": [
        "dom:removeButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_Peeking",
      "event": "USER_CLICKS_PEEK",
      "guard": "true",
      "actions": [
        "peekValue()"
      ],
      "expected_observables": [
        "dom:peekButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Clearing",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearDeque()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_Printing",
      "event": "USER_CLICKS_PRINT",
      "guard": "true",
      "actions": [
        "printDeque()"
      ],
      "expected_observables": [
        "dom:printButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#enqueue",
    "#dequeue",
    "#peek",
    "#size",
    "#add-btn",
    "#remove-btn",
    "#peek-btn",
    "#clear-btn",
    "#print-btn",
    "#deque"
  ]
}