{
  "meta": {
    "concept": "Set",
    "topic": "Set Management",
    "educational_goal": "Demonstrate adding numbers to a set",
    "expected_interactions": [
      "add_number",
      "input_number"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "resetResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputNumber",
      "label": "InputNumber",
      "type": "atomic",
      "entry_actions": [
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_NumberAdded",
      "label": "NumberAdded",
      "type": "atomic",
      "entry_actions": [
        "displaySuccessMessage()"
      ],
      "exit_actions": [
        "resetInputField()"
      ]
    },
    {
      "id": "S3_NumberAlreadyInSet",
      "label": "NumberAlreadyInSet",
      "type": "atomic",
      "entry_actions": [
        "displayErrorMessage()"
      ],
      "exit_actions": [
        "resetInputField()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsNumber",
      "event_type": "user_action",
      "description": "User inputs a number into the input field",
      "triggers": [
        "#number"
      ]
    },
    {
      "id": "UserClicksAddToSet",
      "event_type": "user_action",
      "description": "User clicks the Add to Set button",
      "triggers": [
        "#set button[type='submit']"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputNumber",
      "event": "UserInputsNumber",
      "guard": "true",
      "actions": [
        "captureInputValue()"
      ],
      "expected_observables": [
        "dom:numberInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputNumber",
      "to": "S2_NumberAdded",
      "event": "UserClicksAddToSet",
      "guard": "numberNotInSet",
      "actions": [
        "addNumberToSet()",
        "updateResultMessage()"
      ],
      "expected_observables": [
        "dom:numberAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputNumber",
      "to": "S3_NumberAlreadyInSet",
      "event": "UserClicksAddToSet",
      "guard": "numberAlreadyInSet",
      "actions": [
        "showAlreadyInSetMessage()"
      ],
      "expected_observables": [
        "dom:numberAlreadyInSet"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_NumberAdded",
      "to": "S0_Idle",
      "event": "UserClicksAddToSet",
      "guard": "true",
      "actions": [
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:inputReset"
      ],
      "timeout": 500
    },
    {
      "from": "S3_NumberAlreadyInSet",
      "to": "S0_Idle",
      "event": "UserClicksAddToSet",
      "guard": "true",
      "actions": [
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:inputReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#number",
    "#set button[type='submit']",
    "#result"
  ]
}