{
  "meta": {
    "concept": "BreadthFirstSearch",
    "topic": "Breadth-First Search Visualization",
    "educational_goal": "Demonstrate BFS algorithm on a graph",
    "expected_interactions": [
      "inputStartNode",
      "inputEndNode"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "drawGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingStartNode",
      "label": "InputtingStartNode",
      "type": "atomic",
      "entry_actions": [
        "readStartNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_InputtingEndNode",
      "label": "InputtingEndNode",
      "type": "atomic",
      "entry_actions": [
        "readEndNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_PerformingBFS",
      "label": "PerformingBFS",
      "type": "atomic",
      "entry_actions": [
        "bfs(startNode, endNode)"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_PathFound",
      "label": "PathFound",
      "type": "atomic",
      "entry_actions": [
        "showPathFoundMessage()"
      ],
      "exit_actions": [
        "resetInputs()"
      ]
    },
    {
      "id": "S5_NoPathFound",
      "label": "NoPathFound",
      "type": "atomic",
      "entry_actions": [
        "showNoPathMessage()"
      ],
      "exit_actions": [
        "resetInputs()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_INPUT_START_NODE",
      "event_type": "user_action",
      "description": "User inputs start node"
    },
    {
      "id": "USER_INPUT_END_NODE",
      "event_type": "user_action",
      "description": "User inputs end node"
    },
    {
      "id": "BFS_COMPLETED",
      "event_type": "system_event",
      "description": "BFS algorithm completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingStartNode",
      "event": "USER_INPUT_START_NODE",
      "guard": "true",
      "actions": [
        "captureStartNode()"
      ],
      "expected_observables": [
        "dom:startInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingStartNode",
      "to": "S3_PerformingBFS",
      "event": "USER_INPUT_START_NODE",
      "guard": "endNodeIsValid",
      "actions": [
        "bfs(startNode, endNode)"
      ],
      "expected_observables": [
        "dom:bfsStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputtingStartNode",
      "to": "S2_InputtingEndNode",
      "event": "USER_INPUT_END_NODE",
      "guard": "true",
      "actions": [
        "captureEndNode()"
      ],
      "expected_observables": [
        "dom:endInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S3_PerformingBFS",
      "to": "S4_PathFound",
      "event": "BFS_COMPLETED",
      "guard": "pathFound",
      "actions": [
        "showPathFound()"
      ],
      "expected_observables": [
        "dom:pathFound"
      ],
      "timeout": 500
    },
    {
      "from": "S3_PerformingBFS",
      "to": "S5_NoPathFound",
      "event": "BFS_COMPLETED",
      "guard": "noPathFound",
      "actions": [
        "showNoPathFound()"
      ],
      "expected_observables": [
        "dom:noPathFound"
      ],
      "timeout": 500
    },
    {
      "from": "S4_PathFound",
      "to": "S0_Idle",
      "event": "USER_INPUT_START_NODE",
      "guard": "true",
      "actions": [
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:inputsReset"
      ],
      "timeout": 500
    },
    {
      "from": "S5_NoPathFound",
      "to": "S0_Idle",
      "event": "USER_INPUT_START_NODE",
      "guard": "true",
      "actions": [
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:inputsReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graph",
    "#start",
    "#end"
  ]
}