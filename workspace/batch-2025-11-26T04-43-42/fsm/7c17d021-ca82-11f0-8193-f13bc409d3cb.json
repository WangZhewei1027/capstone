{
  "meta": {
    "concept": "Heap",
    "topic": "Heap (Min/Max)",
    "educational_goal": "Demonstrate heap operations (add, remove, clear)",
    "expected_interactions": [
      "add",
      "remove",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateHeap()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightAddButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "highlightRemoveButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_ClearingHeap",
      "label": "ClearingHeap",
      "type": "atomic",
      "entry_actions": [
        "highlightClearButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD",
      "guard": "inputNotEmpty",
      "actions": [
        "add(inputValue)",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addButtonClicked",
        "dom:inputValueRead"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "updateHeap()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:heapUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_RemovingNode",
      "event": "USER_CLICKS_REMOVE",
      "guard": "heapNotEmpty",
      "actions": [
        "remove()"
      ],
      "expected_observables": [
        "dom:removeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RemovingNode",
      "to": "S0_Idle",
      "event": "USER_CLICKS_REMOVE",
      "guard": "true",
      "actions": [
        "updateHeap()"
      ],
      "expected_observables": [
        "dom:heapUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_ClearingHeap",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clear()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ClearingHeap",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "updateHeap()"
      ],
      "expected_observables": [
        "dom:heapCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#input",
    "#add-btn",
    "#remove-btn",
    "#clear-btn",
    ".heap",
    "#output"
  ]
}