{
  "meta": {
    "concept": "HeapSort",
    "topic": "Heap Sort Visualization",
    "educational_goal": "Demonstrate Heap Sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSortButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "initializeSorting()",
        "highlightCurrentElement()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "displaySortedArray()",
        "enableResetButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "resetArray()",
        "clearDisplay()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "UserClicksStartSort",
      "guard": "true",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:startSortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Completed",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S3_Resetting",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "confirmReset()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Resetting",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetToIdle()"
      ],
      "expected_observables": [
        "dom:arrayReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start_sort",
    "reset"
  ]
}