{
  "meta": {
    "concept": "KruskalAlgorithm",
    "topic": "Kruskal's Algorithm Visualization",
    "educational_goal": "Demonstrate the process of Kruskal's algorithm for finding the minimum spanning tree",
    "expected_interactions": [
      "start",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Processing",
      "label": "Processing",
      "type": "atomic",
      "entry_actions": [
        "initializeEdges()",
        "startKruskalAlgorithm()"
      ],
      "exit_actions": [
        "clearEdges()"
      ]
    },
    {
      "id": "S2_Completed",
      "label": "Completed",
      "type": "atomic",
      "entry_actions": [
        "displaySortedEdges()",
        "enableResetButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "resetEdges()",
        "clearOutput()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Processing",
      "event": "UserClicksStart",
      "guard": "true",
      "actions": [
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 5000
    },
    {
      "from": "S1_Processing",
      "to": "S2_Completed",
      "event": "ProcessingComplete",
      "guard": "true",
      "actions": [
        "enableOutputDisplay()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Completed",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "clearOutputDisplay()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_Resetting",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableStartButton()"
      ],
      "expected_observables": [
        "dom:resetComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#startButton",
    "#resetButton",
    "#output"
  ]
}