{
  "meta": {
    "concept": "RadixSort",
    "topic": "Radix Sort Visualization",
    "educational_goal": "Demonstrate the Radix Sort algorithm",
    "expected_interactions": [
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSortButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "readInputNumbers()",
        "showSortingAnimation()"
      ],
      "exit_actions": [
        "clearResultDisplay()"
      ]
    },
    {
      "id": "S2_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "displaySortedResult()"
      ],
      "exit_actions": [
        "resetInputField()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Sort button",
      "triggers": [
        "#sort-btn"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_SORT",
      "guard": "inputNotEmpty",
      "actions": [
        "disableSortButton()",
        "startSorting()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Sorted",
      "event": "USER_CLICKS_SORT",
      "guard": "sortingComplete",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Sorted",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SORT",
      "guard": "true",
      "actions": [
        "resetSortingState()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#numbers",
    "#sort-btn",
    "#result"
  ]
}