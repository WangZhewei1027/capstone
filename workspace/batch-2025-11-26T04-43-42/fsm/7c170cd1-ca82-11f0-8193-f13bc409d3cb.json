{
  "meta": {
    "concept": "Queue",
    "topic": "Queue Management",
    "educational_goal": "Demonstrate queue operations like adding and clearing messages",
    "expected_interactions": [
      "add",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "showQueue()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingMessage",
      "label": "AddingMessage",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "clearInputField()"
      ],
      "exit_actions": [
        "displayMessages()"
      ]
    },
    {
      "id": "S2_ClearingQueue",
      "label": "ClearingQueue",
      "type": "atomic",
      "entry_actions": [
        "clearQueue()",
        "updateDisplay()"
      ],
      "exit_actions": [
        "showQueue()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingMessage",
      "event": "USER_CLICKS_ADD",
      "guard": "inputNotEmpty",
      "actions": [
        "addMessageToQueue()"
      ],
      "expected_observables": [
        "dom:addButtonClicked",
        "dom:inputValueRead"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingMessage",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "displayMessages()"
      ],
      "expected_observables": [
        "dom:messagesDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_ClearingQueue",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearQueue()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ClearingQueue",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:queueCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#input",
    "#add-btn",
    "#clear-btn",
    "#messages"
  ]
}