{
  "meta": {
    "concept": "Stack",
    "topic": "Stack Data Structure",
    "educational_goal": "Demonstrate stack operations (push and pop)",
    "expected_interactions": [
      "add",
      "remove"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingItem",
      "label": "AddingItem",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightAddButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_RemovingItem",
      "label": "RemovingItem",
      "type": "atomic",
      "entry_actions": [
        "checkStackNotEmpty()",
        "highlightRemoveButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add button",
      "triggers": [
        "#add"
      ]
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove button",
      "triggers": [
        "#remove"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails",
      "triggers": []
    },
    {
      "id": "STACK_NOT_EMPTY",
      "event_type": "system_event",
      "description": "Stack is not empty for removal",
      "triggers": []
    },
    {
      "id": "STACK_EMPTY",
      "event_type": "system_event",
      "description": "Stack is empty for removal",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingItem",
      "event": "USER_CLICKS_ADD",
      "guard": "inputIsValid",
      "actions": [
        "addItemToStack()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingItem",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "updateStackDisplay()"
      ],
      "expected_observables": [
        "dom:stackUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_RemovingItem",
      "event": "USER_CLICKS_REMOVE",
      "guard": "STACK_NOT_EMPTY",
      "actions": [
        "removeItemFromStack()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_ErrorAlert",
      "event": "USER_CLICKS_REMOVE",
      "guard": "STACK_EMPTY",
      "actions": [
        "showEmptyStackAlert()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_REMOVE",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#num",
    "#item",
    "#add",
    "#remove",
    "#stack"
  ]
}