{
  "meta": {
    "concept": "CountingSort",
    "topic": "Counting Sort Visualization",
    "educational_goal": "Demonstrate Counting Sort algorithm",
    "expected_interactions": [
      "sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSortButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightSorting()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "displaySortedArray()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "INPUT_IS_EMPTY",
      "event_type": "system_event",
      "description": "Input field is empty"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting operation is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_SORT",
      "guard": "inputNotEmpty",
      "actions": [
        "disableSortButton()",
        "startSorting()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_DisplayResult",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "displayArray(sortedArr)"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Sorting",
      "to": "S3_ErrorAlert",
      "event": "INPUT_IS_EMPTY",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SORT",
      "guard": "true",
      "actions": [
        "clearErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input",
    "sort-btn",
    "result"
  ],
  "triggers": [
    "#input",
    "#sort-btn",
    "#result"
  ]
}