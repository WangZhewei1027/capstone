{
  "meta": {
    "concept": "WeightedGraph",
    "topic": "Weighted Graph Visualization",
    "educational_goal": "Demonstrate adding edges to a weighted graph",
    "expected_interactions": [
      "add_edge"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()",
        "showAddingEdgeAnimation()"
      ],
      "exit_actions": [
        "clearInputs()"
      ]
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_EDGE",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button",
      "triggers": [
        "#graph-form input[type='submit']"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails",
      "triggers": []
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEdge",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "inputsNotEmpty",
      "actions": [
        "addEdgeToGraph()"
      ],
      "expected_observables": [
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingEdge",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "updateGraphVisualization()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingEdge",
      "to": "S2_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graph-form",
    "#source",
    "#weight",
    "#target",
    "#source1",
    "#weight1",
    "#target1",
    "#source2",
    "#weight2",
    "#target2"
  ]
}