{
  "meta": {
    "concept": "BinaryTree",
    "topic": "Binary Tree",
    "educational_goal": "Demonstrate binary tree operations such as adding and deleting nodes",
    "expected_interactions": [
      "add_leaf",
      "add_branch",
      "delete_leaf",
      "delete_branch"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableButtons()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingLeaf",
      "label": "AddingLeaf",
      "type": "atomic",
      "entry_actions": [
        "prepareToAddLeaf()"
      ],
      "exit_actions": [
        "clearLeafInput()"
      ]
    },
    {
      "id": "S2_AddingBranch",
      "label": "AddingBranch",
      "type": "atomic",
      "entry_actions": [
        "prepareToAddBranch()"
      ],
      "exit_actions": [
        "clearBranchInput()"
      ]
    },
    {
      "id": "S3_DeletingLeaf",
      "label": "DeletingLeaf",
      "type": "atomic",
      "entry_actions": [
        "prepareToDeleteLeaf()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DeletingBranch",
      "label": "DeletingBranch",
      "type": "atomic",
      "entry_actions": [
        "prepareToDeleteBranch()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_LEAF",
      "event_type": "user_action",
      "description": "User clicks the Add Leaf button"
    },
    {
      "id": "USER_CLICKS_ADD_BRANCH",
      "event_type": "user_action",
      "description": "User clicks the Add Branch button"
    },
    {
      "id": "USER_CLICKS_DELETE_LEAF",
      "event_type": "user_action",
      "description": "User clicks the Delete Leaf button"
    },
    {
      "id": "USER_CLICKS_DELETE_BRANCH",
      "event_type": "user_action",
      "description": "User clicks the Delete Branch button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingLeaf",
      "event": "USER_CLICKS_ADD_LEAF",
      "guard": "true",
      "actions": [
        "addLeaf()"
      ],
      "expected_observables": [
        "dom:add-leaf"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingBranch",
      "event": "USER_CLICKS_ADD_BRANCH",
      "guard": "true",
      "actions": [
        "addBranch()"
      ],
      "expected_observables": [
        "dom:add-branch"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_DeletingLeaf",
      "event": "USER_CLICKS_DELETE_LEAF",
      "guard": "true",
      "actions": [
        "deleteLeaf()"
      ],
      "expected_observables": [
        "dom:delete-leaf"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_DeletingBranch",
      "event": "USER_CLICKS_DELETE_BRANCH",
      "guard": "true",
      "actions": [
        "deleteBranch()"
      ],
      "expected_observables": [
        "dom:delete-branch"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#tree",
    "#add-leaf",
    "#add-branch",
    "#delete-leaf",
    "#delete-branch"
  ]
}