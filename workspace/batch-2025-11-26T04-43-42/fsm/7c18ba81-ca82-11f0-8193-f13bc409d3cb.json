{
  "meta": {
    "concept": "LinearSearch",
    "topic": "Linear Search",
    "educational_goal": "Demonstrate linear search algorithm",
    "expected_interactions": [
      "search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSearchButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "disableSearchButton()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_ResultFound",
      "label": "ResultFound",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S3_ResultNotFound",
      "label": "ResultNotFound",
      "type": "atomic",
      "entry_actions": [
        "displayNotFoundMessage()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Searching",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "startSearch()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Searching",
      "to": "S2_ResultFound",
      "event": "USER_CLICKS_SEARCH",
      "guard": "elementFound",
      "actions": [
        "showFoundResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Searching",
      "to": "S3_ResultNotFound",
      "event": "USER_CLICKS_SEARCH",
      "guard": "elementNotFound",
      "actions": [
        "showNotFoundResult()"
      ],
      "expected_observables": [
        "dom:notFoundDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#numElements",
    "#searchButton",
    "#result"
  ]
}