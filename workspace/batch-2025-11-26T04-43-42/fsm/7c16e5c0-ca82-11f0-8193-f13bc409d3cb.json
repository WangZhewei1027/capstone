{
  "meta": {
    "concept": "LinkedList",
    "topic": "Linked List Operations",
    "educational_goal": "Demonstrate linked list insertion, deletion, and traversal",
    "expected_interactions": [
      "insert",
      "delete",
      "traverse"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderList()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_NodeInserted",
      "label": "NodeInserted",
      "type": "atomic",
      "entry_actions": [
        "updateListVisualization()",
        "animateInsertion()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_NodeDeleted",
      "label": "NodeDeleted",
      "type": "atomic",
      "entry_actions": [
        "updateListVisualization()",
        "animateDeletion()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_TraversingList",
      "label": "TraversingList",
      "type": "atomic",
      "entry_actions": [
        "printList()",
        "highlightTraversal()"
      ],
      "exit_actions": [
        "clearTraversalHighlight()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "USER_CLICKS_DELETE",
      "event_type": "user_action",
      "description": "User clicks the Delete button"
    },
    {
      "id": "USER_CLICKS_TRAVERSE",
      "event_type": "user_action",
      "description": "User clicks the Traverse button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "NODE_INSERTION_COMPLETE",
      "event_type": "system_event",
      "description": "Node insertion complete"
    },
    {
      "id": "NODE_DELETION_COMPLETE",
      "event_type": "system_event",
      "description": "Node deletion complete"
    },
    {
      "id": "TRAVERSAL_COMPLETE",
      "event_type": "system_event",
      "description": "Traversal of the linked list complete"
    },
    {
      "id": "USER_DISMISSES_ALERT",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S2_ValidatingInput",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_NodeInserted",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "validData",
      "actions": [
        "insertNode()",
        "updateList()"
      ],
      "expected_observables": [
        "dom:nodeInserted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertingNode",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_DISMISSES_ALERT",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S5_NodeDeleted",
      "event": "USER_CLICKS_DELETE",
      "guard": "nodeExists",
      "actions": [
        "deleteNode()",
        "updateList()"
      ],
      "expected_observables": [
        "dom:deleteButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_NodeDeleted",
      "to": "S0_Idle",
      "event": "NODE_DELETION_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()",
        "clearInputField()"
      ],
      "expected_observables": [
        "dom:nodeDeleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_TraversingList",
      "event": "USER_CLICKS_TRAVERSE",
      "guard": "listNotEmpty",
      "actions": [
        "traverseList()",
        "highlightTraversal()"
      ],
      "expected_observables": [
        "dom:traverseButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_TraversingList",
      "to": "S0_Idle",
      "event": "TRAVERSAL_COMPLETE",
      "guard": "true",
      "actions": [
        "clearTraversalHighlight()"
      ],
      "expected_observables": [
        "dom:traversalComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "insert",
    "delete",
    "traverse",
    "linked_list"
  ]
}