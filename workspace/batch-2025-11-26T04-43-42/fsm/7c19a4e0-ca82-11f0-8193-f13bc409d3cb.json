{
  "meta": {
    "concept": "SlidingWindow",
    "topic": "Sliding Window Visualization",
    "educational_goal": "Demonstrate the sliding window technique",
    "expected_interactions": [
      "start",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SlidingWindowStart",
      "label": "SlidingWindowStart",
      "type": "atomic",
      "entry_actions": [
        "initializeWindow()",
        "startSlidingWindow()"
      ],
      "exit_actions": [
        "clearWindowArray()"
      ]
    },
    {
      "id": "S2_WindowProcessing",
      "label": "WindowProcessing",
      "type": "atomic",
      "entry_actions": [
        "processWindow()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_WindowCompleted",
      "label": "WindowCompleted",
      "type": "atomic",
      "entry_actions": [
        "displayWindowArray()"
      ],
      "exit_actions": [
        "resetWindow()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "WindowProcessingComplete",
      "event_type": "system_event",
      "description": "Window processing is complete"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SlidingWindowStart",
      "event": "UserClicksStart",
      "guard": "true",
      "actions": [
        "disableStartButton()",
        "initializeWindow()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_SlidingWindowStart",
      "to": "S2_WindowProcessing",
      "event": "WindowProcessingComplete",
      "guard": "true",
      "actions": [
        "processWindow()"
      ],
      "expected_observables": [
        "dom:windowProcessingStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_WindowProcessing",
      "to": "S3_WindowCompleted",
      "event": "WindowProcessingComplete",
      "guard": "true",
      "actions": [
        "finalizeWindow()"
      ],
      "expected_observables": [
        "dom:windowProcessingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_WindowCompleted",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetWindow()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#window",
    "#startButton",
    "#resetButton"
  ]
}