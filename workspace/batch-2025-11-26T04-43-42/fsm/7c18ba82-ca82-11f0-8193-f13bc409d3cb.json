{
  "meta": {
    "concept": "BinarySearch",
    "topic": "Binary Search",
    "educational_goal": "Demonstrate binary search algorithm",
    "expected_interactions": [
      "search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableForm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "showLoading()"
      ],
      "exit_actions": [
        "hideLoading()"
      ]
    },
    {
      "id": "S2_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    },
    {
      "id": "S3_NoResult",
      "label": "NoResult",
      "type": "atomic",
      "entry_actions": [
        "displayNoResultMessage()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_SUBMITS_FORM",
      "event_type": "user_action",
      "description": "User submits the search form"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Searching",
      "event": "USER_SUBMITS_FORM",
      "guard": "inputIsValid",
      "actions": [
        "startSearch()"
      ],
      "expected_observables": [
        "dom:formSubmitted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Searching",
      "to": "S2_ResultDisplayed",
      "event": "USER_SUBMITS_FORM",
      "guard": "resultFound",
      "actions": [
        "updateResultDisplay()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Searching",
      "to": "S3_NoResult",
      "event": "USER_SUBMITS_FORM",
      "guard": "noResultFound",
      "actions": [
        "showNoResultMessage()"
      ],
      "expected_observables": [
        "dom:noResultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#binary-search",
    "#low",
    "#high",
    "button[type='submit']",
    "#result"
  ]
}