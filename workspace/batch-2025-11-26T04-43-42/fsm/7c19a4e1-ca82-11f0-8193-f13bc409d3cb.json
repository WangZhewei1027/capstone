{
  "meta": {
    "concept": "TwoPointers",
    "topic": "Two Pointers",
    "educational_goal": "Demonstrate the use of two pointers to calculate sum and difference",
    "expected_interactions": [
      "add",
      "subtract"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [],
      "exit_actions": []
    },
    {
      "id": "S1_Adding",
      "label": "Adding",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightAddButton()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Subtracting",
      "label": "Subtracting",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightSubtractButton()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S3_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "showResult()"
      ],
      "exit_actions": [
        "clearResult()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add button"
    },
    {
      "id": "USER_CLICKS_SUBTRACT",
      "event_type": "user_action",
      "description": "User clicks the Subtract button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Adding",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "calculateSum()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Adding",
      "to": "S3_ResultDisplayed",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "displaySumResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Subtracting",
      "event": "USER_CLICKS_SUBTRACT",
      "guard": "true",
      "actions": [
        "calculateDifference()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:subtractButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Subtracting",
      "to": "S3_ResultDisplayed",
      "event": "USER_CLICKS_SUBTRACT",
      "guard": "true",
      "actions": [
        "displayDifferenceResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ResultDisplayed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:inputFieldsReset"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ResultDisplayed",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SUBTRACT",
      "guard": "true",
      "actions": [
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:inputFieldsReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#array",
    "#array2",
    "#add",
    "#subtract",
    "#result"
  ]
}