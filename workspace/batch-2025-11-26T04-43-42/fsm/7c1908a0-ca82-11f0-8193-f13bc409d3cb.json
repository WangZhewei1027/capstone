{
  "meta": {
    "concept": "BellmanFordAlgorithm",
    "topic": "Bellman-Ford Algorithm Visualization",
    "educational_goal": "Demonstrate the Bellman-Ford algorithm for shortest paths",
    "expected_interactions": [
      "run_algorithm",
      "input_graph",
      "display_results"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingGraph",
      "label": "InputtingGraph",
      "type": "atomic",
      "entry_actions": [
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_ProcessingGraph",
      "label": "ProcessingGraph",
      "type": "atomic",
      "entry_actions": [
        "initializeGraph()",
        "runBellmanFordAlgorithm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_DisplayResults",
      "label": "DisplayResults",
      "type": "atomic",
      "entry_actions": [
        "renderResults()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserSubmitsGraph",
      "event_type": "user_action",
      "description": "User submits the graph input form",
      "triggers": [
        "#graph button[type='submit']"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingGraph",
      "event": "UserSubmitsGraph",
      "guard": "inputFieldsFilled",
      "actions": [
        "disableInputFields()"
      ],
      "expected_observables": [
        "dom:inputFieldsHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputtingGraph",
      "to": "S2_ProcessingGraph",
      "event": "UserSubmitsGraph",
      "guard": "inputIsValid",
      "actions": [
        "processGraphInput()"
      ],
      "expected_observables": [
        "dom:graphInputProcessed"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_ProcessingGraph",
      "to": "S3_DisplayResults",
      "event": "UserSubmitsGraph",
      "guard": "algorithmCompleted",
      "actions": [
        "displayDistances()"
      ],
      "expected_observables": [
        "dom:resultsDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_DisplayResults",
      "to": "S0_Idle",
      "event": "UserSubmitsGraph",
      "guard": "true",
      "actions": [
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:inputFieldsReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#source",
    "#vertices",
    "#edges",
    "#weight",
    "#graphCanvas",
    "#output"
  ]
}