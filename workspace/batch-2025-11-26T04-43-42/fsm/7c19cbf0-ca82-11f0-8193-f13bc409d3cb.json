{
  "meta": {
    "concept": "LinearRegression",
    "topic": "Linear Regression Calculation",
    "educational_goal": "Demonstrate linear regression calculation and display results",
    "expected_interactions": [
      "calculate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "calculateRegression()"
      ],
      "exit_actions": [
        "displayResults()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_SUBMITS_FORM",
      "event_type": "user_action",
      "description": "User submits the linear regression form"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_SUBMITS_FORM",
      "guard": "inputIsValid",
      "actions": [
        "disableForm()",
        "clearResults()"
      ],
      "expected_observables": [
        "dom:formSubmitted"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#linear-regression-form",
    "#x",
    "#y",
    "button[type='submit']",
    "#equation",
    "#intercept-slope"
  ]
}