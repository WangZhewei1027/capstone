{
  "meta": {
    "concept": "PriorityQueue",
    "topic": "Priority Queue",
    "educational_goal": "Demonstrate priority queue operations",
    "expected_interactions": [
      "enqueue",
      "dequeue",
      "peek",
      "checkEmpty"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderQueue()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Enqueueing",
      "label": "Enqueueing",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Dequeueing",
      "label": "Dequeueing",
      "type": "atomic",
      "entry_actions": [
        "removeHighestPriority()",
        "updateQueueVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Peeking",
      "label": "Peeking",
      "type": "atomic",
      "entry_actions": [
        "showPeekValue()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_CheckingEmpty",
      "label": "CheckingEmpty",
      "type": "atomic",
      "entry_actions": [
        "showEmptyStatus()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksEnqueue",
      "event_type": "user_action",
      "description": "User clicks the Enqueue button"
    },
    {
      "id": "UserClicksDequeue",
      "event_type": "user_action",
      "description": "User clicks the Dequeue button"
    },
    {
      "id": "UserClicksPeek",
      "event_type": "user_action",
      "description": "User clicks the Peek button"
    },
    {
      "id": "UserClicksCheckEmpty",
      "event_type": "user_action",
      "description": "User clicks the Check Empty button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Enqueueing",
      "event": "UserClicksEnqueue",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:enqueueButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Enqueueing",
      "to": "S0_Idle",
      "event": "UserClicksEnqueue",
      "guard": "true",
      "actions": [
        "enqueueItem()",
        "updateQueueDisplay()"
      ],
      "expected_observables": [
        "dom:itemEnqueued"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_Dequeueing",
      "event": "UserClicksDequeue",
      "guard": "queueNotEmpty",
      "actions": [
        "dequeueItem()",
        "updateQueueDisplay()"
      ],
      "expected_observables": [
        "dom:dequeueButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S3_Peeking",
      "event": "UserClicksPeek",
      "guard": "true",
      "actions": [
        "peekItem()",
        "showPeekValue()"
      ],
      "expected_observables": [
        "dom:peekButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_CheckingEmpty",
      "event": "UserClicksCheckEmpty",
      "guard": "true",
      "actions": [
        "checkIfEmpty()",
        "showEmptyStatus()"
      ],
      "expected_observables": [
        "dom:checkEmptyButtonClicked"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "enqueue",
    "dequeue",
    "peek",
    "check_empty",
    "queue_display"
  ]
}