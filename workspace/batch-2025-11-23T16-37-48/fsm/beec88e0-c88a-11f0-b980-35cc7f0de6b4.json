{
  "topic": "Linked List",
  "description": "Finite State Machine modeling the interactive states and transitions of a linked list visualization web app (adding, inserting, removing, searching, animations, and control interactions).",
  "states": [
    {
      "name": "idle",
      "onEnter": "drawLinkedList",
      "onExit": "noop",
      "on": {
        "PUSH_CLICKED": "pushing",
        "UNSHIFT_CLICKED": "unshifting",
        "INSERT_CLICKED": "inserting",
        "POP_CLICKED": "popping",
        "SHIFT_CLICKED": "shifting",
        "REMOVE_CLICKED": "removing",
        "SEARCH_CLICKED": "searching",
        "RESET_CLICKED": "resetting",
        "SPEED_CHANGED": "idle",
        "VALUE_CHANGED": "idle",
        "INDEX_CHANGED": "idle",
        "CANVAS_KEY_LEFT": "idle",
        "CANVAS_KEY_RIGHT": "idle",
        "RESIZE": "idle"
      }
    },
    {
      "name": "animating",
      "onEnter": "setControlsEnabled(false)",
      "onExit": "setControlsEnabled(true)",
      "on": {
        "ANIMATION_FINISHED": "idle",
        "ACTION_COMPLETE": "idle",
        "CANCEL": "idle"
      }
    },
    {
      "name": "pushing",
      "onEnter": "handlePush",
      "onExit": "noop",
      "on": {
        "ANIMATION_STARTED": "animating",
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle"
      }
    },
    {
      "name": "unshifting",
      "onEnter": "handleUnshift",
      "onExit": "noop",
      "on": {
        "ANIMATION_STARTED": "animating",
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle"
      }
    },
    {
      "name": "inserting",
      "onEnter": "handleInsertAtPosition",
      "onExit": "noop",
      "on": {
        "TRAVERSAL_STARTED": "traversing_for_insert",
        "TRAVERSAL_FINISHED": "inserting_final",
        "ACTION_COMPLETE": "idle",
        "ANIMATION_STARTED": "animating",
        "ANIMATION_FINISHED": "idle",
        "CANCEL": "idle"
      }
    },
    {
      "name": "traversing_for_insert",
      "onEnter": "animateTraversal (insert)",
      "onExit": "noop",
      "on": {
        "TRAVERSAL_FINISHED": "inserting_final",
        "CANCEL": "idle"
      }
    },
    {
      "name": "inserting_final",
      "onEnter": "linkedList.insert (finalize)",
      "onExit": "noop",
      "on": {
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "handleRemoveAtPosition",
      "onExit": "noop",
      "on": {
        "TRAVERSAL_STARTED": "traversing_for_remove",
        "TRAVERSAL_FINISHED": "removing_final",
        "ACTION_COMPLETE": "idle",
        "ANIMATION_STARTED": "animating",
        "ANIMATION_FINISHED": "idle",
        "CANCEL": "idle"
      }
    },
    {
      "name": "traversing_for_remove",
      "onEnter": "animateTraversal (remove)",
      "onExit": "noop",
      "on": {
        "TRAVERSAL_FINISHED": "removing_final",
        "CANCEL": "idle"
      }
    },
    {
      "name": "removing_final",
      "onEnter": "linkedList.remove (finalize)",
      "onExit": "noop",
      "on": {
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle"
      }
    },
    {
      "name": "popping",
      "onEnter": "animatePopOrShift(true)",
      "onExit": "noop",
      "on": {
        "ANIMATION_STARTED": "animating",
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle"
      }
    },
    {
      "name": "shifting",
      "onEnter": "animatePopOrShift(false)",
      "onExit": "noop",
      "on": {
        "ANIMATION_STARTED": "animating",
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle"
      }
    },
    {
      "name": "searching",
      "onEnter": "animateSearch",
      "onExit": "noop",
      "on": {
        "ANIMATION_STARTED": "animating",
        "SEARCH_FINISHED": "idle",
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle",
        "CANCEL": "idle"
      }
    },
    {
      "name": "resetting",
      "onEnter": "resetLinkedList",
      "onExit": "noop",
      "on": {
        "ACTION_COMPLETE": "idle",
        "ANIMATION_FINISHED": "idle"
      }
    }
  ],
  "events": [
    "PUSH_CLICKED",
    "UNSHIFT_CLICKED",
    "INSERT_CLICKED",
    "POP_CLICKED",
    "SHIFT_CLICKED",
    "REMOVE_CLICKED",
    "SEARCH_CLICKED",
    "RESET_CLICKED",
    "SPEED_CHANGED",
    "VALUE_CHANGED",
    "INDEX_CHANGED",
    "CANVAS_KEY_LEFT",
    "CANVAS_KEY_RIGHT",
    "RESIZE",
    "ANIMATION_STARTED",
    "ANIMATION_FINISHED",
    "TRAVERSAL_STARTED",
    "TRAVERSAL_FINISHED",
    "SEARCH_FINISHED",
    "ACTION_COMPLETE",
    "CANCEL"
  ],
  "triggers": {
    "PUSH_CLICKED": "#pushBtn",
    "UNSHIFT_CLICKED": "#unshiftBtn",
    "INSERT_CLICKED": "#insertBtn",
    "POP_CLICKED": "#popBtn",
    "SHIFT_CLICKED": "#shiftBtn",
    "REMOVE_CLICKED": "#removeBtn",
    "SEARCH_CLICKED": "#searchBtn",
    "RESET_CLICKED": "#resetBtn",
    "SPEED_CHANGED": "#speedControl",
    "VALUE_CHANGED": "#valueInput",
    "INDEX_CHANGED": "#indexInput",
    "CANVAS_KEY_LEFT": "#canvas-wrapper",
    "CANVAS_KEY_RIGHT": "#canvas-wrapper",
    "RESIZE": "#canvas, #canvas-wrapper"
  },
  "notes": "Triggers map user interactions to selectors found in the HTML. Internal events (ANIMATION_*, TRAVERSAL_*, ACTION_COMPLETE) represent asynchronous completion points from functions: handlePush, handleUnshift, handleInsertAtPosition, handleRemoveAtPosition, animateSearch, animateTraversal, animatePopOrShift. All DOM selectors present in the HTML include: #valueInput, #indexInput, #pushBtn, #unshiftBtn, #insertBtn, #popBtn, #shiftBtn, #removeBtn, #searchBtn, #resetBtn, #speedControl, #canvas-wrapper, #canvas, #controls, #info, #legend, .legend-node, .legend-current, .legend-visited."
}