{
  "topic": "Heap (Min/Max)",
  "description": "Finite state machine for Min/Max Heap visualization application, modeling user interactions for inserting and removing values.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_CLICKED": "inserting",
        "REMOVE_CLICKED": "removing"
      }
    },
    {
      "name": "inserting",
      "onEnter": "insertValue",
      "onExit": "noop",
      "on": {
        "INSERT_COMPLETE": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "removeValue",
      "onExit": "noop",
      "on": {
        "REMOVE_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_CLICKED",
    "INSERT_COMPLETE",
    "REMOVE_CLICKED",
    "REMOVE_COMPLETE"
  ],
  "triggers": {
    "INSERT_CLICKED": "#value-input + button",
    "INSERT_COMPLETE": "#heap-container",
    "REMOVE_CLICKED": "#heap-container + button",
    "REMOVE_COMPLETE": "#heap-container"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}