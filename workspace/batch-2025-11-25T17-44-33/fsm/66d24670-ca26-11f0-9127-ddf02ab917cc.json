{
  "topic": "Queue",
  "description": "Finite state machine modeling the states and transitions of a queue demonstration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "adding",
        "DEQUEUE_CLICKED": "removing"
      }
    },
    {
      "name": "adding",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ITEM_ADDED": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ITEM_REMOVED": "idle",
        "QUEUE_EMPTY": "idle"
      }
    }
  ],
  "events": [
    "ENQUEUE_CLICKED",
    "DEQUEUE_CLICKED",
    "ITEM_ADDED",
    "ITEM_REMOVED",
    "QUEUE_EMPTY"
  ],
  "triggers": {
    "ENQUEUE_CLICKED": "#inputValue, button:contains('Enqueue')",
    "DEQUEUE_CLICKED": "button:contains('Dequeue')",
    "ITEM_ADDED": "#queue",
    "ITEM_REMOVED": "#queue",
    "QUEUE_EMPTY": "#queue"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}