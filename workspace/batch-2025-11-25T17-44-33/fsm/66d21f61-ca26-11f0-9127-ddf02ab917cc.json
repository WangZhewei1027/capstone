{
  "topic": "Stack",
  "description": "Finite state machine for a stack demonstration application managing push and pop operations.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "VALUE_ENTERED": "valueEntered",
        "POP_CLICKED": "idle"
      }
    },
    {
      "name": "valueEntered",
      "onEnter": "pushValue",
      "onExit": "noop",
      "on": {
        "POP_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "VALUE_ENTERED",
    "POP_CLICKED"
  ],
  "triggers": {
    "VALUE_ENTERED": "#inputValue, button[onclick='pushValue()']",
    "POP_CLICKED": "button[onclick='popValue()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}