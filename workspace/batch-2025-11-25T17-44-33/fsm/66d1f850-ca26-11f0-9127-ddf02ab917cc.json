{
  "topic": "Binary Search Tree (BST)",
  "description": "Finite state machine modeling the interactive states of a Binary Search Tree visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INSERT_CLICKED": "inserting",
        "CLEAR_CLICKED": "cleared"
      }
    },
    {
      "name": "inserting",
      "onEnter": "insertValue",
      "onExit": "noop",
      "on": {
        "INSERT_SUCCESS": "idle",
        "INSERT_FAILURE": "idle"
      }
    },
    {
      "name": "cleared",
      "onEnter": "clearTree",
      "onExit": "noop",
      "on": {
        "CLEAR_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_CLICKED",
    "CLEAR_CLICKED",
    "INSERT_SUCCESS",
    "INSERT_FAILURE",
    "CLEAR_COMPLETE"
  ],
  "triggers": {
    "INSERT_CLICKED": "#value, button[onclick='insertValue()']",
    "CLEAR_CLICKED": "button[onclick='clearTree()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}