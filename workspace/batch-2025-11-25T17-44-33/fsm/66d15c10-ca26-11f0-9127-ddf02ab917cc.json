{
  "topic": "Bubble Sort",
  "description": "Finite state machine for the Bubble Sort visualization application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "drawArray",
      "onExit": "noop",
      "on": {
        "START_CLICKED": "sorting"
      }
    },
    {
      "name": "sorting",
      "onEnter": "startBubbleSort",
      "onExit": "noop",
      "on": {
        "SORT_COMPLETE": "done"
      }
    },
    {
      "name": "done",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "RESET_CLICKED": "idle"
      }
    }
  ],
  "events": [
    "START_CLICKED",
    "SORT_COMPLETE",
    "RESET_CLICKED"
  ],
  "triggers": {
    "START_CLICKED": "button",
    "SORT_COMPLETE": "noop",
    "RESET_CLICKED": "button"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}