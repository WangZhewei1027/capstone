{
  "topic": "K-Nearest Neighbors (KNN)",
  "description": "Finite State Machine for the K-Nearest Neighbors interactive demo application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "CANVAS_CLICKED": "point_added",
        "PREDICT_CLICKED": "predicting"
      }
    },
    {
      "name": "point_added",
      "onEnter": "draw",
      "onExit": "noop",
      "on": {
        "CANVAS_CLICKED": "point_added",
        "PREDICT_CLICKED": "predicting"
      }
    },
    {
      "name": "predicting",
      "onEnter": "setNewPoint",
      "onExit": "noop",
      "on": {
        "PREDICTION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "CANVAS_CLICKED",
    "PREDICT_CLICKED",
    "PREDICTION_COMPLETE"
  ],
  "triggers": {
    "CANVAS_CLICKED": "#canvas",
    "PREDICT_CLICKED": "#predict-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}