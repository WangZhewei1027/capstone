{
  "topic": "Linked List",
  "description": "Finite state machine modeling the operations of a linked list demonstration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_NODE_CLICKED": "node_added",
        "REMOVE_NODE_CLICKED": "node_removed"
      }
    },
    {
      "name": "node_added",
      "onEnter": "renderList",
      "onExit": "noop",
      "on": {
        "ADD_NODE_CLICKED": "node_added",
        "REMOVE_NODE_CLICKED": "node_removed"
      }
    },
    {
      "name": "node_removed",
      "onEnter": "renderList",
      "onExit": "noop",
      "on": {
        "ADD_NODE_CLICKED": "node_added",
        "REMOVE_NODE_CLICKED": "node_removed"
      }
    }
  ],
  "events": [
    "ADD_NODE_CLICKED",
    "REMOVE_NODE_CLICKED"
  ],
  "triggers": {
    "ADD_NODE_CLICKED": "#nodeValue, button[onclick='addNode()']",
    "REMOVE_NODE_CLICKED": "button[onclick='removeNode()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}