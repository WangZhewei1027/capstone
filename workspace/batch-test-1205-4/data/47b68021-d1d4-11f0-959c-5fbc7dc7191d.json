    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Radix Sort Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: center;\n            background-color: #f4f4f4;\n            margin: 0;\n            padding: 20px;\n        }\n        #array {\n            display: flex;\n            justify-content: center;\n            align-items: flex-end;\n            height: 300px;\n            margin-top: 20px;\n            border-left: 1px solid #333;\n            border-bottom: 1px solid #333;\n        }\n        .bar {\n            width: 30px;\n            margin: 0 2px;\n            background-color: #3498db;\n            display: inline-block;\n            transition: height 0.5s;\n        }\n        .bar.sorted {\n            background-color: #2ecc71;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Radix Sort Visualization</h1>\n<button id=\"sortButton\">Sort Random Numbers</button>\n<div id=\"array\"></div>\n\n<script>\n    const arr = [170, 45, 75, 90, 802, 24, 2, 66];\n    const arrayDiv = document.getElementById('array');\n\n    function displayArray(array) {\n        arrayDiv.innerHTML = '';\n        array.forEach(num => {\n            const bar = document.createElement('div');\n            bar.className = 'bar';\n            bar.style.height = `${num * 2}px`; // Scale the height for visualization\n            bar.innerText = num;\n            arrayDiv.appendChild(bar);\n        });\n    }\n\n    async function sleep(ms) {\n        return new Promise(resolve => setTimeout(resolve, ms));\n    }\n\n    async function countingSort(arr, exp) {\n        const n = arr.length;\n        const output = new Array(n);\n        const count = new Array(10).fill(0);\n        \n        // Count occurrences\n        for (let i = 0; i < n; i++) {\n            count[Math.floor(arr[i] / exp) % 10]++;\n        }\n        for (let i = 1; i < 10; i++) {\n            count[i] += count[i - 1];\n        }\n\n        for (let i = n - 1; i >= 0; i--) {\n            output[count[Math.floor(arr[i] / exp) % 10] - 1] = arr[i];\n            count[Math.floor(arr[i] / exp) % 10]--;\n        }\n\n        for (let i = 0; i < n; i++) {\n            arr[i] = output[i];\n            // Visual update\n            displayArray(arr);\n            await sleep(500);\n        }\n    }\n\n    async function radixSort(arr) {\n        const max = Math.max(...arr);\n        for (let exp = 1; Math.floor(max / exp) > 0; exp *= 10) {\n            await countingSort(arr, exp);\n        }\n    }\n\n    document.getElementById('sortButton').addEventListener('click', async () => {\n        await radixSort(arr);\n        // Mark sorted bars\n        const bars = document.querySelectorAll('.bar');\n        bars.forEach(bar => bar.classList.add('sorted'));\n    });\n\n    // Initial display\n    displayArray(arr);\n</script>\n\n</body>\n</html>"
