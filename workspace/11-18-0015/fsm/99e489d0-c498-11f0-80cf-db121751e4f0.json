{
  "topic": "Bubble Sort Visualization",
  "description": "FSM modeling the interactive states and transitions of a bubble sort visualization web app (buttons, visualization steps, and completion).",
  "states": [
    {
      "name": "idle",
      "onEnter": "resetArray",
      "onExit": "noop",
      "on": {
        "SORT_CLICKED": "sorting",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "sorting",
      "onEnter": "createBars, bubbleSort",
      "onExit": "noop",
      "on": {
        "COMPARE_START": "comparing",
        "SORT_COMPLETE": "done",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "comparing",
      "onEnter": "highlightComparison",
      "onExit": "resetHighlight",
      "on": {
        "SWAP_OCCURRED": "swapping",
        "COMPARE_END": "sorting",
        "MARK_SORTED": "marking_sorted",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "swapping",
      "onEnter": "swapElements",
      "onExit": "resetHighlight",
      "on": {
        "SWAP_COMPLETE": "comparing",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "marking_sorted",
      "onEnter": "markElementSorted",
      "onExit": "noop",
      "on": {
        "COMPARE_START": "comparing",
        "SORT_COMPLETE": "done",
        "RESET_CLICKED": "idle"
      }
    },
    {
      "name": "done",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "RESET_CLICKED": "idle",
        "SORT_CLICKED": "sorting"
      }
    }
  ],
  "events": [
    "SORT_CLICKED",
    "RESET_CLICKED",
    "COMPARE_START",
    "COMPARE_END",
    "SWAP_OCCURRED",
    "SWAP_COMPLETE",
    "MARK_SORTED",
    "SORT_COMPLETE"
  ],
  "triggers": {
    "SORT_CLICKED": "#sortBtn",
    "RESET_CLICKED": "#resetBtn",
    "COMPARE_START": ".bar",
    "COMPARE_END": ".bar",
    "SWAP_OCCURRED": ".bar",
    "SWAP_COMPLETE": ".bar",
    "MARK_SORTED": ".bar",
    "SORT_COMPLETE": "#arrayContainer, .bar"
  },
  "notes": "Extracted selectors: #arrayContainer, #controls, #sortBtn, #resetBtn, .bar, .sorted. onEnter/onExit actions reference functions or inline actions observed in the script: resetArray, createBars, bubbleSort, highlightComparison (style backgroundColor), swapElements (swap heights and array), markElementSorted (add 'sorted' class)."
}