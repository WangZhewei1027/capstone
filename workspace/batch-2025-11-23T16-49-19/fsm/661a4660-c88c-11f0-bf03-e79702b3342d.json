{
  "topic": "Queue",
  "description": "Finite state machine for a queue demonstration application with enqueue, dequeue, peek, and clear operations.",
  "states": [
    {
      "name": "empty",
      "onEnter": "updateQueueDisplay",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "not_empty",
        "ENQUEUE_ENTER": "not_empty"
      }
    },
    {
      "name": "not_empty",
      "onEnter": "updateQueueDisplay",
      "onExit": "noop",
      "on": {
        "DEQUEUE_CLICKED": "check_empty",
        "PEEK_CLICKED": "not_empty",
        "CLEAR_CLICKED": "empty",
        "ENQUEUE_CLICKED": "not_empty",
        "ENQUEUE_ENTER": "not_empty"
      }
    },
    {
      "name": "check_empty",
      "onEnter": "checkIfEmpty",
      "onExit": "noop",
      "on": {
        "EMPTY": "empty",
        "NOT_EMPTY": "not_empty"
      }
    }
  ],
  "events": [
    "ENQUEUE_CLICKED",
    "DEQUEUE_CLICKED",
    "PEEK_CLICKED",
    "CLEAR_CLICKED",
    "ENQUEUE_ENTER",
    "EMPTY",
    "NOT_EMPTY"
  ],
  "triggers": {
    "ENQUEUE_CLICKED": "#enqueue-btn",
    "DEQUEUE_CLICKED": "#dequeue-btn",
    "PEEK_CLICKED": "#peek-btn",
    "CLEAR_CLICKED": "#clear-btn",
    "ENQUEUE_ENTER": "#enqueue-input"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}