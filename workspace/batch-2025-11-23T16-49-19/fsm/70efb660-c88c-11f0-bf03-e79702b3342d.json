{
  "topic": "Deque",
  "description": "Finite State Machine for a Deque (Double-Ended Queue) interactive application.",
  "states": [
    {
      "name": "empty",
      "onEnter": "renderDeque",
      "onExit": "noop",
      "on": {
        "PUSH_FRONT": "not_empty",
        "PUSH_BACK": "not_empty"
      }
    },
    {
      "name": "not_empty",
      "onEnter": "renderDeque",
      "onExit": "noop",
      "on": {
        "POP_FRONT": "check_empty",
        "POP_BACK": "check_empty",
        "CLEAR": "empty",
        "PUSH_FRONT": "not_empty",
        "PUSH_BACK": "not_empty"
      }
    },
    {
      "name": "check_empty",
      "onEnter": "checkIfEmpty",
      "onExit": "noop",
      "on": {
        "EMPTY": "empty",
        "NOT_EMPTY": "not_empty"
      }
    }
  ],
  "events": [
    "PUSH_FRONT",
    "PUSH_BACK",
    "POP_FRONT",
    "POP_BACK",
    "CLEAR",
    "EMPTY",
    "NOT_EMPTY"
  ],
  "triggers": {
    "PUSH_FRONT": "#pushFrontBtn",
    "PUSH_BACK": "#pushBackBtn, #elementInput",
    "POP_FRONT": "#popFrontBtn",
    "POP_BACK": "#popBackBtn",
    "CLEAR": "#clearBtn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}