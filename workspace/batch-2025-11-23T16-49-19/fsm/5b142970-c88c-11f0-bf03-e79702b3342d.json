{
  "topic": "Linked List",
  "description": "Finite state machine for a singly linked list demo with operations to append, prepend, insert at index, delete by value, and search.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "APPEND_SUBMITTED": "appending",
        "PREPEND_SUBMITTED": "prepending",
        "INSERT_SUBMITTED": "inserting",
        "DELETE_SUBMITTED": "deleting",
        "SEARCH_SUBMITTED": "searching"
      }
    },
    {
      "name": "appending",
      "onEnter": "appendNode",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "prepending",
      "onEnter": "prependNode",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "inserting",
      "onEnter": "insertNode",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "deleting",
      "onEnter": "deleteNode",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "searching",
      "onEnter": "searchNode",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    }
  ],
  "events": [
    "APPEND_SUBMITTED",
    "PREPEND_SUBMITTED",
    "INSERT_SUBMITTED",
    "DELETE_SUBMITTED",
    "SEARCH_SUBMITTED",
    "DONE"
  ],
  "triggers": {
    "APPEND_SUBMITTED": "#form-append button",
    "PREPEND_SUBMITTED": "#form-prepend button",
    "INSERT_SUBMITTED": "#form-insert button",
    "DELETE_SUBMITTED": "#form-delete button",
    "SEARCH_SUBMITTED": "#form-search button"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}