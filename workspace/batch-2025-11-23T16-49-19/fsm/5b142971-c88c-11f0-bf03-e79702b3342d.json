{
  "topic": "Stack",
  "description": "Models the interactive states and transitions of a stack demonstration application.",
  "states": [
    {
      "name": "empty",
      "onEnter": "renderStack",
      "onExit": "noop",
      "on": {
        "PUSH_CLICKED": "non_empty",
        "CLEAR_CLICKED": "empty"
      }
    },
    {
      "name": "non_empty",
      "onEnter": "renderStack",
      "onExit": "noop",
      "on": {
        "POP_CLICKED": "empty",
        "PEEK_CLICKED": "non_empty",
        "CLEAR_CLICKED": "empty",
        "PUSH_CLICKED": "non_empty"
      }
    }
  ],
  "events": [
    "PUSH_CLICKED",
    "POP_CLICKED",
    "PEEK_CLICKED",
    "CLEAR_CLICKED"
  ],
  "triggers": {
    "PUSH_CLICKED": "#push-btn, #push-input",
    "POP_CLICKED": "#pop-btn",
    "PEEK_CLICKED": "#peek-btn",
    "CLEAR_CLICKED": "#clear-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}