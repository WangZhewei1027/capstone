{
  "topic": "Array Demonstration",
  "description": "Finite state machine for interacting with JavaScript array operations and display",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "SHOW_ARRAY_CLICKED": "displayingArray",
        "PERFORM_OPERATIONS_CLICKED": "performingOperations",
        "ITERATE_ARRAY_CLICKED": "iteratingArray"
      }
    },
    {
      "name": "displayingArray",
      "onEnter": "displayArray",
      "onExit": "noop",
      "on": {
        "SHOW_ARRAY_COMPLETE": "idle"
      }
    },
    {
      "name": "performingOperations",
      "onEnter": "arrayOperations",
      "onExit": "noop",
      "on": {
        "OPERATIONS_COMPLETE": "idle"
      }
    },
    {
      "name": "iteratingArray",
      "onEnter": "iterateArray",
      "onExit": "noop",
      "on": {
        "ITERATION_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "SHOW_ARRAY_CLICKED",
    "PERFORM_OPERATIONS_CLICKED",
    "ITERATE_ARRAY_CLICKED",
    "SHOW_ARRAY_COMPLETE",
    "OPERATIONS_COMPLETE",
    "ITERATION_COMPLETE"
  ],
  "triggers": {
    "SHOW_ARRAY_CLICKED": "button[onclick='displayArray()']",
    "PERFORM_OPERATIONS_CLICKED": "button[onclick='arrayOperations()']",
    "ITERATE_ARRAY_CLICKED": "button[onclick='iterateArray()']"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}