{
  "meta": {
    "concept": "K-Means Clustering",
    "topic": "K-Means Clustering Visualization",
    "educational_goal": "Demonstrate the K-Means clustering process",
    "expected_interactions": [
      "initialize",
      "assign",
      "update",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderClusters()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InitializeCentroids",
      "label": "InitializeCentroids",
      "type": "atomic",
      "entry_actions": [
        "selectInitialCentroids()",
        "highlightCentroids()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_AssigningPoints",
      "label": "AssigningPoints",
      "type": "atomic",
      "entry_actions": [
        "assignPointsToClusters()",
        "showAssignmentFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_UpdatingCentroids",
      "label": "UpdatingCentroids",
      "type": "atomic",
      "entry_actions": [
        "calculateNewCentroids()",
        "animateCentroidMovement()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S4_ClusteringResetting",
      "label": "ClusteringResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllClusters()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInitialize",
      "event_type": "user_action",
      "description": "User clicks the Initialize button"
    },
    {
      "id": "UserClicksAssign",
      "event_type": "user_action",
      "description": "User clicks the Assign button"
    },
    {
      "id": "UserClicksUpdate",
      "event_type": "user_action",
      "description": "User clicks the Update button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "CentroidsInitialized",
      "event_type": "system_event",
      "description": "Centroids have been initialized"
    },
    {
      "id": "PointsAssigned",
      "event_type": "system_event",
      "description": "Points have been assigned to clusters"
    },
    {
      "id": "CentroidsUpdated",
      "event_type": "system_event",
      "description": "Centroids have been updated"
    },
    {
      "id": "ClusteringResetComplete",
      "event_type": "system_event",
      "description": "Clustering reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InitializeCentroids",
      "event": "UserClicksInitialize",
      "guard": "dataPointsExist",
      "actions": [
        "captureDataPoints()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:initializeButtonClicked",
        "dom:centroidsHighlighted"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InitializeCentroids",
      "to": "S2_AssigningPoints",
      "event": "CentroidsInitialized",
      "guard": "centroidsSelected",
      "actions": [
        "beginAssignment()",
        "highlightPoints()"
      ],
      "expected_observables": [
        "dom:pointsHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AssigningPoints",
      "to": "S3_UpdatingCentroids",
      "event": "PointsAssigned",
      "guard": "pointsAssignedToClusters",
      "actions": [
        "updateClusterAssignments()",
        "prepareCentroidUpdate()"
      ],
      "expected_observables": [
        "dom:clustersUpdated"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_UpdatingCentroids",
      "to": "S0_Idle",
      "event": "CentroidsUpdated",
      "guard": "centroidsMoved",
      "actions": [
        "enableControls()",
        "clearHighlights()"
      ],
      "expected_observables": [
        "dom:centroidsMoved"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClusteringResetting",
      "event": "UserClicksReset",
      "guard": "clustersNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ClusteringResetting",
      "to": "S0_Idle",
      "event": "ClusteringResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:clustersCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "initialize",
    "assign",
    "update",
    "reset",
    "cluster_visualization"
  ]
}