{
  "meta": {
    "concept": "Dijkstra's Algorithm",
    "topic": "Shortest Path Finding",
    "educational_goal": "Demonstrate Dijkstra's algorithm for finding shortest paths in a graph",
    "expected_interactions": [
      "add_node",
      "add_edge",
      "set_start",
      "find_shortest_path",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "highlightNodeInput()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S3_SettingStartNode",
      "label": "SettingStartNode",
      "type": "atomic",
      "entry_actions": [
        "highlightStartNode()"
      ],
      "exit_actions": [
        "clearStartHighlight()"
      ]
    },
    {
      "id": "S4_FindingShortestPath",
      "label": "FindingShortestPath",
      "type": "atomic",
      "entry_actions": [
        "executeDijkstra()",
        "animatePathFinding()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksSetStart",
      "event_type": "user_action",
      "description": "User clicks the Set Start Node button"
    },
    {
      "id": "UserClicksFindShortestPath",
      "event_type": "user_action",
      "description": "User clicks the Find Shortest Path button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "NodeAdditionComplete",
      "event_type": "system_event",
      "description": "Node addition completes successfully"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition completes successfully"
    },
    {
      "id": "StartNodeSet",
      "event_type": "system_event",
      "description": "Start node is set successfully"
    },
    {
      "id": "PathFindingComplete",
      "event_type": "system_event",
      "description": "Shortest path finding completes successfully"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "UserClicksAddNode",
      "guard": "true",
      "actions": [
        "captureNodeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:nodeInputHighlighted"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "NodeAdditionComplete",
      "guard": "nodeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:nodeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "true",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:edgeInputHighlighted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_AddingEdge",
      "to": "S0_Idle",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:edgeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_SettingStartNode",
      "event": "UserClicksSetStart",
      "guard": "true",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startNodeHighlighted"
      ],
      "timeout": 2000
    },
    {
      "from": "S3_SettingStartNode",
      "to": "S0_Idle",
      "event": "StartNodeSet",
      "guard": "startNodeSetSuccessfully",
      "actions": [
        "updateStartNode()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:startNodeSet"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_FindingShortestPath",
      "event": "UserClicksFindShortestPath",
      "guard": "graphIsValid",
      "actions": [
        "preparePathFinding()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:pathFindingStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S4_FindingShortestPath",
      "to": "S0_Idle",
      "event": "PathFindingComplete",
      "guard": "pathFoundSuccessfully",
      "actions": [
        "highlightShortestPath()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:shortestPathHighlighted"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginGraphClear()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "node_input",
    "edge_input",
    "set_start",
    "find_shortest_path",
    "reset",
    "graph_visualization"
  ]
}