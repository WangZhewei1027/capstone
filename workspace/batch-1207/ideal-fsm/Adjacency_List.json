{
  "meta": {
    "concept": "AdjacencyList",
    "topic": "Graph Representation using Adjacency List",
    "educational_goal": "Demonstrate graph operations using adjacency list",
    "expected_interactions": [
      "addVertex",
      "addEdge",
      "removeVertex",
      "removeEdge",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddVertexStart",
      "label": "AddVertexStart",
      "type": "atomic",
      "entry_actions": [
        "readVertexInput()",
        "highlightVertexInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightEdgeInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_ValidatingVertexInput",
      "label": "ValidatingVertexInput",
      "type": "atomic",
      "entry_actions": [
        "validateVertexInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ValidatingEdgeInput",
      "label": "ValidatingEdgeInput",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S6_AddingVertex",
      "label": "AddingVertex",
      "type": "atomic",
      "entry_actions": [
        "createNewVertex()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "createNewEdge()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S8_RemovingVertex",
      "label": "RemovingVertex",
      "type": "atomic",
      "entry_actions": [
        "removeVertex()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S9_RemovingEdge",
      "label": "RemovingEdge",
      "type": "atomic",
      "entry_actions": [
        "removeEdge()",
        "updateAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S10_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearAllVerticesEdges()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddVertex",
      "event_type": "user_action",
      "description": "User clicks the Add Vertex button"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksRemoveVertex",
      "event_type": "user_action",
      "description": "User clicks the Remove Vertex button"
    },
    {
      "id": "UserClicksRemoveEdge",
      "event_type": "user_action",
      "description": "User clicks the Remove Edge button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "VertexInputValidationComplete",
      "event_type": "system_event",
      "description": "Vertex input validation completes successfully"
    },
    {
      "id": "EdgeInputValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "VertexInputValidationFailed",
      "event_type": "system_event",
      "description": "Vertex input validation fails"
    },
    {
      "id": "EdgeInputValidationFailed",
      "event_type": "system_event",
      "description": "Edge input validation fails"
    },
    {
      "id": "VertexAdditionComplete",
      "event_type": "system_event",
      "description": "Vertex addition and list update complete"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition and list update complete"
    },
    {
      "id": "VertexRemovalComplete",
      "event_type": "system_event",
      "description": "Vertex removal and list update complete"
    },
    {
      "id": "EdgeRemovalComplete",
      "event_type": "system_event",
      "description": "Edge removal and list update complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddVertexStart",
      "event": "UserClicksAddVertex",
      "guard": "vertexInputNotEmpty",
      "actions": [
        "captureVertexInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readVertexInput",
        "dom:addVertexButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "edgeInputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddVertexStart",
      "to": "S3_ValidatingVertexInput",
      "event": "VertexInputValidationComplete",
      "guard": "vertexInputIsValid",
      "actions": [
        "validateVertexValue()",
        "prepareVertexAddition()"
      ],
      "expected_observables": [
        "dom:vertexInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddEdgeStart",
      "to": "S4_ValidatingEdgeInput",
      "event": "EdgeInputValidationComplete",
      "guard": "edgeInputIsValid",
      "actions": [
        "validateEdgeValue()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ValidatingVertexInput",
      "to": "S6_AddingVertex",
      "event": "VertexInputValidationComplete",
      "guard": "validVertex",
      "actions": [
        "parseVertexInputValue()",
        "beginVertexAddition()"
      ],
      "expected_observables": [
        "dom:vertexCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_ValidatingEdgeInput",
      "to": "S7_AddingEdge",
      "event": "EdgeInputValidationComplete",
      "guard": "validEdge",
      "actions": [
        "parseEdgeInputValue()",
        "beginEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddVertexStart",
      "to": "S5_ErrorAlert",
      "event": "VertexInputValidationFailed",
      "guard": "vertexInputIsEmpty",
      "actions": [
        "showError()",
        "focusVertexInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_AddEdgeStart",
      "to": "S5_ErrorAlert",
      "event": "EdgeInputValidationFailed",
      "guard": "edgeInputIsEmpty",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S6_AddingVertex",
      "to": "S0_Idle",
      "event": "VertexAdditionComplete",
      "guard": "vertexAddedSuccessfully",
      "actions": [
        "updateAdjacencyListStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListChanged",
        "dom:newVertexVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S7_AddingEdge",
      "to": "S0_Idle",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateAdjacencyListStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListChanged",
        "dom:newEdgeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S8_RemovingVertex",
      "event": "UserClicksRemoveVertex",
      "guard": "vertexExists",
      "actions": [
        "confirmVertexRemoval()",
        "beginVertexRemoval()"
      ],
      "expected_observables": [
        "dom:removeVertexButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S9_RemovingEdge",
      "event": "UserClicksRemoveEdge",
      "guard": "edgeExists",
      "actions": [
        "confirmEdgeRemoval()",
        "beginEdgeRemoval()"
      ],
      "expected_observables": [
        "dom:removeEdgeButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S8_RemovingVertex",
      "to": "S0_Idle",
      "event": "VertexRemovalComplete",
      "guard": "vertexRemovedSuccessfully",
      "actions": [
        "updateAdjacencyListStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListChanged",
        "dom:vertexRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S9_RemovingEdge",
      "to": "S0_Idle",
      "event": "EdgeRemovalComplete",
      "guard": "edgeRemovedSuccessfully",
      "actions": [
        "updateAdjacencyListStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:adjacencyListChanged",
        "dom:edgeRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S10_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S10_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "vertex_input",
    "edge_input",
    "add_vertex",
    "add_edge",
    "remove_vertex",
    "remove_edge",
    "reset",
    "adjacency_list_visualization"
  ]
}