{
  "meta": {
    "concept": "Adjacency Matrix",
    "topic": "Graph Representation",
    "educational_goal": "Demonstrate graph representation using adjacency matrix",
    "expected_interactions": [
      "add_edge",
      "remove_edge",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderMatrix()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_UpdatingMatrix",
      "label": "UpdatingMatrix",
      "type": "atomic",
      "entry_actions": [
        "updateMatrix()",
        "animateMatrixChange()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ResettingMatrix",
      "label": "ResettingMatrix",
      "type": "atomic",
      "entry_actions": [
        "clearMatrix()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters values in input fields"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "MatrixUpdateComplete",
      "event_type": "system_event",
      "description": "Matrix update operation complete"
    },
    {
      "id": "MatrixResetComplete",
      "event_type": "system_event",
      "description": "Matrix reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValues",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValues()",
        "prepareMatrixUpdate()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_UpdatingMatrix",
      "event": "InputValidationComplete",
      "guard": "validIndices",
      "actions": [
        "parseInputValues()",
        "beginMatrixUpdate()"
      ],
      "expected_observables": [
        "dom:matrixUpdateStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_UpdatingMatrix",
      "to": "S0_Idle",
      "event": "MatrixUpdateComplete",
      "guard": "updateSuccessful",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:matrixUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingMatrix",
      "event": "UserClicksReset",
      "guard": "matrixNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingMatrix",
      "to": "S0_Idle",
      "event": "MatrixResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:matrixCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add_edge",
    "reset",
    "matrix_visualization"
  ]
}