{
  "meta": {
    "concept": "HuffmanCoding",
    "topic": "Huffman Coding Visualization",
    "educational_goal": "Illustrate Huffman Tree construction and encoding process",
    "expected_interactions": [
      "encode",
      "buildTree",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitial()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_EnterText",
      "label": "EnterText",
      "type": "atomic",
      "entry_actions": [
        "focusInputField()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateText()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "displayErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_BuildingTree",
      "label": "BuildingTree",
      "type": "operation",
      "entry_actions": [
        "calculateFrequencies()",
        "constructTree()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Encoding",
      "label": "Encoding",
      "type": "operation",
      "entry_actions": [
        "generateCodes()",
        "encodeText()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "resetVisualization()",
        "clearAllData()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksEncode",
      "event_type": "user_action",
      "description": "User clicks the Encode button"
    },
    {
      "id": "UserEntersText",
      "event_type": "user_action",
      "description": "User enters text in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "TreeBuildingComplete",
      "event_type": "system_event",
      "description": "Tree building process complete"
    },
    {
      "id": "EncodingComplete",
      "event_type": "system_event",
      "description": "Encoding process complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_EnterText",
      "event": "UserEntersText",
      "guard": "inputFieldFocused",
      "actions": [
        "captureText()",
        "disableEncodeButton()"
      ],
      "expected_observables": [
        "dom:textInputCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_EnterText",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "textIsValid",
      "actions": [
        "validateTextInput()",
        "prepareForTreeBuilding()"
      ],
      "expected_observables": [
        "dom:textValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_EnterText",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "textIsInvalid",
      "actions": [
        "showErrorDialog()",
        "focusInputField()"
      ],
      "expected_observables": [
        "dom:errorDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_BuildingTree",
      "event": "UserClicksEncode",
      "guard": "inputIsValid",
      "actions": [
        "buildTree()"
      ],
      "expected_observables": [
        "dom:treeBuildingStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_BuildingTree",
      "to": "S5_Encoding",
      "event": "TreeBuildingComplete",
      "guard": "treeBuiltSuccessfully",
      "actions": [
        "generateHuffmanCodes()",
        "startEncoding()"
      ],
      "expected_observables": [
        "dom:encodingStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_Encoding",
      "to": "S0_Idle",
      "event": "EncodingComplete",
      "guard": "true",
      "actions": [
        "displayEncodedResult()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:encodedTextDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "dataNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "initializeInputField()"
      ],
      "expected_observables": [
        "dom:dataCleared",
        "dom:resetComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "encode",
    "reset",
    "tree_visualization"
  ]
}