{
  "meta": {
    "concept": "Queue",
    "topic": "Queue Operations Visualization",
    "educational_goal": "Demonstrate queue enqueue and dequeue operations",
    "expected_interactions": [
      "enqueue",
      "dequeue",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderQueue()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_EnqueueStart",
      "label": "EnqueueStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_EnqueuingElement",
      "label": "EnqueuingElement",
      "type": "atomic",
      "entry_actions": [
        "addToQueue()",
        "updateQueueVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DequeueingElement",
      "label": "DequeueingElement",
      "type": "atomic",
      "entry_actions": [
        "removeFromQueue()",
        "updateQueueVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_QueueResetting",
      "label": "QueueResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllElements()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksEnqueue",
      "event_type": "user_action",
      "description": "User clicks the Enqueue button"
    },
    {
      "id": "UserClicksDequeue",
      "event_type": "user_action",
      "description": "User clicks the Dequeue button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "EnqueueComplete",
      "event_type": "system_event",
      "description": "Element enqueue and queue update complete"
    },
    {
      "id": "DequeueComplete",
      "event_type": "system_event",
      "description": "Element dequeue and queue update complete"
    },
    {
      "id": "QueueResetComplete",
      "event_type": "system_event",
      "description": "Queue reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_EnqueueStart",
      "event": "UserClicksEnqueue",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:enqueueButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_EnqueueStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareEnqueue()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_EnqueuingElement",
      "event": "InputValidationComplete",
      "guard": "validInput",
      "actions": [
        "parseInputValue()",
        "beginEnqueue()"
      ],
      "expected_observables": [
        "dom:elementEnqueueStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_EnqueueStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_EnqueuingElement",
      "to": "S0_Idle",
      "event": "EnqueueComplete",
      "guard": "enqueueSuccessful",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:queueUpdated",
        "dom:elementEnqueued"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_DequeueingElement",
      "event": "UserClicksDequeue",
      "guard": "queueNotEmpty",
      "actions": [
        "beginDequeue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:dequeueButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_DequeueingElement",
      "to": "S0_Idle",
      "event": "DequeueComplete",
      "guard": "dequeueSuccessful",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:queueUpdated",
        "dom:elementDequeued"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S6_QueueResetting",
      "event": "UserClicksReset",
      "guard": "queueNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_QueueResetting",
      "to": "S0_Idle",
      "event": "QueueResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:queueCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "enqueue",
    "dequeue",
    "reset",
    "queue_visualization"
  ]
}