{
  "meta": {
    "concept": "Kruskal's Algorithm",
    "topic": "Minimum Spanning Tree Construction",
    "educational_goal": "Demonstrate the steps of Kruskal's Algorithm",
    "expected_interactions": [
      "add_edge",
      "find_set",
      "union_sets",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "highlightEdgeInput()",
        "readEdgeInput()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingEdge",
      "label": "ValidatingEdge",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_FindingSet",
      "label": "FindingSet",
      "type": "atomic",
      "entry_actions": [
        "findSetForNodes()",
        "highlightSet()"
      ],
      "exit_actions": [
        "clearSetHighlight()"
      ]
    },
    {
      "id": "S5_UnionSets",
      "label": "UnionSets",
      "type": "atomic",
      "entry_actions": [
        "performUnion()",
        "updateGraphVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearAllEdges()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserEntersEdgeInput",
      "event_type": "user_action",
      "description": "User enters edge details in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "EdgeValidationComplete",
      "event_type": "system_event",
      "description": "Edge validation completes successfully"
    },
    {
      "id": "EdgeValidationFailed",
      "event_type": "system_event",
      "description": "Edge validation fails"
    },
    {
      "id": "SetFound",
      "event_type": "system_event",
      "description": "Set for nodes found"
    },
    {
      "id": "UnionComplete",
      "event_type": "system_event",
      "description": "Union of sets complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "inputNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingEdge",
      "to": "S2_ValidatingEdge",
      "event": "EdgeValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateEdgeDetails()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingEdge",
      "to": "S4_FindingSet",
      "event": "EdgeValidationComplete",
      "guard": "validEdge",
      "actions": [
        "parseEdgeDetails()",
        "beginFindSet()"
      ],
      "expected_observables": [
        "dom:setFindingStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddingEdge",
      "to": "S3_ErrorAlert",
      "event": "EdgeValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetEdgeInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_FindingSet",
      "to": "S5_UnionSets",
      "event": "SetFound",
      "guard": "setsAreDifferent",
      "actions": [
        "performUnionOperation()",
        "triggerGraphUpdate()"
      ],
      "expected_observables": [
        "dom:graphStructureChanged",
        "dom:edgeAdded"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_UnionSets",
      "to": "S0_Idle",
      "event": "UnionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearEdgeInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetEdgeInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add_edge",
    "reset",
    "graph_visualization"
  ]
}