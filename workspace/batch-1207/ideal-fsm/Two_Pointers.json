{
  "meta": {
    "concept": "Two Pointers",
    "topic": "Two Pointers Technique",
    "educational_goal": "Demonstrate the two pointers technique for solving problems",
    "expected_interactions": [
      "setPointers",
      "movePointers",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SettingPointers",
      "label": "SettingPointers",
      "type": "atomic",
      "entry_actions": [
        "highlightPointerInputs()"
      ],
      "exit_actions": [
        "clearPointerHighlights()"
      ]
    },
    {
      "id": "S2_MovingPointers",
      "label": "MovingPointers",
      "type": "atomic",
      "entry_actions": [
        "movePointers()",
        "updatePointerPositions()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearPointers()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSetsPointers",
      "event_type": "user_action",
      "description": "User sets the initial positions of the two pointers"
    },
    {
      "id": "UserMovesPointers",
      "event_type": "user_action",
      "description": "User initiates moving the pointers"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "PointerMoveComplete",
      "event_type": "system_event",
      "description": "Pointer movement completes successfully"
    },
    {
      "id": "InvalidPointerPosition",
      "event_type": "system_event",
      "description": "Invalid pointer position detected"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SettingPointers",
      "event": "UserSetsPointers",
      "guard": "validPointerPositions",
      "actions": [
        "capturePointerPositions()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:pointerPositionsSet"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SettingPointers",
      "to": "S2_MovingPointers",
      "event": "UserMovesPointers",
      "guard": "pointersSet",
      "actions": [
        "initiatePointerMovement()"
      ],
      "expected_observables": [
        "dom:pointerMovementStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_MovingPointers",
      "to": "S0_Idle",
      "event": "PointerMoveComplete",
      "guard": "movementSuccessful",
      "actions": [
        "updateArrayState()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:pointerPositionsUpdated"
      ],
      "timeout": 3000
    },
    {
      "from": "S1_SettingPointers",
      "to": "S3_ErrorAlert",
      "event": "InvalidPointerPosition",
      "guard": "invalidPositions",
      "actions": [
        "showError()",
        "focusPointerInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetPointerInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "UserClicksReset",
      "guard": "pointersSet",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetPointerInputs()"
      ],
      "expected_observables": [
        "dom:arrayReset",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "pointer_input",
    "move",
    "reset",
    "array_visualization"
  ]
}