{
  "meta": {
    "concept": "HeapSort",
    "topic": "Heap Sort Visualization",
    "educational_goal": "Demonstrate the heap sort algorithm step-by-step",
    "expected_interactions": [
      "buildHeap",
      "sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderHeap()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_BuildingHeap",
      "label": "BuildingHeap",
      "type": "operation",
      "entry_actions": [
        "startHeapConstruction()",
        "highlightHeapifyProcess()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_SortingHeap",
      "label": "SortingHeap",
      "type": "operation",
      "entry_actions": [
        "startHeapSort()",
        "highlightSortingProcess()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearHeap()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksBuildHeap",
      "event_type": "user_action",
      "description": "User clicks the Build Heap button"
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "HeapConstructionComplete",
      "event_type": "system_event",
      "description": "Heap construction completes successfully"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Heap sort completes successfully"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_BuildingHeap",
      "event": "UserClicksBuildHeap",
      "guard": "inputIsValid",
      "actions": [
        "disableControls()",
        "beginHeapConstruction()"
      ],
      "expected_observables": [
        "dom:buildHeapButtonClicked",
        "dom:heapConstructionStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_BuildingHeap",
      "to": "S2_SortingHeap",
      "event": "HeapConstructionComplete",
      "guard": "heapBuiltSuccessfully",
      "actions": [
        "enableSortButton()",
        "prepareForSorting()"
      ],
      "expected_observables": [
        "dom:heapBuilt",
        "dom:sortButtonEnabled"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SortingHeap",
      "to": "S0_Idle",
      "event": "SortingComplete",
      "guard": "sortingSuccessful",
      "actions": [
        "enableControls()",
        "showSortedArray()"
      ],
      "expected_observables": [
        "dom:arraySorted",
        "dom:controlsEnabled"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S3_ErrorAlert",
      "event": "UserClicksBuildHeap",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:heapCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "build_heap",
    "sort",
    "reset",
    "heap_visualization"
  ]
}