{
  "meta": {
    "concept": "FibonacciSequence",
    "topic": "Fibonacci Sequence Visualization",
    "educational_goal": "Demonstrate Fibonacci sequence generation and visualization",
    "expected_interactions": [
      "generate",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderSequence()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputStart",
      "label": "InputStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_GeneratingSequence",
      "label": "GeneratingSequence",
      "type": "atomic",
      "entry_actions": [
        "calculateFibonacci()",
        "updateVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_SequenceResetting",
      "label": "SequenceResetting",
      "type": "atomic",
      "entry_actions": [
        "clearSequence()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksGenerate",
      "event_type": "user_action",
      "description": "User clicks the Generate button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters value in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "SequenceGenerationComplete",
      "event_type": "system_event",
      "description": "Fibonacci sequence generation complete"
    },
    {
      "id": "SequenceResetComplete",
      "event_type": "system_event",
      "description": "Sequence reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputStart",
      "event": "UserClicksGenerate",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:generateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareGeneration()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_GeneratingSequence",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginGeneration()"
      ],
      "expected_observables": [
        "dom:sequenceGenerationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_GeneratingSequence",
      "to": "S0_Idle",
      "event": "SequenceGenerationComplete",
      "guard": "sequenceGeneratedSuccessfully",
      "actions": [
        "updateSequenceDisplay()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:sequenceDisplayed"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_SequenceResetting",
      "event": "UserClicksReset",
      "guard": "sequenceNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_SequenceResetting",
      "to": "S0_Idle",
      "event": "SequenceResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:sequenceCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "generate",
    "reset",
    "sequence_visualization"
  ]
}