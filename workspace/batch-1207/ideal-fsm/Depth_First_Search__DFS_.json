{
  "meta": {
    "concept": "Depth-First Search (DFS)",
    "topic": "Graph Traversal using DFS",
    "educational_goal": "Demonstrate DFS traversal on a graph",
    "expected_interactions": [
      "startTraversal",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_TraversalStart",
      "label": "TraversalStart",
      "type": "atomic",
      "entry_actions": [
        "highlightStartNode()",
        "disableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Traversing",
      "label": "Traversing",
      "type": "operation",
      "entry_actions": [
        "performDFS()",
        "updateTraversalPath()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_TraversalComplete",
      "label": "TraversalComplete",
      "type": "atomic",
      "entry_actions": [
        "showTraversalResult()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearTraversalPath()",
        "resetGraphVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartTraversal",
      "event_type": "user_action",
      "description": "User clicks the Start Traversal button"
    },
    {
      "id": "TraversalComplete",
      "event_type": "system_event",
      "description": "DFS traversal completes"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_TraversalStart",
      "event": "UserClicksStartTraversal",
      "guard": "graphNotEmpty",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startTraversalButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_TraversalStart",
      "to": "S2_Traversing",
      "event": "UserClicksStartTraversal",
      "guard": "startNodeValid",
      "actions": [
        "beginDFS()",
        "highlightTraversal()"
      ],
      "expected_observables": [
        "dom:traversalStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Traversing",
      "to": "S3_TraversalComplete",
      "event": "TraversalComplete",
      "guard": "traversalFinished",
      "actions": [
        "displayTraversalPath()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:traversalPathDisplayed"
      ],
      "timeout": 3000
    },
    {
      "from": "S3_TraversalComplete",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "prepareReset()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetInitiated"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "reset",
    "graph_visualization"
  ]
}