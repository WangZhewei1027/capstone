{
  "meta": {
    "concept": "Deque",
    "topic": "Deque Operations Visualization",
    "educational_goal": "Demonstrate deque insertion and deletion",
    "expected_interactions": [
      "insertFront",
      "insertRear",
      "deleteFront",
      "deleteRear",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderDeque()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "determineInsertPosition()",
        "createNewNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DeletingNode",
      "label": "DeletingNode",
      "type": "atomic",
      "entry_actions": [
        "determineDeletePosition()",
        "removeNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_DrawingDeque",
      "label": "DrawingDeque",
      "type": "atomic",
      "entry_actions": [
        "updateDequeVisualization()",
        "animateOperation()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S7_DequeResetting",
      "label": "DequeResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodes()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsertFront",
      "event_type": "user_action",
      "description": "User clicks the Insert Front button"
    },
    {
      "id": "UserClicksInsertRear",
      "event_type": "user_action",
      "description": "User clicks the Insert Rear button"
    },
    {
      "id": "UserClicksDeleteFront",
      "event_type": "user_action",
      "description": "User clicks the Delete Front button"
    },
    {
      "id": "UserClicksDeleteRear",
      "event_type": "user_action",
      "description": "User clicks the Delete Rear button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "NodeInsertionComplete",
      "event_type": "system_event",
      "description": "Node insertion and deque update complete"
    },
    {
      "id": "NodeDeletionComplete",
      "event_type": "system_event",
      "description": "Node deletion and deque update complete"
    },
    {
      "id": "DequeResetComplete",
      "event_type": "system_event",
      "description": "Deque reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "UserClicksInsertFront",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertFrontButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "UserClicksInsertRear",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertRearButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_InsertingNode",
      "event": "InputValidationComplete",
      "guard": "validNumber",
      "actions": [
        "parseInputValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:nodeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_InsertingNode",
      "to": "S6_DrawingDeque",
      "event": "NodeInsertionComplete",
      "guard": "nodeInsertedSuccessfully",
      "actions": [
        "updateDequeStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:dequeStructureChanged",
        "dom:newNodeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_DeletingNode",
      "event": "UserClicksDeleteFront",
      "guard": "dequeNotEmpty",
      "actions": [
        "disableControls()",
        "prepareDeletionFront()"
      ],
      "expected_observables": [
        "dom:deleteFrontButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S5_DeletingNode",
      "event": "UserClicksDeleteRear",
      "guard": "dequeNotEmpty",
      "actions": [
        "disableControls()",
        "prepareDeletionRear()"
      ],
      "expected_observables": [
        "dom:deleteRearButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_DeletingNode",
      "to": "S6_DrawingDeque",
      "event": "NodeDeletionComplete",
      "guard": "nodeDeletedSuccessfully",
      "actions": [
        "updateDequeStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:dequeStructureChanged",
        "dom:nodeRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S6_DrawingDeque",
      "to": "S0_Idle",
      "event": "NodeInsertionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S6_DrawingDeque",
      "to": "S0_Idle",
      "event": "NodeDeletionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S7_DequeResetting",
      "event": "UserClicksReset",
      "guard": "dequeNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_DequeResetting",
      "to": "S0_Idle",
      "event": "DequeResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:dequeCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insertFront",
    "insertRear",
    "deleteFront",
    "deleteRear",
    "reset",
    "deque_visualization"
  ]
}