{
  "meta": {
    "concept": "HashTable",
    "topic": "Hash Table Visualization",
    "educational_goal": "Demonstrate hash table insertion and search",
    "expected_interactions": [
      "insert",
      "search",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderHashTable()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_InsertingElement",
      "label": "InsertingElement",
      "type": "atomic",
      "entry_actions": [
        "computeHash()",
        "insertElement()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_SearchingElement",
      "label": "SearchingElement",
      "type": "atomic",
      "entry_actions": [
        "computeHash()",
        "searchElement()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_DrawingTable",
      "label": "DrawingTable",
      "type": "atomic",
      "entry_actions": [
        "updateTableVisualization()",
        "animateInsertion()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S7_TableResetting",
      "label": "TableResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllElements()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsert",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "UserClicksSearch",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "UserEntersInput",
      "event_type": "user_action",
      "description": "User enters value in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ElementInsertionComplete",
      "event_type": "system_event",
      "description": "Element insertion and table update complete"
    },
    {
      "id": "ElementSearchComplete",
      "event_type": "system_event",
      "description": "Element search operation complete"
    },
    {
      "id": "TableResetComplete",
      "event_type": "system_event",
      "description": "Table reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "UserClicksInsert",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValue",
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_InsertingElement",
      "event": "InputValidationComplete",
      "guard": "validInput",
      "actions": [
        "parseInputValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:elementInsertionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_InsertingElement",
      "to": "S6_DrawingTable",
      "event": "ElementInsertionComplete",
      "guard": "elementInsertedSuccessfully",
      "actions": [
        "updateTableStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:tableStructureChanged",
        "dom:newElementVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S6_DrawingTable",
      "to": "S0_Idle",
      "event": "ElementInsertionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_SearchingElement",
      "event": "UserClicksSearch",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_SearchingElement",
      "to": "S0_Idle",
      "event": "ElementSearchComplete",
      "guard": "true",
      "actions": [
        "showSearchResult()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:searchResultDisplayed"
      ],
      "timeout": 1500
    },
    {
      "from": "S0_Idle",
      "to": "S7_TableResetting",
      "event": "UserClicksReset",
      "guard": "tableNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_TableResetting",
      "to": "S0_Idle",
      "event": "TableResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:tableCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insert",
    "search",
    "reset",
    "table_visualization"
  ]
}