{
  "meta": {
    "concept": "SelectionSort",
    "topic": "Selection Sort Visualization",
    "educational_goal": "Demonstrate the selection sort algorithm",
    "expected_interactions": [
      "start",
      "step",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SortingStart",
      "label": "SortingStart",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "highlightCurrentPosition()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_FindingMinimum",
      "label": "FindingMinimum",
      "type": "atomic",
      "entry_actions": [
        "findMinimumInRemaining()",
        "highlightMinimum()"
      ],
      "exit_actions": [
        "clearMinimumHighlight()"
      ]
    },
    {
      "id": "S3_SwappingElements",
      "label": "SwappingElements",
      "type": "atomic",
      "entry_actions": [
        "swapElements()",
        "updateArrayVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SortingComplete",
      "label": "SortingComplete",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ResettingArray",
      "label": "ResettingArray",
      "type": "atomic",
      "entry_actions": [
        "resetArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "UserClicksStep",
      "event_type": "user_action",
      "description": "User clicks the Step button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "MinimumFound",
      "event_type": "system_event",
      "description": "Minimum element found in the remaining array"
    },
    {
      "id": "ElementsSwapped",
      "event_type": "system_event",
      "description": "Elements have been swapped"
    },
    {
      "id": "SortingFinished",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SortingStart",
      "event": "UserClicksStart",
      "guard": "arrayNotEmpty",
      "actions": [
        "beginSorting()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_SortingStart",
      "to": "S2_FindingMinimum",
      "event": "UserClicksStep",
      "guard": "true",
      "actions": [
        "highlightCurrentPosition()",
        "searchForMinimum()"
      ],
      "expected_observables": [
        "dom:currentPositionHighlighted"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_FindingMinimum",
      "to": "S3_SwappingElements",
      "event": "MinimumFound",
      "guard": "minimumIdentified",
      "actions": [
        "highlightMinimum()",
        "prepareSwap()"
      ],
      "expected_observables": [
        "dom:minimumHighlighted"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_SwappingElements",
      "to": "S1_SortingStart",
      "event": "ElementsSwapped",
      "guard": "swapSuccessful",
      "actions": [
        "swapElements()",
        "updateVisualization()"
      ],
      "expected_observables": [
        "dom:elementsSwapped"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SortingStart",
      "to": "S4_SortingComplete",
      "event": "SortingFinished",
      "guard": "sortingComplete",
      "actions": [
        "showCompletionMessage()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:sortingCompleteMessage"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingArray",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingArray",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayReset",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "step",
    "reset",
    "array_visualization"
  ]
}