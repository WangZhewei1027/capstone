{
  "meta": {
    "concept": "Floyd-Warshall Algorithm",
    "topic": "Shortest Paths in a Weighted Graph",
    "educational_goal": "Demonstrate the Floyd-Warshall algorithm for finding shortest paths",
    "expected_interactions": [
      "inputGraph",
      "runAlgorithm",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputGraph",
      "label": "InputGraph",
      "type": "atomic",
      "entry_actions": [
        "captureGraphInput()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingGraph",
      "label": "ValidatingGraph",
      "type": "atomic",
      "entry_actions": [
        "validateGraphInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "initializeAlgorithm()",
        "executeFloydWarshall()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_VisualizingResults",
      "label": "VisualizingResults",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "displayShortestPaths()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraphData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsGraph",
      "event_type": "user_action",
      "description": "User inputs graph data"
    },
    {
      "id": "UserClicksRun",
      "event_type": "user_action",
      "description": "User clicks the Run button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "GraphValidationComplete",
      "event_type": "system_event",
      "description": "Graph input validation completes successfully"
    },
    {
      "id": "GraphValidationFailed",
      "event_type": "system_event",
      "description": "Graph input validation fails"
    },
    {
      "id": "AlgorithmExecutionComplete",
      "event_type": "system_event",
      "description": "Floyd-Warshall algorithm execution complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputGraph",
      "event": "UserInputsGraph",
      "guard": "inputNotEmpty",
      "actions": [
        "captureGraphData()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:graphInputCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputGraph",
      "to": "S2_ValidatingGraph",
      "event": "GraphValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateGraph()",
        "prepareAlgorithm()"
      ],
      "expected_observables": [
        "dom:graphValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingGraph",
      "to": "S4_RunningAlgorithm",
      "event": "GraphValidationComplete",
      "guard": "validGraph",
      "actions": [
        "startAlgorithm()",
        "beginExecution()"
      ],
      "expected_observables": [
        "dom:algorithmExecutionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputGraph",
      "to": "S3_ErrorAlert",
      "event": "GraphValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RunningAlgorithm",
      "to": "S5_VisualizingResults",
      "event": "AlgorithmExecutionComplete",
      "guard": "executionSuccessful",
      "actions": [
        "updateResults()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:resultsUpdated",
        "dom:shortestPathsVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_VisualizingResults",
      "to": "S0_Idle",
      "event": "AlgorithmExecutionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "run",
    "reset",
    "graph_visualization"
  ]
}