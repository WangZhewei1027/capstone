    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Merge Sort Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: center;\n            margin: 20px;\n        }\n        .array-bar {\n            display: inline-block;\n            width: 20px;\n            margin: 1px;\n            background-color: teal;\n        }\n        #controls {\n            margin: 20px 0;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Merge Sort Visualization</h1>\n<div id=\"array-container\"></div>\n\n<div id=\"controls\">\n    <button onclick=\"generateArray()\">Generate Array</button>\n    <button onclick=\"startMergeSort()\">Start Merge Sort</button>\n</div>\n\n<script>\n    let array = [];\n    let arrayBars = [];\n    const arrayContainer = document.getElementById(\"array-container\");\n\n    function generateArray(size = 20) {\n        array = Array.from({ length: size }, () => Math.floor(Math.random() * 100));\n        renderArray();\n    }\n\n    function renderArray() {\n        arrayContainer.innerHTML = '';\n        arrayBars = array.map(value => {\n            const bar = document.createElement('div');\n            bar.style.height = value + 'px';\n            bar.className = 'array-bar';\n            arrayContainer.appendChild(bar);\n            return bar;\n        });\n    }\n\n    async function startMergeSort() {\n        await mergeSort(array, 0, array.length - 1);\n        alert(\"Sorting Complete!\");\n    }\n\n    async function mergeSort(arr, left, right) {\n        if (left < right) {\n            let mid = Math.floor((left + right) / 2);\n            await mergeSort(arr, left, mid);\n            await mergeSort(arr, mid + 1, right);\n            await merge(arr, left, mid, right);\n        }\n    }\n\n    async function merge(arr, left, mid, right) {\n        let leftArray = arr.slice(left, mid + 1);\n        let rightArray = arr.slice(mid + 1, right + 1);\n        let leftIndex = 0, rightIndex = 0, sortedIndex = left;\n\n        while (leftIndex < leftArray.length && rightIndex < rightArray.length) {\n            if (leftArray[leftIndex] <= rightArray[rightIndex]) {\n                arr[sortedIndex] = leftArray[leftIndex++];\n            } else {\n                arr[sortedIndex] = rightArray[rightIndex++];\n            }\n            sortedIndex++;\n            renderArrayWithDelay();\n            await sleep(100); // delay for visualization\n        }\n\n        while (leftIndex < leftArray.length) {\n            arr[sortedIndex++] = leftArray[leftIndex++];\n            renderArrayWithDelay();\n            await sleep(100);\n        }\n\n        while (rightIndex < rightArray.length) {\n            arr[sortedIndex++] = rightArray[rightIndex++];\n            renderArrayWithDelay();\n            await sleep(100);\n        }\n        \n        renderArray();\n    }\n\n    function renderArrayWithDelay() {\n        for (let i = 0; i < arrayBars.length; i++) {\n            arrayBars[i].style.height = array[i] + 'px';\n            arrayBars[i].style.backgroundColor = 'teal';\n        }\n    }\n\n    function sleep(ms) {\n        return new Promise(resolve => setTimeout(resolve, ms));\n    }\n\n    // Initial array generation\n    generateArray();\n</script>\n\n</body>\n</html>"
