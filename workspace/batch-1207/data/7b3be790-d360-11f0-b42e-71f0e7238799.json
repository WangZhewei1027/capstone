    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Breadth-First Search Visualization</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            margin: 0;\n            padding: 20px;\n            background-color: #f4f4f4;\n        }\n        #graph {\n            display: flex;\n            flex-direction: column;\n            align-items: center;\n        }\n        .node {\n            width: 50px;\n            height: 50px;\n            border: 2px solid #3498db;\n            border-radius: 50%;\n            display: flex;\n            justify-content: center;\n            align-items: center;\n            margin: 10px;\n            font-size: 20px;\n            color: #3498db;\n            transition: background-color 0.3s;\n        }\n        .visited {\n            background-color: #3498db;\n            color: white;\n        }\n        .edges {\n            display: flex;\n            flex-direction: column;\n            margin-top: -30px;\n        }\n        .edge {\n            height: 20px;\n            border-left: 2px solid #3498db;\n            margin: auto;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Breadth-First Search (BFS) Visualization</h1>\n<div id=\"graph\"></div>\n<button id=\"startBFS\">Start BFS</button>\n\n<script>\n    const graph = {\n        A: ['B', 'C'],\n        B: ['D', 'E'],\n        C: ['F'],\n        D: [],\n        E: ['F'],\n        F: []\n    };\n\n    const graphDiv = document.getElementById('graph');\n\n    function createGraph() {\n        for (const node in graph) {\n            const nodeDiv = document.createElement('div');\n            nodeDiv.classList.add('node');\n            nodeDiv.textContent = node;\n            graphDiv.appendChild(nodeDiv);\n\n            const edgesDiv = document.createElement('div');\n            edgesDiv.classList.add('edges');\n\n            graph[node].forEach(neighbor => {\n                const edgeDiv = document.createElement('div');\n                edgeDiv.classList.add('edge');\n                edgesDiv.appendChild(edgeDiv);\n            });\n\n            graphDiv.appendChild(edgesDiv);\n        }\n    }\n\n    function bfs(startNode) {\n        const queue = [startNode];\n        const visited = new Set();\n        const nodes = document.querySelectorAll('.node');\n\n        const interval = setInterval(() => {\n            if (queue.length === 0) {\n                clearInterval(interval);\n                return;\n            }\n\n            const currentNode = queue.shift();\n            visited.add(currentNode);\n\n            nodes.forEach(node => {\n                if (node.textContent === currentNode) {\n                    node.classList.add('visited');\n                }\n            });\n\n            graph[currentNode].forEach(neighbor => {\n                if (!visited.has(neighbor) && !queue.includes(neighbor)) {\n                    queue.push(neighbor);\n                }\n            });\n        }, 1000);\n    }\n\n    document.getElementById('startBFS').onclick = () => {\n        createGraph();\n        bfs('A'); // Starting BFS from node 'A'\n    };\n</script>\n\n</body>\n</html>"
