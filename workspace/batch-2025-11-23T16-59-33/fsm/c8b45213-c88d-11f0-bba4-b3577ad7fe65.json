{
  "topic": "Deque",
  "description": "Finite state machine for a Deque (Double-Ended Queue) interactive application",
  "states": [
    {
      "name": "empty",
      "onEnter": "updateDisplay",
      "onExit": "noop",
      "on": {
        "ADD_FRONT": "nonEmpty",
        "ADD_BACK": "nonEmpty"
      }
    },
    {
      "name": "nonEmpty",
      "onEnter": "updateDisplay",
      "onExit": "noop",
      "on": {
        "REMOVE_FRONT": "conditionalEmpty",
        "REMOVE_BACK": "conditionalEmpty",
        "CLEAR": "empty"
      }
    },
    {
      "name": "conditionalEmpty",
      "onEnter": "updateDisplay",
      "onExit": "noop",
      "on": {
        "CHECK_EMPTY": [
          "empty",
          "nonEmpty"
        ]
      }
    }
  ],
  "events": [
    "ADD_FRONT",
    "ADD_BACK",
    "REMOVE_FRONT",
    "REMOVE_BACK",
    "CLEAR",
    "CHECK_EMPTY"
  ],
  "triggers": {
    "ADD_FRONT": "#pushFrontBtn",
    "ADD_BACK": "#pushBackBtn",
    "REMOVE_FRONT": "#popFrontBtn",
    "REMOVE_BACK": "#popBackBtn",
    "CLEAR": "#clearBtn",
    "CHECK_EMPTY": "#valueInput"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}