{
  "topic": "Stack",
  "description": "Models the interactive states and transitions of a stack data structure demo.",
  "states": [
    {
      "name": "empty",
      "onEnter": "renderStack",
      "onExit": "noop",
      "on": {
        "PUSH_CLICKED": "non_empty",
        "ENTER_KEY_PRESSED": "non_empty"
      }
    },
    {
      "name": "non_empty",
      "onEnter": "renderStack",
      "onExit": "noop",
      "on": {
        "POP_CLICKED": "empty",
        "PEEK_CLICKED": "non_empty",
        "CLEAR_CLICKED": "empty",
        "PUSH_CLICKED": "non_empty",
        "ENTER_KEY_PRESSED": "non_empty"
      }
    }
  ],
  "events": [
    "PUSH_CLICKED",
    "POP_CLICKED",
    "PEEK_CLICKED",
    "CLEAR_CLICKED",
    "ENTER_KEY_PRESSED"
  ],
  "triggers": {
    "PUSH_CLICKED": "#pushBtn",
    "POP_CLICKED": "#popBtn",
    "PEEK_CLICKED": "#peekBtn",
    "CLEAR_CLICKED": "#clearBtn",
    "ENTER_KEY_PRESSED": "#inputValue"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}