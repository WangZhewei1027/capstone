{
  "topic": "Queue",
  "description": "Finite State Machine for a Queue Demonstration Web Application",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderQueue",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "enqueueing",
        "DEQUEUE_CLICKED": "dequeueing"
      }
    },
    {
      "name": "enqueueing",
      "onEnter": "enqueueItem",
      "onExit": "renderQueue",
      "on": {
        "ENQUEUE_COMPLETE": "idle"
      }
    },
    {
      "name": "dequeueing",
      "onEnter": "dequeueItem",
      "onExit": "renderQueue",
      "on": {
        "DEQUEUE_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "ENQUEUE_CLICKED",
    "DEQUEUE_CLICKED",
    "ENQUEUE_COMPLETE",
    "DEQUEUE_COMPLETE"
  ],
  "triggers": {
    "ENQUEUE_CLICKED": "#enqueue-btn, #enqueue-input",
    "DEQUEUE_CLICKED": "#dequeue-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}