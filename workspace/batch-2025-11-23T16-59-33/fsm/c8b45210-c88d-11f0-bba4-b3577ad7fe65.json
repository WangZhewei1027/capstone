{
  "topic": "Linked List",
  "description": "Finite state machine for a linked list visualization and demo application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "renderList",
      "onExit": "noop",
      "on": {
        "INSERT_HEAD_CLICKED": "insertingHead",
        "INSERT_TAIL_CLICKED": "insertingTail",
        "INSERT_AT_INDEX_CLICKED": "insertingAtIndex",
        "REMOVE_AT_INDEX_CLICKED": "removingAtIndex",
        "CLEAR_CLICKED": "clearing"
      }
    },
    {
      "name": "insertingHead",
      "onEnter": "insertAtHead",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "insertingTail",
      "onEnter": "insertAtTail",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "insertingAtIndex",
      "onEnter": "insertAtIndex",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "removingAtIndex",
      "onEnter": "removeAtIndex",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    },
    {
      "name": "clearing",
      "onEnter": "clearList",
      "onExit": "renderList",
      "on": {
        "DONE": "idle"
      }
    }
  ],
  "events": [
    "INSERT_HEAD_CLICKED",
    "INSERT_TAIL_CLICKED",
    "INSERT_AT_INDEX_CLICKED",
    "REMOVE_AT_INDEX_CLICKED",
    "CLEAR_CLICKED",
    "DONE"
  ],
  "triggers": {
    "INSERT_HEAD_CLICKED": "#insertHeadBtn",
    "INSERT_TAIL_CLICKED": "#insertTailBtn",
    "INSERT_AT_INDEX_CLICKED": "#insertAtIndexBtn",
    "REMOVE_AT_INDEX_CLICKED": "#removeAtIndexBtn",
    "CLEAR_CLICKED": "#clearBtn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}