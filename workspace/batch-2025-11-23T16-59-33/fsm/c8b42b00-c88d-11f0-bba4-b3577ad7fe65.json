{
  "topic": "Array Demonstration",
  "description": "Finite state machine for interactive array operations in a web application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "CREATE_ARRAY_CLICKED": "arrayCreated"
      }
    },
    {
      "name": "arrayCreated",
      "onEnter": "displayArray",
      "onExit": "noop",
      "on": {
        "ACCESS_INDEX_CLICKED": "accessingElement",
        "MODIFY_INDEX_CLICKED": "modifyingElement",
        "PUSH_CLICKED": "modifyingArray",
        "POP_CLICKED": "modifyingArray",
        "SHIFT_CLICKED": "modifyingArray",
        "UNSHIFT_CLICKED": "modifyingArray",
        "SPLICE_CLICKED": "modifyingArray",
        "SLICE_CLICKED": "modifyingArray",
        "INDEXOF_CLICKED": "modifyingArray"
      }
    },
    {
      "name": "accessingElement",
      "onEnter": "accessElement",
      "onExit": "noop",
      "on": {
        "MODIFY_INDEX_CLICKED": "modifyingElement",
        "PUSH_CLICKED": "modifyingArray",
        "POP_CLICKED": "modifyingArray",
        "SHIFT_CLICKED": "modifyingArray",
        "UNSHIFT_CLICKED": "modifyingArray",
        "SPLICE_CLICKED": "modifyingArray",
        "SLICE_CLICKED": "modifyingArray",
        "INDEXOF_CLICKED": "modifyingArray"
      }
    },
    {
      "name": "modifyingElement",
      "onEnter": "modifyElement",
      "onExit": "noop",
      "on": {
        "ACCESS_INDEX_CLICKED": "accessingElement",
        "PUSH_CLICKED": "modifyingArray",
        "POP_CLICKED": "modifyingArray",
        "SHIFT_CLICKED": "modifyingArray",
        "UNSHIFT_CLICKED": "modifyingArray",
        "SPLICE_CLICKED": "modifyingArray",
        "SLICE_CLICKED": "modifyingArray",
        "INDEXOF_CLICKED": "modifyingArray"
      }
    },
    {
      "name": "modifyingArray",
      "onEnter": "modifyArray",
      "onExit": "noop",
      "on": {
        "ACCESS_INDEX_CLICKED": "accessingElement",
        "MODIFY_INDEX_CLICKED": "modifyingElement"
      }
    }
  ],
  "events": [
    "CREATE_ARRAY_CLICKED",
    "ACCESS_INDEX_CLICKED",
    "MODIFY_INDEX_CLICKED",
    "PUSH_CLICKED",
    "POP_CLICKED",
    "SHIFT_CLICKED",
    "UNSHIFT_CLICKED",
    "SPLICE_CLICKED",
    "SLICE_CLICKED",
    "INDEXOF_CLICKED"
  ],
  "triggers": {
    "CREATE_ARRAY_CLICKED": "#createArrayBtn",
    "ACCESS_INDEX_CLICKED": "#accessIndexBtn",
    "MODIFY_INDEX_CLICKED": "#modifyIndexBtn",
    "PUSH_CLICKED": "#pushBtn",
    "POP_CLICKED": "#popBtn",
    "SHIFT_CLICKED": "#shiftBtn",
    "UNSHIFT_CLICKED": "#unshiftBtn",
    "SPLICE_CLICKED": "#spliceBtn",
    "SLICE_CLICKED": "#sliceBtn",
    "INDEXOF_CLICKED": "#indexOfBtn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}