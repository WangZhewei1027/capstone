{
  "meta": {
    "concept": "BubbleSort",
    "topic": "Bubble Sort Visualization",
    "educational_goal": "Demonstrate Bubble Sort algorithm",
    "expected_interactions": [
      "start_sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "displayArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "startSortingAnimation()"
      ],
      "exit_actions": [
        "resetBars()"
      ]
    },
    {
      "id": "S2_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "highlightSortedBars()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Bubble Sort button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "resetArray()",
        "displayArray()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Sorted",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayContainer",
    "button"
  ]
}