{
  "meta": {
    "concept": "BinarySearchTree",
    "topic": "Binary Search Tree Visualization",
    "educational_goal": "Demonstrate BST insertion and traversal",
    "expected_interactions": [
      "insert",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_RenderingTree",
      "label": "RenderingTree",
      "type": "atomic",
      "entry_actions": [
        "renderTree(bst.root)"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ClearingTree",
      "label": "ClearingTree",
      "type": "atomic",
      "entry_actions": [
        "clearTree()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button",
      "triggers": [
        "button[onclick='insertNode()']"
      ]
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Tree button",
      "triggers": [
        "button[onclick='clearTree()']"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InsertingNode",
      "to": "S2_RenderingTree",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputIsValid",
      "actions": [
        "insertNode()",
        "renderTree(bst.root)"
      ],
      "expected_observables": [
        "dom:nodeInserted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_ClearingTree",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearTree()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ClearingTree",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "resetTreeVisualization()"
      ],
      "expected_observables": [
        "dom:treeCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input[type='number']",
    "button[onclick='insertNode()']",
    "button[onclick='clearTree()']",
    "#bst-container"
  ]
}