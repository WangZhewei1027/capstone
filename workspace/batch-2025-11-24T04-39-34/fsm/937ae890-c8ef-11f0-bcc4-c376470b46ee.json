{
  "topic": "Linked List",
  "description": "Finite state machine for managing a linked list with operations to append and remove nodes.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "APPEND_CLICKED": "appending",
        "REMOVE_CLICKED": "removing"
      }
    },
    {
      "name": "appending",
      "onEnter": "appendNode",
      "onExit": "noop",
      "on": {
        "APPEND_COMPLETE": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "removeNode",
      "onExit": "noop",
      "on": {
        "REMOVE_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "APPEND_CLICKED",
    "REMOVE_CLICKED",
    "APPEND_COMPLETE",
    "REMOVE_COMPLETE"
  ],
  "triggers": {
    "APPEND_CLICKED": "#append-button, .append-btn",
    "REMOVE_CLICKED": "#remove-button, .remove-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}