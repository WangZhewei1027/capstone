{
  "topic": "Queue",
  "description": "Finite state machine for a queue application that handles input and submission.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "INPUT_CHANGED": "updating",
        "SUBMIT_CLICKED": "submitted"
      }
    },
    {
      "name": "updating",
      "onEnter": "updateQueue",
      "onExit": "noop",
      "on": {
        "INPUT_CHANGED": "updating",
        "SUBMIT_CLICKED": "submitted"
      }
    },
    {
      "name": "submitted",
      "onEnter": "redirectToHome",
      "onExit": "noop",
      "on": {
        "INPUT_CHANGED": "updating"
      }
    }
  ],
  "events": [
    "INPUT_CHANGED",
    "SUBMIT_CLICKED"
  ],
  "triggers": {
    "INPUT_CHANGED": "#input",
    "SUBMIT_CLICKED": "#submit"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}