{
  "topic": "Array Demo",
  "description": "Finite state machine for managing an array through user interactions",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_CLICKED": "adding",
        "CLEAR_CLICKED": "clearing",
        "DISPLAY_CLICKED": "displaying"
      }
    },
    {
      "name": "adding",
      "onEnter": "addElements",
      "onExit": "noop",
      "on": {
        "DISPLAY_CLICKED": "displaying",
        "CLEAR_CLICKED": "clearing"
      }
    },
    {
      "name": "clearing",
      "onEnter": "clearArray",
      "onExit": "noop",
      "on": {
        "ADD_CLICKED": "adding",
        "DISPLAY_CLICKED": "displaying"
      }
    },
    {
      "name": "displaying",
      "onEnter": "updateDisplay",
      "onExit": "noop",
      "on": {
        "ADD_CLICKED": "adding",
        "CLEAR_CLICKED": "clearing"
      }
    }
  ],
  "events": [
    "ADD_CLICKED",
    "CLEAR_CLICKED",
    "DISPLAY_CLICKED"
  ],
  "triggers": {
    "ADD_CLICKED": "#add-btn",
    "CLEAR_CLICKED": "#clear-btn",
    "DISPLAY_CLICKED": "#display-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}