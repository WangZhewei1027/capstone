{
  "topic": "Stack",
  "description": "Finite state machine for a stack data structure application with interactive add, remove, and print operations.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_CLICKED": "adding",
        "REMOVE_CLICKED": "removing",
        "PRINT_CLICKED": "printing"
      }
    },
    {
      "name": "adding",
      "onEnter": "promptAddValue",
      "onExit": "updateAddButton",
      "on": {
        "VALUE_ADDED": "idle",
        "ADD_CANCELLED": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "promptRemoveValue",
      "onExit": "updateRemoveButton",
      "on": {
        "VALUE_REMOVED": "idle",
        "REMOVE_CANCELLED": "idle",
        "STACK_EMPTY": "idle"
      }
    },
    {
      "name": "printing",
      "onEnter": "logStack",
      "onExit": "noop",
      "on": {
        "PRINT_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "ADD_CLICKED",
    "REMOVE_CLICKED",
    "PRINT_CLICKED",
    "VALUE_ADDED",
    "ADD_CANCELLED",
    "VALUE_REMOVED",
    "REMOVE_CANCELLED",
    "STACK_EMPTY",
    "PRINT_COMPLETE"
  ],
  "triggers": {
    "ADD_CLICKED": "#add",
    "REMOVE_CLICKED": "#remove",
    "PRINT_CLICKED": "#print"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}