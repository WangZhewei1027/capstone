    "content": "<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Selection Sort Visualization</title>\n    <style>\n        #array-container {\n            display: flex;\n            justify-content: center;\n            margin-top: 20px;\n        }\n        .array-bar {\n            width: 20px;\n            background-color: #4CAF50;\n            margin: 0 2px;\n            text-align: center;\n            color: white;\n            font-size: 14px;\n        }\n    </style>\n</head>\n<body>\n\n<h1>Selection Sort Visualization</h1>\n<button onclick=\"performSelectionSort()\">Sort with Selection Sort</button>\n\n<div id=\"array-container\"></div>\n\n<script>\n    const array = generateRandomArray(10, 10, 100);\n    displayArray(array);\n\n    function generateRandomArray(size, min, max) {\n        const array = [];\n        for (let i = 0; i < size; i++) {\n            array.push(Math.floor(Math.random() * (max - min + 1)) + min);\n        }\n        return array;\n    }\n\n    function displayArray(array) {\n        const container = document.getElementById('array-container');\n        container.innerHTML = ''; // Clear previous array\n        array.forEach(value => {\n            const bar = document.createElement('div');\n            bar.style.height = `${value * 3}px`;\n            bar.classList.add('array-bar');\n            bar.innerText = value;\n            container.appendChild(bar);\n        });\n    }\n\n    function performSelectionSort() {\n        const arrayBars = document.getElementsByClassName('array-bar');\n        const animations = getSelectionSortAnimations([...array]);\n        animations.forEach((animation, index) => {\n            setTimeout(() => {\n                const [barIndex1, barIndex2, didSwap] = animation;\n                if (didSwap) {\n                    const tempHeight = arrayBars[barIndex1].style.height;\n                    const tempText = arrayBars[barIndex1].innerText;\n\n                    arrayBars[barIndex1].style.height = arrayBars[barIndex2].style.height;\n                    arrayBars[barIndex1].innerText = arrayBars[barIndex2].innerText;\n\n                    arrayBars[barIndex2].style.height = tempHeight;\n                    arrayBars[barIndex2].innerText = tempText;\n                }\n                arrayBars[barIndex1].style.backgroundColor = 'red';\n                arrayBars[barIndex2].style.backgroundColor = 'red';\n                setTimeout(() => {\n                    arrayBars[barIndex1].style.backgroundColor = '#4CAF50';\n                    arrayBars[barIndex2].style.backgroundColor = '#4CAF50';\n                }, 100);\n            }, index * 500);\n        });\n    }\n\n    function getSelectionSortAnimations(array) {\n        const animations = [];\n        for (let i = 0; i < array.length - 1; i++) {\n            let minIndex = i;\n            for (let j = i + 1; j < array.length; j++) {\n                animations.push([i, j, false]);\n                if (array[j] < array[minIndex]) {\n                    minIndex = j;\n                }\n            }\n            if (minIndex !== i) {\n                const temp = array[i];\n                array[i] = array[minIndex];\n                array[minIndex] = temp;\n                animations.push([i, minIndex, true]);\n            }\n        }\n        return animations;\n    }\n</script>\n\n</body>\n</html>"
