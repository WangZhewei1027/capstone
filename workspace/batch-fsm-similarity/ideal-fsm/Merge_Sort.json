{
  "meta": {
    "concept": "MergeSort",
    "topic": "Merge Sort Visualization",
    "educational_goal": "Demonstrate the merge sort algorithm",
    "expected_interactions": [
      "start",
      "pause",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "operation",
      "entry_actions": [
        "disableControls()",
        "startMergeSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Paused",
      "label": "Paused",
      "type": "atomic",
      "entry_actions": [
        "pauseAnimation()",
        "highlightPausedState()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "resetArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStart",
      "event_type": "user_action",
      "description": "User clicks the Start button"
    },
    {
      "id": "UserClicksPause",
      "event_type": "user_action",
      "description": "User clicks the Pause button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "SortingComplete",
      "event_type": "system_event",
      "description": "Sorting operation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "UserClicksStart",
      "guard": "arrayNotEmpty",
      "actions": [
        "beginSorting()"
      ],
      "expected_observables": [
        "dom:startButtonClicked",
        "dom:sortingStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Paused",
      "event": "UserClicksPause",
      "guard": "true",
      "actions": [
        "pauseSorting()"
      ],
      "expected_observables": [
        "dom:pauseButtonClicked",
        "dom:sortingPaused"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Paused",
      "to": "S1_Sorting",
      "event": "UserClicksStart",
      "guard": "true",
      "actions": [
        "resumeSorting()"
      ],
      "expected_observables": [
        "dom:startButtonClicked",
        "dom:sortingResumed"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Sorting",
      "to": "S0_Idle",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "displaySortedArray()"
      ],
      "expected_observables": [
        "dom:sortingComplete",
        "dom:arraySorted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_Resetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginReset()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Resetting",
      "to": "S0_Idle",
      "event": "SortingComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayReset",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start",
    "pause",
    "reset",
    "array_visualization"
  ]
}