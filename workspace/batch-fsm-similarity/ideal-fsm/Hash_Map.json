{
  "meta": {
    "concept": "Hash Map",
    "topic": "Hash Map Visualization",
    "educational_goal": "Demonstrate hash map insertion and lookup",
    "expected_interactions": [
      "insert",
      "lookup",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderHashMap()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertStart",
      "label": "InsertStart",
      "type": "atomic",
      "entry_actions": [
        "readInputKeyValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_InsertingKeyValue",
      "label": "InsertingKeyValue",
      "type": "atomic",
      "entry_actions": [
        "computeHash()",
        "insertKeyValuePair()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_LookingUpKey",
      "label": "LookingUpKey",
      "type": "atomic",
      "entry_actions": [
        "computeHash()",
        "searchKey()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_ResettingMap",
      "label": "ResettingMap",
      "type": "atomic",
      "entry_actions": [
        "clearAllEntries()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksInsert",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "UserEntersKeyValue",
      "event_type": "user_action",
      "description": "User enters key-value pair in input fields"
    },
    {
      "id": "UserClicksLookup",
      "event_type": "user_action",
      "description": "User clicks the Lookup button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "KeyValueInsertionComplete",
      "event_type": "system_event",
      "description": "Key-value pair insertion complete"
    },
    {
      "id": "KeyLookupComplete",
      "event_type": "system_event",
      "description": "Key lookup operation complete"
    },
    {
      "id": "MapResetComplete",
      "event_type": "system_event",
      "description": "Map reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertStart",
      "event": "UserClicksInsert",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputKeyValue",
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InsertStart",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateKeyValue()",
        "prepareInsertion()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_InsertingKeyValue",
      "event": "InputValidationComplete",
      "guard": "validKeyValue",
      "actions": [
        "parseInputKeyValue()",
        "beginInsertion()"
      ],
      "expected_observables": [
        "dom:keyValueInsertionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InsertStart",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_InsertingKeyValue",
      "to": "S0_Idle",
      "event": "KeyValueInsertionComplete",
      "guard": "insertionSuccessful",
      "actions": [
        "updateHashMapStructure()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:hashMapStructureUpdated"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_LookingUpKey",
      "event": "UserClicksLookup",
      "guard": "keyExists",
      "actions": [
        "captureLookupKey()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:lookupButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_LookingUpKey",
      "to": "S0_Idle",
      "event": "KeyLookupComplete",
      "guard": "lookupSuccessful",
      "actions": [
        "showLookupResult()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:lookupResultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingMap",
      "event": "UserClicksReset",
      "guard": "mapNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingMap",
      "to": "S0_Idle",
      "event": "MapResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:mapCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "insert",
    "lookup",
    "reset",
    "hash_map_visualization"
  ]
}