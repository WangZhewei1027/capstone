{
  "meta": {
    "concept": "KnapsackProblem",
    "topic": "Knapsack Problem Visualization",
    "educational_goal": "Demonstrate item selection for maximum value within weight constraints",
    "expected_interactions": [
      "addItem",
      "removeItem",
      "solve",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderKnapsack()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingItem",
      "label": "AddingItem",
      "type": "atomic",
      "entry_actions": [
        "readItemInput()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingItem",
      "label": "ValidatingItem",
      "type": "atomic",
      "entry_actions": [
        "validateItemInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_SolvingKnapsack",
      "label": "SolvingKnapsack",
      "type": "atomic",
      "entry_actions": [
        "computeOptimalSelection()",
        "updateKnapsackVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ResettingKnapsack",
      "label": "ResettingKnapsack",
      "type": "atomic",
      "entry_actions": [
        "clearAllItems()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddItem",
      "event_type": "user_action",
      "description": "User clicks the Add Item button"
    },
    {
      "id": "UserEntersItemInput",
      "event_type": "user_action",
      "description": "User enters item details in input fields"
    },
    {
      "id": "UserClicksSolve",
      "event_type": "user_action",
      "description": "User clicks the Solve button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "ItemValidationComplete",
      "event_type": "system_event",
      "description": "Item validation completes successfully"
    },
    {
      "id": "ItemValidationFailed",
      "event_type": "system_event",
      "description": "Item validation fails"
    },
    {
      "id": "KnapsackSolutionComplete",
      "event_type": "system_event",
      "description": "Knapsack solution computation complete"
    },
    {
      "id": "KnapsackResetComplete",
      "event_type": "system_event",
      "description": "Knapsack reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingItem",
      "event": "UserClicksAddItem",
      "guard": "inputNotEmpty",
      "actions": [
        "captureItemInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readItemInput",
        "dom:addItemButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddingItem",
      "to": "S2_ValidatingItem",
      "event": "ItemValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateItemDetails()",
        "prepareItemAddition()"
      ],
      "expected_observables": [
        "dom:itemInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingItem",
      "to": "S0_Idle",
      "event": "ItemValidationComplete",
      "guard": "validItem",
      "actions": [
        "addItemToKnapsack()",
        "updateVisualization()"
      ],
      "expected_observables": [
        "dom:itemAddedToKnapsack"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddingItem",
      "to": "S3_ErrorAlert",
      "event": "ItemValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_SolvingKnapsack",
      "event": "UserClicksSolve",
      "guard": "itemsInKnapsack",
      "actions": [
        "disableControls()",
        "beginKnapsackSolution()"
      ],
      "expected_observables": [
        "dom:solveButtonClicked"
      ],
      "timeout": 3000
    },
    {
      "from": "S4_SolvingKnapsack",
      "to": "S0_Idle",
      "event": "KnapsackSolutionComplete",
      "guard": "solutionComputed",
      "actions": [
        "enableControls()",
        "displaySolution()"
      ],
      "expected_observables": [
        "dom:solutionDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingKnapsack",
      "event": "UserClicksReset",
      "guard": "knapsackNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingKnapsack",
      "to": "S0_Idle",
      "event": "KnapsackResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:knapsackCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "addItem",
    "solve",
    "reset",
    "knapsack_visualization"
  ]
}