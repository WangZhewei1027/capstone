{
  "meta": {
    "concept": "Union-Find",
    "topic": "Disjoint Set Data Structure",
    "educational_goal": "Demonstrate union and find operations",
    "expected_interactions": [
      "union",
      "find",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderSet()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_UnionStart",
      "label": "UnionStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingUnionInput",
      "label": "ValidatingUnionInput",
      "type": "atomic",
      "entry_actions": [
        "validateUnionInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_PerformingUnion",
      "label": "PerformingUnion",
      "type": "atomic",
      "entry_actions": [
        "executeUnionOperation()",
        "updateSetStructure()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_UnionComplete",
      "label": "UnionComplete",
      "type": "atomic",
      "entry_actions": [
        "updateVisualization()",
        "animateUnion()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_FindStart",
      "label": "FindStart",
      "type": "atomic",
      "entry_actions": [
        "readFindInput()",
        "highlightFindInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S7_PerformingFind",
      "label": "PerformingFind",
      "type": "atomic",
      "entry_actions": [
        "executeFindOperation()",
        "highlightFindResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S8_FindComplete",
      "label": "FindComplete",
      "type": "atomic",
      "entry_actions": [
        "showFindResult()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S9_SetResetting",
      "label": "SetResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllSets()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksUnion",
      "event_type": "user_action",
      "description": "User clicks the Union button"
    },
    {
      "id": "UserEntersUnionInput",
      "event_type": "user_action",
      "description": "User enters values for union operation"
    },
    {
      "id": "UserClicksFind",
      "event_type": "user_action",
      "description": "User clicks the Find button"
    },
    {
      "id": "UserEntersFindInput",
      "event_type": "user_action",
      "description": "User enters value for find operation"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "UnionInputValidationComplete",
      "event_type": "system_event",
      "description": "Union input validation completes successfully"
    },
    {
      "id": "UnionInputValidationFailed",
      "event_type": "system_event",
      "description": "Union input validation fails"
    },
    {
      "id": "UnionOperationComplete",
      "event_type": "system_event",
      "description": "Union operation and set update complete"
    },
    {
      "id": "FindOperationComplete",
      "event_type": "system_event",
      "description": "Find operation completes successfully"
    },
    {
      "id": "SetResetComplete",
      "event_type": "system_event",
      "description": "Set reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_UnionStart",
      "event": "UserClicksUnion",
      "guard": "inputsNotEmpty",
      "actions": [
        "captureUnionInputs()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readUnionInputs",
        "dom:unionButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_UnionStart",
      "to": "S2_ValidatingUnionInput",
      "event": "UnionInputValidationComplete",
      "guard": "inputsAreValid",
      "actions": [
        "validateUnionValues()",
        "prepareUnion()"
      ],
      "expected_observables": [
        "dom:unionInputsValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingUnionInput",
      "to": "S4_PerformingUnion",
      "event": "UnionInputValidationComplete",
      "guard": "validUnionValues",
      "actions": [
        "parseUnionValues()",
        "beginUnionOperation()"
      ],
      "expected_observables": [
        "dom:unionOperationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_UnionStart",
      "to": "S3_ErrorAlert",
      "event": "UnionInputValidationFailed",
      "guard": "inputsAreEmpty",
      "actions": [
        "showUnionError()",
        "focusUnionInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetUnionInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_PerformingUnion",
      "to": "S5_UnionComplete",
      "event": "UnionOperationComplete",
      "guard": "unionSuccessful",
      "actions": [
        "updateSetStructure()",
        "triggerUnionVisualization()"
      ],
      "expected_observables": [
        "dom:setStructureChanged",
        "dom:unionVisualizationComplete"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_UnionComplete",
      "to": "S0_Idle",
      "event": "UnionOperationComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearUnionInputs()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_FindStart",
      "event": "UserClicksFind",
      "guard": "inputNotEmpty",
      "actions": [
        "captureFindInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readFindInput",
        "dom:findButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S6_FindStart",
      "to": "S7_PerformingFind",
      "event": "FindOperationComplete",
      "guard": "findSuccessful",
      "actions": [
        "executeFind()",
        "highlightFindResult()"
      ],
      "expected_observables": [
        "dom:findOperationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S7_PerformingFind",
      "to": "S8_FindComplete",
      "event": "FindOperationComplete",
      "guard": "resultFound",
      "actions": [
        "showFindResult()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:findResultDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S9_SetResetting",
      "event": "UserClicksReset",
      "guard": "setNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S9_SetResetting",
      "to": "S0_Idle",
      "event": "SetResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:setsCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "union",
    "find",
    "reset",
    "set_visualization"
  ]
}