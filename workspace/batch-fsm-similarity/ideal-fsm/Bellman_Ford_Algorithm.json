{
  "meta": {
    "concept": "Bellman-Ford Algorithm",
    "topic": "Shortest Path Finding",
    "educational_goal": "Demonstrate Bellman-Ford algorithm for finding shortest paths in graphs",
    "expected_interactions": [
      "add_edge",
      "run_algorithm",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readEdgeInput()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingEdgeInput",
      "label": "ValidatingEdgeInput",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "operation",
      "entry_actions": [
        "initializeAlgorithm()",
        "executeBellmanFord()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_AlgorithmComplete",
      "label": "AlgorithmComplete",
      "type": "atomic",
      "entry_actions": [
        "displayResults()",
        "highlightShortestPaths()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserEntersEdgeInput",
      "event_type": "user_action",
      "description": "User enters edge details in input fields"
    },
    {
      "id": "UserClicksRunAlgorithm",
      "event_type": "user_action",
      "description": "User clicks the Run Algorithm button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "EdgeValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "EdgeValidationFailed",
      "event_type": "system_event",
      "description": "Edge input validation fails"
    },
    {
      "id": "AlgorithmExecutionComplete",
      "event_type": "system_event",
      "description": "Bellman-Ford algorithm execution complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "inputFieldsNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInput",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S2_ValidatingEdgeInput",
      "event": "EdgeValidationComplete",
      "guard": "edgeInputIsValid",
      "actions": [
        "validateEdgeDetails()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingEdgeInput",
      "to": "S0_Idle",
      "event": "EdgeValidationComplete",
      "guard": "validEdge",
      "actions": [
        "addEdgeToGraph()",
        "updateVisualization()"
      ],
      "expected_observables": [
        "dom:edgeAdded",
        "dom:graphUpdated"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S3_ErrorAlert",
      "event": "EdgeValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_RunningAlgorithm",
      "event": "UserClicksRunAlgorithm",
      "guard": "graphNotEmpty",
      "actions": [
        "disableControls()",
        "startAlgorithmExecution()"
      ],
      "expected_observables": [
        "dom:runAlgorithmButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RunningAlgorithm",
      "to": "S5_AlgorithmComplete",
      "event": "AlgorithmExecutionComplete",
      "guard": "executionSuccessful",
      "actions": [
        "displayShortestPaths()",
        "highlightResults()"
      ],
      "expected_observables": [
        "dom:resultsDisplayed",
        "dom:pathsHighlighted"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_AlgorithmComplete",
      "to": "S0_Idle",
      "event": "AlgorithmExecutionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingGraph",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add_edge",
    "run_algorithm",
    "reset",
    "graph_visualization"
  ]
}