{
  "meta": {
    "concept": "Adjacency Matrix",
    "topic": "Graph Representation using Adjacency Matrix",
    "educational_goal": "Illustrate graph representation and manipulation using adjacency matrices",
    "expected_interactions": [
      "add_edge",
      "remove_edge",
      "display_matrix",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderMatrix()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingEdgeInput",
      "label": "ValidatingEdgeInput",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "updateMatrixForEdge()",
        "animateEdgeAddition()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_RemovingEdge",
      "label": "RemovingEdge",
      "type": "atomic",
      "entry_actions": [
        "updateMatrixForEdgeRemoval()",
        "animateEdgeRemoval()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_ResettingMatrix",
      "label": "ResettingMatrix",
      "type": "atomic",
      "entry_actions": [
        "clearMatrix()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserClicksRemoveEdge",
      "event_type": "user_action",
      "description": "User clicks the Remove Edge button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "EdgeInputValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "EdgeInputValidationFailed",
      "event_type": "system_event",
      "description": "Edge input validation fails"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition and matrix update complete"
    },
    {
      "id": "EdgeRemovalComplete",
      "event_type": "system_event",
      "description": "Edge removal and matrix update complete"
    },
    {
      "id": "MatrixResetComplete",
      "event_type": "system_event",
      "description": "Matrix reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "inputsNotEmpty",
      "actions": [
        "captureInputValues()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readInputValues",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S2_ValidatingEdgeInput",
      "event": "EdgeInputValidationComplete",
      "guard": "inputsAreValid",
      "actions": [
        "validateEdgeValues()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingEdgeInput",
      "to": "S4_AddingEdge",
      "event": "EdgeInputValidationComplete",
      "guard": "validEdge",
      "actions": [
        "parseEdgeValues()",
        "beginEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeAdditionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S3_ErrorAlert",
      "event": "EdgeInputValidationFailed",
      "guard": "inputsAreEmpty",
      "actions": [
        "showError()",
        "focusInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_AddingEdge",
      "to": "S0_Idle",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateMatrixDisplay()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:matrixUpdated",
        "dom:edgeAdded"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_RemovingEdge",
      "event": "UserClicksRemoveEdge",
      "guard": "inputsNotEmpty",
      "actions": [
        "captureInputValues()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S5_RemovingEdge",
      "to": "S0_Idle",
      "event": "EdgeRemovalComplete",
      "guard": "edgeRemovedSuccessfully",
      "actions": [
        "updateMatrixDisplay()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:matrixUpdated",
        "dom:edgeRemoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingMatrix",
      "event": "UserClicksReset",
      "guard": "matrixNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingMatrix",
      "to": "S0_Idle",
      "event": "MatrixResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:matrixCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add_edge",
    "remove_edge",
    "reset",
    "matrix_visualization"
  ]
}