{
  "meta": {
    "concept": "FloydWarshallAlgorithm",
    "topic": "Floyd-Warshall Algorithm Visualization",
    "educational_goal": "Demonstrate all-pairs shortest paths computation",
    "expected_interactions": [
      "inputGraph",
      "runAlgorithm",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputGraph",
      "label": "InputGraph",
      "type": "atomic",
      "entry_actions": [
        "readGraphInput()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingGraph",
      "label": "ValidatingGraph",
      "type": "atomic",
      "entry_actions": [
        "validateGraphInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "operation",
      "entry_actions": [
        "initializeMatrices()",
        "startAlgorithmExecution()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_VisualizingResults",
      "label": "VisualizingResults",
      "type": "atomic",
      "entry_actions": [
        "updateVisualization()",
        "showShortestPaths()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraphData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsGraph",
      "event_type": "user_action",
      "description": "User inputs graph data"
    },
    {
      "id": "UserClicksRun",
      "event_type": "user_action",
      "description": "User clicks the Run Algorithm button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "GraphValidationComplete",
      "event_type": "system_event",
      "description": "Graph validation completes successfully"
    },
    {
      "id": "GraphValidationFailed",
      "event_type": "system_event",
      "description": "Graph validation fails"
    },
    {
      "id": "AlgorithmExecutionComplete",
      "event_type": "system_event",
      "description": "Algorithm execution completes"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputGraph",
      "event": "UserInputsGraph",
      "guard": "inputNotEmpty",
      "actions": [
        "captureGraphInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:graphInputCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputGraph",
      "to": "S2_ValidatingGraph",
      "event": "GraphValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateGraph()",
        "prepareForAlgorithm()"
      ],
      "expected_observables": [
        "dom:graphValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputGraph",
      "to": "S3_ErrorAlert",
      "event": "GraphValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusGraphInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetGraphInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingGraph",
      "to": "S4_RunningAlgorithm",
      "event": "UserClicksRun",
      "guard": "graphIsValid",
      "actions": [
        "executeAlgorithm()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:algorithmExecutionStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_RunningAlgorithm",
      "to": "S5_VisualizingResults",
      "event": "AlgorithmExecutionComplete",
      "guard": "executionSuccessful",
      "actions": [
        "displayResults()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:resultsDisplayed"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_VisualizingResults",
      "to": "S0_Idle",
      "event": "AlgorithmExecutionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearGraphInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetGraphInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "run",
    "reset",
    "graph_visualization"
  ]
}