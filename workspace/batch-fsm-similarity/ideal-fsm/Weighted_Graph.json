{
  "meta": {
    "concept": "WeightedGraph",
    "topic": "Weighted Graph Visualization",
    "educational_goal": "Demonstrate graph edge insertion and pathfinding",
    "expected_interactions": [
      "add_edge",
      "find_path",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddEdgeStart",
      "label": "AddEdgeStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingEdgeInput",
      "label": "ValidatingEdgeInput",
      "type": "atomic",
      "entry_actions": [
        "validateEdgeInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "createEdge()",
        "updateGraphStructure()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DrawingGraph",
      "label": "DrawingGraph",
      "type": "atomic",
      "entry_actions": [
        "updateGraphVisualization()",
        "animateEdgeAddition()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_FindingPath",
      "label": "FindingPath",
      "type": "operation",
      "entry_actions": [
        "executePathfinding()",
        "highlightPath()"
      ],
      "exit_actions": [
        "clearPathHighlight()"
      ]
    },
    {
      "id": "S7_GraphResetting",
      "label": "GraphResetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllEdges()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "UserEntersEdgeInput",
      "event_type": "user_action",
      "description": "User enters edge details in input fields"
    },
    {
      "id": "UserClicksFindPath",
      "event_type": "user_action",
      "description": "User clicks the Find Path button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "EdgeInputValidationComplete",
      "event_type": "system_event",
      "description": "Edge input validation completes successfully"
    },
    {
      "id": "EdgeInputValidationFailed",
      "event_type": "system_event",
      "description": "Edge input validation fails"
    },
    {
      "id": "EdgeAdditionComplete",
      "event_type": "system_event",
      "description": "Edge addition and graph update complete"
    },
    {
      "id": "PathfindingComplete",
      "event_type": "system_event",
      "description": "Pathfinding operation complete"
    },
    {
      "id": "GraphResetComplete",
      "event_type": "system_event",
      "description": "Graph reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddEdgeStart",
      "event": "UserClicksAddEdge",
      "guard": "inputsNotEmpty",
      "actions": [
        "captureEdgeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readEdgeInputValues",
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S2_ValidatingEdgeInput",
      "event": "EdgeInputValidationComplete",
      "guard": "edgeInputIsValid",
      "actions": [
        "validateEdgeValues()",
        "prepareEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeInputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingEdgeInput",
      "to": "S4_AddingEdge",
      "event": "EdgeInputValidationComplete",
      "guard": "validEdgeData",
      "actions": [
        "parseEdgeInputValues()",
        "beginEdgeAddition()"
      ],
      "expected_observables": [
        "dom:edgeCreationStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_AddEdgeStart",
      "to": "S3_ErrorAlert",
      "event": "EdgeInputValidationFailed",
      "guard": "inputsAreEmpty",
      "actions": [
        "showError()",
        "focusInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_AddingEdge",
      "to": "S5_DrawingGraph",
      "event": "EdgeAdditionComplete",
      "guard": "edgeAddedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:graphStructureChanged",
        "dom:newEdgeVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_DrawingGraph",
      "to": "S0_Idle",
      "event": "EdgeAdditionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInputs()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_FindingPath",
      "event": "UserClicksFindPath",
      "guard": "graphNotEmpty",
      "actions": [
        "executePathfinding()",
        "highlightPath()"
      ],
      "expected_observables": [
        "dom:findPathButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S6_FindingPath",
      "to": "S0_Idle",
      "event": "PathfindingComplete",
      "guard": "pathFound",
      "actions": [
        "clearPathHighlight()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:pathHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S7_GraphResetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S7_GraphResetting",
      "to": "S0_Idle",
      "event": "GraphResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "add_edge",
    "find_path",
    "reset",
    "graph_visualization"
  ]
}