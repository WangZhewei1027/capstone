{
  "meta": {
    "concept": "LinearRegression",
    "topic": "Linear Regression Visualization",
    "educational_goal": "Demonstrate linear regression fitting and prediction",
    "expected_interactions": [
      "inputData",
      "fitModel",
      "predict",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputData",
      "label": "InputData",
      "type": "atomic",
      "entry_actions": [
        "readDataInput()",
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingData",
      "label": "ValidatingData",
      "type": "atomic",
      "entry_actions": [
        "validateData()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_FittingModel",
      "label": "FittingModel",
      "type": "atomic",
      "entry_actions": [
        "computeRegression()",
        "updateModelVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Predicting",
      "label": "Predicting",
      "type": "atomic",
      "entry_actions": [
        "calculatePrediction()",
        "showPredictionResult()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksFit",
      "event_type": "user_action",
      "description": "User clicks the Fit Model button"
    },
    {
      "id": "UserEntersData",
      "event_type": "user_action",
      "description": "User enters data points in input field"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "DataValidationComplete",
      "event_type": "system_event",
      "description": "Data validation completes successfully"
    },
    {
      "id": "DataValidationFailed",
      "event_type": "system_event",
      "description": "Data validation fails"
    },
    {
      "id": "ModelFittingComplete",
      "event_type": "system_event",
      "description": "Model fitting and graph update complete"
    },
    {
      "id": "PredictionComplete",
      "event_type": "system_event",
      "description": "Prediction calculation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputData",
      "event": "UserClicksFit",
      "guard": "dataNotEmpty",
      "actions": [
        "captureDataInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readDataInput",
        "dom:fitButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputData",
      "to": "S2_ValidatingData",
      "event": "DataValidationComplete",
      "guard": "dataIsValid",
      "actions": [
        "validateDataPoints()",
        "prepareModelFitting()"
      ],
      "expected_observables": [
        "dom:dataValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingData",
      "to": "S4_FittingModel",
      "event": "DataValidationComplete",
      "guard": "validDataFormat",
      "actions": [
        "parseDataPoints()",
        "beginModelFitting()"
      ],
      "expected_observables": [
        "dom:modelFittingStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputData",
      "to": "S3_ErrorAlert",
      "event": "DataValidationFailed",
      "guard": "dataIsEmpty",
      "actions": [
        "showError()",
        "focusInputField()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_FittingModel",
      "to": "S5_Predicting",
      "event": "ModelFittingComplete",
      "guard": "modelFittedSuccessfully",
      "actions": [
        "updateGraphStructure()",
        "triggerPrediction()"
      ],
      "expected_observables": [
        "dom:graphStructureChanged",
        "dom:modelLineVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_Predicting",
      "to": "S0_Idle",
      "event": "PredictionComplete",
      "guard": "predictionComplete",
      "actions": [
        "enableControls()",
        "clearInputField()"
      ],
      "expected_observables": [
        "dom:predictionResultVisible"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "PredictionComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "fit",
    "reset",
    "graph_visualization"
  ]
}