{
  "meta": {
    "concept": "BubbleSort",
    "topic": "Bubble Sort Visualization",
    "educational_goal": "Demonstrate Bubble Sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SortStart",
      "label": "SortStart",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "highlightArray()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ComparingElements",
      "label": "ComparingElements",
      "type": "atomic",
      "entry_actions": [
        "compareAdjacentElements()",
        "showComparisonFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_SwappingElements",
      "label": "SwappingElements",
      "type": "atomic",
      "entry_actions": [
        "swapElements()",
        "animateSwap()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SortComplete",
      "label": "SortComplete",
      "type": "atomic",
      "entry_actions": [
        "showCompletionMessage()",
        "highlightSortedArray()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ArrayResetting",
      "label": "ArrayResetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "ComparisonComplete",
      "event_type": "system_event",
      "description": "Comparison of elements completes"
    },
    {
      "id": "SwapComplete",
      "event_type": "system_event",
      "description": "Swap operation completes"
    },
    {
      "id": "SortIterationComplete",
      "event_type": "system_event",
      "description": "One iteration of sort completes"
    },
    {
      "id": "SortFullyComplete",
      "event_type": "system_event",
      "description": "Entire sort operation completes"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SortStart",
      "event": "UserClicksStartSort",
      "guard": "arrayNotEmpty",
      "actions": [
        "captureArrayState()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startSortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SortStart",
      "to": "S2_ComparingElements",
      "event": "ComparisonComplete",
      "guard": "elementsToCompare",
      "actions": [
        "highlightComparison()",
        "prepareSwap()"
      ],
      "expected_observables": [
        "dom:elementsHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ComparingElements",
      "to": "S3_SwappingElements",
      "event": "SwapComplete",
      "guard": "swapNeeded",
      "actions": [
        "performSwap()",
        "updateArrayState()"
      ],
      "expected_observables": [
        "dom:elementsSwapped"
      ],
      "timeout": 1500
    },
    {
      "from": "S2_ComparingElements",
      "to": "S1_SortStart",
      "event": "SortIterationComplete",
      "guard": "noSwapNeeded",
      "actions": [
        "moveToNextPair()",
        "continueSorting()"
      ],
      "expected_observables": [
        "dom:iterationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_SortStart",
      "to": "S4_SortComplete",
      "event": "SortFullyComplete",
      "guard": "arraySorted",
      "actions": [
        "showSortedArray()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:arraySorted"
      ],
      "timeout": 3000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ArrayResetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ArrayResetting",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "start_sort",
    "reset",
    "array_visualization"
  ]
}