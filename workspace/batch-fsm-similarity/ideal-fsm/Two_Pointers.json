{
  "meta": {
    "concept": "Two Pointers",
    "topic": "Two Pointers Technique",
    "educational_goal": "Demonstrate how to use two pointers for array manipulation",
    "expected_interactions": [
      "setPointers",
      "movePointers",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SettingPointers",
      "label": "SettingPointers",
      "type": "atomic",
      "entry_actions": [
        "readPointerValues()",
        "highlightPointerInputs()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingPointers",
      "label": "ValidatingPointers",
      "type": "atomic",
      "entry_actions": [
        "validatePointerValues()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_MovingPointers",
      "label": "MovingPointers",
      "type": "atomic",
      "entry_actions": [
        "calculateNewPositions()",
        "updatePointerPositions()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ArrayUpdated",
      "label": "ArrayUpdated",
      "type": "atomic",
      "entry_actions": [
        "updateArrayVisualization()",
        "animatePointerMovement()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearPointers()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSetsPointers",
      "event_type": "user_action",
      "description": "User sets initial pointer positions"
    },
    {
      "id": "UserClicksMove",
      "event_type": "user_action",
      "description": "User clicks the Move button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "PointerValidationComplete",
      "event_type": "system_event",
      "description": "Pointer validation completes successfully"
    },
    {
      "id": "PointerValidationFailed",
      "event_type": "system_event",
      "description": "Pointer validation fails"
    },
    {
      "id": "PointerMovementComplete",
      "event_type": "system_event",
      "description": "Pointer movement and array update complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SettingPointers",
      "event": "UserSetsPointers",
      "guard": "inputNotEmpty",
      "actions": [
        "capturePointerValues()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:pointerValuesRead",
        "dom:setPointersButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SettingPointers",
      "to": "S2_ValidatingPointers",
      "event": "PointerValidationComplete",
      "guard": "pointersAreValid",
      "actions": [
        "validatePointers()",
        "prepareMovement()"
      ],
      "expected_observables": [
        "dom:pointersValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingPointers",
      "to": "S4_MovingPointers",
      "event": "PointerValidationComplete",
      "guard": "validPositions",
      "actions": [
        "parsePointerValues()",
        "beginMovement()"
      ],
      "expected_observables": [
        "dom:pointerMovementStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_SettingPointers",
      "to": "S3_ErrorAlert",
      "event": "PointerValidationFailed",
      "guard": "inputIsEmpty",
      "actions": [
        "showError()",
        "focusPointerInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetPointerInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_MovingPointers",
      "to": "S5_ArrayUpdated",
      "event": "PointerMovementComplete",
      "guard": "movementSuccessful",
      "actions": [
        "updateArrayStructure()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:arrayStructureChanged",
        "dom:pointersMoved"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_ArrayUpdated",
      "to": "S0_Idle",
      "event": "PointerMovementComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearPointerInputs()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetPointerInputs()"
      ],
      "expected_observables": [
        "dom:pointersCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "pointer_input",
    "move",
    "reset",
    "array_visualization"
  ]
}