{
  "meta": {
    "concept": "Dijkstraâ€™s Algorithm",
    "topic": "Shortest Path Visualization",
    "educational_goal": "Demonstrate the process of finding the shortest path in a graph using Dijkstra's Algorithm",
    "expected_interactions": [
      "select_start_node",
      "select_end_node",
      "run_algorithm",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SelectingStartNode",
      "label": "SelectingStartNode",
      "type": "atomic",
      "entry_actions": [
        "highlightStartNodeSelection()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_SelectingEndNode",
      "label": "SelectingEndNode",
      "type": "atomic",
      "entry_actions": [
        "highlightEndNodeSelection()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "operation",
      "entry_actions": [
        "executeDijkstra()",
        "showProgress()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "highlightShortestPath()",
        "displayPathCost()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraph()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSelectsStartNode",
      "event_type": "user_action",
      "description": "User selects the start node"
    },
    {
      "id": "UserSelectsEndNode",
      "event_type": "user_action",
      "description": "User selects the end node"
    },
    {
      "id": "UserRunsAlgorithm",
      "event_type": "user_action",
      "description": "User clicks the Run Algorithm button"
    },
    {
      "id": "AlgorithmExecutionComplete",
      "event_type": "system_event",
      "description": "Dijkstra's algorithm execution completes"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SelectingStartNode",
      "event": "UserSelectsStartNode",
      "guard": "graphNotEmpty",
      "actions": [
        "captureStartNode()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startNodeSelected"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_SelectingStartNode",
      "to": "S2_SelectingEndNode",
      "event": "UserSelectsEndNode",
      "guard": "startNodeSelected",
      "actions": [
        "captureEndNode()"
      ],
      "expected_observables": [
        "dom:endNodeSelected"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SelectingEndNode",
      "to": "S3_RunningAlgorithm",
      "event": "UserRunsAlgorithm",
      "guard": "endNodeSelected",
      "actions": [
        "disableControls()",
        "startAlgorithm()"
      ],
      "expected_observables": [
        "dom:algorithmRunning"
      ],
      "timeout": 2000
    },
    {
      "from": "S3_RunningAlgorithm",
      "to": "S4_DisplayResult",
      "event": "AlgorithmExecutionComplete",
      "guard": "pathFound",
      "actions": [
        "displayResults()"
      ],
      "expected_observables": [
        "dom:shortestPathHighlighted",
        "dom:pathCostDisplayed"
      ],
      "timeout": 3000
    },
    {
      "from": "S4_DisplayResult",
      "to": "S0_Idle",
      "event": "AlgorithmExecutionComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "clearSelections()"
      ],
      "expected_observables": [
        "dom:controlsEnabled"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "graphNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "AlgorithmExecutionComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:graphCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "graph_visualization",
    "start_node_selector",
    "end_node_selector",
    "run_algorithm",
    "reset"
  ]
}