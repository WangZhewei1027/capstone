{
  "meta": {
    "concept": "SlidingWindow",
    "topic": "Sliding Window Technique",
    "educational_goal": "Demonstrate the sliding window technique for array problems",
    "expected_interactions": [
      "set_window_size",
      "slide_window",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SettingWindowSize",
      "label": "SettingWindowSize",
      "type": "atomic",
      "entry_actions": [
        "readWindowSizeInput()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingWindowSize",
      "label": "ValidatingWindowSize",
      "type": "atomic",
      "entry_actions": [
        "validateWindowSize()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_SlidingWindow",
      "label": "SlidingWindow",
      "type": "atomic",
      "entry_actions": [
        "slideWindow()",
        "updateWindowVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearWindow()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSetsWindowSize",
      "event_type": "user_action",
      "description": "User sets the window size"
    },
    {
      "id": "UserClicksSlide",
      "event_type": "user_action",
      "description": "User clicks the Slide button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "WindowSizeValidationComplete",
      "event_type": "system_event",
      "description": "Window size validation completes successfully"
    },
    {
      "id": "WindowSizeValidationFailed",
      "event_type": "system_event",
      "description": "Window size validation fails"
    },
    {
      "id": "WindowSlideComplete",
      "event_type": "system_event",
      "description": "Window slide operation complete"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SettingWindowSize",
      "event": "UserSetsWindowSize",
      "guard": "inputNotEmpty",
      "actions": [
        "captureWindowSizeInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:readWindowSizeInput",
        "dom:windowSizeSet"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SettingWindowSize",
      "to": "S2_ValidatingWindowSize",
      "event": "WindowSizeValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateWindowSize()",
        "prepareSliding()"
      ],
      "expected_observables": [
        "dom:windowSizeValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_SettingWindowSize",
      "to": "S3_ErrorAlert",
      "event": "WindowSizeValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingWindowSize",
      "to": "S4_SlidingWindow",
      "event": "WindowSizeValidationComplete",
      "guard": "validWindowSize",
      "actions": [
        "beginSliding()"
      ],
      "expected_observables": [
        "dom:windowSlidingStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_SlidingWindow",
      "to": "S0_Idle",
      "event": "WindowSlideComplete",
      "guard": "slidingComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:windowSlideComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_Resetting",
      "event": "UserClicksReset",
      "guard": "windowNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:windowCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "slide",
    "reset",
    "array_visualization"
  ]
}