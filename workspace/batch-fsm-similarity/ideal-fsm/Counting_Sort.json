{
  "meta": {
    "concept": "CountingSort",
    "topic": "Counting Sort Algorithm Visualization",
    "educational_goal": "Demonstrate counting sort process and its efficiency",
    "expected_interactions": [
      "inputArray",
      "executeSort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderInitialUI()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputArray",
      "label": "InputArray",
      "type": "atomic",
      "entry_actions": [
        "readArrayInput()",
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateArrayInput()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_ExecutingSort",
      "label": "ExecutingSort",
      "type": "atomic",
      "entry_actions": [
        "initializeCountArray()",
        "populateCountArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_SortingComplete",
      "label": "SortingComplete",
      "type": "atomic",
      "entry_actions": [
        "buildSortedArray()",
        "updateVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S6_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearAllData()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserInputsArray",
      "event_type": "user_action",
      "description": "User inputs an array"
    },
    {
      "id": "UserClicksSort",
      "event_type": "user_action",
      "description": "User clicks the Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "InputValidationComplete",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "SortExecutionComplete",
      "event_type": "system_event",
      "description": "Counting sort execution completes"
    },
    {
      "id": "ResetComplete",
      "event_type": "system_event",
      "description": "Reset operation complete"
    },
    {
      "id": "UserDismissesAlert",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputArray",
      "event": "UserInputsArray",
      "guard": "inputNotEmpty",
      "actions": [
        "captureArrayInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:arrayInputCaptured"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_InputArray",
      "to": "S2_ValidatingInput",
      "event": "InputValidationComplete",
      "guard": "inputIsValid",
      "actions": [
        "validateArray()",
        "prepareForSorting()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputArray",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserDismissesAlert",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_ExecutingSort",
      "event": "UserClicksSort",
      "guard": "inputIsValid",
      "actions": [
        "startCountingSort()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:sortStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S4_ExecutingSort",
      "to": "S5_SortingComplete",
      "event": "SortExecutionComplete",
      "guard": "sortSuccessful",
      "actions": [
        "finalizeSortedArray()",
        "triggerVisualization()"
      ],
      "expected_observables": [
        "dom:sortedArrayVisible"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_SortingComplete",
      "to": "S0_Idle",
      "event": "SortExecutionComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S6_Resetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginResetOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S6_Resetting",
      "to": "S0_Idle",
      "event": "ResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "sort",
    "reset",
    "array_visualization"
  ]
}