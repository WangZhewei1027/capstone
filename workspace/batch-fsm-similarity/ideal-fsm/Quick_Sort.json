{
  "meta": {
    "concept": "QuickSort",
    "topic": "Quick Sort Visualization",
    "educational_goal": "Demonstrate Quick Sort algorithm steps",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SortStart",
      "label": "SortStart",
      "type": "atomic",
      "entry_actions": [
        "readArrayInput()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ChoosingPivot",
      "label": "ChoosingPivot",
      "type": "atomic",
      "entry_actions": [
        "selectPivot()",
        "highlightPivot()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Partitioning",
      "label": "Partitioning",
      "type": "atomic",
      "entry_actions": [
        "partitionArray()",
        "showPartitionFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_SortingSubarrays",
      "label": "SortingSubarrays",
      "type": "atomic",
      "entry_actions": [
        "sortSubarrays()",
        "updateVisualization()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S5_ArrayResetting",
      "label": "ArrayResetting",
      "type": "atomic",
      "entry_actions": [
        "clearArray()",
        "resetVisualization()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksStartSort",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "PivotChosen",
      "event_type": "system_event",
      "description": "Pivot selection completes"
    },
    {
      "id": "PartitionComplete",
      "event_type": "system_event",
      "description": "Partitioning operation complete"
    },
    {
      "id": "SortComplete",
      "event_type": "system_event",
      "description": "Sorting of subarrays complete"
    },
    {
      "id": "ArrayResetComplete",
      "event_type": "system_event",
      "description": "Array reset operation complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SortStart",
      "event": "UserClicksStartSort",
      "guard": "arrayNotEmpty",
      "actions": [
        "captureArrayInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:arrayInputCaptured",
        "dom:startSortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_SortStart",
      "to": "S2_ChoosingPivot",
      "event": "PivotChosen",
      "guard": "pivotSelected",
      "actions": [
        "highlightPivotElement()",
        "preparePartition()"
      ],
      "expected_observables": [
        "dom:pivotHighlighted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ChoosingPivot",
      "to": "S3_Partitioning",
      "event": "PartitionComplete",
      "guard": "partitionSuccessful",
      "actions": [
        "partitionArrayElements()",
        "showPartitionResult()"
      ],
      "expected_observables": [
        "dom:partitionFeedbackShown"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_Partitioning",
      "to": "S4_SortingSubarrays",
      "event": "SortComplete",
      "guard": "subarraysSorted",
      "actions": [
        "updateArrayVisualization()",
        "completeSort()"
      ],
      "expected_observables": [
        "dom:subarraysSorted"
      ],
      "timeout": 3000
    },
    {
      "from": "S4_SortingSubarrays",
      "to": "S0_Idle",
      "event": "SortComplete",
      "guard": "visualizationComplete",
      "actions": [
        "enableControls()",
        "clearInput()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ArrayResetting",
      "event": "UserClicksReset",
      "guard": "arrayNotEmpty",
      "actions": [
        "confirmReset()",
        "beginClearOperation()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ArrayResetting",
      "to": "S0_Idle",
      "event": "ArrayResetComplete",
      "guard": "true",
      "actions": [
        "enableControls()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:arrayCleared",
        "dom:visualizationReset"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "input",
    "start_sort",
    "reset",
    "array_visualization"
  ]
}