    "content": "<html>\n<head>\n    <title>Heap Sort</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n        }\n        #output {\n            font-size: 24px;\n            font-weight: bold;\n            margin-top: 20px;\n        }\n    </style>\n</head>\n<body>\n    <h1>Heap Sort</h1>\n    <input id=\"input\" type=\"number\" placeholder=\"Enter numbers separated by spaces\">\n    <button id=\"sort-btn\">Heap Sort</button>\n    <div id=\"output\"></div>\n\n    <script>\n        function heapify(arr, n, i) {\n            let largest = i;\n            let left = 2 * i + 1;\n            let right = 2 * i + 2;\n\n            if (left < n && arr[i] < arr[left]) {\n                largest = left;\n            }\n\n            if (right < n && arr[largest] < arr[right]) {\n                largest = right;\n            }\n\n            if (largest !== i) {\n                [arr[i], arr[largest]] = [arr[largest], arr[i]];\n                heapify(arr, n, largest);\n            }\n        }\n\n        function heapSort(arr) {\n            let n = arr.length;\n\n            for (let i = n - 1; i >= 0; i--) {\n                heapify(arr, n, i);\n            }\n\n            for (let i = n - 1; i > 0; i--) {\n                [arr[i], arr[0]] = [arr[0], arr[i]];\n                heapify(arr, i, 0);\n            }\n\n            return arr;\n        }\n\n        let inputElement = document.getElementById('input');\n        let sortButton = document.getElementById('sort-btn');\n        let outputElement = document.getElementById('output');\n\n        sortButton.addEventListener('click', function () {\n            let input = inputElement.value.trim();\n            if (input.length === 0) {\n                outputElement.innerText = \"Please enter numbers separated by spaces.\";\n                return;\n            }\n\n            let numbers = input.split(' ');\n            let arr = numbers.map(Number);\n\n            outputElement.innerText = \"Heap Sort Result:\\n\";\n\n            arr = heapSort(arr);\n\n            outputElement.innerText = \"Heap Sort Result:\\n\";\n            outputElement.innerText += arr.join(' ');\n\n            outputElement.innerText += \"\\n\";\n        });\n    </script>\n</body>\n</html>"
