{
  "meta": {
    "concept": "SelectionSort",
    "topic": "Selection Sort Visualization",
    "educational_goal": "Demonstrate Selection Sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "highlight",
      "swap"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "displayArray(array)"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "startSelectionSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Highlighting",
      "label": "Highlighting",
      "type": "atomic",
      "entry_actions": [
        "highlightBars(i, j)"
      ],
      "exit_actions": [
        "resetHighlight(i, j)"
      ]
    },
    {
      "id": "S3_Swapping",
      "label": "Swapping",
      "type": "atomic",
      "entry_actions": [
        "swap(i, minIndex)",
        "displayArray(array)"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Selection Sort button"
    },
    {
      "id": "HIGHLIGHT_BARS",
      "event_type": "system_event",
      "description": "Bars are highlighted during comparison"
    },
    {
      "id": "SWAP_COMPLETE",
      "event_type": "system_event",
      "description": "Swapping of elements is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Highlighting",
      "event": "HIGHLIGHT_BARS",
      "guard": "true",
      "actions": [
        "highlightBars(i, j)"
      ],
      "expected_observables": [
        "dom:barsHighlighted"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Highlighting",
      "to": "S3_Swapping",
      "event": "SWAP_COMPLETE",
      "guard": "minIndex !== i",
      "actions": [
        "swap(i, minIndex)",
        "displayArray(array)"
      ],
      "expected_observables": [
        "dom:swapCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Swapping",
      "to": "S2_Highlighting",
      "event": "HIGHLIGHT_BARS",
      "guard": "true",
      "actions": [
        "highlightBars(i, j)"
      ],
      "expected_observables": [
        "dom:barsHighlighted"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Sorting",
      "to": "S0_Idle",
      "event": "SWAP_COMPLETE",
      "guard": "i >= array.length - 1",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "button#start",
    "div.array",
    "div.bar"
  ]
}