{
  "meta": {
    "concept": "Set",
    "topic": "Set Demonstration",
    "educational_goal": "Demonstrate how a Set handles duplicate values",
    "expected_interactions": [
      "submit"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [],
      "exit_actions": []
    },
    {
      "id": "S1_InputProcessing",
      "label": "InputProcessing",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "processInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_OutputDisplaying",
      "label": "OutputDisplaying",
      "type": "atomic",
      "entry_actions": [
        "displayOutput()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SUBMIT",
      "event_type": "user_action",
      "description": "User clicks the Submit button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputProcessing",
      "event": "USER_CLICKS_SUBMIT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableSubmitButton()"
      ],
      "expected_observables": [
        "dom:submitButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputProcessing",
      "to": "S2_OutputDisplaying",
      "event": "USER_CLICKS_SUBMIT",
      "guard": "inputProcessed",
      "actions": [
        "createSetFromInput()",
        "prepareOutput()"
      ],
      "expected_observables": [
        "dom:inputProcessed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_OutputDisplaying",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SUBMIT",
      "guard": "outputDisplayed",
      "actions": [
        "resetInputField()",
        "enableSubmitButton()"
      ],
      "expected_observables": [
        "dom:outputDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputNumbers",
    "#submitBtn",
    "#setOutput"
  ]
}