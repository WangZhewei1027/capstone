{
  "meta": {
    "concept": "KNearestNeighbors",
    "topic": "K-Nearest Neighbors (KNN) Demo",
    "educational_goal": "Demonstrate KNN classification",
    "expected_interactions": [
      "add_point",
      "classify_new_point"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableChartClick()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_PointAdding",
      "label": "PointAdding",
      "type": "atomic",
      "entry_actions": [
        "highlightChart()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_ClassifyingPoint",
      "label": "ClassifyingPoint",
      "type": "atomic",
      "entry_actions": [
        "renderNewPoint()",
        "prepareClassification()"
      ],
      "exit_actions": [
        "clearNewPoint()"
      ]
    },
    {
      "id": "S3_Classified",
      "label": "Classified",
      "type": "atomic",
      "entry_actions": [
        "showClassificationResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksChart",
      "event_type": "user_action",
      "description": "User clicks on the chart to add a point",
      "triggers": [
        "#chart"
      ]
    },
    {
      "id": "UserClicksClassify",
      "event_type": "user_action",
      "description": "User clicks the Classify New Point button",
      "triggers": [
        "button"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_PointAdding",
      "event": "UserClicksChart",
      "guard": "true",
      "actions": [
        "addPointFromClick()"
      ],
      "expected_observables": [
        "dom:pointAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S1_PointAdding",
      "to": "S0_Idle",
      "event": "UserClicksChart",
      "guard": "true",
      "actions": [
        "updatePointList()"
      ],
      "expected_observables": [
        "dom:chartUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_ClassifyingPoint",
      "event": "UserClicksClassify",
      "guard": "newPointNotClassified",
      "actions": [
        "generateRandomPoint()"
      ],
      "expected_observables": [
        "dom:newPointGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ClassifyingPoint",
      "to": "S3_Classified",
      "event": "UserClicksClassify",
      "guard": "true",
      "actions": [
        "classifyNewPoint()"
      ],
      "expected_observables": [
        "dom:classificationCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Classified",
      "to": "S0_Idle",
      "event": "UserClicksClassify",
      "guard": "true",
      "actions": [
        "resetNewPoint()"
      ],
      "expected_observables": [
        "dom:classificationResultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#chart",
    "button"
  ]
}