{
  "meta": {
    "concept": "TopologicalSort",
    "topic": "Topological Sort Demo",
    "educational_goal": "Demonstrate topological sorting of a directed graph",
    "expected_interactions": ["run_sort", "input_graph"]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": ["enableRunButton()"],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingGraph",
      "label": "InputtingGraph",
      "type": "atomic",
      "entry_actions": ["highlightGraphInput()"],
      "exit_actions": ["clearHighlight()"]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": ["validateGraphInput()"],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": ["showErrorDialog()"],
      "exit_actions": ["clearError()"]
    },
    {
      "id": "S4_RunningSort",
      "label": "RunningSort",
      "type": "atomic",
      "entry_actions": ["performTopologicalSort()"],
      "exit_actions": []
    },
    {
      "id": "S5_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": ["showSortResult()"],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN",
      "event_type": "user_action",
      "description": "User clicks the Run button"
    },
    {
      "id": "USER_INPUT_GRAPH",
      "event_type": "user_action",
      "description": "User inputs graph in the textarea"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    },
    {
      "id": "SORT_COMPLETED",
      "event_type": "system_event",
      "description": "Topological sort completed"
    },
    {
      "id": "CYCLE_DETECTED",
      "event_type": "system_event",
      "description": "Cycle detected in the graph"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingGraph",
      "event": "USER_INPUT_GRAPH",
      "guard": "true",
      "actions": ["captureGraphInput()"],
      "expected_observables": ["dom:graphInputChanged"],
      "timeout": 500
    },
    {
      "from": "S1_InputtingGraph",
      "to": "S2_ValidatingInput",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": ["clearOutput()"],
      "expected_observables": ["dom:runButtonClicked"],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_RunningSort",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "validGraphInput",
      "actions": ["parseGraphInput()"],
      "expected_observables": ["dom:inputValidated"],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": ["showError()"],
      "expected_observables": ["dom:errorDialogShown"],
      "timeout": 1000
    },
    {
      "from": "S4_RunningSort",
      "to": "S5_DisplayResult",
      "event": "SORT_COMPLETED",
      "guard": "true",
      "actions": ["outputSortResult()"],
      "expected_observables": ["dom:sortCompleted"],
      "timeout": 2000
    },
    {
      "from": "S4_RunningSort",
      "to": "S3_ErrorAlert",
      "event": "CYCLE_DETECTED",
      "guard": "true",
      "actions": ["showCycleError()"],
      "expected_observables": ["dom:cycleDetected"],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_INPUT_GRAPH",
      "guard": "true",
      "actions": ["clearErrorState()"],
      "expected_observables": ["dom:errorDialogClosed"],
      "timeout": 500
    },
    {
      "from": "S5_DisplayResult",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": ["resetInputField()"],
      "expected_observables": ["dom:resultDisplayed"],
      "timeout": 500
    }
  ],
  "components": ["#graphInput", "#runButton", "#output"],
  "triggers": ["#runButton", "#graphInput"]
}
