{
  "meta": {
    "concept": "FloydWarshall",
    "topic": "Floyd-Warshall Algorithm Visualization",
    "educational_goal": "Demonstrate the Floyd-Warshall algorithm for finding shortest paths in a graph",
    "expected_interactions": [
      "calculate",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()",
        "showInstructions()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "disableInputFields()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "renderResultTable()"
      ],
      "exit_actions": [
        "clearResult()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate Shortest Paths button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "inputMatrixIsValid",
      "actions": [
        "runFloydWarshall()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Calculating",
      "to": "S2_DisplayResult",
      "event": "CalculationComplete",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:calculationCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_DisplayResult",
      "to": "S0_Idle",
      "event": "UserResets",
      "guard": "true",
      "actions": [
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#matrixForm",
    "#adjacencyMatrix",
    "button[type='button']",
    "#result"
  ]
}