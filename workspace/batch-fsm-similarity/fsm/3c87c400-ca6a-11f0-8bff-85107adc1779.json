{
  "meta": {
    "concept": "HashMap",
    "topic": "Hash Map Demonstration in JavaScript",
    "educational_goal": "Demonstrate basic operations of a hash map",
    "expected_interactions": [
      "add",
      "get",
      "check",
      "delete",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderMap()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEntry",
      "label": "AddingEntry",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_GettingValue",
      "label": "GettingValue",
      "type": "atomic",
      "entry_actions": [
        "readInputKey()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_CheckingKey",
      "label": "CheckingKey",
      "type": "atomic",
      "entry_actions": [
        "readInputKey()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S4_DeletingEntry",
      "label": "DeletingEntry",
      "type": "atomic",
      "entry_actions": [
        "readInputKey()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S5_ClearingMap",
      "label": "ClearingMap",
      "type": "atomic",
      "entry_actions": [
        "clearAllEntries()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add/Update Entry button",
      "triggers": "#addBtn"
    },
    {
      "id": "USER_CLICKS_GET",
      "event_type": "user_action",
      "description": "User clicks the Get Value by Key button",
      "triggers": "#getBtn"
    },
    {
      "id": "USER_CLICKS_CHECK",
      "event_type": "user_action",
      "description": "User clicks the Check if Key Exists button",
      "triggers": "#hasBtn"
    },
    {
      "id": "USER_CLICKS_DELETE",
      "event_type": "user_action",
      "description": "User clicks the Delete Entry by Key button",
      "triggers": "#deleteBtn"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Map button",
      "triggers": "#clearBtn"
    },
    {
      "id": "INPUT_PARSE_SUCCESS",
      "event_type": "system_event",
      "description": "Input parsing completed successfully"
    },
    {
      "id": "INPUT_PARSE_FAILED",
      "event_type": "system_event",
      "description": "Input parsing failed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEntry",
      "event": "USER_CLICKS_ADD",
      "guard": "inputValuesValid",
      "actions": [
        "addEntry()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addEntryTriggered"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_GettingValue",
      "event": "USER_CLICKS_GET",
      "guard": "inputKeyValid",
      "actions": [
        "getValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:getValueTriggered"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_CheckingKey",
      "event": "USER_CLICKS_CHECK",
      "guard": "inputKeyValid",
      "actions": [
        "checkKeyExists()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:checkKeyTriggered"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_DeletingEntry",
      "event": "USER_CLICKS_DELETE",
      "guard": "inputKeyValid",
      "actions": [
        "deleteEntry()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:deleteEntryTriggered"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ClearingMap",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearMap()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:clearMapTriggered"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingEntry",
      "to": "S6_ErrorAlert",
      "event": "INPUT_PARSE_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_GettingValue",
      "to": "S6_ErrorAlert",
      "event": "INPUT_PARSE_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_CheckingKey",
      "to": "S6_ErrorAlert",
      "event": "INPUT_PARSE_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S4_DeletingEntry",
      "to": "S6_ErrorAlert",
      "event": "INPUT_PARSE_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ClearingMap",
      "to": "S0_Idle",
      "event": "INPUT_PARSE_SUCCESS",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:mapCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#keyInput",
    "#valueInput",
    "#addBtn",
    "#getBtn",
    "#hasBtn",
    "#deleteBtn",
    "#clearBtn",
    "#output",
    "#hashMapTableContainer"
  ]
}