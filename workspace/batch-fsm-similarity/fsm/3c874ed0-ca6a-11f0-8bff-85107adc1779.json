{
  "meta": {
    "concept": "Stack",
    "topic": "Stack Data Structure Demo",
    "educational_goal": "Demonstrate stack operations: push, pop, peek, and clear",
    "expected_interactions": [
      "push",
      "pop",
      "peek",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateStackDisplay()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Pushing",
      "label": "Pushing",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Popping",
      "label": "Popping",
      "type": "atomic",
      "entry_actions": [
        "removeTopElement()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Peeking",
      "label": "Peeking",
      "type": "atomic",
      "entry_actions": [
        "showTopElement()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Clearing",
      "label": "Clearing",
      "type": "atomic",
      "entry_actions": [
        "clearAllElements()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_PUSH",
      "event_type": "user_action",
      "description": "User clicks the Push button"
    },
    {
      "id": "USER_CLICKS_POP",
      "event_type": "user_action",
      "description": "User clicks the Pop button"
    },
    {
      "id": "USER_CLICKS_PEEK",
      "event_type": "user_action",
      "description": "User clicks the Peek button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    },
    {
      "id": "USER_ENTERS_VALUE",
      "event_type": "user_action",
      "description": "User enters a value in the input field"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Pushing",
      "event": "USER_CLICKS_PUSH",
      "guard": "inputNotEmpty",
      "actions": [
        "pushValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:pushButtonClicked",
        "dom:inputValueEntered"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Pushing",
      "to": "S0_Idle",
      "event": "USER_CLICKS_PUSH",
      "guard": "true",
      "actions": [
        "updateStackDisplay()",
        "showSuccessMessage()"
      ],
      "expected_observables": [
        "dom:stackUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Popping",
      "event": "USER_CLICKS_POP",
      "guard": "stackNotEmpty",
      "actions": [
        "popValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:popButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Popping",
      "to": "S0_Idle",
      "event": "USER_CLICKS_POP",
      "guard": "true",
      "actions": [
        "updateStackDisplay()",
        "showSuccessMessage()"
      ],
      "expected_observables": [
        "dom:stackUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_Peeking",
      "event": "USER_CLICKS_PEEK",
      "guard": "stackNotEmpty",
      "actions": [
        "showTopValue()"
      ],
      "expected_observables": [
        "dom:peekButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Clearing",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearStack()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Clearing",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "updateStackDisplay()",
        "showSuccessMessage()"
      ],
      "expected_observables": [
        "dom:stackCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Pushing",
      "to": "S5_Error",
      "event": "USER_CLICKS_PUSH",
      "guard": "inputIsEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Popping",
      "to": "S5_Error",
      "event": "USER_CLICKS_POP",
      "guard": "stackIsEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Peeking",
      "to": "S5_Error",
      "event": "USER_CLICKS_PEEK",
      "guard": "stackIsEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "input[type='text']",
    "#pushBtn",
    "#popBtn",
    "#peekBtn",
    "#clearBtn",
    "#stackContainer",
    "#message"
  ]
}