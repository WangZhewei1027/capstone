{
  "meta": {
    "concept": "DijkstraAlgorithm",
    "topic": "Dijkstra's Algorithm Visualization",
    "educational_goal": "Demonstrate Dijkstra's algorithm for finding the shortest path",
    "expected_interactions": [
      "run",
      "step",
      "reset",
      "newGraph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "drawGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AlgorithmRunning",
      "label": "AlgorithmRunning",
      "type": "atomic",
      "entry_actions": [
        "initializeAlgorithm()",
        "prepareAlgorithmSteps()"
      ],
      "exit_actions": [
        "clearLog()"
      ]
    },
    {
      "id": "S2_StepwiseRunning",
      "label": "StepwiseRunning",
      "type": "atomic",
      "entry_actions": [
        "initializeAlgorithm()",
        "prepareAlgorithmSteps()"
      ],
      "exit_actions": [
        "clearLog()"
      ]
    },
    {
      "id": "S3_AlgorithmCompleted",
      "label": "AlgorithmCompleted",
      "type": "atomic",
      "entry_actions": [
        "logCompletion()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearLog()",
        "resetAlgorithmState()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_GeneratingNewGraph",
      "label": "GeneratingNewGraph",
      "type": "atomic",
      "entry_actions": [
        "generateRandomGraph()",
        "populateNodeSelectors()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN",
      "event_type": "user_action",
      "description": "User clicks the Run Algorithm button",
      "triggers": [
        "#runBtn"
      ]
    },
    {
      "id": "USER_CLICKS_STEP",
      "event_type": "user_action",
      "description": "User clicks the Step button",
      "triggers": [
        "#stepBtn"
      ]
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button",
      "triggers": [
        "#resetBtn"
      ]
    },
    {
      "id": "USER_CLICKS_NEW_GRAPH",
      "event_type": "user_action",
      "description": "User clicks the New Graph button",
      "triggers": [
        "#newGraphBtn"
      ]
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Algorithm has completed running"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AlgorithmRunning",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:runButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S5_GeneratingNewGraph",
      "event": "USER_CLICKS_NEW_GRAPH",
      "guard": "true",
      "actions": [
        "generateRandomGraph()",
        "populateNodeSelectors()"
      ],
      "expected_observables": [
        "dom:newGraphButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AlgorithmRunning",
      "to": "S3_AlgorithmCompleted",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "logCompletion()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AlgorithmRunning",
      "to": "S2_StepwiseRunning",
      "event": "USER_CLICKS_STEP",
      "guard": "true",
      "actions": [
        "stepAlgorithm()"
      ],
      "expected_observables": [
        "dom:stepButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_AlgorithmCompleted",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetAlgorithmState()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_Resetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "clearLog()",
        "resetAlgorithmState()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Resetting",
      "to": "S0_Idle",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:resetComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#runBtn",
    "#stepBtn",
    "#resetBtn",
    "#newGraphBtn",
    "#startNode",
    "#endNode",
    "#graphCanvas"
  ]
}