{
  "meta": {
    "concept": "WeightedGraph",
    "topic": "Weighted Graph Visualization",
    "educational_goal": "Demonstrate Dijkstra's shortest path algorithm",
    "expected_interactions": [
      "select_start_node",
      "select_end_node",
      "reset_selection",
      "randomize_graph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "drawGraph()",
        "updatePathResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_SelectingStartNode",
      "label": "SelectingStartNode",
      "type": "atomic",
      "entry_actions": [
        "highlightNode()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_SelectingEndNode",
      "label": "SelectingEndNode",
      "type": "atomic",
      "entry_actions": [
        "highlightNode()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S3_CalculatingPath",
      "label": "CalculatingPath",
      "type": "atomic",
      "entry_actions": [
        "calculateAndShowPath()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_PathFound",
      "label": "PathFound",
      "type": "atomic",
      "entry_actions": [
        "highlightPath()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_NoPathFound",
      "label": "NoPathFound",
      "type": "atomic",
      "entry_actions": [
        "showNoPathMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_ResettingSelection",
      "label": "ResettingSelection",
      "type": "atomic",
      "entry_actions": [
        "resetSelections()"
      ],
      "exit_actions": []
    },
    {
      "id": "S7_RandomizingGraph",
      "label": "RandomizingGraph",
      "type": "atomic",
      "entry_actions": [
        "generateGraph()",
        "drawGraph()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksNode",
      "event_type": "user_action",
      "description": "User clicks on a graph node",
      "triggers": [
        "#graphCanvas"
      ]
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset Start/End Selection button",
      "triggers": [
        "#resetSelection"
      ]
    },
    {
      "id": "UserClicksRandomize",
      "event_type": "user_action",
      "description": "User clicks the Randomize Graph button",
      "triggers": [
        "#randomizeGraph"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_SelectingStartNode",
      "event": "UserClicksNode",
      "guard": "startNodeIsNull",
      "actions": [
        "setStartNode()"
      ],
      "expected_observables": [
        "dom:nodeSelected"
      ],
      "timeout": 500
    },
    {
      "from": "S1_SelectingStartNode",
      "to": "S2_SelectingEndNode",
      "event": "UserClicksNode",
      "guard": "endNodeIsNull",
      "actions": [
        "setEndNode()",
        "calculateAndShowPath()"
      ],
      "expected_observables": [
        "dom:endNodeSelected"
      ],
      "timeout": 500
    },
    {
      "from": "S1_SelectingStartNode",
      "to": "S1_SelectingStartNode",
      "event": "UserClicksNode",
      "guard": "startNodeIsNotNull",
      "actions": [
        "resetStartNode()"
      ],
      "expected_observables": [
        "dom:startNodeReset"
      ],
      "timeout": 500
    },
    {
      "from": "S2_SelectingEndNode",
      "to": "S3_CalculatingPath",
      "event": "UserClicksNode",
      "guard": "endNodeIsNotNull",
      "actions": [
        "calculateAndShowPath()"
      ],
      "expected_observables": [
        "dom:pathCalculated"
      ],
      "timeout": 500
    },
    {
      "from": "S3_CalculatingPath",
      "to": "S4_PathFound",
      "event": "PathCalculated",
      "guard": "pathExists",
      "actions": [
        "highlightPath()"
      ],
      "expected_observables": [
        "dom:pathHighlighted"
      ],
      "timeout": 500
    },
    {
      "from": "S3_CalculatingPath",
      "to": "S5_NoPathFound",
      "event": "PathCalculated",
      "guard": "pathDoesNotExist",
      "actions": [
        "showNoPathMessage()"
      ],
      "expected_observables": [
        "dom:noPathMessageDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S6_ResettingSelection",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetSelections()"
      ],
      "expected_observables": [
        "dom:selectionReset"
      ],
      "timeout": 500
    },
    {
      "from": "S6_ResettingSelection",
      "to": "S0_Idle",
      "event": "SelectionResetComplete",
      "guard": "true",
      "actions": [
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:graphRedrawn"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S7_RandomizingGraph",
      "event": "UserClicksRandomize",
      "guard": "true",
      "actions": [
        "generateGraph()",
        "drawGraph()"
      ],
      "expected_observables": [
        "dom:graphRandomized"
      ],
      "timeout": 500
    },
    {
      "from": "S7_RandomizingGraph",
      "to": "S0_Idle",
      "event": "GraphRandomizationComplete",
      "guard": "true",
      "actions": [
        "updatePathResult()"
      ],
      "expected_observables": [
        "dom:randomizationComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graphCanvas",
    "#resetSelection",
    "#randomizeGraph",
    "#pathResult"
  ]
}