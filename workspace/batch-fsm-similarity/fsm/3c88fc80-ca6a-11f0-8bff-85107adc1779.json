{
  "meta": {
    "concept": "InsertionSort",
    "topic": "Insertion Sort Visualization",
    "educational_goal": "Demonstrate the insertion sort algorithm",
    "expected_interactions": [
      "start_sorting",
      "adjust_speed",
      "input_array"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingArray",
      "label": "InputtingArray",
      "type": "atomic",
      "entry_actions": [
        "highlightInputField()"
      ],
      "exit_actions": [
        "clearInputHighlight()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "createBars(array)",
        "startSortingAnimation()"
      ],
      "exit_actions": [
        "resetBars()"
      ]
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Sorting button",
      "triggers": [
        "#startBtn"
      ]
    },
    {
      "id": "USER_INPUT_ARRAY",
      "event_type": "user_action",
      "description": "User inputs array in the input field",
      "triggers": [
        "#arrayInput"
      ]
    },
    {
      "id": "USER_ADJUSTS_SPEED",
      "event_type": "user_action",
      "description": "User adjusts the animation speed slider",
      "triggers": [
        "#speedControl"
      ]
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting operation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingArray",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingArray",
      "to": "S2_ValidatingInput",
      "event": "USER_INPUT_ARRAY",
      "guard": "inputNotEmpty",
      "actions": [
        "parseInputArray()"
      ],
      "expected_observables": [
        "dom:inputParsed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_Sorting",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "validInputArray",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Sorting",
      "to": "S0_Idle",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#startBtn",
    "#speedControl",
    "#visualization"
  ]
}