{
  "meta": {
    "concept": "KMeansClustering",
    "topic": "K-Means Clustering Demo",
    "educational_goal": "Demonstrate K-Means clustering algorithm",
    "expected_interactions": [
      "generate_data",
      "run_kmeans"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingData",
      "label": "GeneratingData",
      "type": "atomic",
      "entry_actions": [
        "clearCanvas()",
        "generateRandomData(100)"
      ],
      "exit_actions": [
        "drawPoints()"
      ]
    },
    {
      "id": "S2_RunningKMeans",
      "label": "RunningKMeans",
      "type": "atomic",
      "entry_actions": [
        "initializeCentroids()",
        "assignClusters()"
      ],
      "exit_actions": [
        "drawPoints()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE_DATA",
      "event_type": "user_action",
      "description": "User clicks the Generate Data Points button"
    },
    {
      "id": "USER_CLICKS_RUN_KMEANS",
      "event_type": "user_action",
      "description": "User clicks the Run K-Means button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingData",
      "event": "USER_CLICKS_GENERATE_DATA",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:generateDataButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_GeneratingData",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE_DATA",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:dataPointsGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_RunningKMeans",
      "event": "USER_CLICKS_RUN_KMEANS",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:runKMeansButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RunningKMeans",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RUN_KMEANS",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:kMeansCompleted"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#canvas",
    "#generate-data",
    "#run-kmeans",
    "#clusters"
  ]
}