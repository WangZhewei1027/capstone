{
  "meta": {
    "concept": "Array",
    "topic": "Array Demo",
    "educational_goal": "Demonstrate array generation and display",
    "expected_interactions": [
      "generate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingArray",
      "label": "GeneratingArray",
      "type": "atomic",
      "entry_actions": [
        "generateRandomArray(10)"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_DisplayArray",
      "label": "DisplayArray",
      "type": "atomic",
      "entry_actions": [
        "updateArrayOutput()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE_ARRAY",
      "event_type": "user_action",
      "description": "User clicks the Generate Random Array button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingArray",
      "event": "USER_CLICKS_GENERATE_ARRAY",
      "guard": "true",
      "actions": [
        "disableButton('generateArrayButton')"
      ],
      "expected_observables": [
        "dom:generateArrayButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_GeneratingArray",
      "to": "S2_DisplayArray",
      "event": "USER_CLICKS_GENERATE_ARRAY",
      "guard": "true",
      "actions": [
        "enableButton('generateArrayButton')"
      ],
      "expected_observables": [
        "dom:arrayGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_DisplayArray",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE_ARRAY",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:arrayDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#generateArrayButton",
    "#arrayOutput"
  ]
}