{
  "meta": {
    "concept": "PriorityQueue",
    "topic": "Priority Queue Demonstration",
    "educational_goal": "Demonstrate enqueue, dequeue, and peek operations",
    "expected_interactions": [
      "enqueue",
      "dequeue",
      "peek"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateVisual()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_EnqueueStart",
      "label": "EnqueueStart",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_ValidatingEnqueue",
      "label": "ValidatingEnqueue",
      "type": "atomic",
      "entry_actions": [
        "validateEnqueueInputs()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightErrorInputs()"
      ],
      "exit_actions": [
        "clearErrorHighlights()"
      ]
    },
    {
      "id": "S4_EnqueuingElement",
      "label": "EnqueuingElement",
      "type": "atomic",
      "entry_actions": [
        "performEnqueue()",
        "updateOutput()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    },
    {
      "id": "S5_DequeueingElement",
      "label": "DequeueingElement",
      "type": "atomic",
      "entry_actions": [
        "performDequeue()",
        "updateOutput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_PeekingElement",
      "label": "PeekingElement",
      "type": "atomic",
      "entry_actions": [
        "performPeek()",
        "updateOutput()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ENQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Enqueue button",
      "triggers": [
        "#enqueueBtn"
      ]
    },
    {
      "id": "USER_CLICKS_DEQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Dequeue button",
      "triggers": [
        "#dequeueBtn"
      ]
    },
    {
      "id": "USER_CLICKS_PEEK",
      "event_type": "user_action",
      "description": "User clicks the Peek button",
      "triggers": [
        "#peekBtn"
      ]
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ELEMENT_ENQUEUED",
      "event_type": "system_event",
      "description": "Element has been enqueued successfully"
    },
    {
      "id": "ELEMENT_DEQUEUED",
      "event_type": "system_event",
      "description": "Element has been dequeued successfully"
    },
    {
      "id": "ELEMENT_PEEKED",
      "event_type": "system_event",
      "description": "Element has been peeked successfully"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_EnqueueStart",
      "event": "USER_CLICKS_ENQUEUE",
      "guard": "true",
      "actions": [
        "captureInputValues()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:enqueueButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_EnqueueStart",
      "to": "S2_ValidatingEnqueue",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputsAreValid",
      "actions": [
        "validateInputs()",
        "prepareEnqueue()"
      ],
      "expected_observables": [
        "dom:inputsValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingEnqueue",
      "to": "S4_EnqueuingElement",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "validPriority",
      "actions": [
        "enqueueElement()",
        "updateVisual()"
      ],
      "expected_observables": [
        "dom:elementEnqueued"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_EnqueueStart",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputsAreInvalid",
      "actions": [
        "showError()",
        "focusInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ENQUEUE",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_EnqueuingElement",
      "to": "S0_Idle",
      "event": "ELEMENT_ENQUEUED",
      "guard": "true",
      "actions": [
        "enableControls()",
        "clearInputFields()"
      ],
      "expected_observables": [
        "dom:elementEnqueued"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_DequeueingElement",
      "event": "USER_CLICKS_DEQUEUE",
      "guard": "queueNotEmpty",
      "actions": [
        "performDequeue()",
        "updateOutput()"
      ],
      "expected_observables": [
        "dom:dequeueButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S6_PeekingElement",
      "event": "USER_CLICKS_PEEK",
      "guard": "queueNotEmpty",
      "actions": [
        "performPeek()",
        "updateOutput()"
      ],
      "expected_observables": [
        "dom:peekButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#elementInput",
    "#priorityInput",
    "#enqueueBtn",
    "#dequeueBtn",
    "#peekBtn",
    "#outputArea",
    "#queueVisual"
  ]
}