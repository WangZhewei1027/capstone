{
  "meta": {
    "concept": "TopologicalSort",
    "topic": "Topological Sort Visualization",
    "educational_goal": "Demonstrate topological sorting of a directed graph",
    "expected_interactions": [
      "perform_sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "visualize()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_RunningSort",
      "label": "RunningSort",
      "type": "atomic",
      "entry_actions": [
        "clearResult()",
        "disableSortButton()"
      ],
      "exit_actions": [
        "enableSortButton()"
      ]
    },
    {
      "id": "S2_SortComplete",
      "label": "SortComplete",
      "type": "atomic",
      "entry_actions": [
        "displaySortResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorState",
      "label": "ErrorState",
      "type": "atomic",
      "entry_actions": [
        "displayErrorMessage()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN_SORT",
      "event_type": "user_action",
      "description": "User clicks the Perform Topological Sort button"
    },
    {
      "id": "SORT_COMPLETED",
      "event_type": "system_event",
      "description": "Topological sort completed successfully"
    },
    {
      "id": "SORT_FAILED",
      "event_type": "system_event",
      "description": "Topological sort failed due to a cycle in the graph"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_RunningSort",
      "event": "USER_CLICKS_RUN_SORT",
      "guard": "true",
      "actions": [
        "runSort()"
      ],
      "expected_observables": [
        "dom:runSortButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_RunningSort",
      "to": "S2_SortComplete",
      "event": "SORT_COMPLETED",
      "guard": "true",
      "actions": [
        "updateVisualization()"
      ],
      "expected_observables": [
        "dom:sortCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_RunningSort",
      "to": "S3_ErrorState",
      "event": "SORT_FAILED",
      "guard": "true",
      "actions": [
        "handleSortError()"
      ],
      "expected_observables": [
        "dom:sortFailed"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#canvas",
    "#runSort",
    "#result"
  ],
  "triggers": [
    "#runSort"
  ]
}