{
  "meta": {
    "concept": "LinearSearch",
    "topic": "Linear Search Demonstration",
    "educational_goal": "Demonstrate linear search algorithm",
    "expected_interactions": [
      "search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputValidation",
      "label": "InputValidation",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "performLinearSearch()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ResultDisplay",
      "label": "ResultDisplay",
      "type": "atomic",
      "entry_actions": [
        "displaySearchResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    },
    {
      "id": "SEARCH_COMPLETE",
      "event_type": "system_event",
      "description": "Search operation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputValidation",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputValidation",
      "to": "S4_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMessageDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputValidation",
      "to": "S2_Searching",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "inputIsValid",
      "actions": [
        "startSearch()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Searching",
      "to": "S3_ResultDisplay",
      "event": "SEARCH_COMPLETE",
      "guard": "true",
      "actions": [
        "processSearchResult()"
      ],
      "expected_observables": [
        "dom:searchCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SEARCH",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputFields()"
      ],
      "expected_observables": [
        "dom:errorCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#searchInput",
    "#searchButton",
    "#resultDisplay"
  ]
}