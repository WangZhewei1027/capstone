{
  "meta": {
    "concept": "CountingSort",
    "topic": "Counting Sort Visualization",
    "educational_goal": "Demonstrate Counting Sort algorithm",
    "expected_interactions": [
      "input",
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()",
        "resetArrayDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputReceived",
      "label": "InputReceived",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "validateInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "initializeSorting()",
        "performCountingSort()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "displaySortedArray()"
      ],
      "exit_actions": [
        "resetInputField()"
      ]
    },
    {
      "id": "S4_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Sort button",
      "triggers": [
        "#arrayInput",
        "button"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting operation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputReceived",
      "event": "USER_CLICKS_SORT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableInput()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputReceived",
      "to": "S2_Sorting",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "inputIsValid",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1500
    },
    {
      "from": "S1_InputReceived",
      "to": "S4_Error",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Sorting",
      "to": "S3_Sorted",
      "event": "SORTING_COMPLETE",
      "guard": "sortingFinished",
      "actions": [
        "displaySortedArray()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 2000
    },
    {
      "from": "S4_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SORT",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:errorCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "button",
    "#arrayContainer"
  ]
}