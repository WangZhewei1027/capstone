{
  "meta": {
    "concept": "MergeSort",
    "topic": "Merge Sort Visualization",
    "educational_goal": "Demonstrate the merge sort algorithm visually",
    "expected_interactions": [
      "start_sort",
      "generate_array"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "generateRandomArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingArray",
      "label": "GeneratingArray",
      "type": "atomic",
      "entry_actions": [
        "renderArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "mergeSort(array)"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Merging",
      "label": "Merging",
      "type": "atomic",
      "entry_actions": [
        "merge(left, right)"
      ],
      "exit_actions": [
        "renderArray()"
      ]
    },
    {
      "id": "S4_Sorted",
      "label": "Sorted",
      "type": "done",
      "entry_actions": [],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Merge Sort button"
    },
    {
      "id": "ARRAY_GENERATED",
      "event_type": "system_event",
      "description": "Array has been generated"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingArray",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "startMergeSort()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_GeneratingArray",
      "to": "S2_Sorting",
      "event": "ARRAY_GENERATED",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:arrayRendered"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Sorting",
      "to": "S3_Merging",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:sortingStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Merging",
      "to": "S4_Sorted",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#arrayContainer",
    "button"
  ]
}