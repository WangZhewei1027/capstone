{
  "meta": {
    "concept": "DivideAndConquer",
    "topic": "Divide and Conquer Algorithm - Merge Sort",
    "educational_goal": "Demonstrate the Merge Sort algorithm using divide and conquer",
    "expected_interactions": [
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Processing",
      "label": "Processing",
      "type": "atomic",
      "entry_actions": [
        "disableInput()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": [
        "clearInput()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Sort Array button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Processing",
      "event": "USER_CLICKS_SORT",
      "guard": "inputIsValid",
      "actions": [
        "executeMergeSort()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Processing",
      "to": "S2_Sorted",
      "event": "SORT_COMPLETED",
      "guard": "true",
      "actions": [
        "showSortedArray()"
      ],
      "expected_observables": [
        "dom:sortedArrayDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Sorted",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SORT",
      "guard": "true",
      "actions": [
        "resetState()"
      ],
      "expected_observables": [
        "dom:inputCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "button",
    "#result"
  ],
  "triggers": [
    "#arrayInput",
    "button"
  ]
}