{
  "meta": {
    "concept": "Recursion",
    "topic": "Recursion Demonstration",
    "educational_goal": "Demonstrate recursive calculation of factorial",
    "expected_interactions": [
      "calculate",
      "input_validation"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputValidation",
      "label": "InputValidation",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "clearOutput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_CalculatingFactorial",
      "label": "CalculatingFactorial",
      "type": "atomic",
      "entry_actions": [
        "startCalculation()",
        "showCalculationTrace()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S4_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "displayFinalResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate Factorial button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "CALCULATION_COMPLETE",
      "event_type": "system_event",
      "description": "Factorial calculation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputValidation",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "validateInput()"
      ],
      "expected_observables": [
        "dom:calcBtnClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputValidation",
      "to": "S2_CalculatingFactorial",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "initiateFactorialCalculation()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InputValidation",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMessageShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_CalculatingFactorial",
      "to": "S4_ResultDisplayed",
      "event": "CALCULATION_COMPLETE",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:calculationComplete"
      ],
      "timeout": 2000
    }
  ],
  "components": [
    "input",
    "calcBtn",
    "output"
  ],
  "triggers": [
    "#numInput",
    "#calcBtn"
  ]
}