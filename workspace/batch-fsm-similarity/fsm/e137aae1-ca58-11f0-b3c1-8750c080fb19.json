{
  "meta": {
    "concept": "HeapSort",
    "topic": "Heap Sort Visualization",
    "educational_goal": "Demonstrate Heap Sort algorithm through visualization",
    "expected_interactions": [
      "generate",
      "sort"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableButtons()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingArray",
      "label": "GeneratingArray",
      "type": "atomic",
      "entry_actions": [
        "generateRandomArray()",
        "updateStatus('Generating array...')"
      ],
      "exit_actions": [
        "updateStatus('Array generated. Click \"Sort with Heap Sort\" to sort.')"
      ]
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "heapSort()",
        "updateStatus('Sorting array...')"
      ],
      "exit_actions": [
        "updateStatus('Array sorted!')"
      ]
    },
    {
      "id": "S3_Swapping",
      "label": "Swapping",
      "type": "atomic",
      "entry_actions": [
        "updateStatus('Swapping elements...')"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate Random Array button"
    },
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Sort with Heap Sort button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingArray",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "disableButtons()"
      ],
      "expected_observables": [
        "dom:generateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_GeneratingArray",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "enableButtons()"
      ],
      "expected_observables": [
        "dom:arrayGenerated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Sorting",
      "event": "USER_CLICKS_SORT",
      "guard": "arrayIsGenerated",
      "actions": [
        "disableButtons()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_Sorting",
      "to": "S3_Swapping",
      "event": "USER_CLICKS_SORT",
      "guard": "sortingInProgress",
      "actions": [
        "updateStatus('Sorting in progress...')"
      ],
      "expected_observables": [
        "dom:sortingStarted"
      ],
      "timeout": 3000
    },
    {
      "from": "S3_Swapping",
      "to": "S2_Sorting",
      "event": "USER_CLICKS_SORT",
      "guard": "swappingInProgress",
      "actions": [
        "updateStatus('Swapping elements...')"
      ],
      "expected_observables": [
        "dom:elementsSwapped"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#arrayDisplay",
    "button",
    "#status"
  ]
}