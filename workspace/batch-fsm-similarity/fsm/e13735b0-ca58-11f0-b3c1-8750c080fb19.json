{
  "meta": {
    "concept": "AdjacencyMatrix",
    "topic": "Adjacency Matrix Demonstration",
    "educational_goal": "Demonstrate the creation and submission of an adjacency matrix",
    "expected_interactions": [
      "create_matrix",
      "submit_matrix"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [],
      "exit_actions": []
    },
    {
      "id": "S1_CreatingMatrix",
      "label": "CreatingMatrix",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "createMatrix()"
      ],
      "exit_actions": [
        "displayMatrix()"
      ]
    },
    {
      "id": "S2_MatrixDisplayed",
      "label": "MatrixDisplayed",
      "type": "atomic",
      "entry_actions": [],
      "exit_actions": []
    },
    {
      "id": "S3_SubmittingMatrix",
      "label": "SubmittingMatrix",
      "type": "atomic",
      "entry_actions": [
        "collectMatrixData()"
      ],
      "exit_actions": [
        "showResult()"
      ]
    },
    {
      "id": "S4_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "renderResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CREATE_MATRIX",
      "event_type": "user_action",
      "description": "User clicks the Create Adjacency Matrix button"
    },
    {
      "id": "USER_CLICKS_SUBMIT_MATRIX",
      "event_type": "user_action",
      "description": "User clicks the Submit Matrix button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_CreatingMatrix",
      "event": "USER_CLICKS_CREATE_MATRIX",
      "guard": "true",
      "actions": [
        "enableMatrixCreation()"
      ],
      "expected_observables": [
        "dom:createMatrixButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_CreatingMatrix",
      "to": "S2_MatrixDisplayed",
      "event": "USER_CLICKS_CREATE_MATRIX",
      "guard": "matrixCreated",
      "actions": [
        "displayMatrix()"
      ],
      "expected_observables": [
        "dom:matrixDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_MatrixDisplayed",
      "to": "S3_SubmittingMatrix",
      "event": "USER_CLICKS_SUBMIT_MATRIX",
      "guard": "true",
      "actions": [
        "collectMatrixData()"
      ],
      "expected_observables": [
        "dom:submitMatrixButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_SubmittingMatrix",
      "to": "S4_ResultDisplayed",
      "event": "USER_CLICKS_SUBMIT_MATRIX",
      "guard": "matrixSubmitted",
      "actions": [
        "renderResult()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#numVertices",
    "#createMatrix",
    "#matrixContainer",
    "#adjMatrix",
    "#submitMatrix",
    "#resultContainer",
    "#matrixResult"
  ]
}