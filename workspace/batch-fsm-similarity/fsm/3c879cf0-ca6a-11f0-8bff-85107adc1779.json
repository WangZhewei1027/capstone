{
  "meta": {
    "concept": "HashTable",
    "topic": "Hash Table Demonstration",
    "educational_goal": "Demonstrate hash table operations: insert, lookup, delete",
    "expected_interactions": [
      "insert",
      "lookup",
      "delete"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderTable()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Inserting",
      "label": "Inserting",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_LookingUp",
      "label": "LookingUp",
      "type": "atomic",
      "entry_actions": [
        "readLookupKey()",
        "highlightLookupInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_Deleting",
      "label": "Deleting",
      "type": "atomic",
      "entry_actions": [
        "readDeleteKey()",
        "highlightDeleteInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S5_SuccessMessage",
      "label": "SuccessMessage",
      "type": "atomic",
      "entry_actions": [
        "showSuccessMessage()"
      ],
      "exit_actions": [
        "clearSuccessMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserSubmitsForm",
      "event_type": "user_action",
      "description": "User submits the form to insert or update a key-value pair"
    },
    {
      "id": "UserClicksLookup",
      "event_type": "user_action",
      "description": "User clicks the Lookup button"
    },
    {
      "id": "UserClicksDelete",
      "event_type": "user_action",
      "description": "User clicks the Delete button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Inserting",
      "event": "UserSubmitsForm",
      "guard": "keyNotEmpty",
      "actions": [
        "insertKeyValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:formSubmitted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Inserting",
      "to": "S5_SuccessMessage",
      "event": "UserSubmitsForm",
      "guard": "insertSuccessful",
      "actions": [
        "showSuccessMessage()"
      ],
      "expected_observables": [
        "dom:keyInserted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Inserting",
      "to": "S4_ErrorAlert",
      "event": "UserSubmitsForm",
      "guard": "keyEmpty",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_LookingUp",
      "event": "UserClicksLookup",
      "guard": "lookupKeyNotEmpty",
      "actions": [
        "lookupKeyValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:lookupPerformed"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_LookingUp",
      "to": "S5_SuccessMessage",
      "event": "UserClicksLookup",
      "guard": "lookupSuccessful",
      "actions": [
        "showSuccessMessage()"
      ],
      "expected_observables": [
        "dom:keyFound"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_LookingUp",
      "to": "S4_ErrorAlert",
      "event": "UserClicksLookup",
      "guard": "lookupKeyNotFound",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:keyNotFound"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_Deleting",
      "event": "UserClicksDelete",
      "guard": "deleteKeyNotEmpty",
      "actions": [
        "deleteKeyValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:deletePerformed"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Deleting",
      "to": "S5_SuccessMessage",
      "event": "UserClicksDelete",
      "guard": "deleteSuccessful",
      "actions": [
        "showSuccessMessage()"
      ],
      "expected_observables": [
        "dom:keyDeleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Deleting",
      "to": "S4_ErrorAlert",
      "event": "UserClicksDelete",
      "guard": "deleteKeyNotFound",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:keyNotFound"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_SuccessMessage",
      "to": "S0_Idle",
      "event": "UserAcknowledgesMessage",
      "guard": "true",
      "actions": [
        "clearSuccessMessage()"
      ],
      "expected_observables": [
        "dom:successMessageCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "UserAcknowledgesMessage",
      "guard": "true",
      "actions": [
        "clearErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#form",
    "#key",
    "#value",
    "#lookupKey",
    "#lookupBtn",
    "#deleteBtn",
    "#message",
    "#hashTable"
  ]
}