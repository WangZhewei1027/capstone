{
  "meta": {
    "concept": "AdjacencyList",
    "topic": "Graph Representation using Adjacency List",
    "educational_goal": "Demonstrate how to create and display an adjacency list for a graph",
    "expected_interactions": [
      "add_edge",
      "display_graph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    },
    {
      "id": "S2_DisplayingGraph",
      "label": "DisplayingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearGraphDisplay()",
        "renderGraph()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_EDGE",
      "event_type": "user_action",
      "description": "User clicks the Add Edge button"
    },
    {
      "id": "USER_CLICKS_DISPLAY_GRAPH",
      "event_type": "user_action",
      "description": "User clicks the Display Graph button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEdge",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "inputFieldsNotEmpty",
      "actions": [
        "addEdgeToList()"
      ],
      "expected_observables": [
        "dom:addEdgeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingEdge",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_EDGE",
      "guard": "true",
      "actions": [
        "clearInputFields()"
      ],
      "expected_observables": [
        "dom:inputFieldsCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_DisplayingGraph",
      "event": "USER_CLICKS_DISPLAY_GRAPH",
      "guard": "true",
      "actions": [
        "displayGraph()"
      ],
      "expected_observables": [
        "dom:displayGraphButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_DisplayingGraph",
      "to": "S0_Idle",
      "event": "USER_CLICKS_DISPLAY_GRAPH",
      "guard": "true",
      "actions": [
        "clearGraphDisplay()"
      ],
      "expected_observables": [
        "dom:graphDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#nodeInput",
    "#adjacentInput",
    "button[onclick='addEdge()']",
    "button[onclick='displayGraph()']",
    "#graph"
  ]
}