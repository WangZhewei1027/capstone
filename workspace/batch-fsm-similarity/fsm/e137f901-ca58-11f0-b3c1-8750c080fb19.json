{
  "meta": {
    "concept": "DepthFirstSearch",
    "topic": "Depth-First Search (DFS) Visualization",
    "educational_goal": "Demonstrate DFS traversal of a graph",
    "expected_interactions": [
      "start_dfs"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_StartingDFS",
      "label": "StartingDFS",
      "type": "atomic",
      "entry_actions": [
        "resetVisitedNodes()",
        "highlightStartNode()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_VisitingNode",
      "label": "VisitingNode",
      "type": "atomic",
      "entry_actions": [
        "markNodeAsVisited()",
        "updateVisualization()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_CompletedDFS",
      "label": "CompletedDFS",
      "type": "atomic",
      "entry_actions": [
        "finalizeVisualization()"
      ],
      "exit_actions": [
        "resetGraph()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START_DFS",
      "event_type": "user_action",
      "description": "User clicks the Start DFS button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_StartingDFS",
      "event": "USER_CLICKS_START_DFS",
      "guard": "true",
      "actions": [
        "disableStartButton()"
      ],
      "expected_observables": [
        "dom:startDFSButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_StartingDFS",
      "to": "S2_VisitingNode",
      "event": "NodeVisited",
      "guard": "true",
      "actions": [
        "visitNextNode()"
      ],
      "expected_observables": [
        "dom:nodeVisited"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_VisitingNode",
      "to": "S2_VisitingNode",
      "event": "NodeVisited",
      "guard": "moreNeighborsToVisit",
      "actions": [
        "continueDFS()"
      ],
      "expected_observables": [
        "dom:continueVisiting"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_VisitingNode",
      "to": "S3_CompletedDFS",
      "event": "AllNodesVisited",
      "guard": "true",
      "actions": [
        "completeDFS()"
      ],
      "expected_observables": [
        "dom:dfsCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S3_CompletedDFS",
      "to": "S0_Idle",
      "event": "UserClicksStartAgain",
      "guard": "true",
      "actions": [
        "resetVisualization()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graph",
    ".node",
    "button"
  ]
}