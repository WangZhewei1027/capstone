{
  "meta": {
    "concept": "HuffmanCoding",
    "topic": "Huffman Coding Demo",
    "educational_goal": "Demonstrate Huffman coding and character frequency analysis",
    "expected_interactions": [
      "generate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingCode",
      "label": "GeneratingCode",
      "type": "atomic",
      "entry_actions": [
        "disableInput()",
        "clearOutput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_DisplayOutput",
      "label": "DisplayOutput",
      "type": "atomic",
      "entry_actions": [
        "renderOutput()"
      ],
      "exit_actions": [
        "enableInput()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate Huffman Code button",
      "triggers": [
        "#inputString",
        "button"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingCode",
      "event": "USER_CLICKS_GENERATE",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "startHuffmanGeneration()"
      ],
      "expected_observables": [
        "dom:generateButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_GeneratingCode",
      "to": "S2_DisplayOutput",
      "event": "HuffmanGenerationComplete",
      "guard": "true",
      "actions": [
        "processHuffmanCodes()"
      ],
      "expected_observables": [
        "dom:huffmanCodesGenerated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_DisplayOutput",
      "to": "S0_Idle",
      "event": "OutputDisplayed",
      "guard": "true",
      "actions": [
        "clearInputField()"
      ],
      "expected_observables": [
        "dom:outputDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputString",
    "button",
    "#output"
  ]
}