{
  "meta": {
    "concept": "KnapsackProblem",
    "topic": "Knapsack Problem Solver",
    "educational_goal": "Demonstrate the solution to the Knapsack problem using dynamic programming",
    "expected_interactions": [
      "inputWeights",
      "inputValues",
      "inputCapacity",
      "solveKnapsack"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingData",
      "label": "InputtingData",
      "type": "atomic",
      "entry_actions": [
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S4_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "performKnapsackCalculation()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "showResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksSolve",
      "event_type": "user_action",
      "description": "User clicks the Solve Knapsack button"
    },
    {
      "id": "InputValidationFailed",
      "event_type": "system_event",
      "description": "Input validation fails due to mismatched lengths"
    },
    {
      "id": "InputValidationSuccess",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "CalculationComplete",
      "event_type": "system_event",
      "description": "Knapsack calculation is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingData",
      "event": "UserClicksSolve",
      "guard": "true",
      "actions": [
        "disableInputs()"
      ],
      "expected_observables": [
        "dom:solveButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingData",
      "to": "S2_ValidatingInput",
      "event": "UserClicksSolve",
      "guard": "true",
      "actions": [
        "readInputValues()"
      ],
      "expected_observables": [
        "dom:inputValuesRead"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_Calculating",
      "event": "InputValidationSuccess",
      "guard": "inputLengthsMatch",
      "actions": [
        "prepareCalculation()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "InputValidationFailed",
      "guard": "inputLengthsDoNotMatch",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMessageDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_Calculating",
      "to": "S5_DisplayResult",
      "event": "CalculationComplete",
      "guard": "true",
      "actions": [
        "calculateMaxProfit()"
      ],
      "expected_observables": [
        "dom:calculationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_DisplayResult",
      "to": "S0_Idle",
      "event": "CalculationComplete",
      "guard": "true",
      "actions": [
        "enableInputs()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#weights",
    "#values",
    "#capacity",
    "button",
    "#result"
  ]
}