{
  "meta": {
    "concept": "HuffmanCoding",
    "topic": "Huffman Coding Demonstration",
    "educational_goal": "Demonstrate Huffman coding for text compression",
    "expected_interactions": [
      "encode",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableEncodeButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Encoding",
      "label": "Encoding",
      "type": "atomic",
      "entry_actions": [
        "readInputText()",
        "showLoadingIndicator()"
      ],
      "exit_actions": [
        "hideLoadingIndicator()"
      ]
    },
    {
      "id": "S2_Results",
      "label": "Results",
      "type": "atomic",
      "entry_actions": [
        "displayResults()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Error",
      "label": "Error",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ENCODE",
      "event_type": "user_action",
      "description": "User clicks the Encode button"
    },
    {
      "id": "ENCODING_COMPLETE",
      "event_type": "system_event",
      "description": "Encoding process completes successfully"
    },
    {
      "id": "ENCODING_FAILED",
      "event_type": "system_event",
      "description": "Encoding process fails due to invalid input"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Encoding",
      "event": "USER_CLICKS_ENCODE",
      "guard": "inputNotEmpty",
      "actions": [
        "disableEncodeButton()"
      ],
      "expected_observables": [
        "dom:encodeBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Encoding",
      "to": "S2_Results",
      "event": "ENCODING_COMPLETE",
      "guard": "true",
      "actions": [
        "processResults()"
      ],
      "expected_observables": [
        "dom:encodingCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Encoding",
      "to": "S3_Error",
      "event": "ENCODING_FAILED",
      "guard": "true",
      "actions": [
        "handleError()"
      ],
      "expected_observables": [
        "dom:encodingFailed"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Error",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ENCODE",
      "guard": "true",
      "actions": [
        "resetInputField()"
      ],
      "expected_observables": [
        "dom:errorHandled"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "inputText",
    "encodeBtn",
    "result"
  ],
  "triggers": [
    "#encodeBtn",
    "#inputText"
  ]
}