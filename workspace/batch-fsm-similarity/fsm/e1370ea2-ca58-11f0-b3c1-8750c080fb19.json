{
  "meta": {
    "concept": "WeightedGraph",
    "topic": "Weighted Graph Visualization",
    "educational_goal": "Demonstrate graph creation and visualization",
    "expected_interactions": [
      "addNode",
      "addEdge",
      "removeNode",
      "removeEdge",
      "resetGraph"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderGraph()",
        "enableInteractions()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "prepareNodeInput()",
        "highlightNodeArea()"
      ],
      "exit_actions": [
        "clearNodeInput()"
      ]
    },
    {
      "id": "S2_AddingEdge",
      "label": "AddingEdge",
      "type": "atomic",
      "entry_actions": [
        "prepareEdgeInput()",
        "highlightEdgeArea()"
      ],
      "exit_actions": [
        "clearEdgeInput()"
      ]
    },
    {
      "id": "S3_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "confirmNodeRemoval()",
        "highlightNode()"
      ],
      "exit_actions": [
        "clearNodeHighlight()"
      ]
    },
    {
      "id": "S4_RemovingEdge",
      "label": "RemovingEdge",
      "type": "atomic",
      "entry_actions": [
        "confirmEdgeRemoval()",
        "highlightEdge()"
      ],
      "exit_actions": [
        "clearEdgeHighlight()"
      ]
    },
    {
      "id": "S5_ResettingGraph",
      "label": "ResettingGraph",
      "type": "atomic",
      "entry_actions": [
        "clearAllNodes()",
        "clearAllEdges()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "UserClicksAddNode",
      "event_type": "user_action",
      "description": "User clicks to add a new node"
    },
    {
      "id": "UserClicksAddEdge",
      "event_type": "user_action",
      "description": "User clicks to add a new edge"
    },
    {
      "id": "UserClicksRemoveNode",
      "event_type": "user_action",
      "description": "User clicks to remove a node"
    },
    {
      "id": "UserClicksRemoveEdge",
      "event_type": "user_action",
      "description": "User clicks to remove an edge"
    },
    {
      "id": "UserClicksReset",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "UserClicksAddNode",
      "guard": "true",
      "actions": [
        "enableNodeInput()",
        "disableGraphInteractions()"
      ],
      "expected_observables": [
        "dom:addNodeClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingEdge",
      "event": "UserClicksAddEdge",
      "guard": "true",
      "actions": [
        "enableEdgeInput()",
        "disableGraphInteractions()"
      ],
      "expected_observables": [
        "dom:addEdgeClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingNode",
      "event": "UserClicksRemoveNode",
      "guard": "true",
      "actions": [
        "confirmNodeRemovalPrompt()",
        "disableGraphInteractions()"
      ],
      "expected_observables": [
        "dom:removeNodeClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_RemovingEdge",
      "event": "UserClicksRemoveEdge",
      "guard": "true",
      "actions": [
        "confirmEdgeRemovalPrompt()",
        "disableGraphInteractions()"
      ],
      "expected_observables": [
        "dom:removeEdgeClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ResettingGraph",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "confirmReset()",
        "disableGraphInteractions()"
      ],
      "expected_observables": [
        "dom:resetGraphClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ResettingGraph",
      "to": "S0_Idle",
      "event": "UserClicksReset",
      "guard": "true",
      "actions": [
        "resetGraphState()",
        "enableGraphInteractions()"
      ],
      "expected_observables": [
        "dom:graphResetComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "graph",
    "node",
    "edge",
    "weight"
  ]
}