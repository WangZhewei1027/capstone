{
  "meta": {
    "concept": "UnionFind",
    "topic": "Union-Find Visualization",
    "educational_goal": "Demonstrate Union-Find operations",
    "expected_interactions": [
      "initialize",
      "union",
      "find"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Initializing",
      "label": "Initializing",
      "type": "atomic",
      "entry_actions": [
        "readInputSize()",
        "initializeUnionFind()"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S2_UnionOperation",
      "label": "UnionOperation",
      "type": "atomic",
      "entry_actions": [
        "performUnion()",
        "updateOutput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_FindOperation",
      "label": "FindOperation",
      "type": "atomic",
      "entry_actions": [
        "performFind()",
        "updateOutput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INITIALIZE",
      "event_type": "user_action",
      "description": "User clicks the Initialize button"
    },
    {
      "id": "USER_CLICKS_UNION",
      "event_type": "user_action",
      "description": "User clicks the Union button"
    },
    {
      "id": "USER_CLICKS_FIND",
      "event_type": "user_action",
      "description": "User clicks the Find button"
    },
    {
      "id": "INITIALIZATION_COMPLETE",
      "event_type": "system_event",
      "description": "Union-Find initialized successfully"
    },
    {
      "id": "UNION_COMPLETE",
      "event_type": "system_event",
      "description": "Union operation completed"
    },
    {
      "id": "FIND_COMPLETE",
      "event_type": "system_event",
      "description": "Find operation completed"
    },
    {
      "id": "INITIALIZATION_FAILED",
      "event_type": "system_event",
      "description": "Initialization failed due to invalid input"
    },
    {
      "id": "UNION_FAILED",
      "event_type": "system_event",
      "description": "Union operation failed because Union-Find is not initialized"
    },
    {
      "id": "FIND_FAILED",
      "event_type": "system_event",
      "description": "Find operation failed because Union-Find is not initialized"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Initializing",
      "event": "USER_CLICKS_INITIALIZE",
      "guard": "inputIsValid",
      "actions": [
        "initializeUnionFind()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:initializeButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Initializing",
      "to": "S0_Idle",
      "event": "INITIALIZATION_COMPLETE",
      "guard": "true",
      "actions": [
        "updateOutput()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:outputUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Initializing",
      "to": "S4_ErrorAlert",
      "event": "INITIALIZATION_FAILED",
      "guard": "true",
      "actions": [
        "showErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_UnionOperation",
      "event": "USER_CLICKS_UNION",
      "guard": "unionFindInitialized",
      "actions": [
        "performUnion()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:unionButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_UnionOperation",
      "to": "S0_Idle",
      "event": "UNION_COMPLETE",
      "guard": "true",
      "actions": [
        "updateOutput()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:outputUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_UnionOperation",
      "to": "S4_ErrorAlert",
      "event": "UNION_FAILED",
      "guard": "true",
      "actions": [
        "showErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_FindOperation",
      "event": "USER_CLICKS_FIND",
      "guard": "unionFindInitialized",
      "actions": [
        "performFind()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:findButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_FindOperation",
      "to": "S0_Idle",
      "event": "FIND_COMPLETE",
      "guard": "true",
      "actions": [
        "updateOutput()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:outputUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S3_FindOperation",
      "to": "S4_ErrorAlert",
      "event": "FIND_FAILED",
      "guard": "true",
      "actions": [
        "showErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#size",
    "#initialize",
    "#unionButton",
    "#findButton",
    "#output"
  ]
}