{
  "meta": {
    "concept": "LongestCommonSubsequence",
    "topic": "Longest Common Subsequence Finder",
    "educational_goal": "Calculate the length of the longest common subsequence between two strings",
    "expected_interactions": [
      "calculate"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Calculating",
      "label": "Calculating",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "disableInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "showResult()"
      ],
      "exit_actions": [
        "clearInputFields()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_CALCULATE",
      "event_type": "user_action",
      "description": "User clicks the Calculate LCS button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Calculating",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "inputFieldsFilled",
      "actions": [
        "calculateLCS()"
      ],
      "expected_observables": [
        "dom:calculateButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Calculating",
      "to": "S2_DisplayResult",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "displayLCSLength()"
      ],
      "expected_observables": [
        "dom:lcsCalculated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_DisplayResult",
      "to": "S0_Idle",
      "event": "USER_CLICKS_CALCULATE",
      "guard": "true",
      "actions": [
        "resetState()"
      ],
      "expected_observables": [
        "dom:resultDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#string1",
    "#string2",
    "#calculateBtn",
    "#result"
  ]
}