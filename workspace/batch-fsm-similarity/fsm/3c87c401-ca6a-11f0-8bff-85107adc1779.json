{
  "meta": {
    "concept": "Set",
    "topic": "JavaScript Set Demonstration",
    "educational_goal": "Demonstrate the functionality of a Set in JavaScript",
    "expected_interactions": [
      "add",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingItem",
      "label": "AddingItem",
      "type": "atomic",
      "entry_actions": [
        "parseInput(itemInput.value)",
        "logMessage('Attempting to add item.')"
      ],
      "exit_actions": [
        "clearInputField()"
      ]
    },
    {
      "id": "S2_ItemAlreadyExists",
      "label": "ItemAlreadyExists",
      "type": "atomic",
      "entry_actions": [
        "logMessage('Item already exists in the Set.')"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ItemAdded",
      "label": "ItemAdded",
      "type": "atomic",
      "entry_actions": [
        "mySet.add(value)",
        "logMessage('Item added to the Set.')"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ClearingSet",
      "label": "ClearingSet",
      "type": "atomic",
      "entry_actions": [
        "mySet.clear()",
        "logMessage('Clearing all items from the Set.')"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add Item button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear Set button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingItem",
      "event": "USER_CLICKS_ADD",
      "guard": "inputNotEmpty",
      "actions": [
        "parseInput(itemInput.value)",
        "logMessage('Attempting to add item.')"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingItem",
      "to": "S2_ItemAlreadyExists",
      "event": "USER_CLICKS_ADD",
      "guard": "itemAlreadyExists",
      "actions": [
        "logMessage('Item already exists in the Set.')"
      ],
      "expected_observables": [
        "dom:itemAlreadyExists"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingItem",
      "to": "S3_ItemAdded",
      "event": "USER_CLICKS_ADD",
      "guard": "itemDoesNotExist",
      "actions": [
        "mySet.add(value)",
        "logMessage('Item added to the Set.')",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:itemAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingSet",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "mySet.clear()",
        "logMessage('Clearing all items from the Set.')",
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#itemInput",
    "#addButton",
    "#clearButton",
    "#setContents",
    "#setSize",
    "#log"
  ]
}