{
  "meta": {
    "concept": "HashTable",
    "topic": "Hash Table Demonstration",
    "educational_goal": "Demonstrate basic operations of a hash table",
    "expected_interactions": [
      "add",
      "search",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()",
        "enableButtons()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingEntry",
      "label": "AddingEntry",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputFields()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_SearchingEntry",
      "label": "SearchingEntry",
      "type": "atomic",
      "entry_actions": [
        "readSearchKey()",
        "highlightSearchField()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_DisplayResult",
      "label": "DisplayResult",
      "type": "atomic",
      "entry_actions": [
        "showAlertWithResult()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add to Hash Table button"
    },
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search in Hash Table button"
    },
    {
      "id": "USER_INPUTS_KEY",
      "event_type": "user_action",
      "description": "User inputs a key in the key input field"
    },
    {
      "id": "USER_INPUTS_VALUE",
      "event_type": "user_action",
      "description": "User inputs a value in the value input field"
    },
    {
      "id": "USER_INPUTS_SEARCH_KEY",
      "event_type": "user_action",
      "description": "User inputs a key to search in the hash table"
    },
    {
      "id": "ENTRY_ADDED",
      "event_type": "system_event",
      "description": "An entry is successfully added to the hash table"
    },
    {
      "id": "ENTRY_FOUND",
      "event_type": "system_event",
      "description": "An entry is found in the hash table"
    },
    {
      "id": "ENTRY_NOT_FOUND",
      "event_type": "system_event",
      "description": "An entry is not found in the hash table"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingEntry",
      "event": "USER_CLICKS_ADD",
      "guard": "inputFieldsFilled",
      "actions": [
        "addEntryToHashTable()",
        "disableButtons()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingEntry",
      "to": "S0_Idle",
      "event": "ENTRY_ADDED",
      "guard": "true",
      "actions": [
        "displayHashTable()",
        "clearInputs()"
      ],
      "expected_observables": [
        "dom:hashTableUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_SearchingEntry",
      "event": "USER_CLICKS_SEARCH",
      "guard": "searchKeyProvided",
      "actions": [
        "searchInHashTable()",
        "disableButtons()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SearchingEntry",
      "to": "S3_DisplayResult",
      "event": "ENTRY_FOUND",
      "guard": "true",
      "actions": [
        "showSearchResult()"
      ],
      "expected_observables": [
        "dom:searchResultDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_SearchingEntry",
      "to": "S4_ErrorAlert",
      "event": "ENTRY_NOT_FOUND",
      "guard": "true",
      "actions": [
        "showNotFoundAlert()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#key",
    "#value",
    "#hashTable",
    "button"
  ]
}