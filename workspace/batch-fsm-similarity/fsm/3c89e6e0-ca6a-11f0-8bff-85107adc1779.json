{
  "meta": {
    "concept": "KruskalAlgorithm",
    "topic": "Kruskal's Algorithm Visualization",
    "educational_goal": "Demonstrate Kruskal's algorithm for finding the Minimum Spanning Tree",
    "expected_interactions": [
      "load_graph",
      "next_step",
      "auto_run",
      "pause"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_LoadingGraph",
      "label": "LoadingGraph",
      "type": "atomic",
      "entry_actions": [
        "initializeGraph()",
        "resetLog()"
      ],
      "exit_actions": [
        "clearGraph()"
      ]
    },
    {
      "id": "S2_Stepping",
      "label": "Stepping",
      "type": "atomic",
      "entry_actions": [
        "stepKruskal()",
        "updateGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_AutoRunning",
      "label": "AutoRunning",
      "type": "atomic",
      "entry_actions": [
        "autoRun()"
      ],
      "exit_actions": [
        "pauseRun()"
      ]
    },
    {
      "id": "S4_Paused",
      "label": "Paused",
      "type": "atomic",
      "entry_actions": [
        "pauseRun()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Completed",
      "label": "Completed",
      "type": "final",
      "entry_actions": [
        "logCompletion()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_LOAD_GRAPH",
      "event_type": "user_action",
      "description": "User clicks the Load Graph button",
      "triggers": [
        "#btnReset"
      ]
    },
    {
      "id": "USER_CLICKS_NEXT_STEP",
      "event_type": "user_action",
      "description": "User clicks the Next Step button",
      "triggers": [
        "#btnStep"
      ]
    },
    {
      "id": "USER_CLICKS_AUTO_RUN",
      "event_type": "user_action",
      "description": "User clicks the Auto Run button",
      "triggers": [
        "#btnAuto"
      ]
    },
    {
      "id": "USER_CLICKS_PAUSE",
      "event_type": "user_action",
      "description": "User clicks the Pause button",
      "triggers": [
        "#btnPause"
      ]
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Kruskal's algorithm has completed",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_LoadingGraph",
      "event": "USER_CLICKS_LOAD_GRAPH",
      "guard": "true",
      "actions": [
        "initializeGraph()"
      ],
      "expected_observables": [
        "dom:graphLoaded"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_LoadingGraph",
      "to": "S0_Idle",
      "event": "USER_CLICKS_NEXT_STEP",
      "guard": "true",
      "actions": [
        "stepKruskal()"
      ],
      "expected_observables": [
        "dom:stepExecuted"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_LoadingGraph",
      "to": "S2_Stepping",
      "event": "USER_CLICKS_NEXT_STEP",
      "guard": "true",
      "actions": [
        "stepKruskal()"
      ],
      "expected_observables": [
        "dom:stepExecuted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Stepping",
      "to": "S2_Stepping",
      "event": "USER_CLICKS_NEXT_STEP",
      "guard": "currentIndex < sortedEdges.length",
      "actions": [
        "stepKruskal()"
      ],
      "expected_observables": [
        "dom:stepExecuted"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Stepping",
      "to": "S5_Completed",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "logCompletion()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_AutoRunning",
      "event": "USER_CLICKS_AUTO_RUN",
      "guard": "true",
      "actions": [
        "autoRun()"
      ],
      "expected_observables": [
        "dom:autoRunStarted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_AutoRunning",
      "to": "S4_Paused",
      "event": "USER_CLICKS_PAUSE",
      "guard": "true",
      "actions": [
        "pauseRun()"
      ],
      "expected_observables": [
        "dom:autoRunPaused"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_Paused",
      "to": "S3_AutoRunning",
      "event": "USER_CLICKS_AUTO_RUN",
      "guard": "true",
      "actions": [
        "autoRun()"
      ],
      "expected_observables": [
        "dom:autoRunResumed"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#edgesInput",
    "#btnReset",
    "#btnStep",
    "#btnAuto",
    "#btnPause",
    "#edges-list",
    "#log"
  ]
}