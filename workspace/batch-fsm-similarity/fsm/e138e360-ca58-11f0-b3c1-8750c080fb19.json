{
  "meta": {
    "concept": "TwoPointers",
    "topic": "Two Pointers Technique Demo",
    "educational_goal": "Demonstrate finding pairs in a sorted array that sum to a target",
    "expected_interactions": [
      "find_pairs"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputtingData",
      "label": "InputtingData",
      "type": "atomic",
      "entry_actions": [
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S4_FindingPairs",
      "label": "FindingPairs",
      "type": "atomic",
      "entry_actions": [
        "initializePointers()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_DisplayResults",
      "label": "DisplayResults",
      "type": "atomic",
      "entry_actions": [
        "showResults()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_FIND_PAIRS",
      "event_type": "user_action",
      "description": "User clicks the Find Pairs button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "PAIRS_FOUND",
      "event_type": "system_event",
      "description": "Pairs are found that sum to the target"
    },
    {
      "id": "NO_PAIRS_FOUND",
      "event_type": "system_event",
      "description": "No pairs found that sum to the target"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputtingData",
      "event": "USER_CLICKS_FIND_PAIRS",
      "guard": "true",
      "actions": [
        "disableInputs()"
      ],
      "expected_observables": [
        "dom:findPairsButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputtingData",
      "to": "S2_ValidatingInput",
      "event": "USER_CLICKS_FIND_PAIRS",
      "guard": "true",
      "actions": [
        "validateInputs()"
      ],
      "expected_observables": [
        "dom:inputValidationStarted"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_FindingPairs",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputsAreValid",
      "actions": [
        "initializePairFinding()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showErrorMessage()"
      ],
      "expected_observables": [
        "dom:errorMessageDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_FindingPairs",
      "to": "S5_DisplayResults",
      "event": "PAIRS_FOUND",
      "guard": "true",
      "actions": [
        "showResults()"
      ],
      "expected_observables": [
        "dom:pairsFound"
      ],
      "timeout": 500
    },
    {
      "from": "S4_FindingPairs",
      "to": "S5_DisplayResults",
      "event": "NO_PAIRS_FOUND",
      "guard": "true",
      "actions": [
        "showNoPairsMessage()"
      ],
      "expected_observables": [
        "dom:noPairsFound"
      ],
      "timeout": 500
    },
    {
      "from": "S5_DisplayResults",
      "to": "S0_Idle",
      "event": "USER_CLICKS_FIND_PAIRS",
      "guard": "true",
      "actions": [
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:resultsDisplayed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#targetInput",
    "#result",
    "button"
  ]
}