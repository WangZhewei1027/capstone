{
  "meta": {
    "concept": "BellmanFordAlgorithm",
    "topic": "Bellman-Ford Algorithm Visualization",
    "educational_goal": "Demonstrate the Bellman-Ford algorithm for finding shortest paths",
    "expected_interactions": [
      "run_algorithm",
      "input_edges",
      "input_source"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InputEdges",
      "label": "InputEdges",
      "type": "atomic",
      "entry_actions": [
        "highlightEdgesInput()"
      ],
      "exit_actions": [
        "clearHighlightEdges()"
      ]
    },
    {
      "id": "S2_InputSource",
      "label": "InputSource",
      "type": "atomic",
      "entry_actions": [
        "highlightSourceInput()"
      ],
      "exit_actions": [
        "clearHighlightSource()"
      ]
    },
    {
      "id": "S3_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "initializeAlgorithm()",
        "showLoadingAnimation()"
      ],
      "exit_actions": [
        "stopLoadingAnimation()"
      ]
    },
    {
      "id": "S4_DisplayResults",
      "label": "DisplayResults",
      "type": "atomic",
      "entry_actions": [
        "renderResults()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorState",
      "label": "ErrorState",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN",
      "event_type": "user_action",
      "description": "User clicks the Run Bellman-Ford button"
    },
    {
      "id": "USER_ENTERS_EDGES",
      "event_type": "user_action",
      "description": "User enters edges in the textarea"
    },
    {
      "id": "USER_ENTERS_SOURCE",
      "event_type": "user_action",
      "description": "User enters source node in the input field"
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Algorithm has completed running"
    },
    {
      "id": "NEGATIVE_CYCLE_DETECTED",
      "event_type": "system_event",
      "description": "Negative weight cycle detected during algorithm execution"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InputEdges",
      "event": "USER_ENTERS_EDGES",
      "guard": "true",
      "actions": [
        "captureEdgesInput()"
      ],
      "expected_observables": [
        "dom:edgesInputCaptured"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InputEdges",
      "to": "S2_InputSource",
      "event": "USER_ENTERS_SOURCE",
      "guard": "true",
      "actions": [
        "captureSourceInput()"
      ],
      "expected_observables": [
        "dom:sourceInputCaptured"
      ],
      "timeout": 500
    },
    {
      "from": "S2_InputSource",
      "to": "S3_RunningAlgorithm",
      "event": "USER_CLICKS_RUN",
      "guard": "inputsAreValid",
      "actions": [
        "runBellmanFord()"
      ],
      "expected_observables": [
        "dom:runButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RunningAlgorithm",
      "to": "S4_DisplayResults",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "processResults()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RunningAlgorithm",
      "to": "S5_ErrorState",
      "event": "NEGATIVE_CYCLE_DETECTED",
      "guard": "true",
      "actions": [
        "handleNegativeCycle()"
      ],
      "expected_observables": [
        "dom:negativeCycleDetected"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_ErrorState",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": [
        "resetInputs()"
      ],
      "expected_observables": [
        "dom:errorResolved"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#edges",
    "#source",
    "button[onclick='runBellmanFord()']",
    "#output"
  ]
}