{
  "meta": {
    "concept": "LinkedList",
    "topic": "Linked List Visualization",
    "educational_goal": "Demonstrate linked list operations (add, remove, clear)",
    "expected_interactions": [
      "add",
      "remove",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableButtons()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "incrementNodeCount()",
        "highlightAddButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "highlightRemoveButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_ClearingList",
      "label": "ClearingList",
      "type": "atomic",
      "entry_actions": [
        "highlightClearButton()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S4_ListUpdated",
      "label": "ListUpdated",
      "type": "atomic",
      "entry_actions": [
        "renderList()"
      ],
      "exit_actions": [
        "returnToIdle()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD",
      "event_type": "user_action",
      "description": "User clicks the Add Node button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove Node button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear List button"
    },
    {
      "id": "NODE_ADDED",
      "event_type": "system_event",
      "description": "Node has been added to the list"
    },
    {
      "id": "NODE_REMOVED",
      "event_type": "system_event",
      "description": "Node has been removed from the list"
    },
    {
      "id": "LIST_CLEARED",
      "event_type": "system_event",
      "description": "List has been cleared"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD",
      "guard": "true",
      "actions": [
        "addNode()"
      ],
      "expected_observables": [
        "dom:addButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingNode",
      "to": "S4_ListUpdated",
      "event": "NODE_ADDED",
      "guard": "true",
      "actions": [
        "updateListDisplay()"
      ],
      "expected_observables": [
        "dom:listUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_RemovingNode",
      "event": "USER_CLICKS_REMOVE",
      "guard": "true",
      "actions": [
        "removeNode()"
      ],
      "expected_observables": [
        "dom:removeButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_RemovingNode",
      "to": "S4_ListUpdated",
      "event": "NODE_REMOVED",
      "guard": "true",
      "actions": [
        "updateListDisplay()"
      ],
      "expected_observables": [
        "dom:listUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_ClearingList",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "clearList()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ClearingList",
      "to": "S4_ListUpdated",
      "event": "LIST_CLEARED",
      "guard": "true",
      "actions": [
        "updateListDisplay()"
      ],
      "expected_observables": [
        "dom:listUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ListUpdated",
      "to": "S0_Idle",
      "event": "NODE_ADDED",
      "guard": "true",
      "actions": [
        "returnToIdle()"
      ],
      "expected_observables": [
        "dom:idleState"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ListUpdated",
      "to": "S0_Idle",
      "event": "NODE_REMOVED",
      "guard": "true",
      "actions": [
        "returnToIdle()"
      ],
      "expected_observables": [
        "dom:idleState"
      ],
      "timeout": 500
    },
    {
      "from": "S4_ListUpdated",
      "to": "S0_Idle",
      "event": "LIST_CLEARED",
      "guard": "true",
      "actions": [
        "returnToIdle()"
      ],
      "expected_observables": [
        "dom:idleState"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#linkedList",
    "button"
  ]
}