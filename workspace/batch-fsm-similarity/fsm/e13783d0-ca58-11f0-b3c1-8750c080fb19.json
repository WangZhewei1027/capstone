{
  "meta": {
    "concept": "InsertionSort",
    "topic": "Insertion Sort Visualization",
    "educational_goal": "Demonstrate the insertion sort algorithm",
    "expected_interactions": [
      "start_sorting",
      "reset_array"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "generateRandomArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "insertionSort()"
      ],
      "exit_actions": [
        "resetBarColors()"
      ]
    },
    {
      "id": "S2_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "generateRandomArray()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START_SORTING",
      "event_type": "user_action",
      "description": "User clicks the Start Sorting button"
    },
    {
      "id": "USER_CLICKS_RESET_ARRAY",
      "event_type": "user_action",
      "description": "User clicks the Reset Array button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_START_SORTING",
      "guard": "true",
      "actions": [
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startSortingButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Sorting",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET_ARRAY",
      "guard": "true",
      "actions": [
        "resetArray()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Resetting",
      "event": "USER_CLICKS_RESET_ARRAY",
      "guard": "true",
      "actions": [
        "resetArray()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#controls button",
    "#array"
  ]
}