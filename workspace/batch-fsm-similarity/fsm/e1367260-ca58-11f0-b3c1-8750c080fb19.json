{
  "meta": {
    "concept": "Queue",
    "topic": "Queue Demonstration",
    "educational_goal": "Demonstrate queue operations (enqueue and dequeue)",
    "expected_interactions": [
      "enqueue",
      "dequeue"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderQueue()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Enqueueing",
      "label": "Enqueueing",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_Dequeuing",
      "label": "Dequeuing",
      "type": "atomic",
      "entry_actions": [
        "checkQueueEmpty()",
        "showDequeueFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ENQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Enqueue button"
    },
    {
      "id": "USER_CLICKS_DEQUEUE",
      "event_type": "user_action",
      "description": "User clicks the Dequeue button"
    },
    {
      "id": "INPUT_IS_VALID",
      "event_type": "system_event",
      "description": "Input is valid for enqueue"
    },
    {
      "id": "QUEUE_IS_EMPTY",
      "event_type": "system_event",
      "description": "Queue is empty on dequeue attempt"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Enqueueing",
      "event": "USER_CLICKS_ENQUEUE",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:enqueueButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Enqueueing",
      "to": "S0_Idle",
      "event": "INPUT_IS_VALID",
      "guard": "true",
      "actions": [
        "enqueueItem()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:itemEnqueued"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Dequeuing",
      "event": "USER_CLICKS_DEQUEUE",
      "guard": "true",
      "actions": [
        "checkQueueState()"
      ],
      "expected_observables": [
        "dom:dequeueButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Dequeuing",
      "to": "S3_ErrorAlert",
      "event": "QUEUE_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_DEQUEUE",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#queueInput",
    "#enqueueBtn",
    "#dequeueBtn",
    "#queue"
  ]
}