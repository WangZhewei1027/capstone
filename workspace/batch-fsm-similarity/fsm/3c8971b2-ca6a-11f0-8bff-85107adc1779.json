{
  "meta": {
    "concept": "DepthFirstSearch",
    "topic": "Depth-First Search (DFS) Visualization",
    "educational_goal": "Demonstrate DFS algorithm and visualization",
    "expected_interactions": [
      "start",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "populateStartNodes()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_DFSRunning",
      "label": "DFSRunning",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "logStart()"
      ],
      "exit_actions": [
        "logCompletion()"
      ]
    },
    {
      "id": "S2_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "resetGraph()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START_DFS",
      "event_type": "user_action",
      "description": "User clicks the Start DFS button",
      "triggers": [
        "#startDFS"
      ]
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button",
      "triggers": [
        "#reset"
      ]
    },
    {
      "id": "DFS_COMPLETE",
      "event_type": "system_event",
      "description": "DFS algorithm has completed execution"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_DFSRunning",
      "event": "USER_CLICKS_START_DFS",
      "guard": "true",
      "actions": [
        "startDFS()"
      ],
      "expected_observables": [
        "dom:startDFSButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_DFSRunning",
      "to": "S0_Idle",
      "event": "DFS_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:dfsCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Resetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetGraph()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Resetting",
      "to": "S0_Idle",
      "event": "DFS_COMPLETE",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:graphReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#startNode",
    "#startDFS",
    "#reset",
    "#graph",
    "#log"
  ]
}