{
  "meta": {
    "concept": "AdjacencyMatrix",
    "topic": "Adjacency Matrix Visualization",
    "educational_goal": "Demonstrate graph representation using adjacency matrix",
    "expected_interactions": [
      "build",
      "error"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearErrorMsg()",
        "enableBuildButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_BuildingMatrix",
      "label": "BuildingMatrix",
      "type": "atomic",
      "entry_actions": [
        "parseInputEdges()",
        "buildAdjacencyMatrix()"
      ],
      "exit_actions": [
        "renderMatrix()",
        "drawGraph()"
      ]
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMsg()"
      ],
      "exit_actions": [
        "clearErrorMsg()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_BUILD_MATRIX",
      "event_type": "user_action",
      "description": "User clicks the Build Adjacency Matrix button"
    },
    {
      "id": "INPUT_PARSING_FAILED",
      "event_type": "system_event",
      "description": "Input parsing fails due to invalid format"
    },
    {
      "id": "INPUT_PARSING_SUCCESS",
      "event_type": "system_event",
      "description": "Input parsing succeeds"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_BuildingMatrix",
      "event": "USER_CLICKS_BUILD_MATRIX",
      "guard": "inputNotEmpty",
      "actions": [
        "disableBuildButton()"
      ],
      "expected_observables": [
        "dom:buildMatrixBtnClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_BuildingMatrix",
      "to": "S2_ErrorAlert",
      "event": "INPUT_PARSING_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorMsgDisplayed"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_BuildingMatrix",
      "to": "S0_Idle",
      "event": "INPUT_PARSING_SUCCESS",
      "guard": "true",
      "actions": [
        "enableBuildButton()"
      ],
      "expected_observables": [
        "dom:matrixRendered",
        "dom:graphDrawn"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_BUILD_MATRIX",
      "guard": "true",
      "actions": [
        "clearErrorMsg()"
      ],
      "expected_observables": [
        "dom:errorMsgCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#edgeInput",
    "#buildMatrixBtn",
    "#matrixContainer",
    "#errorMsg",
    "#graphCanvas"
  ],
  "triggers": [
    "#buildMatrixBtn",
    "#edgeInput"
  ]
}