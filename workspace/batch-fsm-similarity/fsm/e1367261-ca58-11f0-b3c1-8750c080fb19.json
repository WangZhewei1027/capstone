{
  "meta": {
    "concept": "Deque",
    "topic": "Deque Example",
    "educational_goal": "Demonstrate deque operations",
    "expected_interactions": [
      "addFront",
      "addBack",
      "removeFront",
      "removeBack"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingToFront",
      "label": "AddingToFront",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_AddingToBack",
      "label": "AddingToBack",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_RemovingFromFront",
      "label": "RemovingFromFront",
      "type": "atomic",
      "entry_actions": [
        "checkDequeNotEmpty()",
        "showRemovingFeedback()"
      ],
      "exit_actions": [
        "clearFeedback()"
      ]
    },
    {
      "id": "S4_RemovingFromBack",
      "label": "RemovingFromBack",
      "type": "atomic",
      "entry_actions": [
        "checkDequeNotEmpty()",
        "showRemovingFeedback()"
      ],
      "exit_actions": [
        "clearFeedback()"
      ]
    },
    {
      "id": "S5_EmptyAlert",
      "label": "EmptyAlert",
      "type": "atomic",
      "entry_actions": [
        "showAlert()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_FRONT",
      "event_type": "user_action",
      "description": "User clicks the Add to Front button"
    },
    {
      "id": "USER_CLICKS_ADD_BACK",
      "event_type": "user_action",
      "description": "User clicks the Add to Back button"
    },
    {
      "id": "USER_CLICKS_REMOVE_FRONT",
      "event_type": "user_action",
      "description": "User clicks the Remove from Front button"
    },
    {
      "id": "USER_CLICKS_REMOVE_BACK",
      "event_type": "user_action",
      "description": "User clicks the Remove from Back button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingToFront",
      "event": "USER_CLICKS_ADD_FRONT",
      "guard": "inputNotEmpty",
      "actions": [
        "addFront()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addFrontButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingToBack",
      "event": "USER_CLICKS_ADD_BACK",
      "guard": "inputNotEmpty",
      "actions": [
        "addBack()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addBackButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingFromFront",
      "event": "USER_CLICKS_REMOVE_FRONT",
      "guard": "dequeNotEmpty",
      "actions": [
        "removeFront()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeFrontButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_RemovingFromBack",
      "event": "USER_CLICKS_REMOVE_BACK",
      "guard": "dequeNotEmpty",
      "actions": [
        "removeBack()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeBackButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_RemovingFromFront",
      "to": "S5_EmptyAlert",
      "event": "USER_CLICKS_REMOVE_FRONT",
      "guard": "dequeIsEmpty",
      "actions": [
        "showEmptyAlert()"
      ],
      "expected_observables": [
        "dom:alertShown"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RemovingFromBack",
      "to": "S5_EmptyAlert",
      "event": "USER_CLICKS_REMOVE_BACK",
      "guard": "dequeIsEmpty",
      "actions": [
        "showEmptyAlert()"
      ],
      "expected_observables": [
        "dom:alertShown"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingToFront",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_FRONT",
      "guard": "true",
      "actions": [
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:dequeUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S2_AddingToBack",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_BACK",
      "guard": "true",
      "actions": [
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:dequeUpdated"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputValue",
    "button",
    "#deque"
  ]
}