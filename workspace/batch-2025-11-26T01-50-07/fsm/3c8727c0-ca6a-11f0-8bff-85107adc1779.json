{
  "meta": {
    "concept": "LinkedList",
    "topic": "Linked List Demonstration",
    "educational_goal": "Demonstrate linked list operations including addition, removal, and search",
    "expected_interactions": [
      "add to beginning",
      "add to end",
      "remove",
      "search",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderList()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingNode",
      "label": "AddingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_RemovingNode",
      "label": "RemovingNode",
      "type": "atomic",
      "entry_actions": [
        "readRemoveValue()",
        "highlightRemoveInput()"
      ],
      "exit_actions": [
        "clearRemoveHighlight()"
      ]
    },
    {
      "id": "S3_SearchingNode",
      "label": "SearchingNode",
      "type": "atomic",
      "entry_actions": [
        "readSearchValue()",
        "highlightSearchInput()"
      ],
      "exit_actions": [
        "clearSearchHighlight()"
      ]
    },
    {
      "id": "S4_ClearingList",
      "label": "ClearingList",
      "type": "atomic",
      "entry_actions": [
        "confirmClear()",
        "clearList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_BEGINNING",
      "event_type": "user_action",
      "description": "User clicks the Add to Beginning button"
    },
    {
      "id": "USER_CLICKS_ADD_END",
      "event_type": "user_action",
      "description": "User clicks the Add to End button"
    },
    {
      "id": "USER_CLICKS_REMOVE",
      "event_type": "user_action",
      "description": "User clicks the Remove button"
    },
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear List button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD_BEGINNING",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addBeginningBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S1_AddingNode",
      "event": "USER_CLICKS_ADD_END",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addEndBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_RemovingNode",
      "event": "USER_CLICKS_REMOVE",
      "guard": "inputNotEmpty",
      "actions": [
        "captureRemoveValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_SearchingNode",
      "event": "USER_CLICKS_SEARCH",
      "guard": "inputNotEmpty",
      "actions": [
        "captureSearchValue()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:searchBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingList",
      "event": "USER_CLICKS_CLEAR",
      "guard": "true",
      "actions": [
        "confirmClear()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:clearBtnClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingNode",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "addNode()",
        "renderList()"
      ],
      "expected_observables": [
        "dom:nodeAdded"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RemovingNode",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "removeNode()",
        "renderList()"
      ],
      "expected_observables": [
        "dom:nodeRemoved"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_RemovingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()",
        "focusRemoveInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_SearchingNode",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "searchNode()",
        "renderList()"
      ],
      "expected_observables": [
        "dom:nodeFound"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_SearchingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()",
        "focusSearchInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ClearingList",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "clearList()",
        "renderList()"
      ],
      "expected_observables": [
        "dom:listCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#addValue",
    "#removeValue",
    "#searchValue",
    "#addBeginningBtn",
    "#addEndBtn",
    "#removeBtn",
    "#searchBtn",
    "#clearBtn"
  ]
}