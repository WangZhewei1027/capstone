{
  "meta": {
    "concept": "AdjacencyList",
    "topic": "Adjacency List Visualization",
    "educational_goal": "Visualize graph representation using adjacency lists",
    "expected_interactions": [
      "parse",
      "error"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearError()",
        "clearAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ParsingGraph",
      "label": "ParsingGraph",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "clearError()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_RenderingAdjacencyList",
      "label": "RenderingAdjacencyList",
      "type": "atomic",
      "entry_actions": [
        "renderAdjacencyList()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_PARSE",
      "event_type": "user_action",
      "description": "User clicks the Show Adjacency List button",
      "triggers": [
        "#parse-btn"
      ]
    },
    {
      "id": "USER_LOADS_PAGE",
      "event_type": "system_event",
      "description": "User loads the page",
      "triggers": [
        "window"
      ]
    },
    {
      "id": "GRAPH_PARSED_SUCCESSFULLY",
      "event_type": "system_event",
      "description": "Graph is parsed successfully",
      "triggers": []
    },
    {
      "id": "GRAPH_PARSE_FAILED",
      "event_type": "system_event",
      "description": "Graph parsing fails due to an error",
      "triggers": []
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ParsingGraph",
      "event": "USER_CLICKS_PARSE",
      "guard": "true",
      "actions": [
        "parseGraph()"
      ],
      "expected_observables": [
        "dom:parseButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ParsingGraph",
      "to": "S2_RenderingAdjacencyList",
      "event": "GRAPH_PARSED_SUCCESSFULLY",
      "guard": "true",
      "actions": [
        "renderAdjacencyList()"
      ],
      "expected_observables": [
        "dom:graphParsed"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ParsingGraph",
      "to": "S3_ErrorAlert",
      "event": "GRAPH_PARSE_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_RenderingAdjacencyList",
      "event": "USER_LOADS_PAGE",
      "guard": "true",
      "actions": [
        "parseGraph()"
      ],
      "expected_observables": [
        "dom:pageLoaded"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#graph-input",
    "#parse-btn",
    "#adj-list",
    "#error"
  ]
}