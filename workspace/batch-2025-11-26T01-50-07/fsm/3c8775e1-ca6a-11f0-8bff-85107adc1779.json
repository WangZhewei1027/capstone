{
  "meta": {
    "concept": "Deque",
    "topic": "Double-Ended Queue Demonstration",
    "educational_goal": "Demonstrate deque operations: add and remove from both ends",
    "expected_interactions": [
      "addFront",
      "addBack",
      "removeFront",
      "removeBack"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderDeque()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingFront",
      "label": "AddingFront",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_AddingBack",
      "label": "AddingBack",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_RemovingFront",
      "label": "RemovingFront",
      "type": "atomic",
      "entry_actions": [
        "checkDequeNotEmpty()",
        "showRemovingFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_RemovingBack",
      "label": "RemovingBack",
      "type": "atomic",
      "entry_actions": [
        "checkDequeNotEmpty()",
        "showRemovingFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_FRONT",
      "event_type": "user_action",
      "description": "User clicks the Add to Front button"
    },
    {
      "id": "USER_CLICKS_ADD_BACK",
      "event_type": "user_action",
      "description": "User clicks the Add to Back button"
    },
    {
      "id": "USER_CLICKS_REMOVE_FRONT",
      "event_type": "user_action",
      "description": "User clicks the Remove from Front button"
    },
    {
      "id": "USER_CLICKS_REMOVE_BACK",
      "event_type": "user_action",
      "description": "User clicks the Remove from Back button"
    },
    {
      "id": "INPUT_IS_EMPTY",
      "event_type": "system_event",
      "description": "Input value is empty"
    },
    {
      "id": "DEQUE_IS_EMPTY",
      "event_type": "system_event",
      "description": "Deque is empty"
    },
    {
      "id": "ITEM_ADDED",
      "event_type": "system_event",
      "description": "Item added to deque"
    },
    {
      "id": "ITEM_REMOVED",
      "event_type": "system_event",
      "description": "Item removed from deque"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingFront",
      "event": "USER_CLICKS_ADD_FRONT",
      "guard": "inputNotEmpty",
      "actions": [
        "addFront()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addFrontButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S2_AddingBack",
      "event": "USER_CLICKS_ADD_BACK",
      "guard": "inputNotEmpty",
      "actions": [
        "addBack()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:addBackButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_RemovingFront",
      "event": "USER_CLICKS_REMOVE_FRONT",
      "guard": "dequeNotEmpty",
      "actions": [
        "removeFront()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeFrontButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S4_RemovingBack",
      "event": "USER_CLICKS_REMOVE_BACK",
      "guard": "dequeNotEmpty",
      "actions": [
        "removeBack()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:removeBackButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_AddingFront",
      "to": "S0_Idle",
      "event": "ITEM_ADDED",
      "guard": "true",
      "actions": [
        "showStatus()",
        "renderDeque()"
      ],
      "expected_observables": [
        "dom:itemAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S2_AddingBack",
      "to": "S0_Idle",
      "event": "ITEM_ADDED",
      "guard": "true",
      "actions": [
        "showStatus()",
        "renderDeque()"
      ],
      "expected_observables": [
        "dom:itemAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S3_RemovingFront",
      "to": "S0_Idle",
      "event": "ITEM_REMOVED",
      "guard": "true",
      "actions": [
        "showStatus()",
        "renderDeque()"
      ],
      "expected_observables": [
        "dom:itemRemoved"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RemovingBack",
      "to": "S0_Idle",
      "event": "ITEM_REMOVED",
      "guard": "true",
      "actions": [
        "showStatus()",
        "renderDeque()"
      ],
      "expected_observables": [
        "dom:itemRemoved"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingFront",
      "to": "S5_ErrorAlert",
      "event": "INPUT_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_AddingBack",
      "to": "S5_ErrorAlert",
      "event": "INPUT_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_RemovingFront",
      "to": "S5_ErrorAlert",
      "event": "DEQUE_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RemovingBack",
      "to": "S5_ErrorAlert",
      "event": "DEQUE_IS_EMPTY",
      "guard": "true",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_FRONT",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_BACK",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_REMOVE_FRONT",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S5_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_REMOVE_BACK",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "inputValue",
    "addFront",
    "addBack",
    "removeFront",
    "removeBack",
    "status",
    "dequeDisplay"
  ]
}