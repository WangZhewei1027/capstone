{
  "meta": {
    "concept": "FloydWarshallAlgorithm",
    "topic": "Floyd-Warshall Algorithm Visualization",
    "educational_goal": "Demonstrate the Floyd-Warshall algorithm for finding shortest paths in a graph",
    "expected_interactions": [
      "run",
      "reset",
      "highlight"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputFields()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ParsingInput",
      "label": "ParsingInput",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "validateInput()"
      ],
      "exit_actions": [
        "clearInputHighlights()"
      ]
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "checkMatrixFormat()",
        "showValidationFeedback()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "initializeDistanceMatrix()",
        "startFloydWarshall()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_UpdatingOutput",
      "label": "UpdatingOutput",
      "type": "atomic",
      "entry_actions": [
        "createTable(matrix, 'output', 'Distance Matrix')",
        "updateSteps()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN",
      "event_type": "user_action",
      "description": "User clicks the Run Floyd-Warshall button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Floyd-Warshall algorithm execution completes"
    },
    {
      "id": "USER_DISMISSES_ALERT",
      "event_type": "user_action",
      "description": "User dismisses error alert dialog"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ParsingInput",
      "event": "USER_CLICKS_RUN",
      "guard": "inputNotEmpty",
      "actions": [
        "disableInputFields()"
      ],
      "expected_observables": [
        "dom:runButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_ParsingInput",
      "to": "S2_ValidatingInput",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "parseMatrix(graphMatrix.value, vertexCount.value)"
      ],
      "expected_observables": [
        "dom:inputParsed"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ParsingInput",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()",
        "focusInput()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_RunningAlgorithm",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "matrixIsValid",
      "actions": [
        "initializeAlgorithm()"
      ],
      "expected_observables": [
        "dom:algorithmStarted"
      ],
      "timeout": 1500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_DISMISSES_ALERT",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    },
    {
      "from": "S4_RunningAlgorithm",
      "to": "S5_UpdatingOutput",
      "event": "ALGORITHM_COMPLETED",
      "guard": "algorithmCompletedSuccessfully",
      "actions": [
        "updateOutputTable()",
        "showSteps()"
      ],
      "expected_observables": [
        "dom:outputUpdated"
      ],
      "timeout": 3000
    },
    {
      "from": "S5_UpdatingOutput",
      "to": "S0_Idle",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "enableInputFields()",
        "clearInputFields()"
      ],
      "expected_observables": [
        "dom:visualizationComplete"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#vertexCount",
    "#graphMatrix",
    "#runButton",
    "#output",
    "#steps"
  ],
  "triggers": [
    "#runButton",
    "#vertexCount",
    "#graphMatrix"
  ]
}