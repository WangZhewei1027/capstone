{
  "meta": {
    "concept": "BinarySearchTree",
    "topic": "Binary Search Tree Visualization",
    "educational_goal": "Demonstrate BST insertion and traversal",
    "expected_interactions": [
      "insert",
      "delete",
      "search",
      "clear"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "resetMessage()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertingNode",
      "label": "InsertingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S2_DeletingNode",
      "label": "DeletingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S3_SearchingNode",
      "label": "SearchingNode",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": [
        "clearHighlight()"
      ]
    },
    {
      "id": "S4_ClearingTree",
      "label": "ClearingTree",
      "type": "atomic",
      "entry_actions": [
        "confirmClear()",
        "clearTree()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "USER_CLICKS_DELETE",
      "event_type": "user_action",
      "description": "User clicks the Delete button"
    },
    {
      "id": "USER_CLICKS_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Search button"
    },
    {
      "id": "USER_CLICKS_CLEAR",
      "event_type": "user_action",
      "description": "User clicks the Clear button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertingNode",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S2_DeletingNode",
      "event": "USER_CLICKS_DELETE",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:deleteButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S3_SearchingNode",
      "event": "USER_CLICKS_SEARCH",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:searchButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S0_Idle",
      "to": "S4_ClearingTree",
      "event": "USER_CLICKS_CLEAR",
      "guard": "treeNotEmpty",
      "actions": [
        "confirmClear()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_InsertingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError('Invalid input for insertion')"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_DeletingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError('Invalid input for deletion')"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_SearchingNode",
      "to": "S5_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError('Invalid input for search')"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_ClearingTree",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "clearTree()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:treeCleared"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#valueInput",
    "#insertBtn",
    "#deleteBtn",
    "#searchBtn",
    "#clearBtn",
    "#message",
    "#bstCanvas",
    "#inorderOutput",
    "#preorderOutput",
    "#postorderOutput",
    "#levelorderOutput"
  ]
}