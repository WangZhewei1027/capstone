{
  "meta": {
    "concept": "LongestCommonSubsequence",
    "topic": "Longest Common Subsequence Calculation",
    "educational_goal": "Demonstrate LCS computation using dynamic programming",
    "expected_interactions": [
      "compute",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Processing",
      "label": "Processing",
      "type": "atomic",
      "entry_actions": [
        "disableInputs()",
        "clearResult()"
      ],
      "exit_actions": [
        "enableInputs()"
      ]
    },
    {
      "id": "S2_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    },
    {
      "id": "S3_ResultDisplayed",
      "label": "ResultDisplayed",
      "type": "atomic",
      "entry_actions": [
        "displayResult()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_COMPUTE",
      "event_type": "user_action",
      "description": "User clicks the Compute LCS button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails due to empty strings"
    },
    {
      "id": "LCS_COMPUTATION_COMPLETE",
      "event_type": "system_event",
      "description": "LCS computation completes successfully"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Processing",
      "event": "USER_CLICKS_COMPUTE",
      "guard": "inputsNotEmpty",
      "actions": [
        "startLCSComputation()"
      ],
      "expected_observables": [
        "dom:computeBtnClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Processing",
      "to": "S3_ResultDisplayed",
      "event": "LCS_COMPUTATION_COMPLETE",
      "guard": "true",
      "actions": [
        "updateResultDisplay()"
      ],
      "expected_observables": [
        "dom:lcsComputationComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Processing",
      "to": "S2_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_COMPUTE",
      "guard": "true",
      "actions": [
        "clearErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#string1",
    "#string2",
    "#computeBtn",
    "#result",
    "#matrixContainer"
  ]
}