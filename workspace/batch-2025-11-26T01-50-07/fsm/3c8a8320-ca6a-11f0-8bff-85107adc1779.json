{
  "meta": {
    "concept": "SlidingWindow",
    "topic": "Sliding Window Technique Demo",
    "educational_goal": "Demonstrate the sliding window technique for calculating sums",
    "expected_interactions": [
      "run",
      "input",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ParsingInput",
      "label": "ParsingInput",
      "type": "atomic",
      "entry_actions": [
        "parseInputValues()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()"
      ],
      "exit_actions": [
        "clearOutput()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    },
    {
      "id": "S4_AnimatingWindow",
      "label": "AnimatingWindow",
      "type": "atomic",
      "entry_actions": [
        "startSlidingWindowAnimation()"
      ],
      "exit_actions": [
        "resetVisualization()"
      ]
    },
    {
      "id": "S5_CompletedAnimation",
      "label": "CompletedAnimation",
      "type": "atomic",
      "entry_actions": [
        "displayFinalOutput()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN",
      "event_type": "user_action",
      "description": "User clicks the Run button",
      "triggers": [
        "#runBtn"
      ]
    },
    {
      "id": "INPUT_PARSING_COMPLETE",
      "event_type": "system_event",
      "description": "Input parsing completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "ANIMATION_COMPLETE",
      "event_type": "system_event",
      "description": "Sliding window animation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ParsingInput",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": [
        "disableInputs()"
      ],
      "expected_observables": [
        "dom:runButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ParsingInput",
      "to": "S2_ValidatingInput",
      "event": "INPUT_PARSING_COMPLETE",
      "guard": "true",
      "actions": [
        "parseArray()",
        "parseWindowSize()"
      ],
      "expected_observables": [
        "dom:inputParsed"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S4_AnimatingWindow",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputsAreValid",
      "actions": [
        "startAnimation()"
      ],
      "expected_observables": [
        "dom:inputsValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDisplayed"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": [
        "clearError()"
      ],
      "expected_observables": [
        "dom:errorCleared"
      ],
      "timeout": 500
    },
    {
      "from": "S4_AnimatingWindow",
      "to": "S5_CompletedAnimation",
      "event": "ANIMATION_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeOutput()"
      ],
      "expected_observables": [
        "dom:animationFinished"
      ],
      "timeout": 3000
    }
  ],
  "components": [
    "#arrayInput",
    "#windowInput",
    "#runBtn",
    "#output",
    "#visualization"
  ]
}