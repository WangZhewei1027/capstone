{
  "meta": {
    "concept": "RedBlackTree",
    "topic": "Red-Black Tree Visualization",
    "educational_goal": "Demonstrate Red-Black Tree insertion, deletion, and visualization",
    "expected_interactions": [
      "insert",
      "delete",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearCanvas()",
        "clearMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Inserting",
      "label": "Inserting",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "showMessage('Inserting...')"
      ],
      "exit_actions": [
        "clearMessage()"
      ]
    },
    {
      "id": "S2_Deleting",
      "label": "Deleting",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "showMessage('Deleting...')"
      ],
      "exit_actions": [
        "clearMessage()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_TreeResetting",
      "label": "TreeResetting",
      "type": "atomic",
      "entry_actions": [
        "clearCanvas()",
        "showMessage('Tree has been reset.')"
      ],
      "exit_actions": [
        "clearMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button"
    },
    {
      "id": "USER_CLICKS_DELETE",
      "event_type": "user_action",
      "description": "User clicks the Delete button"
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    },
    {
      "id": "NODE_INSERTION_COMPLETE",
      "event_type": "system_event",
      "description": "Node insertion complete"
    },
    {
      "id": "NODE_DELETION_COMPLETE",
      "event_type": "system_event",
      "description": "Node deletion complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Inserting",
      "event": "USER_CLICKS_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "tryInsertKey(inputKey.value)"
      ],
      "expected_observables": [
        "dom:insertButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Inserting",
      "to": "S0_Idle",
      "event": "NODE_INSERTION_COMPLETE",
      "guard": "true",
      "actions": [
        "drawTree(tree.root)"
      ],
      "expected_observables": [
        "dom:treeUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Deleting",
      "event": "USER_CLICKS_DELETE",
      "guard": "inputNotEmpty",
      "actions": [
        "tryDeleteKey(inputKey.value)"
      ],
      "expected_observables": [
        "dom:deleteButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Deleting",
      "to": "S0_Idle",
      "event": "NODE_DELETION_COMPLETE",
      "guard": "true",
      "actions": [
        "drawTree(tree.root)"
      ],
      "expected_observables": [
        "dom:treeUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_TreeResetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetTree()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S4_TreeResetting",
      "to": "S0_Idle",
      "event": "NODE_DELETION_COMPLETE",
      "guard": "true",
      "actions": [
        "clearCanvas()",
        "clearMessage()"
      ],
      "expected_observables": [
        "dom:treeReset"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Inserting",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showMessage('Please enter a valid integer key.', true)"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_Deleting",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showMessage('Please enter a valid integer key.', true)"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputKey",
    "#insertBtn",
    "#deleteBtn",
    "#resetBtn",
    "#messages",
    "#treeCanvas"
  ]
}