{
  "meta": {
    "concept": "LinearRegression",
    "topic": "Linear Regression Visualization",
    "educational_goal": "Demonstrate linear regression through interactive data point manipulation",
    "expected_interactions": [
      "add_point",
      "clear_points"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "drawAxes(-10, 10, -10, 10)",
        "showNoPointsMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_PointAdded",
      "label": "PointAdded",
      "type": "atomic",
      "entry_actions": [
        "updateEquationDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_ClearPoints",
      "label": "ClearPoints",
      "type": "atomic",
      "entry_actions": [
        "resetPoints()",
        "drawAxes(-10, 10, -10, 10)",
        "showNoPointsMessage()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "UserClicksCanvas",
      "event_type": "user_action",
      "description": "User clicks on the canvas to add a data point"
    },
    {
      "id": "UserClicksClear",
      "event_type": "user_action",
      "description": "User clicks the Clear Points button"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_PointAdded",
      "event": "UserClicksCanvas",
      "guard": "true",
      "actions": [
        "addPoint()",
        "redraw()"
      ],
      "expected_observables": [
        "dom:canvasClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_PointAdded",
      "to": "S1_PointAdded",
      "event": "UserClicksCanvas",
      "guard": "true",
      "actions": [
        "addPoint()",
        "redraw()"
      ],
      "expected_observables": [
        "dom:canvasClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_PointAdded",
      "to": "S2_ClearPoints",
      "event": "UserClicksClear",
      "guard": "true",
      "actions": [
        "clearPoints()",
        "redraw()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S2_ClearPoints",
      "to": "S0_Idle",
      "event": "UserClicksClear",
      "guard": "true",
      "actions": [
        "resetPoints()",
        "redraw()"
      ],
      "expected_observables": [
        "dom:clearButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#plot",
    "#clear-btn",
    "#equation"
  ],
  "triggers": [
    "#plot",
    "#clear-btn"
  ]
}