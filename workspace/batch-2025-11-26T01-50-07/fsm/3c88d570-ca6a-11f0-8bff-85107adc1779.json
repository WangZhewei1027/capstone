{
  "meta": {
    "concept": "BubbleSort",
    "topic": "Bubble Sort Visualization",
    "educational_goal": "Demonstrate Bubble Sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableSortButton()",
        "enableInputField()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ParsingInput",
      "label": "ParsingInput",
      "type": "atomic",
      "entry_actions": [
        "parseInputValue()",
        "createBars()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "startBubbleSort()",
        "disableControls()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S3_Resetting",
      "label": "Resetting",
      "type": "atomic",
      "entry_actions": [
        "clearBars()",
        "resetSteps()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_SORT",
      "event_type": "user_action",
      "description": "User clicks the Start Bubble Sort button",
      "triggers": [
        "#sortBtn"
      ]
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button",
      "triggers": [
        "#resetBtn"
      ]
    },
    {
      "id": "INPUT_PARSED",
      "event_type": "system_event",
      "description": "Input has been parsed successfully"
    },
    {
      "id": "SORTING_COMPLETED",
      "event_type": "system_event",
      "description": "Bubble sort has completed"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ParsingInput",
      "event": "USER_CLICKS_SORT",
      "guard": "inputIsValid",
      "actions": [
        "parseInput()",
        "createBars()"
      ],
      "expected_observables": [
        "dom:sortButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ParsingInput",
      "to": "S2_Sorting",
      "event": "INPUT_PARSED",
      "guard": "true",
      "actions": [
        "bubbleSortVisual()"
      ],
      "expected_observables": [
        "dom:inputParsed"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_Sorting",
      "to": "S0_Idle",
      "event": "SORTING_COMPLETED",
      "guard": "true",
      "actions": [
        "markSortedBars()",
        "enableSortButton()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S3_Resetting",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "clearAllBars()",
        "resetSteps()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S3_Resetting",
      "to": "S0_Idle",
      "event": "RESET_COMPLETED",
      "guard": "true",
      "actions": [
        "enableSortButton()",
        "enableInputField()"
      ],
      "expected_observables": [
        "dom:resetCompleted"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#sortBtn",
    "#resetBtn",
    "#arrayContainer",
    "#steps"
  ]
}