{
  "meta": {
    "concept": "TwoPointers",
    "topic": "Two Pointers Technique Visualization",
    "educational_goal": "Demonstrate finding two numbers that sum to a target using the two pointers technique",
    "expected_interactions": [
      "run",
      "input"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableInputs()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "readInputValues()",
        "highlightInputs()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_RunningAlgorithm",
      "label": "RunningAlgorithm",
      "type": "atomic",
      "entry_actions": [
        "initializePointers()",
        "startAlgorithm()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_DisplayResults",
      "label": "DisplayResults",
      "type": "atomic",
      "entry_actions": [
        "formatOutput()",
        "showOutput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorMessage()"
      ],
      "exit_actions": [
        "clearErrorMessage()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN",
      "event_type": "user_action",
      "description": "User clicks the Run Two Pointers button"
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "ALGORITHM_COMPLETED",
      "event_type": "system_event",
      "description": "Two pointers algorithm completes execution"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ValidatingInput",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": [
        "disableInputs()"
      ],
      "expected_observables": [
        "dom:runBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S2_RunningAlgorithm",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputsAreValid",
      "actions": [
        "parseInputArray()",
        "setTargetValue()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S4_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showError()",
        "focusInputFields()"
      ],
      "expected_observables": [
        "dom:errorShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_RunningAlgorithm",
      "to": "S3_DisplayResults",
      "event": "ALGORITHM_COMPLETED",
      "guard": "true",
      "actions": [
        "updateOutputArea()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 2000
    },
    {
      "from": "S4_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RUN",
      "guard": "true",
      "actions": [
        "clearErrorState()"
      ],
      "expected_observables": [
        "dom:errorCleared"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputArray",
    "#inputTarget",
    "#runBtn",
    "#outputArea"
  ]
}