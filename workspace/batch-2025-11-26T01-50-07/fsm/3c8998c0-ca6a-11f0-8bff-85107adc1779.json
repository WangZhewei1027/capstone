{
  "meta": {
    "concept": "BreadthFirstSearch",
    "topic": "Breadth-First Search (BFS) Visualization",
    "educational_goal": "Demonstrate BFS traversal of a graph",
    "expected_interactions": [
      "runBFS"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "drawGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ParsingGraph",
      "label": "ParsingGraph",
      "type": "atomic",
      "entry_actions": [
        "parseGraph(graphInput.value)"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_AnimatingBFS",
      "label": "AnimatingBFS",
      "type": "atomic",
      "entry_actions": [
        "animateBFS(startNodeInput.value.trim())"
      ],
      "exit_actions": [
        "clearSteps()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_RUN_BFS",
      "event_type": "user_action",
      "description": "User clicks the Run BFS button",
      "triggers": [
        "#runBFS"
      ]
    },
    {
      "id": "GRAPH_PARSE_SUCCESS",
      "event_type": "system_event",
      "description": "Graph parsed successfully"
    },
    {
      "id": "GRAPH_PARSE_FAILURE",
      "event_type": "system_event",
      "description": "Graph parsing failed due to invalid JSON"
    },
    {
      "id": "BFS_ANIMATION_COMPLETE",
      "event_type": "system_event",
      "description": "BFS animation completed"
    },
    {
      "id": "START_NODE_NOT_FOUND",
      "event_type": "system_event",
      "description": "Start node not found in graph"
    },
    {
      "id": "START_NODE_EMPTY",
      "event_type": "system_event",
      "description": "Start node input is empty"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ParsingGraph",
      "event": "USER_CLICKS_RUN_BFS",
      "guard": "true",
      "actions": [
        "clearSteps()"
      ],
      "expected_observables": [
        "dom:runBFSButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ParsingGraph",
      "to": "S2_AnimatingBFS",
      "event": "GRAPH_PARSE_SUCCESS",
      "guard": "graphIsValid",
      "actions": [
        "initializeBFS()"
      ],
      "expected_observables": [
        "dom:graphParsed"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ParsingGraph",
      "to": "S3_ErrorAlert",
      "event": "GRAPH_PARSE_FAILURE",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S2_AnimatingBFS",
      "to": "S0_Idle",
      "event": "BFS_ANIMATION_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeBFS()"
      ],
      "expected_observables": [
        "dom:bfsAnimationComplete"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ParsingGraph",
      "to": "S3_ErrorAlert",
      "event": "START_NODE_NOT_FOUND",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:startNodeNotFound"
      ],
      "timeout": 500
    },
    {
      "from": "S1_ParsingGraph",
      "to": "S3_ErrorAlert",
      "event": "START_NODE_EMPTY",
      "guard": "true",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:startNodeEmpty"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graphInput",
    "#startNode",
    "#runBFS",
    "#steps",
    "#graphCanvas"
  ]
}