{
  "meta": {
    "concept": "LinearSearch",
    "topic": "Linear Search Visualization",
    "educational_goal": "Demonstrate linear search algorithm",
    "expected_interactions": [
      "start_search",
      "reset_array"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "reset()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "linearSearch(target)"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_ElementFound",
      "label": "ElementFound",
      "type": "atomic",
      "entry_actions": [
        "highlightFoundElement()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_ElementNotFound",
      "label": "ElementNotFound",
      "type": "atomic",
      "entry_actions": [
        "displayNotFoundMessage()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Start Search button",
      "triggers": [
        "#startSearch"
      ]
    },
    {
      "id": "USER_CLICKS_RESET_ARRAY",
      "event_type": "user_action",
      "description": "User clicks the Reset Array button",
      "triggers": [
        "#resetArray"
      ]
    },
    {
      "id": "SEARCH_COMPLETE_FOUND",
      "event_type": "system_event",
      "description": "Search operation completes and element is found"
    },
    {
      "id": "SEARCH_COMPLETE_NOT_FOUND",
      "event_type": "system_event",
      "description": "Search operation completes and element is not found"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Searching",
      "event": "USER_CLICKS_START_SEARCH",
      "guard": "inputIsValid",
      "actions": [
        "captureSearchInput()",
        "disableControls()"
      ],
      "expected_observables": [
        "dom:startSearchButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Searching",
      "to": "S2_ElementFound",
      "event": "SEARCH_COMPLETE_FOUND",
      "guard": "true",
      "actions": [
        "highlightFoundElement()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:elementFound"
      ],
      "timeout": 500
    },
    {
      "from": "S1_Searching",
      "to": "S3_ElementNotFound",
      "event": "SEARCH_COMPLETE_NOT_FOUND",
      "guard": "true",
      "actions": [
        "displayNotFoundMessage()",
        "enableControls()"
      ],
      "expected_observables": [
        "dom:elementNotFound"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET_ARRAY",
      "guard": "true",
      "actions": [
        "reset()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayInput",
    "#searchInput",
    "#startSearch",
    "#resetArray",
    "#array",
    "#message"
  ]
}