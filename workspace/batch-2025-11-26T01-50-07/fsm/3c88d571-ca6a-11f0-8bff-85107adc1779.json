{
  "meta": {
    "concept": "SelectionSort",
    "topic": "Selection Sort Visualization",
    "educational_goal": "Demonstrate Selection Sort algorithm through visualization",
    "expected_interactions": [
      "start",
      "reset",
      "changeSize",
      "changeSpeed"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "highlightCurrent()"
      ],
      "exit_actions": [
        "clearHighlights()"
      ]
    },
    {
      "id": "S2_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "finalizeSorting()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Sorting button",
      "triggers": [
        "#startBtn"
      ]
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset Array button",
      "triggers": [
        "#resetBtn"
      ]
    },
    {
      "id": "USER_CHANGES_SIZE",
      "event_type": "user_action",
      "description": "User changes the array size",
      "triggers": [
        "#sizeInput"
      ]
    },
    {
      "id": "USER_CHANGES_SPEED",
      "event_type": "user_action",
      "description": "User changes the sorting speed",
      "triggers": [
        "#speedRange"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_Sorting",
      "event": "USER_CLICKS_START",
      "guard": "notSorting",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_Sorting",
      "to": "S2_Sorted",
      "event": "sortingComplete",
      "guard": "true",
      "actions": [
        "markSorted()"
      ],
      "expected_observables": [
        "dom:sortingComplete"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_Sorting",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetArray()"
      ],
      "expected_observables": [
        "dom:resetButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S0_Idle",
      "event": "USER_CHANGES_SIZE",
      "guard": "true",
      "actions": [
        "reset()"
      ],
      "expected_observables": [
        "dom:sizeInputChanged"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S0_Idle",
      "event": "USER_CHANGES_SPEED",
      "guard": "true",
      "actions": [
        "updateSpeed()"
      ],
      "expected_observables": [
        "dom:speedInputChanged"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#arrayContainer",
    "#startBtn",
    "#resetBtn",
    "#sizeInput",
    "#speedRange"
  ]
}