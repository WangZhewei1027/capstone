{
  "meta": {
    "concept": "PrimsAlgorithm",
    "topic": "Prim's Algorithm Visualization",
    "educational_goal": "Demonstrate Prim's Algorithm for Minimum Spanning Tree",
    "expected_interactions": [
      "generate",
      "start",
      "next",
      "reset"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearLog()",
        "drawGraph()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_GeneratingGraph",
      "label": "GeneratingGraph",
      "type": "atomic",
      "entry_actions": [
        "generateRandomGraph()",
        "enableStartButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_AlgorithmStarted",
      "label": "AlgorithmStarted",
      "type": "atomic",
      "entry_actions": [
        "preparePrimSteps()",
        "updateStateFromStep()"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_StepCompleted",
      "label": "StepCompleted",
      "type": "atomic",
      "entry_actions": [
        "updateStateFromStep()",
        "logStepMessage()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_AlgorithmCompleted",
      "label": "AlgorithmCompleted",
      "type": "atomic",
      "entry_actions": [
        "logCompletionMessage()",
        "disableNextButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorState",
      "label": "ErrorState",
      "type": "atomic",
      "entry_actions": [
        "logErrorMessage()",
        "disableNextButton()"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE",
      "event_type": "user_action",
      "description": "User clicks the Generate Random Graph button",
      "triggers": [
        "#generate-graph"
      ]
    },
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Prim's Algorithm button",
      "triggers": [
        "#start-prim"
      ]
    },
    {
      "id": "USER_CLICKS_NEXT",
      "event_type": "user_action",
      "description": "User clicks the Next Step button",
      "triggers": [
        "#next-step"
      ]
    },
    {
      "id": "USER_CLICKS_RESET",
      "event_type": "user_action",
      "description": "User clicks the Reset button",
      "triggers": [
        "#reset"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_GeneratingGraph",
      "event": "USER_CLICKS_GENERATE",
      "guard": "true",
      "actions": [
        "disableGenerateButton()"
      ],
      "expected_observables": [
        "dom:graphGenerated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_GeneratingGraph",
      "to": "S0_Idle",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "enableNextButton()"
      ],
      "expected_observables": [
        "dom:graphReady"
      ],
      "timeout": 500
    },
    {
      "from": "S2_AlgorithmStarted",
      "to": "S3_StepCompleted",
      "event": "USER_CLICKS_NEXT",
      "guard": "stepIndex < sequenceSteps.length",
      "actions": [
        "updateStepIndex()"
      ],
      "expected_observables": [
        "dom:stepUpdated"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_StepCompleted",
      "to": "S4_AlgorithmCompleted",
      "event": "USER_CLICKS_NEXT",
      "guard": "stepIndex === sequenceSteps.length",
      "actions": [
        "logCompletionMessage()",
        "disableNextButton()"
      ],
      "expected_observables": [
        "dom:algorithmCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S3_StepCompleted",
      "to": "S5_ErrorState",
      "event": "USER_CLICKS_NEXT",
      "guard": "stepType === 'error'",
      "actions": [
        "logErrorMessage()",
        "disableNextButton()"
      ],
      "expected_observables": [
        "dom:errorOccurred"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S0_Idle",
      "event": "USER_CLICKS_RESET",
      "guard": "true",
      "actions": [
        "resetState()"
      ],
      "expected_observables": [
        "dom:stateReset"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#graph-canvas",
    "#generate-graph",
    "#start-prim",
    "#next-step",
    "#reset",
    "#graph-size"
  ]
}