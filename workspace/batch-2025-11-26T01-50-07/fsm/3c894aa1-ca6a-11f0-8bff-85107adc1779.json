{
  "meta": {
    "concept": "RadixSort",
    "topic": "Radix Sort Visualization",
    "educational_goal": "Demonstrate Radix Sort algorithm step-by-step",
    "expected_interactions": [
      "start_sorting",
      "adjust_speed",
      "input_numbers"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray([170, 45, 75, 90, 802, 24, 2, 66])",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ValidatingInput",
      "label": "ValidatingInput",
      "type": "atomic",
      "entry_actions": [
        "readInputValue()",
        "highlightInput()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "logMessage('Sorting started')",
        "disableControls()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()",
        "highlightError()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    },
    {
      "id": "S4_SortingComplete",
      "label": "SortingComplete",
      "type": "atomic",
      "entry_actions": [
        "logMessage('Sorting completed!')",
        "renderArray(output)"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START",
      "event_type": "user_action",
      "description": "User clicks the Start Sorting button",
      "triggers": [
        "#startBtn"
      ]
    },
    {
      "id": "USER_ADJUSTS_SPEED",
      "event_type": "user_action",
      "description": "User adjusts the animation speed",
      "triggers": [
        "#speedRange"
      ]
    },
    {
      "id": "INPUT_VALIDATION_COMPLETE",
      "event_type": "system_event",
      "description": "Input validation completes successfully"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting operation completes"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ValidatingInput",
      "event": "USER_CLICKS_START",
      "guard": "inputNotEmpty",
      "actions": [
        "captureInput()"
      ],
      "expected_observables": [
        "dom:startButtonClicked"
      ],
      "timeout": 2000
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S2_Sorting",
      "event": "INPUT_VALIDATION_COMPLETE",
      "guard": "inputIsValid",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:inputValidated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ValidatingInput",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "inputIsInvalid",
      "actions": [
        "showError()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_Sorting",
      "to": "S4_SortingComplete",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingCompleted"
      ],
      "timeout": 3000
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_START",
      "guard": "true",
      "actions": [
        "clearErrorState()",
        "resetInput()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#inputArray",
    "#startBtn",
    "#speedRange",
    "#arrayContainer",
    "#bucketsContainer",
    "#log"
  ]
}