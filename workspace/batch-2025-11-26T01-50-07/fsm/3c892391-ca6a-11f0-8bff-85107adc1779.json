{
  "meta": {
    "concept": "HeapSort",
    "topic": "Heap Sort Visualization",
    "educational_goal": "Demonstrate Heap Sort algorithm step-by-step",
    "expected_interactions": [
      "start_sort",
      "change_speed"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "renderArray()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ParsingInput",
      "label": "ParsingInput",
      "type": "atomic",
      "entry_actions": [
        "parseInput(inputArray.value)",
        "clearLog()"
      ],
      "exit_actions": []
    },
    {
      "id": "S2_HeapBuilding",
      "label": "HeapBuilding",
      "type": "atomic",
      "entry_actions": [
        "log('Building max heap...')"
      ],
      "exit_actions": []
    },
    {
      "id": "S3_Sorting",
      "label": "Sorting",
      "type": "atomic",
      "entry_actions": [
        "log('Starting sort...')"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_Comparing",
      "label": "Comparing",
      "type": "atomic",
      "entry_actions": [
        "renderArray({ comparing: [left, largest] }, sortedIndices)"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_Swapping",
      "label": "Swapping",
      "type": "atomic",
      "entry_actions": [
        "renderArray({ swapping: [i, largest] }, sortedIndices)"
      ],
      "exit_actions": []
    },
    {
      "id": "S6_Sorted",
      "label": "Sorted",
      "type": "atomic",
      "entry_actions": [
        "log('Array is fully sorted.')"
      ],
      "exit_actions": []
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_START_SORT",
      "event_type": "user_action",
      "description": "User clicks the Start Sort button",
      "triggers": [
        "#startBtn"
      ]
    },
    {
      "id": "USER_CHANGES_SPEED",
      "event_type": "user_action",
      "description": "User changes the speed slider",
      "triggers": [
        "#speed"
      ]
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input is invalid or empty"
    },
    {
      "id": "HEAP_BUILDING_COMPLETE",
      "event_type": "system_event",
      "description": "Max heap has been built"
    },
    {
      "id": "SORTING_COMPLETE",
      "event_type": "system_event",
      "description": "Sorting process is complete"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ParsingInput",
      "event": "USER_CLICKS_START_SORT",
      "guard": "inputIsValid",
      "actions": [
        "startSort()"
      ],
      "expected_observables": [
        "dom:startBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ParsingInput",
      "to": "S2_HeapBuilding",
      "event": "HEAP_BUILDING_COMPLETE",
      "guard": "true",
      "actions": [
        "buildMaxHeap()"
      ],
      "expected_observables": [
        "dom:heapBuildingStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_HeapBuilding",
      "to": "S3_Sorting",
      "event": "HEAP_BUILDING_COMPLETE",
      "guard": "true",
      "actions": [
        "startSorting()"
      ],
      "expected_observables": [
        "dom:heapBuilt"
      ],
      "timeout": 2000
    },
    {
      "from": "S3_Sorting",
      "to": "S4_Comparing",
      "event": "HEAP_BUILDING_COMPLETE",
      "guard": "true",
      "actions": [
        "compareElements()"
      ],
      "expected_observables": [
        "dom:comparingElements"
      ],
      "timeout": 1000
    },
    {
      "from": "S4_Comparing",
      "to": "S5_Swapping",
      "event": "HEAP_BUILDING_COMPLETE",
      "guard": "true",
      "actions": [
        "swapElements()"
      ],
      "expected_observables": [
        "dom:elementsSwapped"
      ],
      "timeout": 1000
    },
    {
      "from": "S5_Swapping",
      "to": "S3_Sorting",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "continueSorting()"
      ],
      "expected_observables": [
        "dom:sortingContinued"
      ],
      "timeout": 1000
    },
    {
      "from": "S3_Sorting",
      "to": "S6_Sorted",
      "event": "SORTING_COMPLETE",
      "guard": "true",
      "actions": [
        "finalizeSorting()"
      ],
      "expected_observables": [
        "dom:sortingFinished"
      ],
      "timeout": 1000
    }
  ],
  "components": [
    "#inputArray",
    "#startBtn",
    "#speed",
    "#array",
    "#log"
  ]
}