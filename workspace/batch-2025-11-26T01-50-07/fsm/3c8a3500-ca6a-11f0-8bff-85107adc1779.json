{
  "meta": {
    "concept": "KnapsackProblem",
    "topic": "Knapsack Problem Demo",
    "educational_goal": "Demonstrate the 0/1 Knapsack problem solution",
    "expected_interactions": [
      "add_item",
      "solve_knapsack"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "enableAddItemButton()",
        "enableSolveButton()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_AddingItem",
      "label": "AddingItem",
      "type": "atomic",
      "entry_actions": [
        "createItemRow()"
      ],
      "exit_actions": [
        "refreshRowNumbers()"
      ]
    },
    {
      "id": "S2_SolvingKnapsack",
      "label": "SolvingKnapsack",
      "type": "atomic",
      "entry_actions": [
        "validateInputs()",
        "calculateKnapsack()"
      ],
      "exit_actions": [
        "displayResult()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearErrorDialog()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_ADD_ITEM",
      "event_type": "user_action",
      "description": "User clicks the Add Item button"
    },
    {
      "id": "USER_CLICKS_SOLVE_KNAPSACK",
      "event_type": "user_action",
      "description": "User clicks the Solve Knapsack button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails"
    },
    {
      "id": "INPUT_VALIDATION_SUCCESS",
      "event_type": "system_event",
      "description": "Input validation succeeds"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_AddingItem",
      "event": "USER_CLICKS_ADD_ITEM",
      "guard": "true",
      "actions": [
        "addItemToTable()"
      ],
      "expected_observables": [
        "dom:addItemButtonClicked"
      ],
      "timeout": 500
    },
    {
      "from": "S1_AddingItem",
      "to": "S0_Idle",
      "event": "USER_CLICKS_ADD_ITEM",
      "guard": "true",
      "actions": [
        "refreshRowNumbers()"
      ],
      "expected_observables": [
        "dom:itemAdded"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_SolvingKnapsack",
      "event": "USER_CLICKS_SOLVE_KNAPSACK",
      "guard": "inputsAreValid",
      "actions": [
        "validateInputs()"
      ],
      "expected_observables": [
        "dom:solveKnapsackButtonClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SolvingKnapsack",
      "to": "S0_Idle",
      "event": "INPUT_VALIDATION_SUCCESS",
      "guard": "true",
      "actions": [
        "displayResult()"
      ],
      "expected_observables": [
        "dom:knapsackSolved"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_SolvingKnapsack",
      "to": "S3_ErrorAlert",
      "event": "INPUT_VALIDATION_FAILED",
      "guard": "true",
      "actions": [
        "showErrorDialog()"
      ],
      "expected_observables": [
        "dom:validationError"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_SOLVE_KNAPSACK",
      "guard": "true",
      "actions": [
        "clearErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#capacity",
    "#items-table",
    "#add-item",
    "#solve-knapsack",
    "#result"
  ]
}