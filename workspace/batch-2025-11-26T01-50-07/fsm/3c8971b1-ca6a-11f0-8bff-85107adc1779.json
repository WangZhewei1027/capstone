{
  "meta": {
    "concept": "BinarySearch",
    "topic": "Binary Search Demonstration",
    "educational_goal": "Demonstrate binary search algorithm with visualization",
    "expected_interactions": [
      "generate",
      "start_search"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "clearDisplay()",
        "enableControls()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_ArrayGenerating",
      "label": "ArrayGenerating",
      "type": "atomic",
      "entry_actions": [
        "generateSortedArray()",
        "renderArray()"
      ],
      "exit_actions": [
        "logGeneratedArray()"
      ]
    },
    {
      "id": "S2_Searching",
      "label": "Searching",
      "type": "atomic",
      "entry_actions": [
        "disableControls()",
        "binarySearchVisual()"
      ],
      "exit_actions": [
        "enableControls()"
      ]
    },
    {
      "id": "S3_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorDialog()"
      ],
      "exit_actions": [
        "clearError()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_GENERATE_ARRAY",
      "event_type": "user_action",
      "description": "User clicks the Generate Sorted Array button",
      "triggers": [
        "#generate-array"
      ]
    },
    {
      "id": "USER_CLICKS_START_SEARCH",
      "event_type": "user_action",
      "description": "User clicks the Start Search button",
      "triggers": [
        "#start-search"
      ]
    },
    {
      "id": "USER_INPUTS_ARRAY_SIZE",
      "event_type": "user_action",
      "description": "User inputs array size",
      "triggers": [
        "#array-size"
      ]
    },
    {
      "id": "USER_INPUTS_TARGET_VALUE",
      "event_type": "user_action",
      "description": "User inputs target value",
      "triggers": [
        "#target-value"
      ]
    },
    {
      "id": "USER_ADJUSTS_SPEED_CONTROL",
      "event_type": "user_action",
      "description": "User adjusts the speed control slider",
      "triggers": [
        "#speed-range"
      ]
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_ArrayGenerating",
      "event": "USER_CLICKS_GENERATE_ARRAY",
      "guard": "arraySizeValid",
      "actions": [
        "clearDisplay()",
        "generateSortedArray()"
      ],
      "expected_observables": [
        "dom:arrayGenerated"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_ArrayGenerating",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE_ARRAY",
      "guard": "true",
      "actions": [
        "logGeneratedArray()"
      ],
      "expected_observables": [
        "dom:arrayRendered"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_Searching",
      "event": "USER_CLICKS_START_SEARCH",
      "guard": "arrayNotEmpty && targetValueValid",
      "actions": [
        "disableControls()",
        "binarySearchVisual()"
      ],
      "expected_observables": [
        "dom:searchStarted"
      ],
      "timeout": 2000
    },
    {
      "from": "S2_Searching",
      "to": "S0_Idle",
      "event": "USER_CLICKS_START_SEARCH",
      "guard": "true",
      "actions": [
        "enableControls()"
      ],
      "expected_observables": [
        "dom:searchCompleted"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_ErrorAlert",
      "event": "USER_CLICKS_START_SEARCH",
      "guard": "arrayEmpty || targetValueInvalid",
      "actions": [
        "showErrorDialog()"
      ],
      "expected_observables": [
        "dom:errorDialogShown"
      ],
      "timeout": 500
    },
    {
      "from": "S3_ErrorAlert",
      "to": "S0_Idle",
      "event": "USER_CLICKS_GENERATE_ARRAY",
      "guard": "true",
      "actions": [
        "clearError()"
      ],
      "expected_observables": [
        "dom:errorDialogClosed"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "#array-container",
    "#generate-array",
    "#start-search",
    "#array-size",
    "#target-value",
    "#speed-range",
    "#log"
  ]
}