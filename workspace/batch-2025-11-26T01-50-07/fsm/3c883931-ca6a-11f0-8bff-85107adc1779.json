{
  "meta": {
    "concept": "Heap",
    "topic": "Heap (Min/Max) Demonstration",
    "educational_goal": "Demonstrate Min Heap and Max Heap operations",
    "expected_interactions": [
      "insert",
      "extract"
    ]
  },
  "states": [
    {
      "id": "S0_Idle",
      "label": "Idle",
      "type": "idle",
      "entry_actions": [
        "updateDisplay()"
      ],
      "exit_actions": []
    },
    {
      "id": "S1_InsertMinHeap",
      "label": "InsertMinHeap",
      "type": "atomic",
      "entry_actions": [
        "readMinInputValue()",
        "highlightMinInput()"
      ],
      "exit_actions": [
        "clearMinInputHighlight()"
      ]
    },
    {
      "id": "S2_InsertMaxHeap",
      "label": "InsertMaxHeap",
      "type": "atomic",
      "entry_actions": [
        "readMaxInputValue()",
        "highlightMaxInput()"
      ],
      "exit_actions": [
        "clearMaxInputHighlight()"
      ]
    },
    {
      "id": "S3_ExtractMinHeap",
      "label": "ExtractMinHeap",
      "type": "atomic",
      "entry_actions": [
        "showExtractedMinAlert()"
      ],
      "exit_actions": []
    },
    {
      "id": "S4_ExtractMaxHeap",
      "label": "ExtractMaxHeap",
      "type": "atomic",
      "entry_actions": [
        "showExtractedMaxAlert()"
      ],
      "exit_actions": []
    },
    {
      "id": "S5_ErrorAlert",
      "label": "ErrorAlert",
      "type": "atomic",
      "entry_actions": [
        "showErrorAlert()"
      ],
      "exit_actions": [
        "clearErrorAlert()"
      ]
    }
  ],
  "events": [
    {
      "id": "USER_CLICKS_MIN_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button for Min Heap"
    },
    {
      "id": "USER_CLICKS_MIN_EXTRACT",
      "event_type": "user_action",
      "description": "User clicks the Extract Min button"
    },
    {
      "id": "USER_CLICKS_MAX_INSERT",
      "event_type": "user_action",
      "description": "User clicks the Insert button for Max Heap"
    },
    {
      "id": "USER_CLICKS_MAX_EXTRACT",
      "event_type": "user_action",
      "description": "User clicks the Extract Max button"
    },
    {
      "id": "INPUT_VALIDATION_FAILED",
      "event_type": "system_event",
      "description": "Input validation fails for insert"
    },
    {
      "id": "HEAP_IS_EMPTY",
      "event_type": "system_event",
      "description": "Heap is empty on extract attempt"
    }
  ],
  "transitions": [
    {
      "from": "S0_Idle",
      "to": "S1_InsertMinHeap",
      "event": "USER_CLICKS_MIN_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "insertMinHeapValue()"
      ],
      "expected_observables": [
        "dom:minInsertBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S1_InsertMinHeap",
      "to": "S0_Idle",
      "event": "USER_CLICKS_MIN_INSERT",
      "guard": "true",
      "actions": [
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:minHeapUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S3_ExtractMinHeap",
      "event": "USER_CLICKS_MIN_EXTRACT",
      "guard": "minHeapNotEmpty",
      "actions": [
        "extractMinHeapValue()"
      ],
      "expected_observables": [
        "dom:minExtractBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ErrorAlert",
      "event": "USER_CLICKS_MIN_EXTRACT",
      "guard": "minHeapIsEmpty",
      "actions": [
        "showMinHeapEmptyAlert()"
      ],
      "expected_observables": [
        "dom:minHeapEmptyAlertShown"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S2_InsertMaxHeap",
      "event": "USER_CLICKS_MAX_INSERT",
      "guard": "inputNotEmpty",
      "actions": [
        "insertMaxHeapValue()"
      ],
      "expected_observables": [
        "dom:maxInsertBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S2_InsertMaxHeap",
      "to": "S0_Idle",
      "event": "USER_CLICKS_MAX_INSERT",
      "guard": "true",
      "actions": [
        "updateDisplay()"
      ],
      "expected_observables": [
        "dom:maxHeapUpdated"
      ],
      "timeout": 500
    },
    {
      "from": "S0_Idle",
      "to": "S4_ExtractMaxHeap",
      "event": "USER_CLICKS_MAX_EXTRACT",
      "guard": "maxHeapNotEmpty",
      "actions": [
        "extractMaxHeapValue()"
      ],
      "expected_observables": [
        "dom:maxExtractBtnClicked"
      ],
      "timeout": 1000
    },
    {
      "from": "S0_Idle",
      "to": "S5_ErrorAlert",
      "event": "USER_CLICKS_MAX_EXTRACT",
      "guard": "maxHeapIsEmpty",
      "actions": [
        "showMaxHeapEmptyAlert()"
      ],
      "expected_observables": [
        "dom:maxHeapEmptyAlertShown"
      ],
      "timeout": 500
    }
  ],
  "components": [
    "minInput",
    "minInsertBtn",
    "minExtractBtn",
    "maxInput",
    "maxInsertBtn",
    "maxExtractBtn",
    "minHeapArray",
    "minHeapVisual",
    "maxHeapArray",
    "maxHeapVisual"
  ]
}