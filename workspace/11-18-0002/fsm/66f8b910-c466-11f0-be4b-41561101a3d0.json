{
  "topic": "Interactive Application",
  "description": "Finite state machine for an interactive Binary Search Tree exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "ADD_NODE": "adding",
        "SEARCH_NODE": "searching"
      }
    },
    {
      "name": "adding",
      "onEnter": "drawTree",
      "onExit": "clearInput",
      "on": {
        "NODE_ADDED": "idle"
      }
    },
    {
      "name": "searching",
      "onEnter": "performSearch",
      "onExit": "clearInput",
      "on": {
        "SEARCH_COMPLETED": "idle"
      }
    }
  ],
  "events": [
    "ADD_NODE",
    "SEARCH_NODE",
    "NODE_ADDED",
    "SEARCH_COMPLETED"
  ],
  "notes": "The FSM captures the states of adding and searching for nodes in a Binary Search Tree."
}