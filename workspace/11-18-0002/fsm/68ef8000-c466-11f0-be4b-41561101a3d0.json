{
  "topic": "Interactive Application",
  "description": "Finite state machine for the Heap (Min/Max) Interactive Exploration application.",
  "states": [
    {
      "name": "idle",
      "onEnter": "noop",
      "onExit": "noop",
      "on": {
        "BUILD_HEAP": "buildingHeap",
        "HEAPIFY": "heapifying"
      }
    },
    {
      "name": "buildingHeap",
      "onEnter": "displayHeap",
      "onExit": "noop",
      "on": {
        "HEAP_BUILD_SUCCESS": "idle",
        "HEAP_BUILD_FAIL": "idle"
      }
    },
    {
      "name": "heapifying",
      "onEnter": "displayHeap",
      "onExit": "noop",
      "on": {
        "HEAPIFY_COMPLETE": "idle"
      }
    }
  ],
  "events": [
    "BUILD_HEAP",
    "HEAPIFY",
    "HEAP_BUILD_SUCCESS",
    "HEAP_BUILD_FAIL",
    "HEAPIFY_COMPLETE"
  ],
  "notes": "The application transitions between idle, buildingHeap, and heapifying states based on user interactions."
}