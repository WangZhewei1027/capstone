{
  "topic": "Array",
  "description": "Finite state machine for JavaScript array operations demo",
  "states": [
    {
      "name": "idle",
      "onEnter": "updateArrayOutput",
      "onExit": "noop",
      "on": {
        "ADD_CLICKED": "adding",
        "REMOVE_LAST_CLICKED": "removing",
        "SHOW_LENGTH_CLICKED": "showingLength",
        "CLEAR_CLICKED": "clearing"
      }
    },
    {
      "name": "adding",
      "onEnter": "addItem",
      "onExit": "noop",
      "on": {
        "ITEM_ADDED": "idle"
      }
    },
    {
      "name": "removing",
      "onEnter": "removeLastItem",
      "onExit": "noop",
      "on": {
        "ITEM_REMOVED": "idle"
      }
    },
    {
      "name": "showingLength",
      "onEnter": "showArrayLength",
      "onExit": "noop",
      "on": {
        "LENGTH_SHOWN": "idle"
      }
    },
    {
      "name": "clearing",
      "onEnter": "clearArray",
      "onExit": "noop",
      "on": {
        "ARRAY_CLEARED": "idle"
      }
    }
  ],
  "events": [
    "ADD_CLICKED",
    "REMOVE_LAST_CLICKED",
    "SHOW_LENGTH_CLICKED",
    "CLEAR_CLICKED",
    "ITEM_ADDED",
    "ITEM_REMOVED",
    "LENGTH_SHOWN",
    "ARRAY_CLEARED"
  ],
  "triggers": {
    "ADD_CLICKED": "#btnAdd",
    "REMOVE_LAST_CLICKED": "#btnRemoveLast",
    "SHOW_LENGTH_CLICKED": "#btnShowLength",
    "CLEAR_CLICKED": "#btnClear"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}