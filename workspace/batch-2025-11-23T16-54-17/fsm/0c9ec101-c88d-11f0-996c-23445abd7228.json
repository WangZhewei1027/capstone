{
  "topic": "Stack",
  "description": "Finite State Machine for a Stack interactive demo application",
  "states": [
    {
      "name": "empty",
      "onEnter": "updateStackDisplay",
      "onExit": "noop",
      "on": {
        "PUSH_CLICKED": "not_empty"
      }
    },
    {
      "name": "not_empty",
      "onEnter": "updateStackDisplay",
      "onExit": "noop",
      "on": {
        "POP_CLICKED": "check_empty",
        "CLEAR_CLICKED": "empty",
        "PEEK_CLICKED": "not_empty"
      }
    },
    {
      "name": "check_empty",
      "onEnter": "checkIfEmpty",
      "onExit": "noop",
      "on": {
        "EMPTY_CONFIRMED": "empty",
        "NOT_EMPTY_CONFIRMED": "not_empty"
      }
    }
  ],
  "events": [
    "PUSH_CLICKED",
    "POP_CLICKED",
    "PEEK_CLICKED",
    "CLEAR_CLICKED",
    "EMPTY_CONFIRMED",
    "NOT_EMPTY_CONFIRMED"
  ],
  "triggers": {
    "PUSH_CLICKED": "#push-btn",
    "POP_CLICKED": "#pop-btn",
    "PEEK_CLICKED": "#peek-btn",
    "CLEAR_CLICKED": "#clear-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}