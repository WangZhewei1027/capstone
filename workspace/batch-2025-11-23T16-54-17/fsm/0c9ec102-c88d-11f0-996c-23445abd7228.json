{
  "topic": "Queue",
  "description": "Finite state machine for a queue demonstration application",
  "states": [
    {
      "name": "empty",
      "onEnter": "renderQueue, updateButtons",
      "onExit": "noop",
      "on": {
        "ENQUEUE_CLICKED": "non_empty"
      }
    },
    {
      "name": "non_empty",
      "onEnter": "renderQueue, updateButtons",
      "onExit": "noop",
      "on": {
        "DEQUEUE_CLICKED": "empty",
        "PEEK_CLICKED": "non_empty",
        "CLEAR_CLICKED": "empty",
        "ENQUEUE_CLICKED": "non_empty"
      }
    }
  ],
  "events": [
    "ENQUEUE_CLICKED",
    "DEQUEUE_CLICKED",
    "PEEK_CLICKED",
    "CLEAR_CLICKED"
  ],
  "triggers": {
    "ENQUEUE_CLICKED": "#enqueueBtn",
    "DEQUEUE_CLICKED": "#dequeueBtn",
    "PEEK_CLICKED": "#peekBtn",
    "CLEAR_CLICKED": "#clearBtn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}