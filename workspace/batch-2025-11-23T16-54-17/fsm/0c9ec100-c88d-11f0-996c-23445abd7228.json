{
  "topic": "Linked List",
  "description": "Finite state machine for managing and visualizing a singly linked list.",
  "states": [
    {
      "name": "empty",
      "onEnter": "renderList",
      "onExit": "noop",
      "on": {
        "APPEND_CLICKED": "nonEmpty",
        "PREPEND_CLICKED": "nonEmpty"
      }
    },
    {
      "name": "nonEmpty",
      "onEnter": "renderList",
      "onExit": "noop",
      "on": {
        "APPEND_CLICKED": "nonEmpty",
        "PREPEND_CLICKED": "nonEmpty",
        "INSERT_CLICKED": "nonEmpty",
        "REMOVE_CLICKED": "nonEmpty",
        "POP_CLICKED": "empty",
        "SHIFT_CLICKED": "empty",
        "CLEAR_CLICKED": "empty"
      }
    }
  ],
  "events": [
    "APPEND_CLICKED",
    "PREPEND_CLICKED",
    "INSERT_CLICKED",
    "REMOVE_CLICKED",
    "POP_CLICKED",
    "SHIFT_CLICKED",
    "CLEAR_CLICKED"
  ],
  "triggers": {
    "APPEND_CLICKED": "#append-btn",
    "PREPEND_CLICKED": "#prepend-btn",
    "INSERT_CLICKED": "#insert-btn",
    "REMOVE_CLICKED": "#remove-btn",
    "POP_CLICKED": "#pop-btn",
    "SHIFT_CLICKED": "#shift-btn",
    "CLEAR_CLICKED": "#clear-btn"
  },
  "notes": "triggers field maps events to actual DOM selectors found in HTML"
}